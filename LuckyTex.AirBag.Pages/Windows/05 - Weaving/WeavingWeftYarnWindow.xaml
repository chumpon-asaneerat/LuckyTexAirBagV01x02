<Window x:Class="LuckyTex.Pages.WeavingWeftYarnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weft Yarn Usage" 
        Height="600" 
        Width="860" 
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Weft Yarn Usage"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <Border DockPanel.Dock="Bottom" 
                Background="#F0F0F0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                
                <Button x:Name="cmdClose" 
                        Content="Close"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="5" 
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdClose_Click">
                </Button>
            </StackPanel>
        </Border>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="273*" />
                </Grid.RowDefinitions>
                <TextBlock 
                    Text="Beamer Roll" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtBeamRoll" 
                         IsReadOnly="True"
                    Margin="3,6,3,0" 
                    Grid.Column="2"
                    Grid.Row="1"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" >
                </TextBox>
                <TextBlock 
                    Text="Doff No" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtDoffNo" 
                         IsReadOnly="True"
                    Margin="3,6,3,0" 
                    Grid.Column="4"
                    Grid.Row="1"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" >
                </TextBox>
                <TextBlock 
                    Text="Weft Yarn" 
                    Margin="3,9,9,0" 
                    Grid.Column="5"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtWeftYarn" 
                         IsReadOnly="True"
                    Margin="3,6,3,0" 
                    Grid.Column="6"
                    Grid.Row="1"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" >
                </TextBox>

                <TextBlock 
                    Text="Pallet No" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="2"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtPALLETNO" 
                    Margin="3,6,3,0" 
                    Grid.Column="2"
                    Grid.Row="2"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" KeyDown="txtPALLETNO_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="CH Lot No" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="2"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtCHLOTNO" 
                    Margin="3,6,3,0" 
                    Grid.Column="4"
                    Grid.Row="2"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" KeyDown="txtCHLOTNO_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="MC No" 
                    Margin="3,9,9,0" 
                    Grid.Column="5"
                    Grid.Row="2"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtMCNO" 
                    Margin="3,6,3,0" 
                         IsReadOnly="True"
                    Grid.Column="6"
                    Grid.Row="2"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" >
                </TextBox>
                <TextBlock 
                    Text="Remark" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="3"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtREMARK" 
                    Margin="3,6,3,0" 
                    Grid.Column="2"
                    Grid.Row="3"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" KeyDown="txtREMARK_KeyDown">
                </TextBox>
                <TextBlock Text="Use Type"
                           Grid.Column="3"
                           Grid.Row="3"
                           Margin="3,6,3,0" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           TextAlignment="Center" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Top"  />
                <StackPanel Margin="3,6,3,0" 
                            Grid.Column="4"
                            Grid.Row="3"
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Left" >
                    <RadioButton x:Name="rbFull"  
                                         Content="Full" 
                                         Margin="5"
                                         FontSize="20" 
                                         FontWeight="Bold"
                                         IsChecked="True"
                                         Style="{StaticResource imageRadioButtonORBStyle}" FlowDirection="LeftToRight" />
                    <RadioButton x:Name="rbHalf" 
                                         Margin="5"
                                         Content="Half" 
                                         FontSize="20" 
                                         FontWeight="Bold"
                                         Style="{StaticResource imageRadioButtonORBStyle}" FlowDirection="LeftToRight" />
                </StackPanel>
                <Grid Name="grid1"
                    Grid.Column="1" 
                    Grid.ColumnSpan="6" 
                    Grid.Row="4" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="100*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="cmdSave" 
                        Content="Save"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="3" 
                        Grid.Column="1"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click">
                    </Button>
                    <Button x:Name="cmdEdit" 
                        Content="Edit"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="3" 
                        Grid.Column="2"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdEdit_Click">
                    </Button>
                    <Button x:Name="cmdDelete" 
                        Content="Delete"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="3" 
                        Grid.Column="3"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdDelete_Click">
                    </Button>
                    <Button x:Name="cmdClear" 
                        Content="Clear"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="3" 
                        Grid.Column="4"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdClear_Click">
                    </Button>
                </Grid>
                <DataGrid 
                             x:Name="gridWeaving" 
                                Margin="3,3,3,3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="8" Grid.ColumnSpan="6" Grid.Column="1" HorizontalContentAlignment="Left" 
                        ScrollViewer.CanContentScroll="True" 
      ScrollViewer.VerticalScrollBarVisibility="Auto"
      ScrollViewer.HorizontalScrollBarVisibility="Auto" SelectedCellsChanged="gridWeaving_SelectedCellsChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding PALLETNO}" Header="Pallet No" IsReadOnly="True" Width="200" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding CHLOTNO}" Header="CH Lot No" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding USETYPENAME}" Header="Use Type" IsReadOnly="True" Width="120" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding REMARK}" Header="Remark" IsReadOnly="True" Width="250" CellStyle="{StaticResource CenterCellStyle}"/>


                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </DockPanel>
</Window>
