<Window x:Class="LuckyTex.Pages.EditWeavingLotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Weaving Lot" 
        Height="285" 
        Width="650" 
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Edit Weaving Lot"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <Border DockPanel.Dock="Bottom" 
                Background="#F0F0F0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="cmdDelete" 
                        Content="Delete"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="5" 
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdDelete_Click">
                </Button>
                <Button x:Name="cmdSave" 
                        Content="Save"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="5" 
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click">
                </Button>
                <Button x:Name="cmdClose" 
                        Content="Close"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="5" 
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdClose_Click">
                </Button>
            </StackPanel>
        </Border>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <TextBlock 
                    Text="Weaving Lot" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtWEAVINGLOT" 
                         IsReadOnly="True"
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="1"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" >
                </TextBox>
                <TextBlock 
                    Text="Shift" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <ComboBox Name="cbShift" 
                          Margin="3,5,3,0"
                          Grid.Column="4" 
                          Grid.Row="1"
                          TextSearch.TextPath=""
                          FontSize="24"      
                          FontWeight="Bold" 
                          ItemsSource="{Binding Shift , Mode=OneWay}"
                          VerticalAlignment="Top" 
                          HorizontalContentAlignment="Left" 
                          IsEditable="False"  
                          FontFamily="Times New Roman" >
                </ComboBox>
                
                <TextBlock 
                    Text="Density Warp" 
                    Margin="0,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="2"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtDENSITY_WARP" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="2"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Right" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown">
                </TextBox>
                <TextBlock 
                    Text="Density Weft" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="2"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtDENSITY_WEFT" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="2"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Right" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown">
                </TextBox>

                <TextBlock 
                    Text="Tension" 
                    Margin="0,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="3"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtTENSION" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="3"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Right" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown">
                </TextBox>
                <TextBlock 
                    Text="Waste" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="3"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtWASTE" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="3"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Right" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown">
                </TextBox>
            </Grid>
        </Border>
    </DockPanel>
</Window>
