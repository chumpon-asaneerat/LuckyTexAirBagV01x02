<Window x:Class="LuckyTex.Pages.WeavingSamplingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sampling" 
        Height="420" 
        Width="940" 
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Calendar}">
                            <!-- Wrapping in ViewBox will enlarge calendar of that size.-->
                            <Viewbox Height="400"
                         Width="400">
                                <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                            </Viewbox>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Sampling"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <Border DockPanel.Dock="Bottom" 
                Background="#F0F0F0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="cmdPrint" 
                        Content="Print"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="5" 
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdPrint_Click">
                </Button>
                <Button x:Name="cmdClose" 
                        Content="Close"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="5" 
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdClose_Click">
                </Button>
            </StackPanel>
        </Border>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <TextBlock 
                    Text="Beamer Roll" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtBEAMLOT" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="1"
                         IsReadOnly="True"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top">
                </TextBox>
                <TextBlock 
                    Text="Item Weaving" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtITM_WEAVING" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="1"
                         IsReadOnly="True"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top">
                </TextBox>
                <TextBlock 
                    Text="Setting Date" 
                    Margin="3,9,9,0" 
                    Grid.Column="5"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtStartDate" 
                    Margin="3,6,0,0" 
                    Grid.Column="6"
                    Grid.Row="1"
                         IsReadOnly="True"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top">
                </TextBox>
                <TextBlock 
                    Text="Loom No" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="2"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtLOOMNO" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="2"
                         IsReadOnly="True"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top">
                </TextBox>
                <TextBlock 
                    Text="Bar Temple No" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="2"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtBARNO" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="2"
                         IsReadOnly="True"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top">
                </TextBox>
                <TextBlock 
                    Text="Diameter of Spiral (L Side)" 
                    Margin="3,9,9,0" 
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Grid.Row="3"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtSPIRAL_L" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="3"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSPIRAL_L_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="(R Side)" 
                    Margin="3,9,9,0" 
                    Grid.Column="5"
                    Grid.Row="3"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtSPIRAL_R" 
                    Margin="3,6,0,0" 
                    Grid.Column="6"
                    Grid.Row="3"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSPIRAL_R_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="1st sampling" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="4"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtSAMPLING" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="4"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSAMPLING_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Sampling By" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="4"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtSAMPLINGBY" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="4"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" KeyDown="txtSAMPLINGBY_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Remark" 
                    Margin="3,9,9,0" 
                    Grid.Column="5"
                    Grid.Row="4"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtREMARK" 
                    Margin="3,6,0,3" 
                    Grid.Column="6"
                    Grid.Row="4"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    Grid.RowSpan="3" KeyDown="txtREMARK_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Recut Sampling" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="5"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtRECUT" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="5"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtRECUT_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Recut By" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="5"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtRECUTBY" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="5"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" KeyDown="txtRECUTBY_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Operator" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="6"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtOperator" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="6"
                         IsReadOnly="True"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top">
                </TextBox>
            </Grid>
        </Border>
    </DockPanel>
</Window>
