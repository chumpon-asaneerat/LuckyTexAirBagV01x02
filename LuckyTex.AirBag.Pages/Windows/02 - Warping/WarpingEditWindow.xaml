<Window x:Class="LuckyTex.Pages.WarpingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warping Edit" 
        Height="420" 
        Width="990" 
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Calendar}">
                            <!-- Wrapping in ViewBox will enlarge calendar of that size.-->
                            <Viewbox Height="400"
                         Width="400">
                                <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                            </Viewbox>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Warping Edit"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <Border DockPanel.Dock="Bottom" 
                Background="#F0F0F0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="cmdSave" 
                        Content="Save"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="5" 
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click">
                </Button>
                <Button x:Name="cmdClose" 
                        Content="Close"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="5" 
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdClose_Click">
                </Button>
            </StackPanel>
        </Border>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <TextBlock 
                    Text="Warper Lot" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtWARPHEADNO" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="1"
                         IsReadOnly="True"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top">
                </TextBox>
                <TextBlock 
                    Text="Warper Roll" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtWARPERLOT" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="1"
                         IsReadOnly="True"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top">
                </TextBox>
                <TextBlock 
                    Text="Beam No" 
                    Margin="3,9,9,0" 
                    Grid.Column="5"
                    Grid.Row="1"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtBEAMNO" 
                    Margin="3,6,0,0" 
                    Grid.Column="6"
                    Grid.Row="1"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top">
                </TextBox>
                <TextBlock 
                    Text="Speed" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="2"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtSPEED" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="2"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSPEED_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Machine Count L" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="2"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtMC_COUNT_L" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="2"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtMC_COUNT_L_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Machine Count S" 
                    Margin="3,9,9,0" 
                    Grid.Column="5"
                    Grid.Row="2"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtMC_COUNT_S" 
                    Margin="3,6,0,0" 
                    Grid.Column="6"
                    Grid.Row="2"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtMC_COUNT_S_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Length" 
                    Margin="3,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="3"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtLENGTH" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="3"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtLENGTH_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Operator" 
                    Margin="3,9,9,0" 
                    Grid.Column="3"
                    Grid.Row="3"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtOperator" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="3"
                         IsReadOnly="True"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top">
                </TextBox>
                <TextBlock 
                    Text="Tension" 
                    Margin="9,9,9,0" 
                    Grid.Column="1"
                    Grid.Row="4"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Text="IT" 
                           Margin="9,9,9,0"
                           FontSize="20" 
                           FontWeight="Bold" 
                           Grid.Column="1" 
                           Grid.Row="5"
                           TextAlignment="Center" 
                           VerticalAlignment="Top" />
                <TextBox x:Name="txtTENSION_IT" 
                    Margin="3,6,0,0" 
                    Grid.Column="1"
                    Grid.Row="6"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtTENSION_IT_KeyDown">
                </TextBox>
                <TextBlock Text="Take Up" 
                           Margin="9,9,9,0"
                           FontSize="20" 
                           FontWeight="Bold" 
                           Grid.Column="2" 
                           Grid.Row="5"
                           TextAlignment="Center" 
                           VerticalAlignment="Top" />
                <TextBox x:Name="txtTENSION_TAKEUP" 
                    Margin="3,6,0,0" 
                    Grid.Column="2"
                    Grid.Row="6"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtTENSION_TAKEUP_KeyDown">
                </TextBox>
                <TextBlock Text="Actual" 
                           Margin="9,9,9,0"
                           FontSize="20" 
                           FontWeight="Bold" 
                           Grid.Column="3" 
                           Grid.Row="5"
                           TextAlignment="Center" 
                           VerticalAlignment="Top" />
                <TextBox x:Name="txtTENSION" 
                    Margin="3,6,0,0" 
                    Grid.Column="3"
                    Grid.Row="6"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtTENSION_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Hardness" 
                    Margin="9,9,9,0" 
                    Grid.Column="4"
                    Grid.Row="4"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Text="L" 
                           Margin="9,9,9,0"
                           FontSize="20" 
                           FontWeight="Bold" 
                           Grid.Column="4" 
                           Grid.Row="5"
                           TextAlignment="Center" 
                           VerticalAlignment="Top" />
                <TextBox x:Name="txtHARDNESS_L" 
                    Margin="3,6,0,0" 
                    Grid.Column="4"
                    Grid.Row="6"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtHARDNESS_L_KeyDown">
                </TextBox>
                <TextBlock Text="M" 
                           Margin="9,9,9,0"
                           FontSize="20" 
                           FontWeight="Bold" 
                           Grid.Column="5" 
                           Grid.Row="5"
                           TextAlignment="Center" 
                           VerticalAlignment="Top" />
                <TextBox x:Name="txtHARDNESS_N" 
                    Margin="3,6,0,0" 
                    Grid.Column="5"
                    Grid.Row="6"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtHARDNESS_N_KeyDown">
                </TextBox>
                <TextBlock Text="R" 
                           Margin="9,9,9,0"
                           FontSize="20" 
                           FontWeight="Bold" 
                           Grid.Column="6" 
                           Grid.Row="5"
                           TextAlignment="Center" 
                           VerticalAlignment="Top" />
                <TextBox x:Name="txtHARDNESS_R" 
                    Margin="3,6,0,0" 
                    Grid.Column="6"
                    Grid.Row="6"
                    CharacterCasing="Upper"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtHARDNESS_R_KeyDown">
                </TextBox>
            </Grid>
        </Border>
    </DockPanel>
</Window>
