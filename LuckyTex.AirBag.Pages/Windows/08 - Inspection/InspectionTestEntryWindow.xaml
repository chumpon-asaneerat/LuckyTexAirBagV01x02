<Window x:Class="LuckyTex.Windows.InspectionTestEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ctrl="clr-namespace:LuckyTex.Controls;assembly=LuckyTex.AirBag.Controls"
        mc:Ignorable="d" 
        Title="100 M Record" 
        ShowInTaskbar="False"
        Topmost="True"
        d:DesignHeight="340" d:DesignWidth="700" 
        MinHeight="340" MinWidth="700"
        Loaded="Window_Loaded"  
        Unloaded="Window_Unloaded" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" >    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="100 M Record"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Width="650" Height="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="2" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Density : " 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold"                                        
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="1" />
                    <TextBlock Text="Width : " 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold"                                        
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="2" />
                    <TextBlock Text="Trim (L/R) : " 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="3" />
                    <TextBlock Text="Floppy : " 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold"                                        
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="4" />
                    <TextBlock Text="Hardness : " 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               TextAlignment="Right" 
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="5" />
                    <TextBox Name="txtDensityW" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="1" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="W" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtDensityF" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="3" Grid.Row="1" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="F" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtWdAll" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold"
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="testInput_KeyDown" LostFocus="txtWdAll_LostFocus">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="ALL" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtWdPin" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="3" Grid.Row="2" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown" LostFocus="txtWdPin_LostFocus">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="PIN" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtWdCoat" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="4" Grid.Row="2" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown" LostFocus="txtWdCoat_LostFocus">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="Coat" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtTrimL" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="3" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="L" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtTrimR" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="3" Grid.Row="3" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="R" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtFloppyL" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="4" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="L" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtFloppyR" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="3" Grid.Row="4" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="R" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtHardnessL" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="5" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="L" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtHardnessC" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center"
                             TextAlignment="Center" 
                             Grid.Column="3" Grid.Row="5" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="C" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtHardnessR" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center"
                             TextAlignment="Center" 
                             Grid.Column="4" Grid.Row="5" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="R" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBlock Text="Tension" 
                               Margin="2"
                               Foreground="White" 
                               Background="CornflowerBlue" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch"                                        
                               VerticalAlignment="Center" 
                               TextAlignment="Center" 
                               Grid.Column="6" Grid.Row="1" Grid.ColumnSpan="2" />
                    <TextBlock Name="txtU"
                               Text="Unwinder"
                               Margin="2"
                               Foreground="White" 
                               Background="CornflowerBlue" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch"                                      
                               VerticalAlignment="Stretch" 
                               TextAlignment="Center" 
                               Grid.Column="6" Grid.Row="2" />
                    <TextBlock Name="txtW"
                               Text="Winder"
                               Margin="2"
                               Foreground="White" 
                               Background="CornflowerBlue" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch"                                      
                               VerticalAlignment="Stretch" 
                               TextAlignment="Center" 
                               Grid.Column="7" Grid.Row="2" />
                    <TextBox Name="txtUSet" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch"                                      
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="6" Grid.Row="3" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="Set" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtWSet" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch"                                      
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="7" Grid.Row="3" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="Set" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtUActual" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch"                                      
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="6" Grid.Row="4" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="Actual" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBox Name="txtWActual" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch"                                      
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="7" Grid.Row="4" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                        <i:Interaction.Behaviors>
                            <ctrl:WatermarkBehavior Text="Actual" 
                                                    FontSize="24"
                                                    Foreground="Red"/>
                        </i:Interaction.Behaviors>
                    </TextBox>
                    <Button Name="cmdSaveTestRecord" 
                            Margin="5, 2"
                            Content="Save" 
                            FontSize="22" 
                            FontStretch="Normal" 
                            FontWeight="Bold" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="6" Grid.Row="5" 
                            Click="cmdSaveTestRecord_Click" />
                    <Button Name="cmdClose" 
                            Margin="5, 2"
                            Content="Close" 
                            FontSize="22" 
                            FontStretch="Normal" 
                            FontWeight="Bold" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="7" Grid.Row="5" 
                            Click="cmdClose_Click" />
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>
