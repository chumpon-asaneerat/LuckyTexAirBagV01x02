<Window x:Class="LuckyTex.Windows.ShiftRemarkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remark" 
        Height="445" 
        Width="660" 
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Remark"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <Border DockPanel.Dock="Bottom" 
                Background="#F0F0F0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="cmdYes" 
                        Content="Yes"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="5" 
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdYes_Click">
                </Button>
                <Button x:Name="cmdNo" 
                        Content="No"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="5" 
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdNo_Click">
                </Button>
            </StackPanel>
        </Border>
        <!-- Content -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black" Height="305">
                <Grid HorizontalAlignment="Stretch" 
                      VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <Grid Name="grdType"
                          Grid.Column="1" 
                          Grid.Row="1" 
                          Grid.RowSpan="4">
                    <RadioButton Content="Inspector Remark" FontSize="22" FontWeight="Bold" GroupName="rbMain" HorizontalAlignment="Left" IsChecked="True" Margin="1,30,0,120" Name="rbInspectorRemark" Style="{StaticResource imageRadioButtonORBStyle}" VerticalAlignment="Center" />
                    <RadioButton Content="Shift Remark" FontSize="22" FontWeight="Bold" GroupName="rbMain" HorizontalAlignment="Left" Margin="1,120,0,30" Name="rbShiftRemark" Style="{StaticResource imageRadioButtonORBStyle}" VerticalAlignment="Center" />
                </Grid>
                <TextBox x:Name="txtInspectorRemark" 
                         Margin="3,3,3,3" 
                         Grid.Column="2" 
                         Grid.Row="1" 
                         Grid.ColumnSpan="3" 
                         Grid.RowSpan="2" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         TextAlignment="Left" KeyDown="txtInspectorRemark_KeyDown">
                </TextBox>
                <TextBox x:Name="txtShiftRemark" 
                         Margin="3,3,3,3" 
                         Grid.Column="2"
                         Grid.Row="3"
                         Grid.ColumnSpan="3" 
                         Grid.RowSpan="2"
                         FontSize="20"
                         FontWeight="Bold"
                         TextAlignment="Left" KeyDown="txtShiftRemark_KeyDown">
                </TextBox>
                <TextBlock 
                    Text="Shift ID" 
                    Margin="0,12,8,0" 
                    Grid.Column="1"
                    Grid.Row="5"
                    FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"/>
                <TextBox x:Name="txtShiftID" 
                         Margin="3,3,3,3" 
                         Grid.Column="2"
                         Grid.Row="5"
                         FontSize="20"
                         FontWeight="Bold"
                         TextAlignment="Left" KeyDown="txtShiftID_KeyDown">
                </TextBox>
                <Button x:Name="cmdSave" 
                        Content="Save"
                        FontSize="22" 
                        FontWeight="Bold"
                        Margin="3,3,0,0" 
                        Grid.Column="3"
                        Grid.Row="5"
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left" Click="cmdSave_Click">
                </Button>
                <TextBlock 
                    Text="Do you want to Show Remark on Report" 
                    Grid.Column="1"
                    Grid.Row="6" FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="4" Margin="0,3,0,0" />
                <TextBlock 
                    Text="(Please Select Remark if Choose Yes)" 
                    Grid.Column="1"
                    Grid.Row="7" FontSize="20" 
                    FontWeight="Bold" 
                    TextAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="4" Margin="0,3,0,0" />
            </Grid>
        </Border>
    </DockPanel>
</Window>
