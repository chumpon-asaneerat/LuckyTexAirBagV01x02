<Window x:Class="LuckyTex.Windows.InspectionLotSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inspection Lots" 
        Height="450" 
        Width="810" 
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"  
        Unloaded="Window_Unloaded" 
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Inspection Lots"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <Border DockPanel.Dock="Bottom" 
                Background="#F0F0F0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="cmdOk" 
                        Margin="5" 
                        Content="OK"
                        FontSize="22" 
                        FontWeight="Bold"
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdOk_Click">
                </Button>
                <Button x:Name="cmdCancel" 
                        Margin="5" 
                        Content="CANCEL"
                        FontSize="22" 
                        FontWeight="Bold"
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdCancel_Click">
                </Button>           
            </StackPanel>
        </Border>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                    <DataGrid x:Name="gridInsLots" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                SelectedCellsChanged="gridInsLots_SelectedCellsChanged">
                        <DataGrid.Columns>
                    <DataGridTextColumn Width="130" Header="Item Lot No" 
                                    Binding="{Binding INSPECTIONLOT}" 
                                    IsReadOnly="True"/>
                    <DataGridTextColumn Width="120" Header="Item Code" 
                                    Binding="{Binding ITEMCODE}" 
                                    IsReadOnly="True"/>
                    <DataGridTextColumn Width="130" Header="Lot No" 
                                    Binding="{Binding FINISHINGLOT}" 
                                    IsReadOnly="True"/>
                    <DataGridTextColumn Width="70" Header="Grade" 
                                    Binding="{Binding GRADE}" 
                                    IsReadOnly="True"/>
                    <DataGridTextColumn Width="160" Header="GROSS WEIGHT" 
                                    Binding="{Binding GROSSWEIGHT}" 
                                    IsReadOnly="True"/>
                    <DataGridTextColumn Width="160" Header="NET WEIGHT" 
                                    Binding="{Binding NETWEIGHT}" 
                                    IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
        </Border>
    </DockPanel>
</Window>
