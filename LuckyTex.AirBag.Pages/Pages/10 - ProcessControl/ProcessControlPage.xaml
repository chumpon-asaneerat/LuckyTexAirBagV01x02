<UserControl x:Class="LuckyTex.Pages.ProcessControlPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Process Control"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="210" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="210" />
                        <ColumnDefinition Width="190" />
                        <ColumnDefinition Width="210" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="250" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="48" />
                        <RowDefinition Height="48" />
                        <RowDefinition Height="48" />
                        <RowDefinition Height="51" />
                        <RowDefinition Height="3" />
                        <RowDefinition Height="2" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Item Lot No. : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="1" />
                    <TextBox x:Name="txtInsLotNo"  
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="1" KeyDown="txtInsLotNo_KeyDown" LostFocus="txtInsLotNo_LostFocus">
                    </TextBox>

                    <CheckBox Name="chkReWarehouse"
                                              Content="Re-Warehouse"         
                                              Margin="5" 
                                              FontSize="22" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Left" 
                                              VerticalAlignment="Center" 
                                              Style="{StaticResource imageCheckedBoxOKStyle}"
                                              Grid.Column="3" 
                                              Grid.Row="1" Checked="chkReWarehouse_Checked" Unchecked="chkReWarehouse_Unchecked" />

                    <Button x:Name="cmdSaveNewLot"
                            Content="Save"
                            Margin="3" 
                            FontSize="22" 
                            FontWeight="Bold"
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="4" 
                            Grid.Row="1" 
                            Height="32" 
                            Width="155" 
                            VerticalAlignment="Bottom" 
                            HorizontalAlignment="Left" Click="cmdSaveNewLot_Click" />
                    <TextBlock Text="New Lot No. : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="2" />
                    <TextBox x:Name="txtNewInsLotNo"  
                             Margin="3"
                             IsReadOnly="True"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="2">
                    </TextBox>
                    
                    <TextBlock Text="Loading Type : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="2" />
                    <TextBox x:Name="txtLoadingType"  
                             IsReadOnly="True"
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="4" Grid.Row="2" />
                    <TextBlock Name="labGroup"
                               Text="Group" 
                               Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Right" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="5" 
                               Grid.Row="2" Width="80" />
                    <ComboBox Name="cbGroup" 
                              Margin="3,4,3,0"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding Group , Mode=OneWay}"
                              Grid.Column="6" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" LostFocus="cbGroup_LostFocus" />
                    <TextBlock Text="Item Code : "
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="3" />
                    <TextBox x:Name="txtItemCode"  
                             Margin="3"
                             IsReadOnly="True"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="3" Width="164" />
                    <TextBlock Text="Inspection Date : "
                                Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="3" />
                    <TextBox x:Name="txtInspectionDate"  
                             Margin="3"
                             IsReadOnly="True"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="4" Grid.Row="3" />
                    <TextBlock Text="Customer Type : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="5" Grid.Row="3" />
                    <TextBox x:Name="txtCustomerType"  
                             IsReadOnly="True"
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="6" Grid.Row="3" />
                    <TextBlock Text="Gross Length : "
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="4" />
                    <TextBox x:Name="txtGROSSLENGTH"  
                             Margin="3"
                             IsReadOnly="True"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="4"
                             PreviewKeyDown="Common_PreviewKeyDown"/>
                    <TextBlock Text="Net Weight : "
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="4" />
                    <TextBox x:Name="txtNETWEIGHT"  
                             Margin="3"
                             IsReadOnly="True"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="4" Grid.Row="4"
                             PreviewKeyDown="Common_PreviewKeyDown"/>
                    <TextBlock Text="Inspected By : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="5" Grid.Row="4" />
                    <TextBox x:Name="txtINSPECTEDBY"  
                             IsReadOnly="True"
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="6" Grid.Row="4" />
                    <TextBlock Text="GRADE : "
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="5" />
                    <TextBox x:Name="txtGRADE"  
                             Margin="3"
                             IsReadOnly="True"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="5"/>
                    <Grid Name="grid1"
                          Margin="3" 
                          Grid.ColumnSpan="6" 
                          Grid.Row="6" 
                          Grid.RowSpan="2" 
                          Grid.Column="1">
                        <DataGrid x:Name="gridCutsamplelist" 
                                  ItemsSource="{Binding}" 
                                  SelectionMode="Single" 
                                  AlternatingRowBackground="AntiqueWhite" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  HorizontalGridLinesBrush="Silver" 
                                  VerticalGridLinesBrush="Silver">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="70" Header="No." Binding="{Binding ORDERNO}" IsReadOnly="True" />
                                <DataGridTextColumn Width="100" Header="Length" Binding="{Binding CUTLENGTH}" IsReadOnly="True" />
                                <DataGridTextColumn Width="250" Header="Remark" Binding="{Binding REMARK}" IsReadOnly="True" />
                                <DataGridTextColumn Width="250" Header="Operator" Binding="{Binding CUTBY}" IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <TextBlock Text="Cutting Length : "
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="8" />
                    <TextBox x:Name="txtCuttingLength"  
                             Margin="3"
                             IsReadOnly="False"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             Grid.Column="2" Grid.Row="8" KeyDown="txtCuttingLength_KeyDown" LostFocus="txtCuttingLength_LostFocus" />
                    <TextBlock Text="Weight" 
                               Margin="2" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="3" Grid.Row="8"/>
                    <CheckBox Name="chkManual"
                                  Content="Manual"         
                                  Margin="5" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"
                                  Grid.Column="4" Grid.Row="8" Grid.ColumnSpan="3" Checked="chkManual_Checked" Unchecked="chkManual_Unchecked" />
                    <TextBlock Text="G.W." 
                               Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="9" />
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Grid.Column="2" Grid.Row="9">
                        <TextBox Name="txtGW" 
                                 Text="" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown" 
                                 LostFocus="txtGW_LostFocus" 
                                 KeyDown="txtGW_KeyDown" />
                    </Border>
                    <TextBlock Text="N.W." 
                               Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="3" Grid.Row="9" />
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Grid.Column="4" Grid.Row="9">
                        <TextBox Name="txtNW"
                                 Text="" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown" 
                                 KeyDown="txtNW_KeyDown" />
                    </Border>

                    <TextBlock Text="Operator : "
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="5" Grid.Row="8" />
                    <TextBox x:Name="txtOperator"  
                             Margin="3"
                             IsReadOnly="True"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="6" Grid.Row="8"/>
                    <TextBlock Text="Remark : "
                               Margin="3,3,3,0"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right" VerticalAlignment="Top" 
                               Grid.Column="1" Grid.Row="10" />
                    <TextBox x:Name="txtRemark"  
                             Margin="3,3,3,0"
                             IsReadOnly="False"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Left" Grid.Column="2" Grid.Row="10" KeyDown="txtRemark_KeyDown" Grid.ColumnSpan="2" Grid.RowSpan="3" />
                    <Border x:Name="brdGrade"
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Background="Yellow"
                                        Margin="3,3,3,0"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"  
                                         Grid.Column="4" Grid.Row="10" Grid.RowSpan="3">
                        <TextBlock x:Name="txtNewGrade" 
                                               Text="A"
                                               FontSize="90" 
                                               FontWeight="Bold"  
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center" />
                    </Border>
                    <TextBlock Text="Grade : "
                               Margin="3,3,3,0"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right" VerticalAlignment="Top" 
                               Grid.Column="5" Grid.Row="10" />
                    <CheckBox Name="chkManualGrade"
                                  Content="Manual"         
                                  Margin="5" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"
                                  Grid.Column="5" Grid.Row="11" Checked="chkManualGrade_Checked" Unchecked="chkManualGrade_Unchecked" />
                    <ComboBox Name="cbGrade" 
                              Margin="3,10,3,0"
                              TextSearch.TextPath=""
                               FontSize="90"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding Grade , Mode=OneWay}"
                              Grid.Column="6" Grid.Row="10" Grid.RowSpan="3" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="164" />
                    <Button x:Name="cmdSave"
                            Content="Save"
                            Margin="3" 
                            FontSize="22" 
                            FontWeight="Bold"
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="6" 
                            Grid.Row="9" 
                            Height="35" 
                            Width="155" 
                            VerticalAlignment="Bottom" 
                            HorizontalAlignment="Right" Click="cmdSave_Click" />
                </Grid>
            </ScrollViewer>
        </Border>
        
    </DockPanel>
  
</UserControl>
