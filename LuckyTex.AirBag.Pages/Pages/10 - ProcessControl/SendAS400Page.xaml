<UserControl x:Class="LuckyTex.Pages.SendAS400Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Calendar}">
                            <!-- Wrapping in ViewBox will enlarge calendar of that size.-->
                            <Viewbox Height="400"
                         Width="400">
                                <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                            </Viewbox>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="styleCheckBox" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Viewbox Height="40"
                         Width="40">
                                <Grid Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                </Grid>
                            </Viewbox>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Send AS400"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <!--<ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="245*" />
                </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    <RowDefinition Height="553*" />
                    <RowDefinition Height="45" />
                        
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>

                <TextBlock Text="Packing Date " 
                               Margin="3"
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" />
                <DatePicker Name="dteStartDate" 
                                Margin="3"
                                FontSize="24" 
                                FontWeight="Bold" 
                                Foreground="Black" 
                                VerticalAlignment="Center" 
                                Grid.Column="2" 
                                Grid.Row="1" 
                                CalendarStyle="{StaticResource styleCalendar}"/>
                <TextBlock Text="-" 
                               Margin="3"
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft" 
                               TextAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Grid.Column="3" />
                <DatePicker Name="dteEndDate" 
                                Margin="3"
                                FontSize="24" 
                                FontWeight="Bold" 
                                Foreground="Black" 
                                VerticalAlignment="Center" 
                                Grid.Column="4" 
                                Grid.Row="1" 
                                CalendarStyle="{StaticResource styleCalendar}"/>
                <TextBlock Text="Send Stock" 
                               Margin="3,3,3,0"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="5" Grid.Row="1" />
                <ComboBox Name="cbStock" 
                              Margin="3,3,3,3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding LoadStock, Mode=OneWay}"
                              Grid.Column="6" Grid.Row="1"/>
                <TextBlock Text="Pallet No " 
                               Margin="0,5,3,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Center" VerticalAlignment="Top" 
                           Grid.Row="2" 
                           Grid.Column="1" 
                           HorizontalAlignment="Right" />
                <TextBox Name="txtPalletNo" 
                         CharacterCasing="Upper" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Grid.Column="2" 
                         Grid.Row="2" 
                         Margin="3,5,3,0" 
                         TextAlignment="Center" 
                         VerticalAlignment="Top" KeyDown="txtPalletNo_KeyDown" />
                <Button Name="cmdClear" 
                            Content="Clear"
                            Margin="8,1,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="107" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="2" Grid.Column="4" Click="cmdClear_Click" >
                    </Button>
                <Button Name="cmdSearch" 
                        Content="Search"
                        Margin="120,1,0,0" 
                        FontSize="22"
                        FontWeight="Bold"
                        Height="40" Width="107" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Click="cmdSearch_Click">
                </Button>
                <TextBlock Text="Send Date " 
                               Margin="3,3,3,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41"
                               VerticalAlignment="Top" Grid.Row="2" Grid.Column="5" />
                <DatePicker Name="dteSendDate" 
                                Margin="3"
                                FontSize="24" 
                                FontWeight="Bold" 
                                Foreground="Black" 
                                VerticalAlignment="Center" 
                                Grid.Row="2" Grid.Column="6" 
                                CalendarStyle="{StaticResource styleCalendar}"/>
                <DataGrid 
                            x:Name="gridAS400" 
                            Margin="3,3,3,0"
                            ItemsSource="{Binding}"
                            SelectionMode="Single"
                            AlternatingRowBackground="AntiqueWhite"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalGridLinesBrush="Silver" 
                            VerticalGridLinesBrush="Silver"
                            Grid.Row="4" Grid.ColumnSpan="7" Grid.Column="1" SelectedCellsChanged="gridAS400_SelectedCellsChanged" HorizontalContentAlignment="Left"
                            ScrollViewer.CanContentScroll="True" 
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Width="70" Header="Select" 
                                Binding="{Binding SelectData,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                CanUserSort="False"
                                CellStyle="{StaticResource styleCheckBox}" />
                    <DataGridTextColumn Binding="{Binding PALLETNO}" Header="Pallet No" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding ORDERNO}" Header="Order No" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding INSPECTIONLOT}" Header="Inspection Lot" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                    <DataGridTextColumn Width="180" Header="Inspection Date" 
                                Binding="{Binding INSPECTIONDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                             
                    <DataGridTextColumn Binding="{Binding ITEMCODE}" Header="Item Code" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                    <DataGridTextColumn Binding="{Binding CUSTOMERITEM}" Header="Customer Item" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                    <DataGridTextColumn Binding="{Binding LOADINGTYPE}" Header="Loading Type" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                    <DataGridTextColumn Binding="{Binding GRADE}" Header="Grade" IsReadOnly="True" Width="70" CellStyle="{StaticResource CenterCellStyle}"/>
                    
                    <DataGridTextColumn Width="140" Header="Net Length" 
                        Binding="{Binding NETLENGTH,StringFormat={}{0:n2}}" 
                        IsReadOnly="True" 
                        CanUserSort="False"
                        CellStyle="{StaticResource RightCellStyle}"/>
                    <DataGridTextColumn Width="140" Header="Net Weight" 
                        Binding="{Binding NETWEIGHT,StringFormat={}{0:n2}}" 
                        IsReadOnly="True" 
                        CanUserSort="False"
                        CellStyle="{StaticResource RightCellStyle}"/>
                     <DataGridTextColumn Width="140" Header="Gross Weight" 
                        Binding="{Binding GROSSWEIGHT,StringFormat={}{0:n2}}" 
                        IsReadOnly="True" 
                        CanUserSort="False"
                        CellStyle="{StaticResource RightCellStyle}"/>
                    
                        
                    <DataGridTextColumn Binding="{Binding STOCK}" Header="Stock" IsReadOnly="True" Width="70" CellStyle="{StaticResource CenterCellStyle}"/>
                </DataGrid.Columns>
                </DataGrid>
                <Button Name="cmdSelectAll" 
                            Content="Select All"
                            Margin="8,1,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="136" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="5" Grid.Column="1" Click="cmdSelectAll_Click" >
                </Button>
                <Button Name="cmdUnselectAll" 
                            Content="Unselect All"
                            Margin="150,1,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="136" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="5" Grid.Column="1" Click="cmdUnselectAll_Click" Grid.ColumnSpan="2">
                </Button>
                <Button Name="cmdSend" 
                            Content="Send"
                            Margin="0,1,3,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="107" HorizontalAlignment="Right"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="5" Grid.Column="7" Click="cmdSend_Click" >
                </Button>
                <Grid 
                        Grid.Row="6" 
                        Grid.Column="1">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                <Grid 
                        Grid.Row="6" 
                        Grid.Column="7" HorizontalAlignment="Right" Width="204">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70*" />
                        <ColumnDefinition Width="134*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Total" 
                               Margin="0,5,3,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Center" VerticalAlignment="Top" 
                           HorizontalAlignment="Right" />
                    <TextBox Name="txtTotalCount" 
                         CharacterCasing="Upper" 
                         IsReadOnly="True"
                         FontSize="20" 
                         FontWeight="Bold" 
                         Grid.Column="1" 
                         Margin="3,5,3,0" 
                         TextAlignment="Center" 
                         VerticalAlignment="Top" />
                </Grid>
                <Grid Name="gidFactory"
                      Grid.Column="7"
                       Grid.Row="5" Margin="0,0,118,0" HorizontalAlignment="Right" Width="160">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95" />
                        <ColumnDefinition Width="65" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Factory " 
                               Margin="0,3,3,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" />
                    <ComboBox Name="cbFactory" 
                              Margin="3,3,0,0"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding LoadFactory, Mode=OneWay}"
                              Grid.Column="1" HorizontalAlignment="Left" Width="60" Height="39" VerticalAlignment="Top" />
                </Grid>
            </Grid>
            <!--</ScrollViewer>-->
        </Border>
    </DockPanel>
  
</UserControl>
