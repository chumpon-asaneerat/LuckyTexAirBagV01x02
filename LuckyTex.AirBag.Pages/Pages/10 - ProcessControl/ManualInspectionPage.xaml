                                                 Margin="3"
                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 Foreground="Black" 
                                                 TextAlignment="Center" 
                                                 VerticalAlignment="Center" 
                                                 CharacterCasing="Upper"
                                                 Grid.Column="2" 
                                                 Grid.Row="4" KeyDown="txtInsLotNo_KeyDown" LostFocus="txtInsLotNo_LostFocus" />

