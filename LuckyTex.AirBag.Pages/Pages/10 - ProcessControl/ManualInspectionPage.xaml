                    </TextBox>

                    <TextBlock Text="Start Time : "
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="5" />
                    <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="5" >
                        <DatePicker Name="dteStartDate" 
                                 Margin="3,3,0,3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Center" 
                                    Width="143" HorizontalAlignment="Left" LostFocus="dteStartDate_LostFocus" />
                        <TextBox x:Name="txtStartHH"  
                             Margin="3,3,0,3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right" PreviewKeyDown="Common_PreviewKeyDown" Width="34" LostFocus="txtStartHH_LostFocus" KeyDown="txtStartHH_KeyDown">
                        </TextBox>
                        <TextBlock Text=":" 
                               Margin="3,3,0,3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right" Width="13" />
                        <TextBox x:Name="txtStartMM"  
                             Margin="3,3,0,3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right" PreviewKeyDown="Common_PreviewKeyDown" Width="34" LostFocus="txtStartMM_LostFocus" KeyDown="txtStartMM_KeyDown">
                        </TextBox>
                    </StackPanel>
                                        
                    <TextBlock Text="Gross Weight : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="5" />
                    <TextBox x:Name="txtGWEIGHT"  
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="4" Grid.Row="5" 
                             PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtGWEIGHT_KeyDown" >
                    </TextBox>

                    <TextBlock Text="Net Weight : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
