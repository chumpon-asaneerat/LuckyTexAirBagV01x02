                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="2" />

                    <TextBox Name="txtItemLotNo" 
                                                 Text=""
                                                 Margin="3"
                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 Foreground="Black" 
                                                 TextAlignment="Center" 
                                                 VerticalAlignment="Center" 
                                                 CharacterCasing="Upper"
                                                 Grid.Column="2" 
                                                 Grid.Row="2" KeyDown="txtItemLotNo_KeyDown" LostFocus="txtItemLotNo_LostFocus" />
                    <TextBlock Text="Customer Type : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="2" />

                    <TextBox Name="txtCustomerType" 
