                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="7" />

                    <TextBox Name="txtREMARK" 
                                                 Text=""
                                                 Margin="3"
                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 Foreground="Black" 
                                                 TextAlignment="Left" 
                                                 VerticalAlignment="Center" 
                                                 CharacterCasing="Upper"
                                                 Grid.Column="2" 
                                                 Grid.Row="7" Grid.ColumnSpan="3" KeyDown="txtREMARK_KeyDown" />
                    <Button x:Name="cmdSaveInspectionLot"
                                            Content="Save Inspection Lot"
                                            Margin="3,3,0,0" 
                                            HorizontalAlignment="Left"
                                            FontSize="22" 
                                            FontWeight="Bold"
                                            Style="{StaticResource MenuButtonStyle}" Grid.Column="5" 
                                                 Grid.Row="7" Grid.ColumnSpan="2" Width="224" Height="39" VerticalAlignment="Top" Click="cmdSaveInspectionLot_Click" />
                    <TextBlock Text="Length : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="8" />
                    <TextBox Name="txtLENGTH" 
                                                 Text=""
                                                 Margin="3"
                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 Foreground="Black" 
                                                 TextAlignment="Right" 
                                                 VerticalAlignment="Center" 
                                                 Grid.Column="4" 
                                                 Grid.Row="8" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtLENGTH_KeyDown" />
                    <TextBlock Text="Defect/Position : "
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="9" />

                    
                    <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Left" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="9" Width="263">

