                               SelectedValuePath="MCId"
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding InspectionMCItem, Mode=OneWay}"
                              Grid.Column="2" Grid.Row="1" VerticalAlignment="Top" LostFocus="cbInspectionMCItem_LostFocus" />
                    <TextBlock Name="labGroup"
                               Text="Group" 
                               Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Right" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="3" 
                               Grid.Row="1" Width="80" />
                    <ComboBox Name="cbGroup" 
                              Margin="3,4,3,0"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding Group , Mode=OneWay}"
