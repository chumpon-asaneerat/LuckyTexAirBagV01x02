                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 Foreground="Black" 
                                                 TextAlignment="Center" 
                                                 VerticalAlignment="Center" 
                                                 CharacterCasing="Upper"
                                                 Grid.Column="4" 
                                                 Grid.Row="2" KeyDown="txtCustomerType_KeyDown" LostFocus="txtCustomerType_LostFocus" />
