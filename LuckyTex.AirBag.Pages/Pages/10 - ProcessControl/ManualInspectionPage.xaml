                               Grid.Column="5" Grid.Row="5" />
                    <TextBox x:Name="txtNWEIGHT"  
                             Margin="3,3,10,3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="6" Grid.Row="5" 
                             PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtNWEIGHT_KeyDown" >
                    </TextBox>

                    <TextBlock Text="End Time : "
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="6" />
                    <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="6" >
                        <DatePicker Name="dteEndDate" 
                                 Margin="3,3,0,3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Center" 
                                    Width="143" HorizontalAlignment="Left" LostFocus="dteEndDate_LostFocus" />
                        <TextBox x:Name="txtEndHH"  
                             Margin="3,3,0,3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right" PreviewKeyDown="Common_PreviewKeyDown" Width="34" LostFocus="txtEndHH_LostFocus" KeyDown="txtEndHH_KeyDown">
                        </TextBox>
                        <TextBlock Text=":" 
                               Margin="3,3,0,3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right" Width="13" />
                        <TextBox x:Name="txtEndMM"  
                             Margin="3,3,0,3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right" PreviewKeyDown="Common_PreviewKeyDown" Width="34" LostFocus="txtEndMM_LostFocus" KeyDown="txtEndMM_KeyDown">
                        </TextBox>
                    </StackPanel>

                    <TextBlock Text="Grade : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="6" />
                    <TextBox Name="txtGRADE" 
                                                 Text=""
                                                 Margin="3"
                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 Foreground="Black" 
                                                 TextAlignment="Center" 
                                                 VerticalAlignment="Center" 
                                                 CharacterCasing="Upper"
                                                 Grid.Column="4" 
                                                 Grid.Row="6" KeyDown="txtGRADE_KeyDown" />

                    <TextBlock Text="Inspect By : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="5" Grid.Row="6" />
                    <TextBox Name="txtINSPECTEDBY" 
                                                 Text=""
                                                 Margin="3,3,10,3"
                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 Foreground="Black" 
                                                 TextAlignment="Center" 
                                                 VerticalAlignment="Center" 
                                                 CharacterCasing="Upper"
                                                 Grid.Column="6" 
                                                 Grid.Row="6" KeyDown="txtINSPECTEDBY_KeyDown" />
