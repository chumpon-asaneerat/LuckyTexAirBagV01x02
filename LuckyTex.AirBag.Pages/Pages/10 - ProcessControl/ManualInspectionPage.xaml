                    <TextBlock Text="Item : "
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="3" />

                    <TextBox Name="txtItemCode" 
                                                 Text=""
                                                 Margin="3"
                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 Foreground="Black" 
                                                 TextAlignment="Center" 
                                                 VerticalAlignment="Center" 
                                                 CharacterCasing="Upper"
                                                 Grid.Column="2" 
                                                 Grid.Row="3" KeyDown="txtItemCode_KeyDown" LostFocus="txtItemCode_LostFocus" />
                    
                    <TextBlock Text="Loading Type : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="3" />

                    <TextBox Name="txtLoadingType" 
                                                 Text=""
                                                 Margin="3"
                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 Foreground="Black" 
                                                 TextAlignment="Center" 
                                                 VerticalAlignment="Center" 
                                                 CharacterCasing="Upper"
                                                 Grid.Column="4" 
                                                 Grid.Row="3" KeyDown="txtLoadingType_KeyDown" LostFocus="txtLoadingType_LostFocus" />
                    
