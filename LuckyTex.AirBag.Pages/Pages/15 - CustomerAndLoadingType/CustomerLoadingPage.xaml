<UserControl x:Class="LuckyTex.Pages.CustomerLoadingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Customer and Loading type"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="595*" />
                        <ColumnDefinition Width="595*" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45" />
                        <RowDefinition Height="638*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>

                    <Grid 
                        Margin="3,0,3,0"
                        Grid.Column="1" >
                        <Button Name="cmdAddNew" 
                            Content="Add New"
                            Margin="3,9,0,0" 
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top"
                            Width="110" Style="{StaticResource MenuButtonStyle}" Grid.Row="3" Grid.Column="2" Click="cmdAddNew_Click">
                        </Button>

                        <TextBox x:Name="txtCUSTOMERTYPE"  
                                             Margin="119,6,6,0"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top" KeyDown="txtCUSTOMERTYPE_KeyDown">
                        </TextBox>
                    </Grid>

                    <Grid 
                        Margin="3,0,3,0"
                        Grid.Column="2" >
                        <TextBlock 
                                            Text="Loading Type" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtLOADINGTYPE"  
                                             Margin="136,6,6,0"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top" KeyDown="txtLOADINGTYPE_KeyDown">
                        </TextBox>
                    </Grid>
                    
                    <DataGrid 
                             x:Name="gridMASTER_CUSTOMERTYPELIST" 
                                Margin="3,3,3,3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Left" 
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" SelectedCellsChanged="gridMASTER_CUSTOMERTYPELIST_SelectedCellsChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding CUSTOMERTYPE}" Header="Customer Type" IsReadOnly="True" Width="550" CellStyle="{StaticResource CenterCellStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid 
                             x:Name="gridMASTER_GETLOADINGBYCUSTYPE" 
                                Margin="3,3,3,3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="1" Grid.Column="2" HorizontalContentAlignment="Left" 
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" SelectedCellsChanged="gridMASTER_GETLOADINGBYCUSTYPE_SelectedCellsChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding LOADINGTYPE}" Header="Loading Type" IsReadOnly="True" Width="550" CellStyle="{StaticResource CenterCellStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid Margin="3,0,3,0"
                          Grid.Row="2" 
                        Grid.Column="1" >
                        <Button Name="cmdEdit" 
                            Content="Edit"
                            Margin="3,9,0,0" 
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top"
                            Width="110" Style="{StaticResource MenuButtonStyle}" Grid.Row="3" Grid.Column="2" Click="cmdEdit_Click">
                        </Button>

                        <Button Name="cmdDeleteCustomerType" 
                            Content="Delete"
                            Margin="119,9,0,0" 
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top"
                            Width="110" Style="{StaticResource MenuButtonStyle}" Click="cmdDeleteCustomerType_Click">
                        </Button>
                    </Grid>
                    <Grid Margin="3,0,3,0"
                          Grid.Row="2" 
                        Grid.Column="2" >
                        <CheckBox Name="chkAllLoadingType"
                              Content="All Loading Type"  
                              Margin="3,9,0,0" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Height="31" 
                              Width="216" 
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Top" Checked="chkAllLoadingType_Checked" Unchecked="chkAllLoadingType_Unchecked" />

                        <Button Name="cmdDeleteLoadingType" 
                            Content="Delete"
                            Margin="225,9,0,0" 
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top"
                            Width="110" Style="{StaticResource MenuButtonStyle}" Click="cmdDeleteLoadingType_Click">
                        </Button>
                    </Grid>
                    <Grid Margin="3,0,3,0"
                        Grid.Row="3" 
                        Grid.Column="1" >
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                    
                    <Button Name="cmdClear" 
                            Content="Clear"
                            Margin="0,0,119,3" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="110" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Style="{StaticResource MenuButtonStyle}" Grid.Row="3" Grid.Column="2" Click="cmdClear_Click">
                    </Button>
                    <Button Name="cmdSave" 
                            Content="Save"
                            Margin="0,0,3,3" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="110" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Style="{StaticResource MenuButtonStyle}" Grid.Row="3" Grid.Column="2" Click="cmdSave_Click">
                    </Button>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
