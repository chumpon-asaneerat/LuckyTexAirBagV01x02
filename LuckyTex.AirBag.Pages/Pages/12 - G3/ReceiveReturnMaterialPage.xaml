<UserControl x:Class="LuckyTex.Pages.ReceiveReturnMaterialPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="770" 
             d:DesignWidth="1220" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Calendar}">
                            <!-- Wrapping in ViewBox will enlarge calendar of that size.-->
                            <Viewbox Height="400"
                         Width="400">
                                <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                            </Viewbox>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="G3 - Receive Return Material"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Stretch"
                          VerticalContentAlignment="Stretch"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid Height="804">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="73*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="579" />
                        <RowDefinition Height="45*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Trace No"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" />
                    <TextBox x:Name="txtTraceNo"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="1" KeyDown="txtTraceNo_KeyDown" LostFocus="txtTraceNo_LostFocus" MaxLength="10">
                    </TextBox>
                    <TextBlock Text="Receive Date"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" 
                               Grid.Column="2"/>
                    <DatePicker Name="dteReceiveDate"
                                 Margin="3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Center" 
                                Grid.Column="3" CalendarStyle="{StaticResource styleCalendar}"/>
                    <TextBlock Text="Return by"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" 
                               Grid.Column="4"/>
                    <ComboBox Name="cbReturnBy" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding LoadReturnBy, Mode=OneWay}"
                              Grid.Column="5" />
                    <TextBlock Text="Weight"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" 
                               Grid.Row="1"/>
                    <TextBox x:Name="txtWeight"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="1" Grid.Row="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWeight_KeyDown">
                    </TextBox>
                    <TextBlock Text="Ch"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" 
                               Grid.Row="1" Grid.Column="2"/>
                    <TextBox x:Name="txtCH"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="3" Grid.Row="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtCH_KeyDown">
                    </TextBox>       
                    <TextBlock Text="Operator : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="4"
                               Grid.Row="1"/>
                    <TextBox x:Name="txtOperator"  
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="5"
                               Grid.Row="1">
                    </TextBox>
                    <TextBlock Text="Item Yarn"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" 
                               Grid.Row="2"/>
                    <ComboBox Name="cbItemYarn"
                                DisplayMemberPath="ITM_YARN" 
                                SelectedValuePath="ITM_YARN"
                                TextSearch.TextPath=""
                                Margin="3"
                                FontSize="22"      
                                FontWeight="Bold" IsEnabled="False"
                                ItemsSource="{Binding ItemYarnItem, Mode=OneWay}" Grid.Column="1" 
                                Grid.Row="2"/>
                    <TextBlock Text="Yarn Type"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top"
                               Grid.Row="2" Grid.Column="2"/>
                    <ComboBox Name="cbYarnType"
                                 Margin="3"
                               TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                              IsEnabled="False"
                                ItemsSource="{Binding LoadYarnType, Mode=OneWay}" Grid.Column="3" 
                                Grid.Row="2"/>
                    <TextBlock Text="Lot No"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top"
                               Grid.Row="2" Grid.Column="4"/>
                    <TextBox x:Name="txtLotNo"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" IsEnabled="False"
                             Grid.Column="5" Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtLotNo_KeyDown">
                    </TextBox>
                    <TextBlock Text="Grade"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" 
                               Grid.Row="3"/>
                    <ComboBox Name="cbGrade"
                                 Margin="3"
                               TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                              IsEnabled="False"
                                ItemsSource="{Binding LoadGrade, Mode=OneWay}" Grid.Column="1" 
                                Grid.Row="3"/>
                    <Grid Grid.ColumnSpan="2" Grid.Row="3" Grid.Column="2" Name="grid1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="510*" />
                            <ColumnDefinition Width="510*" />
                        </Grid.ColumnDefinitions>
                        <Button Name="cmdReceive" 
                                Content="Receive"
                                Margin="0,2,3,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Right"  
                                VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Click="cmdReceive_Click">
                        </Button>
                        <Button Name="cmdClear" 
                                Content="Clear"
                                Margin="3,2,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Column="1" Click="cmdClear_Click">
                        </Button>
                    </Grid>
                    <Grid Name="grid3"
                          Grid.ColumnSpan="7" 
                          Grid.Row="4" >
                        <DataGrid x:Name="gridPalletDetail" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver" SelectedCellsChanged="gridPalletDetail_SelectedCellsChanged" KeyUp="gridPalletDetail_KeyUp" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="150" Header="Trace No" 
                                    Binding="{Binding TRACENO}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Lot No" 
                                    Binding="{Binding LOTNO}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="200" Header="Item Yarn" 
                                    Binding="{Binding ITEMYARN}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Pallet No" 
                                    Binding="{Binding PALLETNO}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="200" Header="Item 400" 
                                    Binding="{Binding ITM400}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="110" Header="Yarn Type" 
                                    Binding="{Binding YARNTYPE}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Weight" 
                                    Binding="{Binding WEIGHT, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                <DataGridTextColumn Width="100" Header="CH" 
                                    Binding="{Binding CH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                <DataGridTextColumn Width="150" Header="New Trace No" 
                                    Binding="{Binding NEWTRACENO}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="70" Header="Grade" 
                                    Binding="{Binding GRADE}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="175" Header="Receive Date" 
                                    Binding="{Binding RECEIVEDATE, StringFormat=\{0:dd/MM/yyyy\}}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Return By" 
                                    Binding="{Binding RETURNBY}" 
                                    IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Grid Grid.ColumnSpan="7" Grid.Row="5" Name="grid2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="250*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="170" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Total Pallet"
                                Margin="3"
                                FontSize="24" 
                                FontWeight="Bold" 
                                VerticalAlignment="Center" Grid.Column="0" TextAlignment="Center"/>
                        <TextBox x:Name="txtTotalPallet"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="1">
                        </TextBox>
                        <TextBox x:Name="txtSumWeight"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="3">
                        </TextBox>
                        <TextBox x:Name="txtSumCH"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="4">
                        </TextBox>
                        <Button Name="cmdReturnAS400" 
                                Content="Return AS400"
                                Margin="10,2,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Column="5" Click="cmdReturnAS400_Click">
                        </Button>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
