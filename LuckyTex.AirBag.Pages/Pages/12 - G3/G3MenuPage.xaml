<UserControl x:Class="LuckyTex.Pages.G3MenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="G3 - Main Menu"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="62" />
                        <RowDefinition Height="93" />
                        <RowDefinition Height="93*" />
                        <RowDefinition Height="93*" />
                        <RowDefinition Height="93*" />
                        <RowDefinition Height="313*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="198*" />
                        <ColumnDefinition Width="402*" />
                        <ColumnDefinition Width="280*" />
                        <ColumnDefinition Width="320*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical"
                                Margin="5" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Grid.RowSpan="3" 
                                Grid.Row="2" 
                                Grid.Column="1">
                        <RadioButton x:Name="rbReceive" IsChecked="True"
                                     GroupName="rbGroup"
                                     Content="Receive Raw Material"
                                     Margin="5, 5"
                                     FontSize="32" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Left"
                                     Style="{StaticResource imageRadioButtonORBStyle}"/>
                        <RadioButton x:Name="rbDeliver" IsChecked="False"
                                     GroupName="rbGroup"
                                     Content="Issue Raw Material"
                                     Margin="5, 5"
                                     FontSize="32" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Left"
                                     Style="{StaticResource imageRadioButtonORBStyle}"/>
                        <RadioButton x:Name="rbReceiveReturn" IsChecked="False"
                                     GroupName="rbGroup"
                                     Content="Receive Return Material"
                                     Margin="5, 5"
                                     FontSize="32" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Left"
                                     Style="{StaticResource imageRadioButtonORBStyle}"/>
                        <RadioButton x:Name="rbCheckStock" IsChecked="False"
                                     GroupName="rbGroup"
                                     Content="Check Stock"
                                     Margin="5, 5"
                                     FontSize="32" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Left"
                                     Style="{StaticResource imageRadioButtonORBStyle}"/>
                        <RadioButton x:Name="rbEditIssueRawMaterial" IsChecked="False"
                                     GroupName="rbGroup"
                                     Content="Edit Issue Raw Material"
                                     Margin="5, 5"
                                     FontSize="32" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Left"
                                     Style="{StaticResource imageRadioButtonORBStyle}"/>
                    </StackPanel>
                    <!-- AS400 -->
                    <Button x:Name="cmdAS400"
                            Content="AS400"
                            Margin="5,10" 
                            FontSize="40" 
                            FontWeight="Bold"
                            Width="260" HorizontalAlignment="Left" Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="2" Click="cmdAS400_Click" Height="70" VerticalAlignment="Top" Grid.Row="1" />
                    <!-- Yarn -->
                    <Button x:Name="cmdYarn"
                            Content="Yarn"
                            Margin="5, 10" 
                            FontSize="40" 
                            FontWeight="Bold"
                            Width="260" 
                            Height="70" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top"
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="2" Grid.Row="2" 
                            Click="cmdYarn_Click"/>
                    <!-- Silicone -->
                    <Button x:Name="cmdSilicone"
                            Content="Silicone"
                            Margin="5, 10" 
                            FontSize="40" 
                            FontWeight="Bold"
                            Width="260" 
                            Height="70" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top"
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="2" Grid.Row="3" 
                            Click="cmdSilicone_Click"/>
                    <!-- Fabric -->
                    <Button x:Name="cmdFabric"
                            Content="Fabric"
                            Margin="5, 10" 
                            FontSize="40" 
                            FontWeight="Bold"
                            Width="260" 
                            Height="70" 
                            HorizontalAlignment="Left"  
                            VerticalAlignment="Top"
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="2" Grid.Row="4" 
                            Click="cmdFabric_Click" />
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
