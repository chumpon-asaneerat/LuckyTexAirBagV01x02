<UserControl x:Class="LuckyTex.Pages.ImportExcelPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="G3 - Receive Yarn"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="1170*" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="700*" />
                    </Grid.RowDefinitions>
                    <Grid VerticalAlignment="Top"
                          Grid.Row="1"
                          Grid.Column="1" 
                          Height="54">
                        <Button Name="cmdImportExcel" 
                                Content="Import Excel"
                                Margin="10,6,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="158" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" Click="cmdImportExcel_Click">
                        </Button>
                        <TextBlock Text="Sheet Name : " 
                               Margin="176,6,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Width="144" 
                               Height="41" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Top" />
                        <ComboBox x:Name="cbSheetName" 
                              Margin="326,6,0,0"                               
                              FontSize="24" 
                              FontWeight="Bold"
                              Width="220" 
                              Height="41" 
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top" />
                        <Button Name="cmdLoadExcel" 
                                Content="Load Data"
                                Margin="552,6,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="158" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" Click="cmdLoadExcel_Click">
                        </Button>
                        <Button Name="cmdSave" 
                                Content="Save Data"
                                Margin="716,6,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="158" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click">
                        </Button>
                    </Grid>
                    <Grid Name="grid1"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"
                          Grid.Column="1" 
                          Grid.Row="2">
                        <DataGrid x:Name="gridImportExcel" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="100" Header="TruckNo" 
                                    Binding="{Binding TruckNo}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False" />
                                <DataGridTextColumn Width="420" Header="Desc" 
                                    Binding="{Binding Desc}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>
                                <DataGridTextColumn Width="180" Header="Desc Item" 
                                    Binding="{Binding DescItem}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>
                                <DataGridTextColumn Width="100" Header="DescType" 
                                    Binding="{Binding DescType}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>
                                <DataGridTextColumn Width="130" Header="Trace No" 
                                    Binding="{Binding TraceNo}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>
                                <DataGridTextColumn Width="80" Header="Cone" 
                                    Binding="{Binding Cone}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                <DataGridTextColumn Width="80" Header="Qty" 
                                    Binding="{Binding Qty,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                <DataGridTextColumn Width="130" Header="Lot" 
                                    Binding="{Binding Lot}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>
                                <DataGridTextColumn Width="120" Header="Item" 
                                    Binding="{Binding Item}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>
                                <DataGridTextColumn Width="100" Header="RecDt" 
                                    Binding="{Binding RecDt,StringFormat={}{0:dd/MM/yy}}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>
                                <DataGridTextColumn Width="80" Header="Um" 
                                    Binding="{Binding Um}" 
                                    IsReadOnly="True"
                                    CanUserSort="False"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>  
</UserControl>
