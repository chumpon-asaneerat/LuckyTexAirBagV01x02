<UserControl x:Class="LuckyTex.Pages.CheckStockYarnPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="770" 
             d:DesignWidth="1220" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Calendar}">
                            <!-- Wrapping in ViewBox will enlarge calendar of that size.-->
                            <Viewbox Height="400"
                         Width="400">
                                <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                            </Viewbox>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="G3 - Yarn Stock"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="132" />
                        <ColumnDefinition Width="236" />
                        <ColumnDefinition Width="119" />
                        <ColumnDefinition Width="196" />
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="110" />
                        <ColumnDefinition Width="176" />
                        <ColumnDefinition Width="8*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="620*" />
                        <RowDefinition Height="95" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Item Yarn"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" />
                    <ComboBox Name="cbItemYarn"
                                DisplayMemberPath="ITM_YARN" 
                                SelectedValuePath="ITM_YARN"
                                TextSearch.TextPath=""
                                Margin="5"
                                FontSize="22"      
                                FontWeight="Bold" 
                                ItemsSource="{Binding InspectionMCItem, Mode=OneWay}"    
                                VerticalAlignment="Top" 
                                Height="40" 
                                Grid.Column="1" />
                    <TextBlock Text="Rec Date"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" 
                               Grid.Column="2"/>
                    <DatePicker Name="dteRecDate"
                                 Margin="3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Center" 
                                Grid.Column="3" CalendarStyle="{StaticResource styleCalendar}"/>
                    
                    <CheckBox Name="chkAll" 
                                  Content="All" 
                                  Margin="5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" Grid.Column="4" />

                    <Button Name="cmdSearch" 
                                Content="Search"
                                Margin="3,6,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="5" Click="cmdSearch_Click">
                    </Button>

                    <Button Name="cmdPrintGoLabel" 
                                Content="Print Go Label"
                                Margin="3,6,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="165" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="6" Click="cmdPrintGoLabel_Click" Grid.ColumnSpan="2">
                    </Button>
                    <CheckBox Name="chkCheckAll" 
                                  Content="Check All" 
                                  Margin="5,5,0,5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" Grid.Row="1" Grid.ColumnSpan="2" Unchecked="chkCheckAll_Unchecked" Checked="chkCheckAll_Checked" />
                    <Grid Name="grid1"
                          Margin="3"
                          Grid.ColumnSpan="8" 
                          Grid.Row="2">
                        <DataGrid x:Name="gridStockYarn" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver" SelectedCellsChanged="gridStockYarn_SelectedCellsChanged">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Width="70" Header="Select" 
                                    Binding="{Binding SelectData}" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource CenterCellStyle}"/>
                                <DataGridTextColumn Width="175" Header="Receive Date" 
                                    Binding="{Binding ENTRYDATE, StringFormat=\{0:dd/MM/yyyy\}}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Trace No" 
                                    Binding="{Binding TRACENO}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Pallet No" 
                                    Binding="{Binding PALLETNO}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="200" Header="Yarn Type" 
                                    Binding="{Binding ITM_YARN}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Pallet Type" 
                                    Binding="{Binding PALLETTYPE}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Weight" 
                                    Binding="{Binding WEIGHTQTY, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                <DataGridTextColumn Width="120" Header="CH" 
                                    Binding="{Binding CONECH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Grid Grid.ColumnSpan="8" Grid.Row="3" Margin="3,3,3,3" Name="grid2" Height="90" VerticalAlignment="Bottom">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45" />
                            <RowDefinition Height="45" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="417*" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="TOTAL"
                                Margin="3"
                                FontSize="24" 
                                FontWeight="Bold" 

                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" TextAlignment="Center"/>

                        <TextBlock Text="Total Pallet"
                                Margin="3,3,3,3"
                                FontSize="24" 
                                FontWeight="Bold" VerticalAlignment="Center" Grid.Column="2" TextAlignment="Center" />
                        <TextBox x:Name="txtTotalPallet"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="2" 
                             Grid.Row="1">
                        </TextBox>

                        <TextBlock Text="Sum Weight"
                                Margin="3,3,3,3"
                                FontSize="24" 
                                FontWeight="Bold" VerticalAlignment="Center" Grid.Column="3" TextAlignment="Center" />
                        <TextBox x:Name="txtSumWeight"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="3" 
                             Grid.Row="1">
                        </TextBox>

                        <TextBlock Text="Sum CH"
                                Margin="3,3,3,3"
                                FontSize="24" 
                                FontWeight="Bold" VerticalAlignment="Center" Grid.Column="4" TextAlignment="Center" />
                        <TextBox x:Name="txtSumCH"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="4" 
                             Grid.Row="1">
                        </TextBox>
                    </Grid>
                    <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="3,4,0,0" Text="Yarn Type" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" />
                    <ComboBox Name="cbYarnType" 
                        Margin="120,4,5,0"
                        FontSize="22" 
                        FontWeight="Bold" 
                        Height="40" 
                        ItemsSource="{Binding YarnType, Mode=OneWay}"  
                        VerticalAlignment="Top" 
                        Grid.Column="1" 
                        Grid.Row="1" />
                <Button Name="cmdDelete" 
                                Content="Delete"
                                Margin="3,6,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="5"  Grid.Row="1" Click="cmdDelete_Click">
                </Button>

            </Grid>
        </Border>
    </DockPanel>
</UserControl>
