<UserControl x:Class="LuckyTex.Pages.IssueRawMaterialPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="770" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Calendar}">
                            <!-- Wrapping in ViewBox will enlarge calendar of that size.-->
                            <Viewbox Height="400"
                         Width="400">
                                <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                            </Viewbox>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="G3 - Issue Raw Material"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="210" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="350*" />
                    </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="620*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>
                <TextBlock Text="Request No"
                                Margin="0,8,5,0"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" />
                <TextBox x:Name="txtRequestNo"  
                             Margin="3,8"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="1" KeyDown="txtRequestNo_KeyDown" LostFocus="txtRequestNo_LostFocus">
                    </TextBox>
                <TextBlock Text="Item Yarn"
                                Margin="0,8,3,0"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" Grid.Column="2" />
                <ComboBox Name="cbItemYarn"
                                DisplayMemberPath="ITM_YARN" 
                                SelectedValuePath="ITM_YARN"
                                TextSearch.TextPath=""
                                Margin="3"
                                FontSize="22"      
                                FontWeight="Bold"
                                ItemsSource="{Binding ItemYarnItem, Mode=OneWay}" Grid.Column="3" Grid.ColumnSpan="2" SelectionChanged="cbItemYarn_SelectionChanged" />
                <TextBlock Text="Yarn Type"
                           Margin="3,8,0,0" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Left"  
                           VerticalAlignment="Top" 
                           Grid.Column="5" />
                <ComboBox Name="cbYarnType" 
                          Margin="120,4,0,4"
                          FontSize="22" 
                          FontWeight="Bold" 
                          ItemsSource="{Binding YarnType, Mode=OneWay}" TextSearch.TextPath="" Grid.Column="5" Grid.ColumnSpan="2" Width="100" HorizontalAlignment="Left" SelectionChanged="cbYarnType_SelectionChanged" />
                <Button Name="cmdSearch" 
                                Content="Search"
                                Margin="6,6,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" Click="cmdSearch_Click">
                    </Button>
                <TextBlock Text="Pallet No (AS400)"
                                Margin="0,5,5,0"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" Grid.Row="1" />
                <TextBox x:Name="txtPalletNo"  
                             Margin="3,5,3,7"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="1" Grid.Row="1" KeyDown="txtPalletNo_KeyDown">
                    </TextBox>
                <TextBlock Text="Issue Date"
                                Margin="0,5,3,0"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" Grid.Row="1" Grid.Column="2" />
                <DatePicker Name="dteIssueDate"
                                 Margin="3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Center" 
                                Grid.Row="1" Grid.Column="3" CalendarStyle="{StaticResource styleCalendar}"/>

                <TextBlock Text="Issue To"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" Grid.Row="1" Grid.Column="4"/>
                <ComboBox Name="cbIssueTo" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding LabResult, Mode=OneWay}"
                              Grid.Column="5" Grid.Row="1" />
                <Button Name="cmdSave" 
                                Content="Save"
                                Margin="3,2,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Grid.Column="6" Grid.Row="1"
                                Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click">
                    </Button>
                <Button Name="cmdClear" 
                                Content="Clear"
                                Margin="116,2,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Grid.Column="6" Grid.Row="1"
                                Style="{StaticResource MenuButtonStyle}" Click="cmdClear_Click">
                    </Button>
                <DataGrid x:Name="gridPalletDetail" 
                          Margin="3"
                          Grid.ColumnSpan="7" 
                          Grid.Row="2"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  SelectedCellsChanged="gridPalletDetail_SelectedCellsChanged" KeyUp="gridPalletDetail_KeyUp" LoadingRow="gridPalletDetail_LoadingRow">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="150" Header="Pallet No" 
                                    Binding="{Binding PALLETNO}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Trace No" 
                                    Binding="{Binding TRACENO}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Lot No" 
                                    Binding="{Binding LOTNO}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="200" Header="Item Type" 
                                    Binding="{Binding ITM_YARN}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="110" Header="Yarn Type" 
                                    Binding="{Binding YARNTYPE}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Weight" 
                                    Binding="{Binding WEIGHTQTY, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                <DataGridTextColumn Width="100" Header="CH" 
                                    Binding="{Binding CONECH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                <DataGridTextColumn Width="120" Header="Pallet Type" 
                                    Binding="{Binding PALLETTYPE}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="175" Header="Receive Date" 
                                    Binding="{Binding ENTRYDATE, StringFormat=\{0:dd/MM/yyyy\}}" 
                                    IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                <Grid Grid.ColumnSpan="7" Grid.Row="3" Name="grid2" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="520*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Total Pallet"
                                Margin="3"
                                FontSize="24" 
                                FontWeight="Bold" 
                                VerticalAlignment="Center" Grid.Column="0" TextAlignment="Center"/>
                        <TextBox x:Name="txtTotalPallet"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="1">
                        </TextBox>
                        <TextBox x:Name="txtSumWeight"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="3">
                        </TextBox>
                        <TextBox x:Name="txtSumCH"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="4">
                        </TextBox>

                    </Grid>
                <Grid Grid.ColumnSpan="7" Grid.Row="4" Name="grid3" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="640*" />
                            <ColumnDefinition Width="170" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Operator : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="0"/>
                        <TextBox x:Name="txtOperator"  
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="1">
                        </TextBox>
                        
                    </Grid>
                <Grid Grid.Column="5" Name="grid4" 
                      Grid.ColumnSpan="2" 
                      Grid.Row="4"
                      HorizontalAlignment="Left" Margin="0,0,0,0" Width="407">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="44*" />
                        <RowDefinition Height="6*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="190" />
                    </Grid.ColumnDefinitions>
                        <TextBlock Text="Request No"
                                Margin="0,5,5,0"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" />
                        <TextBox x:Name="txtNewRequestNo"  
                             Margin="5,8,5,2"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="1">
                        </TextBox>
                        <Button Name="cmdEditRequestNo" 
                                Content="Edit Request No"
                                Margin="3,6,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="180" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="2" Click="cmdEditRequestNo_Click" Grid.RowSpan="2">
                        </Button>
                    </Grid>
               
            </Grid>
        </Border>
    </DockPanel>
</UserControl>
