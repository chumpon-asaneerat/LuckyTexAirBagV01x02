<UserControl x:Class="LuckyTex.Pages.ReceiveYARNPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="G3 - Receive Yarn"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdSave"
                        Content="Save"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdSave_Click" />
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="110" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="110" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="95" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="406*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Pallet No :" 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" 
                               Grid.Row="1" />
                    <TextBox x:Name="txtPalletNo"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" 
                             Grid.Row="1" LostFocus="txtPalletNo_LostFocus" KeyDown="txtPalletNo_KeyDown">
                    </TextBox>
                    <TextBlock Text="Lot :" 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" 
                               Grid.Row="1" />
                    <TextBox x:Name="txtLot"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="4" 
                             Grid.Row="1">
                    </TextBox>
                    <TextBlock Text="Item Yarn :" 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="5" 
                               Grid.Row="1" />
                    <TextBox x:Name="txtITM_YARN"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="20"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="6" 
                             Grid.Row="1">
                    </TextBox>
                    <TextBlock Text="Type :" 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="7" 
                               Grid.Row="1" />
                    <TextBox x:Name="txtYarnType"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="8" 
                             Grid.Row="1">
                    </TextBox>
                    <TextBlock Text="Weight :" 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" 
                               Grid.Row="2" />
                    <TextBox x:Name="txtWeight"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             IsEnabled="False"
                             Grid.Column="2" 
                             Grid.Row="2">
                    </TextBox>
                    <TextBlock Text="Trace No :" 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" 
                               Grid.Row="2" />
                    <TextBox x:Name="txtTraceNo"  
                             Margin="5"
                             IsEnabled="False"
                             CharacterCasing="Upper"
                             FontSize="20"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="4" 
                             Grid.Row="2" LostFocus="txtPalletNo_LostFocus" KeyDown="txtPalletNo_KeyDown">
                    </TextBox>
                    
                    <TextBlock Text="Verify :" 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="5" 
                               Grid.Row="2" />
                    <Grid Name="gridOKNG"
                          Margin="3" 
                          Grid.Column="6" 
                          Grid.Row="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="157*" />
                            <ColumnDefinition Width="157*" />
                        </Grid.ColumnDefinitions>
                        <RadioButton Name="rbOK" 
                                     Content="OK" 
                                     GroupName="rbOKNG"
                                     IsChecked="True"
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Left" 
                                     VerticalAlignment="Center" 
                                     Style="{StaticResource imageRadioButtonORBStyle}"
                                     Grid.Column="0" 
                                     Checked="rbOK_Checked"/>
                        <RadioButton Name="rbNG" 
                                     Content="NG" 
                                     GroupName="rbOKNG"
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Left" 
                                     VerticalAlignment="Center" 
                                     Style="{StaticResource imageRadioButtonORBStyle}" 
                                     Grid.Column="1" 
                                     Checked="rbNG_Checked" />
                    </Grid>
                    

                    <Grid Name="gridCheck" 
                          Grid.Row="3" 
                          Grid.Column="1"
                          Grid.ColumnSpan="10" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="35" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="สภาพวัสดุห่อ" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"/>
                        <TextBlock Text="Packaging" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Row="1" />
                        <CheckBox Name="chkPackaging" 
                                  Margin="59,5,60,5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  HorizontalAlignment="Center"
                                  Grid.Row="2" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"/>

                        <TextBlock Text="ความสะอาด" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Column="1" />
                        <TextBlock Text="Clean/Clear" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Row="1" 
                                   Grid.Column="1" />
                        <CheckBox Name="chkClean" 
                                  Margin="59,5,60,5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  HorizontalAlignment="Center"
                                  Grid.Row="2" 
                                  Grid.Column="1" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"/>

                        <TextBlock Text="สินค้าฉีกขาด" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Column="2" />
                        <TextBlock Text="Tearing" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Row="1" 
                                   Grid.Column="2" />
                        <CheckBox Name="chkTearing" 
                                  Margin="59,5,60,5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  HorizontalAlignment="Center"
                                  Grid.Row="2" 
                                  Grid.Column="2" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"/>

                        <TextBlock Text="สินค้าร่วงล้ม" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Column="3" />
                        <TextBlock Text="Fall Down" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Row="1" 
                                   Grid.Column="3" />
                        <CheckBox Name="chkFalldown" 
                                  Margin="59,5,60,5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  HorizontalAlignment="Center"
                                  Grid.Row="2" 
                                  Grid.Column="3" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"/>

                        <TextBlock Text="ใบรับรอง" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Column="4" />
                        <TextBlock Text="Certification" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Row="1" 
                                   Grid.Column="4" />
                        <CheckBox Name="chkCertification" 
                                  Margin="59,5,60,5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  HorizontalAlignment="Center"
                                  Grid.Row="2" 
                                  Grid.Column="4" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"/>

                        <TextBlock Text="ใบส่งสินค้า" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Column="5" />
                        <TextBlock Text="Invoice" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Row="1" 
                                   Grid.Column="5" />
                        <CheckBox Name="chkInvoice" 
                                  Margin="59,5,60,5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  HorizontalAlignment="Center"
                                  Grid.Row="2" 
                                  Grid.Column="5" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"/>

                        <TextBlock Text="ข้อมูลชี้บ่ง" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Column="6" />
                        <TextBlock Text="Identifyarea" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Row="1" 
                                   Grid.Column="6" />
                        <CheckBox Name="chkIdentifyarea" 
                                  Margin="59,5,60,5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  HorizontalAlignment="Center"
                                  Grid.Row="2" 
                                  Grid.Column="6" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"/>

                        <TextBlock Text="จำนวนพาเลท" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Column="7" />
                        <TextBlock Text="Amount of Pallet" 
                                    Margin="1,0,1,0"
                                    FontSize="18" 
                                    Background="Orange"
                                    TextAlignment="Center"
                                   Grid.Row="1" 
                                   Grid.Column="7" />
                        <CheckBox Name="chkAmountpallet" 
                                  Margin="59,5,60,5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  HorizontalAlignment="Center"
                                  Grid.Row="2" 
                                  Grid.Column="7" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"/>
                    </Grid>

                    <TextBlock Text="Other (ระบุ) : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.ColumnSpan="2"
                               Grid.Row="4" />
                    <TextBox x:Name="txtOther"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="3" Grid.ColumnSpan="2"
                             Grid.Row="4">
                    </TextBox>
                    <TextBlock Text="Action : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="5" 
                               Grid.Row="4" />
                    <TextBox x:Name="txtAction"  
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="6" 
                             Grid.Row="4" 
                             Grid.ColumnSpan="2">
                    </TextBox>

                    <Grid  Name="grid2"
                           Grid.Column="1" 
                           Grid.ColumnSpan="10" 
                           Grid.Row="5" Margin="0,0,0,0">
                        <Button Name="cmdReceive" 
                                Content="Receive"
                                Margin="5" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="100" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                            Click="cmdReceive_Click">
                        </Button>
                        <Button Name="cmdClear" 
                                Content="Clear"
                                Margin="111,5,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="100" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                            Click="cmdClear_Click">
                        </Button>
                        
                        <Button Name="cmdEdit" 
                                Content="Edit"
                                Margin="217,5,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="100" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                            Click="cmdEdit_Click">
                        </Button>
                        <Button Name="cmdVerify" 
                                Content="Verify"
                                Margin="429,5,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="100" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                            Click="cmdVerify_Click">
                        </Button>
                        <Button Name="cmdDelete" 
                                Content="Delete"
                                Margin="323,5,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="100" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                            Click="cmdDelete_Click">
                        </Button>
                        <Button Name="cmdAS400" 
                                Content="AS400"
                                Margin="0,5,5,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="100" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" Click="cmdAS400_Click">
                        </Button>
                    <Button Content="D365" FontSize="22" FontWeight="Bold" Height="40" HorizontalAlignment="Right" Margin="0,5,111,0" Name="cmdD365" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="100" Click="cmdD365_Click" />
                </Grid>
                   
                    <Grid Name="grid1"
                          Margin="3,3,3,3"
                          Grid.Column="1" 
                          Grid.ColumnSpan="10" 
                          Grid.Row="6" >
                        <DataGrid x:Name="gridG3" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver" SelectedCellsChanged="gridG3_SelectedCellsChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="150" Header="Pattet No" 
                                    Binding="{Binding PalletNo, Mode= OneWay}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Lot" 
                                    Binding="{Binding LotorderNo, Mode= OneWay}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="180" Header="Yarn Type" 
                                    Binding="{Binding Itm_Yarn, Mode= OneWay}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Weight" 
                                    Binding="{Binding WeightQty, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                <DataGridTemplateColumn Width="80" Header="OK" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox  Name="VERIFYOK"
                                                       IsChecked="{Binding Path=VerifyOK, Mode=OneWay}" 
                                                       HorizontalContentAlignment="Center" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center" 
                                                       VerticalContentAlignment="Center"
                                                       Style="{StaticResource imageCheckedBoxOKStyle}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="80" Header="NG" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox  Name="VERIFYNG"
                                                       IsChecked="{Binding Path=VerifyNG, Mode=OneWay}" 
                                                       HorizontalContentAlignment="Center" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center" 
                                                       VerticalContentAlignment="Center" 
                                                       Style="{StaticResource imageCheckedBoxOKStyle}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <TextBlock Text="Operator : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" 
                               Grid.Row="7" />
                    <TextBox x:Name="txtOperator"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="2" 
                             Grid.Row="7">
                    </TextBox>
                    
                    <TextBlock Text="TOTAL"
                                Margin="3"
                                FontSize="24" 
                                FontWeight="Bold" 

                                VerticalAlignment="Center" Grid.Column="7" 
                               Grid.Row="7" TextAlignment="Center"/>
                    <TextBox x:Name="txtTotalPallet"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             IsEnabled="False"
                             Grid.Column="8" 
                             Grid.Row="7">
                    </TextBox>
                </Grid>            
        </Border>
    </DockPanel>  
</UserControl>
