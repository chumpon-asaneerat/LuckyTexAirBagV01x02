                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="6" Grid.Row="2" />

                    <TextBlock Text="Reed No 2" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="7" Grid.Row="2" />
                    <TextBox Name="txtREEDNO2" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="8" Grid.Row="2" KeyDown="txtREEDNO2_KeyDown" />
                    <TextBlock Text="Temple Type" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="1" Grid.Row="3" />
                    <ComboBox Name="cbTEMPLE" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding TEMPLE, Mode=OneWay}"
                               Grid.Column="2" Grid.Row="3" LostFocus="cbTEMPLE_LostFocus" />

                    <TextBlock Text="Bar No" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="3" Grid.Row="3" />
                    <TextBox Name="txtBARNO" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="4" Grid.Row="3" KeyDown="txtBARNO_KeyDown" />
                    <TextBlock Text="Width" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="5" Grid.Row="3" />
                    <TextBox Name="txtWIDTH" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="6" Grid.Row="3" KeyDown="txtWIDTH_KeyDown" PreviewKeyDown="Common_PreviewKeyDown" />
                    <TextBlock Text="Speed" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="7" Grid.Row="3" />
                    <TextBox Name="txtSpeed" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="8" Grid.Row="3" KeyDown="txtSpeed_KeyDown" />

                    <Button Name="cmdSampling" 
                            Content="Sampling" 
                            Margin="0,6,3,0"
                            Height="40" 
                            Width="120" 
                            FontSize="24" 
                            FontWeight="Bold" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Right" 
                            Style="{StaticResource MenuButtonStyle}" Grid.Column="1" Grid.Row="4" Click="cmdSampling_Click" />
                    <Button Name="cmdSet" 
                            Content="Set" 
                            Margin="0,6,3,0"
                            Height="40" 
                            Width="120" 
                            FontSize="24" 
                            FontWeight="Bold" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Right" 
                            Style="{StaticResource MenuButtonStyle}" Grid.Column="4" Grid.Row="4" Click="cmdSet_Click" />
                    <Button Name="cmdEdit" 
                            Content="Edit" 
                            Margin="0,6,3,0"
                            Height="40" 
                            Width="120" 
                            FontSize="24" 
                            FontWeight="Bold" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left" 
                            Style="{StaticResource MenuButtonStyle}" Grid.Column="5" Grid.Row="4" Click="cmdEdit_Click" />

                    <TextBlock Text="Setting By" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="7" Grid.Row="4" />
                    <TextBox Name="txtSettingBy"  
                             IsReadOnly="True"
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="8" Grid.Row="4" />
                    
                    <TextBlock Text="Doff No" 
                        Margin="3,9,3,10" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center" 
                        TextAlignment="Right"        
                        Grid.Column="1" Grid.Row="5" />
                    <TextBox Name="txtDOFFNO" 
                             IsReadOnly="True"
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="2" Grid.Row="5" />
                    <TextBlock Text="Start Date" 
                        Margin="3,9,3,10" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center" 
                        TextAlignment="Right"        
                        Grid.Column="3" Grid.Row="5" />
                    <DatePicker Name="dteSTARTDATE" 
                                 Margin="3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Center" 
                                 Grid.Column="4" Grid.Row="5"
                                 CalendarStyle="{StaticResource styleCalendar}"/>
                    <TextBlock Text="Start By" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="5" Grid.Row="5" />
                    <TextBox Name="txtSTARTBY" 
                             IsReadOnly="True"
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="6" Grid.Row="5" />

                    <TextBlock Text="Shift" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="7" Grid.Row="5" />
                    <ComboBox Name="cbShift" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="24"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding Shift , Mode=OneWay}"
                              Grid.Column="8" Grid.Row="5" Height="40" VerticalAlignment="Top" />
                    <Grid Name="grid2" 
                          Margin="0,7,0,0" 
                         Grid.Column="1" 
                          Grid.ColumnSpan="4"
                          VerticalAlignment="Top" >
                        <TextBlock Text="Type of Product"
                                   Margin="3,3,0,0"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   TextAlignment="Right"
                                   FlowDirection="RightToLeft"
                                   Width="197"
                                   HorizontalAlignment="Left"    
                                   VerticalAlignment="Top"  />
                        <StackPanel Margin="204,0,0,0"
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Left" >
                            <RadioButton x:Name="rbMassProduction"  
                                         Content="Mass Production" 
                                         Margin="5"
                                         FontSize="24" 
                                         FontWeight="Bold"
                                         IsChecked="True"
                                         Style="{StaticResource imageRadioButtonORBStyle}" FlowDirection="LeftToRight" />
                            <RadioButton x:Name="rbTest" 
                                         Margin="5"
                                         Content="Test" 
                                         FontSize="24" 
                                         FontWeight="Bold"
                                         Style="{StaticResource imageRadioButtonORBStyle}" FlowDirection="LeftToRight" />
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Density Warp" 
                        Margin="3,9,3,10" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center" 
                        TextAlignment="Right"        
                        Grid.Column="1" Grid.Row="6" />
                    <TextBox Name="txtDensityWarp" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="2" Grid.Row="6" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtDensityWarp_KeyDown" />
                    <TextBlock Text="Density Weft" 
                        Margin="3,9,3,10" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center" 
                        TextAlignment="Right"        
                        Grid.Column="3" Grid.Row="6" />
                    <TextBox Name="txtDensityWeft" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="4" Grid.Row="6" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtDensityWeft_KeyDown" />

                    <TextBlock Text="Tension" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="5" Grid.Row="6" />
                    <TextBox Name="txtTension" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="6" Grid.Row="6" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtTension_KeyDown" />

                    

                    <TextBlock Text="Length" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="7" Grid.Row="6" />
                    <TextBox Name="txtLength" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="8" Grid.Row="6" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtLength_KeyDown" />
                    
                    <TextBlock Text="Waste" 
                        Margin="3,9,3,10" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center" 
                        TextAlignment="Right"        
                        Grid.Column="1" Grid.Row="7" />
                    <TextBox Name="txtWaste" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="2" Grid.Row="7" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWaste_KeyDown" />
                    <Button Name="cmdSpecificMCStopReason" 
                            Content="Specific M/C Stop Reason" 
                            Margin="0,6,3,0"
                            Height="40" 
                            Width="305" 
                            FontSize="24" 
                            FontWeight="Bold" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Right" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="3" 
                            Grid.ColumnSpan="2" 
                            Grid.Row="7" Click="cmdSpecificMCStopReason_Click"  />
                    <Grid Grid.Column="5" Grid.ColumnSpan="4" Grid.Row="7" Name="grid1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130" />
                            <ColumnDefinition Width="130" />
                            <ColumnDefinition Width="130" />
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="100*" />
                        </Grid.ColumnDefinitions>
                        <Button Name="cmdWeftYarn" 
                            Content="Weft Yarn" 
                            Margin="3,4,0,0"
                            Height="40" 
                            Width="120" 
                            FontSize="24" 
                            FontWeight="Bold" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left" 
                            Style="{StaticResource MenuButtonStyle}" Click="cmdWeftYarn_Click" />
                        <Button Name="cmdStart" 
                            Content="Start" 
                            Margin="3,4,0,0"
                            Height="40" 
                            Width="120" 
                            FontSize="24" 
                            FontWeight="Bold" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left" 
                            Style="{StaticResource MenuButtonStyle}" Grid.Column="1" Click="cmdStart_Click" />
                        <Button Name="cmdDoffing" 
                            Content="Doffing" 
                            Margin="3,4,0,0"
                            Height="40" 
                            Width="120" 
                            FontSize="24" 
                            FontWeight="Bold" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left" 
                            Style="{StaticResource MenuButtonStyle}" Grid.Column="2" Click="cmdDoffing_Click" />
                        <DatePicker Name="dteWeavingDate" 
                                 Margin="3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Center" 
                                Grid.Column="3" CalendarStyle="{StaticResource styleCalendar}"/>
                        <Button Name="cmdPrint" 
                            Content="Print S" 
                            Margin="3,4,0,0"
                            Height="40" 
                            Width="120" 
                            FontSize="24" 
                            FontWeight="Bold" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left" 
                            Style="{StaticResource MenuButtonStyle}" Grid.Column="5" Click="cmdPrint_Click" />
                    </Grid>
                    
                    <DataGrid 
                             x:Name="gridWeaving" 
                                Margin="3,3,3,3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="8" Grid.ColumnSpan="9" Grid.Column="1" HorizontalContentAlignment="Left" 
                        ScrollViewer.CanContentScroll="True" 
      ScrollViewer.VerticalScrollBarVisibility="Auto"
      ScrollViewer.HorizontalScrollBarVisibility="Auto" SelectedCellsChanged="gridWeaving_SelectedCellsChanged" LoadingRow="gridWeaving_LoadingRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding DOFFNO}" Header="Doff No" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding WEAVINGLOT}" Header="Weaving Lot" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="170" Header="Start Date" 
                                    Binding="{Binding STARTDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="120" Header="Length" 
                                    Binding="{Binding LENGTH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding DENSITY_WARP}" Header="Density Warp" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding DENSITY_WEFT}" Header="Density Weft" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="120" Header="Tension" 
                                    Binding="{Binding TENSION, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                           
