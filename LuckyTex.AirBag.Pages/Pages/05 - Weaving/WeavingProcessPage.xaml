                               FontWeight="Bold" 
                               ItemsSource="{Binding GetItemCodeData, Mode=OneWay}"
                              Grid.Column="4" Grid.Row="1" Height="40" VerticalAlignment="Top" LostFocus="cbItemCode_LostFocus" />
                    <TextBlock Text="Beam Length" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="5" Grid.Row="1" />
                    <TextBox Name="txtBeamLength" 
                             IsReadOnly="True"
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="6" Grid.Row="1" PreviewKeyDown="txtBeamLength_PreviewKeyDown" />
                    <TextBlock Text="Heald Color" 
                               Margin="3,9,3,10" 
                               FontSize="24" 
