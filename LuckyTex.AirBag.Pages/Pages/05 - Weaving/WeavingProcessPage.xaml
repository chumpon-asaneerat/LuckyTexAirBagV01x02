                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="5" Grid.Row="2" />
                    <TextBox Name="txtREEDNO" 
