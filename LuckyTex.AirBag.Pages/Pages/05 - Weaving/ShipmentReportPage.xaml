<UserControl x:Class="LuckyTex.Pages.ShipmentReportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded" >
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Weaving : Shipment Report"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="788" />
                    <ColumnDefinition Width="397*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                    <RowDefinition Height="90" />
                        <RowDefinition Height="608*" />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>
                    <Grid 
                        Grid.Row="1" 
                        Grid.Column="1" Margin="0,0,2,0">
                        <TextBlock Text="Begin Date" 
                               Margin="3,3,0,0"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               Height="41" VerticalAlignment="Top" Width="127" HorizontalAlignment="Left" />
                    <DatePicker Name="dteBeginDate" 
                                 Margin="136,3,0,0"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" />
                    <TextBlock FontSize="24" FontWeight="Bold" Height="41" HorizontalAlignment="Left" Margin="295,3,0,0" Text="End Date" VerticalAlignment="Top" Width="104" />
                    <DatePicker Name="dteEndDate" 
                                Margin="405,3,0,0"
                                FontSize="24" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left"   VerticalAlignment="Top" Width="150" />
                    <TextBlock Text="Operator" Margin="564,3,0,0" FontSize="24" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <TextBox x:Name="txtOperator" Margin="674,3,0,0" IsReadOnly="True" CharacterCasing="Upper" FontSize="24" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" Width="107"></TextBox>
                    <Button Name="cmdSearch" Content="Search" Margin="254,47,0,0" FontSize="30" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="141" Click="cmdSearch_Click" />
                    <Button Name="cmdClear" Content="Clear" Margin="402,47,0,0" FontSize="30" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="141" Click="cmdClear_Click" />
                    <Button Name="cmdPrintReport" Content="Print Report" Margin="550,47,0,0" FontSize="30" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Click="cmdPrintReport_Click" Width="190" />
                   
                </Grid>
                    <DataGrid 
                             x:Name="gridWeaving" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                HorizontalContentAlignment="Left" 
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                                Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="1"
                                SelectedCellsChanged="gridWeaving_SelectedCellsChanged">
                        <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding No}" Header="No" IsReadOnly="True" Width="50" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding ITM_WEAVING}" Header="Item Weaving" IsReadOnly="True" Width="300"/>
                        <DataGridTextColumn Binding="{Binding PIECES, StringFormat='{}{0:#,##0.##}'}" Header="Pieces" IsReadOnly="True" Width="120" CellStyle="{StaticResource RightCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding METERS, StringFormat='{}{0:#,##0.##}'}" Header="Meters" IsReadOnly="True" Width="150" CellStyle="{StaticResource RightCellStyle}"/>
                    </DataGrid.Columns>
                    </DataGrid>
                <Grid 
                        Grid.Row="3" 
                        Grid.Column="1" Height="45" VerticalAlignment="Top" Width="526" HorizontalAlignment="Left">
                        <TextBlock Text="Total : " Margin="3,1,0,0" FontSize="24" FontWeight="Bold" Height="41" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" />
                        <TextBox x:Name="txtTotal" Margin="86,7,0,0" IsReadOnly="True" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" HorizontalAlignment="Left" Width="154"></TextBox>
                        <TextBlock Text="Rolls :" Margin="246,1,0,0" FontSize="24" FontWeight="Bold" Height="41" VerticalAlignment="Top" HorizontalAlignment="Left" Width="76" />
                        <TextBox x:Name="txtTotalBeam" IsReadOnly="True" Margin="328,7,0,0" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" HorizontalAlignment="Left" Width="154"></TextBox>
                    <TextBlock FontSize="24" FontWeight="Bold" Height="41" HorizontalAlignment="Left" Margin="488,1,0,0" Text="m." VerticalAlignment="Top" Width="32" />
                </Grid>
                </Grid>
        </Border>
    </DockPanel>
  
</UserControl>
