<UserControl x:Class="LuckyTex.Pages.WeavingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Calendar}">
                            <!-- Wrapping in ViewBox will enlarge calendar of that size.-->
                            <Viewbox Height="400"
                         Width="400">
                                <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                            </Viewbox>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Weaving Data"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="50*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Loom No" 
                               Grid.Column="1" Grid.Row="1" />
                    <ComboBox Name="cbLoomNo" 
                              Margin="3,31,3,0"
                              TextSearch.TextPath=""
                               FontSize="24"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding LoomNo , Mode=OneWay}"
                              Grid.Column="2" Grid.Row="1" Height="40" VerticalAlignment="Top" LostFocus="cbLoomNo_LostFocus" />
                    <TextBox Name="txtLoomNo" 
                             Margin="3,33,3,29"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="3" Grid.Row="1" MaxLength="2" KeyDown="txtLoomNo_KeyDown" PreviewKeyDown="txtLoomNo_PreviewKeyDown" LostFocus="txtLoomNo_LostFocus" />

                    <TextBlock Text="Weaving Date" 
                               Margin="3,36,3,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft" 
                               TextAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Grid.Column="4" />
                    <DatePicker Name="dteWeavingDate" 
                                 Margin="3,32,3,28"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                               
                                 VerticalAlignment="Center" 
                                Grid.Column="5" 
                                Grid.Row="1" LostFocus="dteWeavingDate_LostFocus" CalendarStyle="{StaticResource styleCalendar}" />
                    <Button Name="cmdReport" 
                            Content="Report" 
                            Margin="3,32,0,0"
                            FontSize="24" 
                            FontWeight="Bold"
                            Height="40" Width="120"  VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="6"  Style="{StaticResource MenuButtonStyle}" Click="cmdReport_Click" />
                    <CheckBox Name="chkChinaFabric" 
                                  Content="China Fabric" 
                                  Margin="129,26,0,0"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" VerticalAlignment="Top" 
                                  Grid.Column="6" 
                                  Grid.Row="1" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" Width="172" HorizontalAlignment="Left" Grid.ColumnSpan="2" Checked="chkChinaFabric_Checked" />
                    <CheckBox Name="chkTKATFabric" 
                                  Content="TKAT Fabric" 
                                  Margin="129,58,0,0"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" VerticalAlignment="Top" 
                                  Grid.Column="6" 
                                  Grid.Row="1" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" Width="172" HorizontalAlignment="Left" Grid.ColumnSpan="2" Checked="chkTKATFabric_Checked" />
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Shift" 
                               Grid.Column="1" Grid.Row="2" />
                    <ComboBox Name="cbShift" 
                              Margin="3,31,3,0"
                              TextSearch.TextPath=""
                               FontSize="24"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding Shift , Mode=OneWay}"
                              Grid.Column="2" Grid.Row="2" Height="40" VerticalAlignment="Top" />
                    <TextBlock Text="Item Code" 
                               Margin="3,3,3,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="3" Grid.Row="2" />
                    <ComboBox Name="cbItemCode" 
                              Margin="3,31,3,0"
                               DisplayMemberPath="ITM_WEAVING" 
                               SelectedValuePath="ITM_WEAVING"
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding GetItemCodeData, Mode=OneWay}"
                              Grid.Column="4" Grid.Row="2" Height="40" VerticalAlignment="Top" LostFocus="cbItemCode_LostFocus" />
                    <TextBlock Text="Width" 
                               Margin="3,3,3,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right"  Grid.Column="5" Grid.Row="2" />
                    <TextBox Name="txtITM_WEAVING" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="6" Grid.Row="2" KeyDown="txtITM_WEAVING_KeyDown" PreviewKeyDown="txtITM_WEAVING_PreviewKeyDown" />
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Weaving Lot" 
                               Grid.Column="1" Grid.Row="3" />
                    <TextBox Name="txtWeavingLot" 
                             Margin="3"
                             MaxLength="9"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="2" Grid.Row="3" 
                             KeyDown="txtWeavingLot_KeyDown" LostFocus="txtWeavingLot_LostFocus" />
                    
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Length"
                               Grid.Column="3" Grid.Row="3" />
                    <TextBox Name="txtLength" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="4" Grid.Row="3" 
                             KeyDown="txtLength_KeyDown"
                             PreviewKeyDown="txtLength_PreviewKeyDown"/>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Remark" 
                               Grid.Column="1" Grid.Row="4" />
                    <TextBox Name="txtRemark" 
                             Margin="3,33,3,0"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="5" KeyDown="txtRemark_KeyDown" Height="38" VerticalAlignment="Top" />
                    <Grid 
                        Grid.Row="7" 
                        Grid.ColumnSpan="9" Height="50" VerticalAlignment="Bottom">
                        <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,0,0,10" Text="Operator" TextAlignment="Center" Height="27" VerticalAlignment="Bottom" />
                        <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" IsReadOnly="True" Margin="101,0,0,7" Name="txtOperator" TextAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="121" />
                        <Button Name="cmdDelete" Content="Delete" Height="40" Width="120" Margin="0,0,258,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="24" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdDelete_Click" />
                        <Button Name="cmdSave" Content="Save" Height="40" Width="120" Margin="0,0,132,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="24" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click" />
                        <Button Name="cmdRePrint" Content="Re-Print" Height="40" Width="120" Margin="0,0,6,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="24" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdRePrint_Click" />
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
