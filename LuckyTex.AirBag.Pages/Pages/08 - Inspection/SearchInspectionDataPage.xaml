<UserControl x:Class="LuckyTex.Pages.SearchInspectionDataPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="770" d:DesignWidth="1220" 
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Search Inspection Data"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Attach -->
                <Button x:Name="cmdAttach"
                        Content="Attach"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdAttach_Click" />
                <!-- View -->
                <Button x:Name="cmdView"
                        Content="View"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdView_Click" />
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="195" />
                        <ColumnDefinition Width="190" />
                        <ColumnDefinition Width="102" />
                        <ColumnDefinition Width="196" />
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="452*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="620*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Inspection Date"
                                Margin="0,5,5,0"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" />
                    <DatePicker Name="dteInspectionDate"
                                Margin="5"
                                FontFamily="Times New Roman" 
                                FontSize="22" 
                                FontWeight="Bold"
                                VerticalAlignment="Top" 
                                Grid.Column="1"/>
                    <TextBlock Text="MC No"
                                Margin="5"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Right"   
                                VerticalAlignment="Top" Grid.Column="2" />
                    <ComboBox Name="cbInstMC"
                                DisplayMemberPath="DisplayName" 
                                SelectedValuePath="MCId"
                                TextSearch.TextPath=""
                                Margin="5"
                                FontSize="22"      
                                FontWeight="Bold" 
                                ItemsSource="{Binding InspectionMCItem, Mode=OneWay}"    
                                VerticalAlignment="Top" 
                                Height="40" 
                                Grid.Column="3" />
                    <CheckBox Name="chkAll" 
                                  Content="All" 
                                  Margin="5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" Grid.Column="4" />

                    <Button Name="cmdSearch" 
                                Content="Search"
                                Margin="9,6,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="5" Click="cmdSearch_Click">
                    </Button>
                    <Button Content="Send D365" FontSize="22" FontWeight="Bold" Grid.Column="5" Height="40" Margin="0,6,10,0"  Name="cmdSendD365" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" HorizontalAlignment="Right" Width="130" Click="cmdSendD365_Click" />

                    <Grid Name="grid1"
                          Margin="5"
                          Grid.ColumnSpan="6" 
                          Grid.Row="1">
                        <DataGrid x:Name="gridInsLots" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver" SelectedCellsChanged="gridInsLots_SelectedCellsChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="145" Header="Inspection Lot" 
                                    Binding="{Binding INSPECTIONLOT}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="175" Header="Start Date" 
                                    Binding="{Binding STARTDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="175" Header="End Date" 
                                    Binding="{Binding ENDDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}"  
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="135" Header="Finishing Lot" 
                                    Binding="{Binding FINISHINGLOT}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="130" Header="Net Length" 
                                    Binding="{Binding NETLENGTH}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="80" Header="Grade" 
                                    Binding="{Binding GRADE}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="160" Header="GROSS WEIGHT" 
                                    Binding="{Binding GROSSWEIGHT}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="140" Header="NET WEIGHT" 
                                    Binding="{Binding NETWEIGHT}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Inspection By" 
                                    Binding="{Binding INSPECTEDBY}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="500" Header="Defect File Name" 
                                    Binding="{Binding DEFECTFILENAME}" 
                                    IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                   
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
