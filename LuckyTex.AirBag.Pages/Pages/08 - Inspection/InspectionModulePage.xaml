<UserControl x:Class="LuckyTex.Pages.InspectionModulePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ctrl="clr-namespace:LuckyTex.Controls;assembly=LuckyTex.AirBag.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="770" d:DesignWidth="1220" 
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Inspection Module"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdPreview"
                        Content="Preview"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdPreview_Click" />
                <!-- Weight -->
                <Button x:Name="cmdWeight"
                        Content="Weight"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdWeight_Click" />
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <!-- Seperator -->
            <Grid Width="30" DockPanel.Dock="Right" />
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="210" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="210" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="400" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="400" />
                        <RowDefinition Height="2" />
                    </Grid.RowDefinitions>
                    <TextBlock Name="lbInsMC" 
                               Text="INS99" 
                               Foreground="Red"
                               FontSize="36"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="1" />
                    <TextBlock Name="labGroup"
                               Text="Group" 
                               Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Right" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="4" 
                               Grid.Row="1" Width="80" />
                    <ComboBox Name="cbGroup" 
                              Margin="3,2,0,0"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding Group , Mode=OneWay}"
                              Grid.Column="5" Grid.Row="1" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" LostFocus="cbGroup_LostFocus" />
                    <TextBlock Text="Item Lot No. : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="2" />
                    <TextBlock Text="Item : "
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="3" />
                    <TextBlock Text="Total Length : "
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="4" />
                    <TextBlock Text="Start Time : "
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="5" />
                    <TextBlock Text="End Time : "
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="6" />
                    <TextBlock x:Name ="labCustomerType"
                               Text="Customer Type : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="4" Grid.Row="2" />
                    <TextBlock Text="Loading Type : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="4" Grid.Row="3" />
                    <TextBlock Text="Lot No. : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="4" Grid.Row="4" />
                    <TextBlock Text="Current Length : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="4" Grid.Row="5" />
                    <TextBlock Text="Remain Length : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="4" Grid.Row="6" />
                    <TextBox x:Name="txtItemLotNo"  
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="2" KeyDown="txtItemLotNo_KeyDown" LostFocus="txtItemLotNo_LostFocus" TextChanged="txtItemLotNo_TextChanged">
                    </TextBox>
                    <TextBox x:Name="txtItemCode"  
                             Margin="3"
                             IsReadOnly="True"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2" 
                             KeyDown="txtItemCode_KeyDown" />
                    <TextBox x:Name="txtCustomerType"  
                             IsReadOnly="False"
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="5" Grid.Row="2" KeyDown="txtCustomerType_KeyDown" LostFocus="txtCustomerType_LostFocus" />
                    <TextBox x:Name="txtLoadingType"  
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="5" Grid.Row="3" KeyDown="txtLoadingType_KeyDown" LostFocus="txtLoadingType_LostFocus"/>
                    <TextBox x:Name="txtInsLotNo"  
                             IsReadOnly="True"
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="5" Grid.Row="4" TextChanged="txtInsLotNo_TextChanged" LostFocus="txtInsLotNo_LostFocus" KeyDown="txtInsLotNo_KeyDown" />
                    <TextBox x:Name="txtTotalLen"  
                             Margin="3"
                             IsReadOnly="True"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="4" 
                             KeyDown="txtTotalLen_KeyDown" 
                             PreviewKeyDown="Common_PreviewKeyDown">
                    </TextBox>
                    <TextBox x:Name="txtCurrLen"  
                             IsReadOnly="True"
                             Foreground="White"
                             Background="CornflowerBlue"
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="5" Grid.Row="5"/>
                    <TextBox x:Name="txtStartDT"  
                             Text="28/08/2014 10:00:35"
                             IsReadOnly="True"
                             Foreground="White"
                             Background="CornflowerBlue"
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="2" />
                    <TextBox x:Name="txtEndDT"  
                             Text="28/08/2014 10:00:35"
                             IsReadOnly="True"
                             Foreground="White"
                             Background="CornflowerBlue"
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="2" />
                    <TextBox x:Name="txtRemainLen"
                             IsReadOnly="True"
                             Foreground="White"
                             Background="CornflowerBlue"
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="5" Grid.Row="6"/>
                    <Grid VerticalAlignment="Stretch" 
                          HorizontalAlignment="Stretch" 
                          Margin="15, 0, 0, 0"
                          Grid.Row="1" Grid.Column="6" Grid.RowSpan="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="90*" />
                            <ColumnDefinition Width="10*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40*" />
                            <RowDefinition Height="40*" />
                            <RowDefinition Height="40*" />
                            <RowDefinition Height="40*" />
                            <RowDefinition Height="40*" />
                            <RowDefinition Height="40*" />
                            <RowDefinition Height="40*" />
                            <RowDefinition Height="10*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Type" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="CornflowerBlue" 
                                   HorizontalAlignment="Stretch"                                
                                   TextAlignment="Left" 
                                   VerticalAlignment="Center"                                
                                   Grid.ColumnSpan="3" />
                        <RadioButton Name="rbMass" 
                                     Content="Mass Product" 
                                     GroupName="rbMain"
                                     IsChecked="True"
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Left" 
                                     VerticalAlignment="Center" 
                                     Style="{StaticResource imageRadioButtonORBStyle}"
                                     Grid.Row="1" Grid.ColumnSpan="3" Checked="rbMass_Checked" Unchecked="rbMass_Unchecked" />
                        <RadioButton Name="rbTest" 
                                     Content="Test" 
                                     GroupName="rbMain"
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Left" 
                                     VerticalAlignment="Center" 
                                     Style="{StaticResource imageRadioButtonORBStyle}"
                                     Grid.ColumnSpan="3" Grid.Row="2" Checked="rbTest_Checked" Unchecked="rbTest_Unchecked" />
                        <CheckBox Name="chkReAdjustSameLot" 
                                  Content="Re-adjust (Same Lot)" 
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"
                                  Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" 
                                  Checked="chkReAdjustSameLot_Checked" 
                                  Unchecked="chkReAdjustSameLot_Unchecked" />
                        <RadioButton Name="rbReAdjustSameLotSameItem" 
                                     Content="Same Item" 
                                     GroupName="rbSub2"
                                     IsChecked="False"
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Left" 
                                     VerticalAlignment="Center" 
                                     Style="{StaticResource imageRadioButtonORBStyle}"
                                     Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" 
                                     Checked="rbReAdjustSameLotSameItem_Checked" 
                                     Unchecked="rbReAdjustSameLotSameItem_Unchecked" />
                        <StackPanel x:Name="paReAdjust" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Stretch"
                                    Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" >
                            <RadioButton Name="rbReAdjustSameLotDiffItem" 
                                         Content="Different Item" 
                                         GroupName="rbSub2"
                                         FontSize="22" 
                                         FontWeight="Bold" 
                                         HorizontalAlignment="Left" 
                                         VerticalAlignment="Center" 
                                         Style="{StaticResource imageRadioButtonORBStyle}"
                                         Checked="rbReAdjustSameLotDiffItem_Checked" 
                                         Unchecked="rbReAdjustSameLotDiffItem_Unchecked" />
                            <TextBox x:Name="txtDiff" 
                                     Margin="5, 0, 10, 0"
                                     CharacterCasing="Upper"
                                     FontSize="22"
                                     FontWeight="Bold"
                                     Width="110"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <CheckBox Name="chkReProcessChangeLot"
                                  Content="Re–Process (Change Lot)" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"
                                  Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3" 
                                  Checked="chkReProcessChangeLot_Checked" 
                                  Unchecked="chkReProcessChangeLot_Unchecked" />
                    </Grid>
                    <Grid HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch" 
                          Margin="3"
                          Grid.Column="1" Grid.ColumnSpan="6" Grid.Row="7">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2"/>
                            <RowDefinition Height="428"/>
                            <RowDefinition Height="2"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="500*" />
                            <ColumnDefinition Width="720*" />
                        </Grid.ColumnDefinitions>
                        <Grid HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch" Grid.Row="1" Margin="0,0,0,42">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="195" />
                                <RowDefinition Height="190" />
                                <RowDefinition Height="2" />
                            </Grid.RowDefinitions>
                            <Grid HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="195" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="145" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="36*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="38" />
                                    <RowDefinition Height="38" />
                                    <RowDefinition Height="38" />
                                    <RowDefinition Height="38" />
                                    <RowDefinition Height="38" />
                                    <RowDefinition Height="2" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="Defect/Position : "
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Stretch" 
                                           TextAlignment="Right" 
                                           VerticalAlignment="Center" 
                                           Grid.Row="1" Grid.Column="1"/>
                                <TextBox Name="txtDefectPos" 
                                         CharacterCasing="Upper" 
                                         Margin="2"
                                         Width="110"
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         HorizontalAlignment="Stretch" 
                                         VerticalAlignment="Center" 
                                         MaxLength="5"
                                         TextAlignment="Center" 
                                         Grid.Column="2" Grid.Row="1" KeyDown="txtDefectPos_KeyDown" KeyUp="txtDefectPos_KeyUp" />
                                <TextBlock Text="Press Enter to save" 
                                           Margin="2"
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="CornflowerBlue" 
                                           HorizontalAlignment="Stretch" 
                                           VerticalAlignment="Center" 
                                           TextAlignment="Center" 
                                           Opacity="0.5" 
                                           Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="1"/>
                                <TextBlock x:Name="txtDefectInfo"
                                           Text="-" 
                                           Foreground="Red"
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Stretch" 
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           Grid.Column="3" Grid.Row="1" />
                                <Button Name="cmdShowDefectList" 
                                        Margin="14,4,11,4"
                                        Content="Defect List" 
                                        FontSize="22" 
                                        FontStretch="Normal" 
                                        FontWeight="Bold" 
                                        Style="{StaticResource MenuButtonStyle}" 
                                        Grid.Column="1" Grid.Row="4" 
                                        Grid.ColumnSpan="3" Click="cmdShowDefectList_Click" />
                                <CheckBox Name="chkStart0"
                                  Content="Start (0 M)" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"
                                  Grid.Column="1" Grid.Row="5" Checked="chkStart0_Checked" Unchecked="chkStart0_Unchecked" Margin="0,7" />
                                <TextBox Name="txtDefect100" 
                                         CharacterCasing="Upper" 
                                         Margin="2"
                                         Width="110"
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         HorizontalAlignment="Stretch" 
                                         VerticalAlignment="Center" 
                                         MaxLength="6"
                                         TextAlignment="Center" 
                                         Grid.Column="2" Grid.Row="5" KeyDown="txtDefect100_KeyDown" />
                                <Border x:Name="brdDefect100"
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3"                                        
                                        Background="Yellow"
                                        Margin="3,3,7,3"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"  
                                        Grid.Column="3" Grid.Row="5">
                                    <TextBlock x:Name="txtTotalDefect100M" 
                                               Text="0"
                                               FontSize="24" 
                                               FontWeight="Bold"  

                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center" />
                                </Border>
                            </Grid>
                            <Grid HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  Margin="2"
                                  Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="201*" />
                                    <ColumnDefinition Width="301*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="38" />
                                    <RowDefinition Height="100*" />
                                    <RowDefinition Height="38" />
                                    <RowDefinition Height="2" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="Total Defect : " 
                                           FontSize="24" 
                                           FontWeight="Bold"                                        
                                           HorizontalAlignment="Stretch"                                        
                                           VerticalAlignment="Center" 
                                           TextAlignment="Right" 
                                           Grid.Row="1" />
                                <TextBlock Text="Grade : " 
                                           FontSize="24" 
                                           FontWeight="Bold"                                        
                                           HorizontalAlignment="Stretch" 
                                           VerticalAlignment="Top" 
                                           TextAlignment="Right" 
                                           Grid.Row="2" />
                                <TextBlock Text="Operator : " 
                                           FontSize="24" 
                                           FontWeight="Bold"                                       
                                           HorizontalAlignment="Stretch"                                        
                                           VerticalAlignment="Center" 
                                           TextAlignment="Right" 
                                           Grid.Row="3" />
                                <Border BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3"                                        
                                        Background="CornflowerBlue"
                                        Margin="3"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"  
                                        Grid.Column="1" Grid.Row="1">
                                    <TextBlock x:Name="txtTotalDefect" 
                                               Text="0"
                                               FontSize="24" 
                                               FontWeight="Bold"  
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center" />
                                </Border>
                                
                                <Border x:Name="brdGrade"
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Background="Yellow"
                                        Margin="3"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"  
                                        Grid.Column="1" Grid.Row="2">
                                    <TextBlock x:Name="txtGrade" 
                                               Text="A"
                                               FontSize="90" 
                                               FontWeight="Bold"  
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center" />
                                </Border>
                                <Border BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Background="WhiteSmoke"
                                        Margin="3"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"  
                                        Grid.Column="1" Grid.Row="3">
                                    <TextBlock x:Name="txtOperator" 
                                               Margin="3"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Stretch" 
                                               VerticalAlignment="Center" 
                                               TextAlignment="Center" />
                                </Border>
                            </Grid>
                        </Grid>
                        <Grid HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch"
                              Grid.Column="1" Grid.Row="1" Margin="0,0,0,42">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="207*" />
                                <ColumnDefinition Width="121*" />
                                <ColumnDefinition Width="150*" />
                                <ColumnDefinition Width="144*" />
                                <ColumnDefinition Width="106*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="38" />
                                <RowDefinition Height="190" />
                                <RowDefinition Height="2" />
                                <RowDefinition Height="41*" />
                            </Grid.RowDefinitions>
                            <TextBlock FontSize="24" 
                                       FontWeight="Bold" 
                                       Grid.Column="3" 
                                       Grid.Row="7" 
                                       HorizontalAlignment="Stretch" 
                                       Margin="12,3,3,3" 
                                       Text="Long Defect : " 
                                       TextAlignment="Right" 
                                       VerticalAlignment="Center" Grid.ColumnSpan="2" />
                            <TextBlock 
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch" 
                                Margin="4,4,7,4" 
                                Text="Defect/Position : " 
                                TextAlignment="Right" 
                                VerticalAlignment="Center" />
                            <TextBox x:Name="txtDefectPos_Long" 
                                     CharacterCasing="Upper" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Stretch" 
                                     Margin="4,3,7,3" 
                                     MaxLength="5" 
                                     TextAlignment="Center" 
                                     VerticalAlignment="Center" 
                                     Width="110" 
                                     Grid.Column="1" KeyDown="txtDefectPos_Long_KeyDown" KeyUp="txtDefectPos_Long_KeyUp"/>
                            <TextBlock x:Name="txtDefectInfo_Long"
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="Red" 
                                       HorizontalAlignment="Stretch" 
                                       Margin="2,4,3,4" 
                                       Text="-" 
                                       TextAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Grid.Column="2" />
                            <TextBlock 
                                Text="Long Defect : " 
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Center" 
                                TextAlignment="Right" 
                                Margin="5,3,7,3" Height="34" Grid.Row="1" />
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1">
                                <TextBox Name="txtLongDefectStart" 
                                         CharacterCasing="Upper" 
                                         Margin="5, 2"
                                         Width="110"
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         HorizontalAlignment="Stretch" 
                                         VerticalAlignment="Center" 
                                         TextAlignment="Center" KeyDown="txtLongDefectStart_KeyDown" />
                                <TextBlock Text=" - "
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Stretch" 
                                           VerticalAlignment="Center" 
                                           TextAlignment="Center" />
                                <TextBox Name="txtLongDefectEnd" 
                                         CharacterCasing="Upper" 
                                         Margin="2"
                                         Width="110"
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         HorizontalAlignment="Stretch" 
                                         VerticalAlignment="Center" 
                                         TextAlignment="Center" KeyDown="txtLongDefectEnd_KeyDown" />
                            </StackPanel>
                            <TextBlock Text="Defect Length : "
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Stretch" 
                                       TextAlignment="Right" 
                                       VerticalAlignment="Center" 
                                       Grid.Row="2" Margin="4,1,7,2" />
                            <TextBox x:Name="txtDefectLength" 
                                     CharacterCasing="Upper" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Stretch" 
                                     Margin="4,3,7,3" 
                                     MaxLength="5" 
                                     TextAlignment="Center" 
                                     VerticalAlignment="Center" 
                                     Width="110" 
                                     Grid.Row="2" Grid.Column="1" />
                            <Grid HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  Margin="2,2,2,0"
                                  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Button Name="cmdLongDefectStart" 
                                        Margin="2"
                                        Content="Start" 
                                        FontSize="22" 
                                        FontStretch="Normal" 
                                        FontWeight="Bold" 
                                        Style="{StaticResource MenuButtonStyle}" 
                                        Grid.Column="0" Click="cmdLongDefectStart_Click" />
                                <Button Name="cmdLongDefectEnd" 
                                        Margin="2"
                                        Content="End" 
                                        FontSize="22" 
                                        FontStretch="Normal" 
                                        FontWeight="Bold" 
                                        Style="{StaticResource MenuButtonStyle}" 
                                        Grid.Column="1" Click="cmdLongDefectEnd_Click" />
                                <Button Name="cmdLongDefectCancel" 
                                        Margin="2"
                                        Content="Cancel" 
                                        FontSize="22" 
                                        FontStretch="Normal" 
                                        FontWeight="Bold" 
                                        Style="{StaticResource MenuButtonStyle}" 
                                        Grid.Column="2" Click="cmdLongDefectCancel_Click" />
                            </Grid>

                            <Grid HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  Margin="2"
                                  Grid.Row="5" Grid.ColumnSpan="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="600*" />
                                    <ColumnDefinition Width="150*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="38" />
                                    <RowDefinition Height="100*" />
                                    <RowDefinition Height="38" />
                                    <RowDefinition Height="2" />
                                </Grid.RowDefinitions>
                                <Grid HorizontalAlignment="Stretch" 
                                      VerticalAlignment="Stretch"
                                      Margin="1,1,5,1" Grid.Row="1" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15*" />
                                        <ColumnDefinition Width="146*" />
                                        <ColumnDefinition Width="186*" />
                                        <ColumnDefinition Width="188*" />
                                        <ColumnDefinition Width="168*" />
                                        <ColumnDefinition Width="15*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="COUNTER" 
                                               FontSize="24" 
                                               FontWeight="Bold"                                        
                                               HorizontalAlignment="Stretch"                                        
                                               VerticalAlignment="Center" 
                                               TextAlignment="Left" 
                                               Grid.Column="1" Margin="0,2,6,2" />
                                    
                                    <Button Name="cmdResetComm" 
                                            Content="Reset Comm." 
                                            Margin="7,5,6,5"
                                            FontSize="20" 
                                            FontWeight="Bold"
                                            HorizontalAlignment="Stretch"
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Grid.Column="2" />
                                    <Button Name="cmd100M" 
                                            Content="100M Record"
                                            Margin="7,5,10,5" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Grid.Column="3" 
                                            Click="cmd100M_Click" />
                                    <Button Name="cmdHistory" 
                                            Content="History" 
                                            Margin="5,5,69,5" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Grid.Column="4" 
                                            Click="cmdHistory_Click" />
                                </Grid>
                                <Border BorderThickness="1" 
                                        BorderBrush="Black"
                                        CornerRadius="3" 
                                        Margin="3"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        Grid.Row="2">
                                    <TextBlock x:Name="txtCounter" 
                                               Text="00000.00"
                                               FontSize="90" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Stretch" 
                                               VerticalAlignment="Center" 
                                               TextAlignment="Center" LayoutUpdated="txtCounter_LayoutUpdated" />
                                </Border>
                                <Button Name="cmdNew" 
                                        Content="End Lot" 
                                        Margin="5"
                                        FontSize="32" 
                                        FontStretch="Normal" 
                                        FontWeight="Bold"
                                        Style="{StaticResource MenuButtonStyle}" 
                                        Grid.Column="1" Grid.Row="2"
                                        Click="cmdNew_Click" />
                                <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="cmdRemark"
                                            Content="Remark"
                                            Margin="5" 
                                            HorizontalAlignment="Stretch"
                                            FontSize="22" 
                                            FontWeight="Bold"
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Grid.Column="1"
                                            Click="cmdRemark_Click" />
                                    <Button x:Name="cmdStart"
                                            Content="Start"
                                            Margin="5" 
                                            HorizontalAlignment="Stretch"
                                            FontSize="22" 
                                            FontWeight="Bold"
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Grid.Column="2"
                                            Click="cmdStart_Click" />
                                    <Button x:Name="cmdStop"
                                            Content="Stop"
                                            Margin="5" 
                                            HorizontalAlignment="Stretch"
                                            FontSize="22" 
                                            FontWeight="Bold"
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Grid.Column="3"
                                            Click="cmdStop_Click" />
                                    <Button x:Name="cmdNext"
                                            Content="Next"
                                            Margin="5" 
                                            HorizontalAlignment="Stretch"
                                            FontSize="22" 
                                            FontWeight="Bold"
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Grid.Column="4"
                                            Click="cmdNext_Click" />
                                    <Button x:Name="cmdClear"
                                            Content="Clear"
                                            Margin="5" 
                                            HorizontalAlignment="Stretch"
                                            FontSize="24" 
                                            FontWeight="Bold"
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Grid.Column="5"
                                            Click="cmdClear_Click" />
                                    <Button x:Name="cmdSuspend"
                                            Content="Suspend"
                                            Margin="5" 
                                            HorizontalAlignment="Stretch"
                                            FontSize="22" 
                                            FontWeight="Bold"
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Grid.Column="6"
                                            Click="cmdSuspend_Click" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                    
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
