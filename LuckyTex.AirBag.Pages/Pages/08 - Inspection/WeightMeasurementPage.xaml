<UserControl x:Class="LuckyTex.Pages.WeightMeasurementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="770" 
             d:DesignWidth="1220" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Re-Print Inspection Report"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="70" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Item Lot No" 
                        Margin="2"
                        FontSize="24" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center" 
                        TextAlignment="Right" 
                        Grid.Column="1" Grid.Row="1"/>
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" 
                            Grid.Column="2" Grid.Row="1">
                        <TextBox Name="txtItemLotNo" 
                                 Text="B201001100" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 KeyDown="txtItemLotNo_KeyDown" 
                                 LostFocus="txtItemLotNo_LostFocus" />
                    </Border>
                    <TextBlock Text="Lot No" 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="3" Grid.Row="1"/>
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" 
                            Grid.Column="4" Grid.Row="1">
                        <TextBox Name="txtLotNo" 
                                 Text="A01148191" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 LostFocus="txtLotNo_LostFocus" 
                                 KeyDown="txtLotNo_KeyDown" />
                    </Border>
                    <Grid Name="grdType"
                          Margin="3,3,3,3" 
                          Grid.Column="5" 
                          Grid.Row="1" 
                          Grid.RowSpan="2" 
                          VerticalAlignment="Top">
                        <TextBlock FontSize="24" FontWeight="Bold" Foreground="CornflowerBlue" HorizontalAlignment="Stretch" Margin="10,-2,4,64" Text="Type" TextAlignment="Left" VerticalAlignment="Center" />
                        <RadioButton Content="Mass Product" FontSize="22" FontWeight="Bold" GroupName="rbMain" HorizontalAlignment="Left" IsChecked="True" Margin="10,35,0,35" Name="rbMass" Style="{StaticResource imageRadioButtonORBStyle}" VerticalAlignment="Center" />
                        <RadioButton Content="Test" FontSize="22" FontWeight="Bold" GroupName="rbMain" HorizontalAlignment="Left" Margin="10,65,0,5" Name="rbTest" Style="{StaticResource imageRadioButtonORBStyle}" VerticalAlignment="Center" />
                    </Grid>
                    
                    <TextBlock Text="Item" 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="2" />
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" 
                            Grid.Column="2" Grid.Row="2">
                        <TextBox Name="txtItem" 
                                 Text="4L50B25" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 IsReadOnly="True"
                                 Margin="2" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" />
                    </Border>

                    <TextBlock Text="Customer Type" 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="3" Grid.Row="2"/>
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" 
                            Grid.Column="4" Grid.Row="2">
                        <TextBox Name="txtCustomerType" 
                                 Text="" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 KeyDown="txtCustomerType_KeyDown" LostFocus="txtCustomerType_LostFocus" />
                    </Border>


                    <TextBlock Text="Length" 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="3"/>
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" 
                            Grid.Column="2" Grid.Row="3">
                        <TextBox Name="txtLength" 
                                 Text="700" 
                                 BorderBrush="{x:Null}"
                                 CharacterCasing="Upper"
                                 IsReadOnly="True"
                                 Margin="2" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown" />
                    </Border>
                    <TextBlock Text="Loading Type" 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="3" Grid.Row="3"/>
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" 
                            Grid.Column="4" Grid.Row="3">
                        <TextBox Name="txtLoadingType" 
                                 Text="" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                
                                 Margin="2" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" KeyDown="txtLoadingType_KeyDown" LostFocus="txtLoadingType_LostFocus" />
                    </Border>
                    <TextBlock Text="Grade" 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="3" Grid.Row="4"/>
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" 
                            Grid.Column="4" Grid.Row="4">
                        <TextBox Name="txtGrade" 
                                 Text="A" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 IsReadOnly="True"
                                 Margin="2" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" />
                    </Border>
                    <TextBlock Text="Weight" 
                               Margin="2" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="4"/>
                    <CheckBox Name="chkManual"
                                  Content="Manual"         
                                  Margin="5" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}"
                                  Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="3" Checked="chkManual_Checked" Unchecked="chkManual_Unchecked" />
                    <TextBlock Text="G.W." 
                               Margin="2" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="5" />
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Grid.Column="2" Grid.Row="5">
                        <TextBox Name="txtGW" 
                                 Text="250" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="48" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown" 
                                 LostFocus="txtGW_LostFocus" 
                                 KeyDown="txtGW_KeyDown" />
                    </Border>
                    <TextBlock Text="N.W." 
                               Margin="2" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="3" Grid.Row="5" />
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Grid.Column="4" Grid.Row="5">
                        <TextBox Name="txtNW"
                                 Text="247" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="48" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown" 
                                 KeyDown="txtNW_KeyDown" />
                    </Border>
                    <Grid Margin="10,10,7,10"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="5" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="55*" />
                            <ColumnDefinition Width="277*" />
                            <ColumnDefinition Width="55*" />
                            <ColumnDefinition Width="147*" />
                            <ColumnDefinition Width="147*" />
                            <ColumnDefinition Width="38*" />
                        </Grid.ColumnDefinitions>
                        <Button Name="cmdReprintReport" 
                                Content="Reprint Report"
                                Visibility="Hidden"
                                Margin="3" 
                                FontSize="28" 
                                FontWeight="Bold"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="1" Grid.Row="0" 
                                Click="cmdReprintReport_Click" />
                        <Button Name="cmdPrintReport" 
                                Content="Save"
                                Margin="2,3,3,3"                             
                                FontSize="28" 
                                FontWeight="Bold"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="3" Click="cmdPrintReport_Click" />
                        <Button Name="cmdPreview"
                                Content="Preview" 
                                Margin="2,3,3,3" 
                                FontSize="28" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Center" 
                                Style="{StaticResource MenuButtonStyle}" 
                                VerticalAlignment="Stretch" 
                                VerticalContentAlignment="Center" 
                                Grid.Column="4" Click="cmdPreview_Click" />
                    </Grid>
                    
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
