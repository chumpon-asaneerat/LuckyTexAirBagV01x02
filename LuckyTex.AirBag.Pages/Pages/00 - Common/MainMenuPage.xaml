<UserControl x:Class="LuckyTex.Pages.MainMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1270">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="AIRBAG TRACE ABILITY SYSTEM"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Button x:Name="cmdWarehouse" 
                    Content="G3 (Warehouse)"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="0" Grid.Row="0" 
                    Click="cmdWarehouse_Click" />
            <!-- Warping -->
            <Button x:Name="cmdWarping" 
                    Content="Warping"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="0" Grid.Row="1" 
                    Click="cmdWarping_Click" />
            <!-- Beaming -->
            <Button x:Name="cmdBeaming" 
                    Content="Beaming"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="0" Grid.Row="2" 
                    Click="cmdBeaming_Click" />
            <!-- Drawing -->
            <Button x:Name="cmdDrawing" 
                    Content="Drawing"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="0" Grid.Row="3"
                    Click="cmdDrawing_Click" />
            <!-- Weaving -->
            <Button x:Name="cmdWeaving" 
                    Content="Weaving"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="0" Grid.Row="4" 
                    Click="cmdWeaving_Click" />
            <!-- Finishing -->
            <Button x:Name="cmdQualityAssurance" 
                    Content="Release Product"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="1" Grid.Row="5" Click="cmdQualityAssurance_Click" />
            
            <!-- Cut and Print -->
            <Button x:Name="cmdCutAndPrint"  
                    Content="Cut&amp;Print"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="1" Grid.Row="0" 
                    Click="cmdCutAndPrint_Click" />
            <!-- Inspection -->
            <Button x:Name="cmdInspection" 
                    Content="Inspection"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="1" Grid.Row="1" 
                    Click="cmdInspection_Click" />
            <!-- Packing -->
            <Button x:Name="cmdPacking" 
                    Content="Packing"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="1" Grid.Row="2" 
                    Click="cmdPacking_Click" />
            <!-- LAB -->
            <Button x:Name="cmdLAB" 
                    Content="Laboratory"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="1" Grid.Row="3" 
                    Click="cmdLAB_Click" />
            <!-- Approve -->
            <Button x:Name="cmdApprove" 
                    Content="Approve"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="0" Grid.Row="6"
                    Click="cmdApprove_Click" />
            <!-- Process Control -->
            <Button x:Name="cmdProcessControl" 
                    Content="Process Control"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="1" Grid.Row="4" Click="cmdProcessControl_Click" />
            
            <!-- Finishing -->
            <Button x:Name="cmdFinishing" 
                    Content="Finishing"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="0" Grid.Row="5" Click="cmdFinishing_Click" />
            <!-- Report2 -->
            <Button x:Name="cmdReport2" 
                    Content="Report2"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="1" Grid.Row="6" />
            <!-- cmdCustomerAndLoadingType -->
            <Button x:Name="cmdCustomerAndLoadingType" 
                    Content="Customer &amp; Loading"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="2" Grid.Row="0" 
                    Click="cmdCustomerAndLoadingType_Click" />
            <!-- Silicone -->
            <Button x:Name="cmdSilicone" 
                    Content="Silicone"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="2" Grid.Row="6" 
                    Click="cmdSilicone_Click" />
            <!-- Machines -->
            <Button x:Name="cmd100MRecord" 
                    Content="100M Record Setup"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="2" Grid.Row="5" 
                    Click="cmd100MRecord_Click" />
            <!-- Process Condition -->
            <Button x:Name="cmdProcessCondition" 
                    Content="Process Condition"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="2" Grid.Row="4" 
                    Click="cmdProcessCondition_Click" />
            <!-- Defect Code -->
            <Button x:Name="cmdDefectCode" 
                    Content="Defect Code"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="2" Grid.Row="2" 
                    Click="cmdDefectCode_Click" />
            <!-- Item Code -->
            <Button x:Name="cmdItemCode" 
                    Content="Item Code"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="2" Grid.Row="3" 
                    Click="cmdItemCode_Click" />
            <!-- Operator -->
            <Button x:Name="cmdOperator" 
                    Content="Operator"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="2" Grid.Row="1" 
                    Click="cmdOperator_Click" />
            <!-- User Management  -->
            <Button x:Name="cmdUserManagement" 
                    Content="User Management"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="2" Grid.Row="7" 
                    Click="cmdUserManagement_Click" />
            <!-- Optional -->
            <Button x:Name="cmdOptional" 
                    Content="Optional"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="1" Grid.Row="7" />
            <Button x:Name="cmdFinishingTest" 
                    Content="Finishing (Test)"
                    Margin="3" 
                    FontSize="40" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Column="0" Grid.Row="7" 
                    Click="cmdFinishingTest_Click" />
        </Grid>
    </DockPanel>
</UserControl>
