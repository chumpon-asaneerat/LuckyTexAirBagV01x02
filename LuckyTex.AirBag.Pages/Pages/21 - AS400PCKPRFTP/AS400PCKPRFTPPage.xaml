<UserControl x:Class="LuckyTex.Pages.AS400PCKPRFTPPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Get AS400"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdSave"
                        Content="Save"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click" />
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1185*" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="50" />
                    <RowDefinition Height="300*" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="300*" />
                    <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                <Button Name="cmdAS400" Content="AS400" 
                        Margin="133,4,0,0" FontSize="22" FontWeight="Bold" Height="40" Width="120" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="3" Click="cmdAS400_Click">               
                </Button>
                <TextBlock FontSize="24" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Left" Margin="4,8,0,0" Text="ROLL NO. :" TextAlignment="Right" VerticalAlignment="Top"  />
                <TextBox CharacterCasing="Upper" FontSize="24" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Left" Margin="134,7,0,0" Name="txtCDEL0" TextAlignment="Center" VerticalAlignment="Top" Width="150" KeyDown="txtCDEL0_KeyDown" />
                <TextBlock FontSize="24" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Left" Margin="296,8,0,0" Text="INV NO. :" TextAlignment="Right" VerticalAlignment="Top" />
                <TextBox CharacterCasing="Upper" FontSize="24" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Left" Margin="410,7,0,0" Name="txtINVNO" TextAlignment="Center" VerticalAlignment="Top" Width="150" KeyDown="txtINVNO_KeyDown" />
                <Button Content="Search" FontSize="22" FontWeight="Bold" Grid.Row="1" Height="40" HorizontalAlignment="Left" Margin="572,4,0,0" Name="cmdSearch" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="120" Click="cmdSearch_Click" />
                <Button Content="Clear" FontSize="22" FontWeight="Bold" Grid.Row="1" Height="40" HorizontalAlignment="Left" Margin="701,4,0,0" Name="cmdClear" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="107" Click="cmdClear_Click" />
                <Button Content="Gen No" FontSize="22" FontWeight="Bold" Grid.Row="1" Height="40" HorizontalAlignment="Left" Margin="818,4,0,0" Name="cmdGenNo" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="120" Click="cmdGenNo_Click" />
                <Label x:Name="labConnect"
                               Margin="263,4,0,5" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Height="41" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Center" Grid.Row="3" />
                <Grid Name="grid1"
                          Margin="3" 
                          Grid.Row="2" >
                <DataGrid x:Name="dgAS400" 
                                Margin="3,3,3,3"
                                    ItemsSource="{Binding}"
                                    SelectionMode="Extended"
                                    AlternatingRowBackground="AntiqueWhite"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    FontSize="16" 
                                    FontWeight="Normal" FontFamily="Tahoma" 
                                    HorizontalGridLinesBrush="Silver" 
                                    VerticalGridLinesBrush="Silver"
                                    HorizontalContentAlignment="Left" 
                                    ScrollViewer.CanContentScroll="True" 
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"  >
                            <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path= RUNNO, Mode= OneWay}"  Header="Run No" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= AS400NO, Mode= OneWay}"  Header="AS400 No" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CUSNO, Mode= OneWay}"  Header="CUS No" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= ANNUL, Mode= OneWay}"  Header="FLAG" IsReadOnly="True" Width="60" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDDIV, Mode= OneWay}"  Header="DIVISION" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= INVTY, Mode= OneWay}"  Header="DO TYPE" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= INVNO, Mode= OneWay}"  Header="DO NO." IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDORD, Mode= OneWay}"  Header="ORDER NO." IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="100" Header="RELEASE NO" 
                                    Binding="{Binding RELNO, Mode= OneWay, StringFormat='{}{0:#,##0}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CUSCD, Mode= OneWay}"  Header="CUSTOMER TYPE" IsReadOnly="True" Width="140" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CUSNM, Mode= OneWay}"  Header="CUSTOMER NAME" IsReadOnly="True" Width="250" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= RECTY, Mode= OneWay}"  Header="ARTICLE" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDKE1, Mode= OneWay}"  Header="ITEM CODE" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDKE2, Mode= OneWay}"  Header="ITEM CODE" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CSITM, Mode= OneWay}"  Header="CUSTOMER ITEM" IsReadOnly="True" Width="140" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDCON, Mode= OneWay}"  Header="PALLET NO." IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDEL0, Mode= OneWay}"  Header="ROLL NO." IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= GRADE, Mode= OneWay}"  Header="GRADE" IsReadOnly="True" Width="70" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="100" Header="LENGTH" 
                                    Binding="{Binding PIELN, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="120" Header="NET WEIGHT" 
                                    Binding="{Binding NETWH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="140" Header="GROSS WEIGHT" 
                                    Binding="{Binding GRSWH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="140" Header="GROSS LENGTH" 
                                    Binding="{Binding GRSLN, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= PALSZ, Mode= OneWay}"  Header="PALLET CODE" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Width="140" Header="DATE" 
                                    Binding="{Binding DTTRA, Mode= OneWay, StringFormat='{}{0:####}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="140" Header="UPDATE TIME" 
                                    Binding="{Binding DTORA, Mode= OneWay, StringFormat='{}{0:####}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                                
                        </DataGrid.Columns>
                        </DataGrid>
                </Grid>
                <Button Content="Excel" FontSize="22" FontWeight="Bold" Grid.Row="3" Height="40" HorizontalAlignment="Left" Margin="3,4,0,0" Name="cmdExcel" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="120" Click="cmdExcel_Click" />
                <Grid Margin="3" Grid.Row="4" Name="grid2">
                    <DataGrid  x:Name="dgExcel" 
                                    Margin="3"
                                    ItemsSource="{Binding}"
                                    SelectionMode="Extended"
                                    AlternatingRowBackground="AntiqueWhite"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    FontSize="16" 
                                    FontWeight="Normal" FontFamily="Tahoma" 
                                    HorizontalGridLinesBrush="Silver" 
                                    VerticalGridLinesBrush="Silver"
                                    HorizontalContentAlignment="Left" 
                                    ScrollViewer.CanContentScroll="True" 
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path= FabricNo, Mode= OneWay}"  Header="Fabric No" IsReadOnly="True" Width="140" >
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= RollNo, Mode= OneWay}" Header="Roll No" IsReadOnly="True" Width="140" >
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="100" Header="Cus Run No" 
                                    Binding="{Binding CusRunNo, Mode= OneWay, StringFormat='{}{0:###0}'}"  
                                    IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="100" Header="Qty" 
                                    Binding="{Binding Qty, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="100" Header="NW" 
                                    Binding="{Binding NW, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="100" Header="GW" 
                                    Binding="{Binding GW, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <TextBlock Text="Operator : " 
                               Margin="8,3,0,3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" Grid.Row="5" Width="122" />
                <TextBox x:Name="txtOperator"  
                            Margin="141,5,0,5"
                            CharacterCasing="Upper"
                            FontSize="24"
                            FontWeight="Bold"
                            TextAlignment="Center"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center" 
                            IsEnabled="False" Grid.Row="5" Width="158">
                </TextBox>
            </Grid>            
        </Border>
    </DockPanel>  
</UserControl>
