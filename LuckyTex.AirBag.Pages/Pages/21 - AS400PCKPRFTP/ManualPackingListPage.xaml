<UserControl x:Class="LuckyTex.Pages.ManualPackingListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Manual Packing List"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1185*" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="100" />
                    <RowDefinition Height="300*" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="300*" />
                    <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                <Button Name="cmdAS400" Content="AS400 insert data" 
                        Margin="118,50,0,0" FontSize="22" FontWeight="Bold" Height="40" Width="220" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="1" Click="cmdAS400_Click">   
                </Button>
                <Button Content="AS400 get data" FontSize="22" FontWeight="Bold" Grid.Row="1" Height="40" HorizontalAlignment="Left" Margin="348,50,0,0" Name="cmdAS400GetData" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="220" Click="cmdAS400GetData_Click" />
                <Button Content="D365 Insert " Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="580,60,0,0" Name="cmdD365Insert" VerticalAlignment="Top" Width="75" Click="cmdD365Insert_Click" />
                <Button Content="D365 Get " Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="664,60,0,0" Name="cmdD365Get" VerticalAlignment="Top" Width="75" Click="cmdD365Get_Click" />
                <TextBlock FontSize="24" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Left" Margin="297,7,0,0" Text="ROLL NO. :" TextAlignment="Right" VerticalAlignment="Top"  />
                <TextBox CharacterCasing="Upper" FontSize="24" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Left" Margin="426,7,0,0" Name="txtCDEL0" TextAlignment="Center" VerticalAlignment="Top" Width="170" KeyDown="txtCDEL0_KeyDown" />
                <TextBlock FontSize="24" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Left" Margin="4,7,0,0" Text="DO NO. :" TextAlignment="Right" VerticalAlignment="Top" />
                <TextBox CharacterCasing="Upper" FontSize="24" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Left" Margin="118,7,0,0" Name="txtINVNO" TextAlignment="Center" VerticalAlignment="Top" Width="170" KeyDown="txtINVNO_KeyDown" />
                <Button Content="Search" FontSize="22" FontWeight="Bold" Grid.Row="1" Height="40" HorizontalAlignment="Left" Margin="609,4,0,0" Name="cmdSearch" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="120" Click="cmdSearch_Click" />
                <Button Content="Clear" FontSize="22" FontWeight="Bold" Grid.Row="1" Height="40" HorizontalAlignment="Left" Margin="738,4,0,0" Name="cmdClear" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="107" Click="cmdClear_Click" />
                <Button Content="Delete" FontSize="22" FontWeight="Bold" Grid.Row="1" Height="40" HorizontalAlignment="Left" Margin="854,4,0,0" Name="cmdDelete" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="107" Click="cmdDelete_Click"/>
                <Grid Name="grid1"
                          Margin="3" 
                          Grid.Row="2" >
                <DataGrid x:Name="dgAS400" 
                                Margin="3,3,3,3"
                                    ItemsSource="{Binding}"
                                    SelectionMode="Extended"
                                    AlternatingRowBackground="AntiqueWhite"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    FontSize="16" 
                                    FontWeight="Normal" FontFamily="Tahoma" 
                                    HorizontalGridLinesBrush="Silver" 
                                    VerticalGridLinesBrush="Silver"
                                    HorizontalContentAlignment="Left" 
                                    ScrollViewer.CanContentScroll="True" 
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"  >
                            <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Pass" Width="50" IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}" >
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                        <Image Source="{Binding ImgScanFlag}" Height="15" Width="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Binding="{Binding Path= RUNNO, Mode= OneWay}"  Header="Run No" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= AS400NO, Mode= OneWay}"  Header="AS400 No" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CUSNO, Mode= OneWay}"  Header="CUS No" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= INVTY, Mode= OneWay}"  Header="DO TYPE" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= INVNO, Mode= OneWay}"  Header="DO NO." IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDORD, Mode= OneWay}"  Header="ORDER NO." IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CUSCD, Mode= OneWay}"  Header="CUSTOMER TYPE" IsReadOnly="True" Width="140" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CUSNM, Mode= OneWay}"  Header="CUSTOMER NAME" IsReadOnly="True" Width="250" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDKE1, Mode= OneWay}"  Header="ITEM CODE" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDKE2, Mode= OneWay}"  Header="ITEM CODE" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CSITM, Mode= OneWay}"  Header="CUSTOMER ITEM" IsReadOnly="True" Width="140" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDCON, Mode= OneWay}"  Header="PALLET NO." IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDEL0, Mode= OneWay}"  Header="ROLL NO." IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= GRADE, Mode= OneWay}"  Header="GRADE" IsReadOnly="True" Width="70" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="" Width="25" IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}" >
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                        <Image Source="{Binding ImgChkNetLength}" Height="15" Width="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="100" Header="LENGTH" 
                                    Binding="{Binding PIELN, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="" Width="25" IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}" >
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                        <Image Source="{Binding ImgChkGrossLength}" Height="15" Width="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="140" Header="GROSS LENGTH" 
                                    Binding="{Binding GRSLN, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="" Width="25" IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}" >
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                        <Image Source="{Binding ImgChkNetWeight}" Height="15" Width="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="120" Header="NET WEIGHT" 
                                    Binding="{Binding NETWH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="" Width="25" IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}" >
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                        <Image Source="{Binding ImgChkGrossWeight}" Height="15" Width="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="140" Header="GROSS WEIGHT" 
                                    Binding="{Binding GRSWH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= PALSZ, Mode= OneWay}"  Header="PALLET CODE" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        </DataGrid>
                </Grid>
                <Button Content="Get Data Excel" FontSize="22" FontWeight="Bold" Grid.Row="3" Height="40" HorizontalAlignment="Left" Margin="4,4,0,0" Name="cmdExcel" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="180" Click="cmdExcel_Click" />
                <Button Content="Update CUS No" FontSize="22" FontWeight="Bold" Grid.Row="3" Height="40" HorizontalAlignment="Left" Margin="192,4,0,0" Name="cmdUpdateCUSNo" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="180" Click="cmdUpdateCUSNo_Click" />
                <Grid Margin="3" Grid.Row="4" Name="grid2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="699*" />
                        <ColumnDefinition Width="480*" />
                    </Grid.ColumnDefinitions>
                    <DataGrid  x:Name="dgExcel" 
                                    Margin="3,3,3,3"
                                    ItemsSource="{Binding}"
                                    SelectionMode="Extended"
                                    AlternatingRowBackground="AntiqueWhite"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    FontSize="16" 
                                    FontWeight="Normal" FontFamily="Tahoma" 
                                    HorizontalGridLinesBrush="Silver" 
                                    VerticalGridLinesBrush="Silver"
                                    HorizontalContentAlignment="Left" 
                                    ScrollViewer.CanContentScroll="True" 
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path= FabricNo, Mode= OneWay}"  Header="Fabric No" IsReadOnly="True" Width="140" >
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= RollNo, Mode= OneWay}" Header="Roll No" IsReadOnly="True" Width="140" >
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="100" Header="Cus Run No" 
                                    Binding="{Binding CusRunNo, Mode= OneWay, StringFormat='{}{0:###0}'}"  
                                    IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="100" Header="Qty" 
                                    Binding="{Binding Qty, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="100" Header="NW" 
                                    Binding="{Binding NW, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="100" Header="GW" 
                                    Binding="{Binding GW, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ListView Name="listBox1" Grid.Column ="1" Margin="3" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <TextBlock Text="{Binding Date}"/>
                                    <TextBlock Text=" , " />
                                    <TextBlock Text="{Binding Message}" FontWeight="Bold" />
                                    <TextBlock Text=" " />
                                    <TextBlock Text="{Binding Status}" Foreground="Red"/>
                                </WrapPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
                <TextBlock Text="Operator : " 
                               Margin="8,3,0,3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" Grid.Row="5" Width="122" />
                <TextBox x:Name="txtOperator"  
                            Margin="141,5,0,5"
                            CharacterCasing="Upper"
                            FontSize="24"
                            FontWeight="Bold"
                            TextAlignment="Center"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center" 
                            IsEnabled="False" Grid.Row="5" Width="158">
                </TextBox>
                
            </Grid>            
        </Border>
    </DockPanel>  
</UserControl>
