<UserControl x:Class="LuckyTex.Pages.PackingListScanBarcodeToyotaPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200"
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Scan Barcode"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="330*" />
                    <ColumnDefinition Width="535*" />
                    <ColumnDefinition Width="330*" />
                    <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="300" />
                        <RowDefinition Height="206*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                <TextBlock FontSize="24" FontWeight="Bold" Margin="3" Text="Roll no." TextAlignment="Center" VerticalAlignment="Center" Grid.Column="1" />
                <TextBox CharacterCasing="Upper" FontSize="24" FontWeight="Bold" Grid.Row="1" Margin="3,7,3,9" Name="txtCDEL0" TextAlignment="Center" KeyDown="txtCDEL0_KeyDown" Grid.Column="1" />
                <TextBlock Name="labShippingMark" FontSize="24" FontWeight="Bold" Margin="3" Text="Shipping Mark" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="2" />
                <TextBox CharacterCasing="Upper" FontSize="24" FontWeight="Bold" Grid.Row="1" Margin="3,7,3,9" Name="txtShippingMark" TextAlignment="Center" KeyDown="txtShippingMark_KeyDown" Grid.Column="2" PreviewKeyDown="Common_PreviewKeyDown"/>
                <TextBlock Name="txtRUNNO" FontSize="200" FontWeight="Bold" Grid.Row="2" Margin="3" Text="999" TextAlignment="Center" Grid.Column="1" TextTrimming="CharacterEllipsis" >
               <TextBlock.Style>
                   <Style TargetType="TextBlock">
                       <Setter Property="Foreground" Value="Black"></Setter>
                       <Style.Triggers>
                           <DataTrigger Binding="{Binding ElementName=txtRUNNO, Path=Text,Mode=OneWay}" Value="NULL">
                               <Setter Property="Foreground" Value="Red"></Setter>
                           </DataTrigger>
                       </Style.Triggers>
                   </Style>
               </TextBlock.Style>
                </TextBlock>
                <CheckBox Name="chkCheckShipping"
                                              Content="Check shipping mark"         
                                              Margin="5" 
                                              FontSize="22" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Left" 
                                              VerticalAlignment="Center" 
                                              Style="{StaticResource imageCheckedBoxOKStyle}"
                                              Grid.Column="0" 
                                              Grid.Row="1" Checked="chkCheckShipping_Checked" Unchecked="chkCheckShipping_Unchecked" />
                <Grid Grid.Row="2" Margin="3" Name="grid1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="27*" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="27*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="650*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock FontSize="24" FontWeight="Bold" Grid.Column="2" Grid.Row="1" Margin="9,14,0,0" Text="LENGTH" VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBlock FontSize="24" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Left" Margin="9,14,0,0" Text="GROSS LENGTH" VerticalAlignment="Top" Grid.Row="2" />
                    <TextBlock FontSize="24" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Left" Margin="9,14,0,0" Text="NET WEIGHT" VerticalAlignment="Top" Grid.Row="3" />           
                    <TextBlock FontSize="24" FontWeight="Bold" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Left" Margin="9,14,0,0" Text="GROSS WEIGHT" VerticalAlignment="Top" />
                    <Image Grid.Column="1" Grid.Row="1" Margin="3" Name="imgTruePIELN" Stretch="Fill" Source="/LuckyTex.AirBag.Pages;component/Images/true.png" />
                    <Image Grid.Column="1" Grid.Row="1" Margin="3" Name="imgFalsePIELN" Stretch="Fill" Source="/LuckyTex.AirBag.Pages;component/Images/false.png" />                
                    <Image Grid.Column="1" Grid.Row="2" Margin="3" Name="imgTrueGRSLN" Stretch="Fill" Source="/LuckyTex.AirBag.Pages;component/Images/true.png" />
                    <Image Grid.Column="1" Grid.Row="2" Margin="3" Name="imgFalseGRSLN" Stretch="Fill" Source="/LuckyTex.AirBag.Pages;component/Images/false.png" />
                    <Image Grid.Column="1" Grid.Row="3" Margin="3" Name="imgTrueNETWH" Stretch="Fill" Source="/LuckyTex.AirBag.Pages;component/Images/true.png" />
                    <Image Grid.Column="1" Grid.Row="3" Margin="3" Name="imgFalseNETWH" Stretch="Fill" Source="/LuckyTex.AirBag.Pages;component/Images/false.png" />
                    <Image Grid.Column="1" Grid.Row="4" Margin="3" Name="imgTrueGRSWH" Stretch="Fill" Source="/LuckyTex.AirBag.Pages;component/Images/true.png" />
                    <Image Grid.Column="1" Grid.Row="4" Margin="3" Name="imgFalseGRSWH" Stretch="Fill" Source="/LuckyTex.AirBag.Pages;component/Images/false.png" />

                </Grid>
                <Grid Margin="3,3,3,3" Grid.Row="3" Name="grid2" Grid.ColumnSpan="3">
                    <DataGrid x:Name="dgAS400" 
                                Margin="3,3,3,3"
                                    ItemsSource="{Binding}"
                                    SelectionMode="Extended"
                                    AlternatingRowBackground="AntiqueWhite"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    FontSize="16" 
                                    FontWeight="Normal" FontFamily="Tahoma" 
                                    HorizontalGridLinesBrush="Silver" 
                                    VerticalGridLinesBrush="Silver"
                                    HorizontalContentAlignment="Left" 
                                    ScrollViewer.CanContentScroll="True" 
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"  >
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Pass" Width="50" IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}" >
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                        <Image Source="{Binding ImgScanFlag}" Height="15" Width="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Binding="{Binding Path= RUNNO, Mode= OneWay}"  Header="Run No" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= AS400NO, Mode= OneWay}"  Header="AS400 No" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CUSNO, Mode= OneWay}"  Header="CUS No" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= INVTY, Mode= OneWay}"  Header="DO TYPE" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= INVNO, Mode= OneWay}"  Header="DO NO." IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDORD, Mode= OneWay}"  Header="ORDER NO." IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CUSCD, Mode= OneWay}"  Header="CUSTOMER TYPE" IsReadOnly="True" Width="140" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CUSNM, Mode= OneWay}"  Header="CUSTOMER NAME" IsReadOnly="True" Width="250" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDKE1, Mode= OneWay}"  Header="ITEM CODE" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDKE2, Mode= OneWay}"  Header="ITEM CODE" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CSITM, Mode= OneWay}"  Header="CUSTOMER ITEM" IsReadOnly="True" Width="140" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDCON, Mode= OneWay}"  Header="PALLET NO." IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= CDEL0, Mode= OneWay}"  Header="ROLL NO." IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Path= GRADE, Mode= OneWay}"  Header="GRADE" IsReadOnly="True" Width="70" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="" Width="25" IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}" >
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                        <Image Source="{Binding ImgChkNetLength}" Height="15" Width="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="100" Header="LENGTH" 
                                    Binding="{Binding PIELN, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="" Width="25" IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}" >
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                        <Image Source="{Binding ImgChkGrossLength}" Height="15" Width="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="140" Header="GROSS LENGTH" 
                                    Binding="{Binding GRSLN, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTemplateColumn Header="" Width="25" IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}" >
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                        <Image Source="{Binding ImgChkNetWeight}" Height="15" Width="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="120" Header="NET WEIGHT" 
                                    Binding="{Binding NETWH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="" Width="25" IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}" >
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                        <Image Source="{Binding ImgChkGrossWeight}" Height="15" Width="15"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="140" Header="GROSS WEIGHT" 
                                    Binding="{Binding GRSWH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Binding="{Binding Path= PALSZ, Mode= OneWay}"  Header="PALLET CODE" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <TextBlock Text="Operator : " 
                               Margin="8,3,0,3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" Grid.Row="4" Width="122" />
                <TextBox x:Name="txtOperator"  
                            Margin="141,5,0,5"
                            CharacterCasing="Upper"
                            FontSize="24"
                            FontWeight="Bold"
                            TextAlignment="Center"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center" 
                            IsEnabled="False" Grid.Row="4" Width="158">
                </TextBox> 
            </Grid>            
        </Border>      
    </DockPanel>  
</UserControl>
