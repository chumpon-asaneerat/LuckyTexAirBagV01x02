<UserControl x:Class="LuckyTex.Pages.DeliverYarnDetailPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="G3 - Deliver Yarn Detail"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Confirm -->
                <Button x:Name="cmdConfirm"
                        Content="Confirm"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdConfirm_Click" />
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <DockPanel LastChildFill="True">
                        <Grid Height="60" DockPanel.Dock="Bottom">
                            <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" Background="#F0F0F0">
                                <Grid HorizontalAlignment="Right">
                                    <TextBlock Text="Operator : "
                                        Margin="5,0,0,11"  
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center" 
                                               Width="124" 
                                               Height="42"
                                               VerticalAlignment="Bottom" 
                                               HorizontalAlignment="Left" />
                                    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Margin="137,0,0,5" Background="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="412">
                                        <TextBox x:Name="txtOperator" 
                                                 Text="" 
                                                 Margin="5" 
                                                 Foreground="Black" 
                                                 FontSize="24" 
                                                 FontWeight="Bold" 
                                                 Width="400" 
                                                 VerticalAlignment="Center" 
                                                 HorizontalAlignment="Center" 
                                                 TextAlignment="Center" />
                                    </Border>
                                </Grid>
                                <Grid/>
                            </DockPanel>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="228" />
                                <RowDefinition Height="387" />
                                <RowDefinition Height="73" />
                            </Grid.RowDefinitions>
                            <Grid VerticalAlignment="Top" Height="225">
                                <DataGrid x:Name="grid"
                                          Margin="5"
                                          ItemsSource="{Binding}"
                                          AlternatingRowBackground="AntiqueWhite"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="True"
                                          CanUserDeleteRows="True"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False" 
                                          GridLinesVisibility="None"
                                          EnableColumnVirtualization="True"
                                          EnableRowVirtualization="True"
                                          SelectionMode="Extended"
                                          SelectionUnit="Cell"
                                          CanUserResizeColumns="False"
                                          CanUserSortColumns="False"
                                          IsSynchronizedWithCurrentItem="True"
                                          HorizontalGridLinesBrush="Silver" 
                                          VerticalGridLinesBrush="Silver"
                                          FontSize="22">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="120" Header="Request no" 
                                                            Binding="{Binding RequestNo}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="150" Header="Request Date" 
                                                            Binding="{Binding RequestDate}" IsReadOnly="True"/>
                                        <DataGridTextColumn Width="120" Header="Yarn Type" 
                                                            Binding="{Binding YarnType}" IsReadOnly="True"/>
                                        <DataGridTextColumn Width="100" Header="Full" 
                                                            Binding="{Binding Full}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="100" Header="Short" 
                                                            Binding="{Binding Short}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="120" Header="Request By" 
                                                            Binding="{Binding RequestBy}" IsReadOnly="True"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                            <Grid VerticalAlignment="Stretch" Margin="0,3" Grid.Row="1">
                                <DataGrid x:Name="grid2"
                                          Margin="5"
                                          ItemsSource="{Binding}"
                                          AlternatingRowBackground="AntiqueWhite"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="True"
                                          CanUserDeleteRows="True"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False" 
                                          GridLinesVisibility="None"
                                          EnableColumnVirtualization="True"
                                          EnableRowVirtualization="True"
                                          SelectionMode="Extended"
                                          SelectionUnit="Cell"
                                          CanUserResizeColumns="False"
                                          CanUserSortColumns="False"
                                          IsSynchronizedWithCurrentItem="True"
                                          HorizontalGridLinesBrush="Silver" 
                                          VerticalGridLinesBrush="Silver"
                                          FontSize="22">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Width="80"
                                                                Header="Select">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton x:Name="rbSelect" Width="50"
                                                                 Background="Transparent"
                                                                 GroupName="{Binding Index}"
                                                                 IsChecked="{Binding Select, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource imageRadioButtonNGStyle}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Width="150" Header="Date" 
                                                            Binding="{Binding Date}" IsReadOnly="True"/>
                                        <DataGridTextColumn Width="220" Header="Palette No"
                                                            Binding="{Binding PaletteNo}" IsReadOnly="True"/>
                                        <DataGridTextColumn Width="100" Header="Full (Kg)" 
                                                            Binding="{Binding FullKg}" IsReadOnly="True"/>
                                        <DataGridTextColumn Width="120" Header="Short(Kg)" 
                                                            Binding="{Binding ShortKg}" IsReadOnly="True"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                            <Grid VerticalAlignment="Bottom" Height="70" Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="600*" />
                                    <ColumnDefinition Width="600*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="หมายเหตุ : " 
                                           Margin="11,18,0,0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Top" 
                                           HorizontalAlignment="Left" 
                                           TextAlignment="Center" />
                                <Border 
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Margin="137,9,0,0" 
                                    Background="White" 
                                    Height="50" 
                                    Width="412"
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Left" >
                                    <TextBox x:Name="txtRemark" 
                                             Text="" 
                                             Margin="5"
                                             Foreground="Black" 
                                             FontSize="24" 
                                             FontWeight="Bold" 
                                             Width="400" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" 
                                             TextAlignment="Center" />
                                </Border>
                                <TextBlock Text="Total Kg : "
                                           Margin="10,18,0,0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Top" 
                                           HorizontalAlignment="Left" 
                                           TextAlignment="Center" 
                                           Grid.Column="1" 
                                           Width="118" />
                                <Border 
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Margin="137,9,0,0" 
                                    Background="White" 
                                    Width="170" 
                                    Height="50" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top" 
                                    Grid.Column="1">
                                    <TextBox x:Name="txtTotalKg" 
                                             Text=""
                                             Margin="5"  
                                             Foreground="Black" 
                                             FontSize="24" 
                                             FontWeight="Bold" 
                                             Width="164" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" 
                                             TextAlignment="Center" />
                                </Border>
                            </Grid>
                        </Grid>
                    </DockPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
