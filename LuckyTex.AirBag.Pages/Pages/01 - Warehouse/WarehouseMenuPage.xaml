<UserControl x:Class="LuckyTex.Pages.WarehouseMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="G3 - Main Menu"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click"/>
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical"
                                Margin="0, 5"
                                HorizontalAlignment="Center"
                                Grid.Column="2" Grid.Row="2">
                        <RadioButton x:Name="rbReceive" IsChecked="True"
                                     GroupName="rbGroup"
                                     Content="Receive Raw Material"
                                     Margin="5, 5"
                                     FontSize="32" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Left"
                                     Style="{StaticResource imageRadioButtonORBStyle}"/>
                        <RadioButton x:Name="rbDeliver" IsChecked="False"
                                     GroupName="rbGroup"
                                     Content="Deliver Raw Material"
                                     Margin="5, 5"
                                     FontSize="32" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Left"
                                     Style="{StaticResource imageRadioButtonORBStyle}"/>
                    </StackPanel>
                    <Button x:Name="cmdYarn"
                            Content="Yarn"
                            Margin="5, 10"
                            Width="300"
                            Height="70"
                            FontSize="40" 
                            FontWeight="Bold"
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="2" Grid.Row="3"
                            Click="cmdYarn_Click" />
                    <Button x:Name="cmdSilicone"
                            Content="Silicone"
                            Margin="5, 10" 
                            Width="300"
                            Height="70"
                            FontSize="40" 
                            FontWeight="Bold"
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="2" Grid.Row="4"
                            Click="cmdSilicone_Click" />
                    <Button x:Name="cmdFabric"
                            Content="Fabric"
                            Margin="5, 10" 
                            Width="300"
                            Height="70"
                            FontSize="40" 
                            FontWeight="Bold"
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="2" Grid.Row="5"
                            Click="cmdFabric_Click" />
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
