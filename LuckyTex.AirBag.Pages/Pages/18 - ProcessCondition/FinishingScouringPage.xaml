<UserControl x:Class="LuckyTex.Pages.FinishingScouringPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Finishing Scouring"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>

        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid Name="grid1"
                                      Height="114" 
                                      VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="165" />
                            <ColumnDefinition Width="175" />
                            <ColumnDefinition Width="165" />
                            <ColumnDefinition Width="175" />
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="200*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Item Code"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="1" 
                                               Grid.Column="0" />
                        <ComboBox Name="cbItemGoods"
                                              DisplayMemberPath="ITM_CODE" 
                                              SelectedValuePath="ITM_CODE"
                                              TextSearch.TextPath=""
                                              Margin="5,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding ITM_GETITEMCODELIST, Mode=OneWay}"    
                                              VerticalAlignment="Top" 
                                              Height="40"
                                              Grid.Row="1"
                                              Grid.Column="1" SelectionChanged="cbItemGoods_SelectionChanged" />
                        <TextBlock Text="Scouring MC"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="1" 
                                               Grid.Column="2" />
                        <ComboBox Name="cbScouring"
                                              Margin="5,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding str, Mode=OneWay}"    
                                              VerticalAlignment="Top" 
                                              Height="40"
                                              Grid.Row="1"
                                              Grid.Column="3" SelectionChanged="cbScouring_SelectionChanged" />
                        <CheckBox Name="chkAll" 
                                  Content="" 
                                  Margin="10,10,0,0"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" VerticalAlignment="Top" 
                                  Grid.Column="4" 
                                  Grid.Row="1" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" HorizontalAlignment="Left" />
                        <Grid Name="grid4" 
                              Grid.ColumnSpan="6" 
                              Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="140*" />
                            </Grid.ColumnDefinitions>
                            <Button Name="cmdNew" 
                                            Content="New"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="2" Click="cmdNew_Click">
                            </Button>
                            <Button Name="cmdEdit" 
                                            Content="Edit"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="3" Click="cmdEdit_Click">
                            </Button>
                            <Button Name="cmdSave" 
                                            Content="Save"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="4" Click="cmdSave_Click">
                            </Button>
                        </Grid>
                    </Grid>
                    <Grid Name="grid3"
                                      Margin="0,120,0,0" Height="628">
                        <Grid Margin="10,10,2,0" Name="grid13" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="285*" />
                                <ColumnDefinition Width="144*" />
                                <ColumnDefinition Width="109*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="41*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                            </Grid.RowDefinitions>
                            <TextBlock Background="Orange" FontSize="24" Foreground="White" Margin="3,6,3,0" Text="Checking Item" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBlock Background="Orange" FontSize="24" Foreground="White" Grid.Column="1" Margin="3,6,3,0" Text="Specification" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBlock Background="Orange" FontSize="24" Foreground="White" Grid.Column="2" Margin="3,6,3,0" Text="Margin" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Left" Margin="4,6,0,0" Text="Chemical Temp" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="3" Name="txtSATURATOR_CHEMSpecification" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSATURATOR_CHEMSpecification_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" KeyDown="txtSATPV_KeyDown" Margin="3" Name="txtSATPV" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="2" HorizontalAlignment="Left" Margin="4,6" Text="Washer No1 Temp" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" Margin="3" Name="txtWASHING1Specification" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWASHING1Specification_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Stretch" KeyDown="txtWASH1PV_KeyDown" Margin="3" Name="txtWASH1PV" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="3" HorizontalAlignment="Left" Margin="4,6" Text="Washer No2 Temp" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Stretch" Margin="3" Name="txtWASHING2Specification" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWASHING2Specification_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Stretch" KeyDown="txtWASH2PV_KeyDown" Margin="3" Name="txtWASH2PV" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="4" HorizontalAlignment="Left" Margin="4,6" Text="Dryer Temp" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch" Margin="3" Name="txtHOTFLUESpecification" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtHOTFLUESpecification_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Stretch" KeyDown="txtHOTPV_KeyDown" Margin="3" Name="txtHOTPV" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="5" HorizontalAlignment="Left" Margin="4,6" Text="Speed Production (m/min)" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Stretch" Margin="3" Name="txtSPEEDSpecification" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSPEEDSpecification_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Stretch" KeyDown="txtSPEED_KeyDown" Margin="3" Name="txtSPEED" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="6" HorizontalAlignment="Left" Margin="4,6" Text="Main Frame Width Setting" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Stretch" Margin="3" Name="txtMAINFRAMEWIDTHSpecification" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtMAINFRAMEWIDTHSpecification_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="6" HorizontalAlignment="Stretch" KeyDown="txtMAINFRAMEWIDTHActual_KeyDown" Margin="3" Name="txtMAINFRAMEWIDTHActual" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="7" HorizontalAlignment="Left" Margin="4,6" Text="Width Before Scouring" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="7" HorizontalAlignment="Stretch" Margin="3" Name="txtWIDTH_BESpecification" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWIDTH_BESpecification_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="7" HorizontalAlignment="Stretch" KeyDown="txtWIDTH_BEActual_KeyDown" Margin="3" Name="txtWIDTH_BEActual" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="8" HorizontalAlignment="Left" Margin="4,6" Text="Width After Scouring" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="8" HorizontalAlignment="Stretch" Margin="3" Name="txtWIDTH_AFSpecification" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWIDTH_AFSpecification_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="8" HorizontalAlignment="Stretch" KeyDown="txtWIDTH_AFActual_KeyDown" Margin="3" Name="txtWIDTH_AFActual" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="9" HorizontalAlignment="Left" Margin="4,6" Text="Pin to Pin" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="9" HorizontalAlignment="Stretch" Margin="3" Name="txtPIN2PINSpecification" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtPIN2PINSpecification_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="9" HorizontalAlignment="Stretch" KeyDown="txtPIN2PINActual_KeyDown" Margin="3" Name="txtPIN2PINActual" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="10" HorizontalAlignment="Left" Margin="4,6" Text="Cloth Humidity ( Max - Min )" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="1" Grid.Row="10" HorizontalAlignment="Stretch" Margin="3" Name="txtHUMIDITYMAX" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtHUMIDITYMAX_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="10" HorizontalAlignment="Stretch" KeyDown="txtHUMIDITYMIN_KeyDown" Margin="3" Name="txtHUMIDITYMIN" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />

                            <TextBlock FontSize="20" FontWeight="Bold" Grid.Row="11" HorizontalAlignment="Left" Margin="4,6" Text="Temp. Room" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="1" Grid.Row="11" HorizontalAlignment="Stretch" Margin="3" Name="txtROOMTEMP" TextAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtROOMTEMP_KeyDown" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="11" HorizontalAlignment="Stretch" KeyDown="txtROOMTEMP_MARGIN_KeyDown" Margin="3" Name="txtROOMTEMP_MARGIN" PreviewKeyDown="Common_PreviewKeyDown" TextAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <Grid Height="50" Name="grid2" VerticalAlignment="Bottom">
                            <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,13,0,0" Text="Operator" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" IsReadOnly="True" Margin="103,10,0,0" Name="txtOperator" TextAlignment="Center" VerticalAlignment="Top" Width="131" />
                        </Grid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
        
    </DockPanel>
  
</UserControl>
