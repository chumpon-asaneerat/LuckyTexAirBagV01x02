<UserControl x:Class="LuckyTex.Pages.ProcessConditionMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="770" d:DesignWidth="1220" 
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.Airbag.Pages;component/Styles/InspectionDataItemStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Process Condition"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="110" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="110" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="7*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="320" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="320" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="320" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <Button Name="cmdWarping" 
                            Margin="3" 
                            Grid.Column="1"
                            Grid.Row="4"
                            Content="Warping"
                            FontSize="36"
                            FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdWarping_Click" >
                    </Button>
                    <Button Name="cmdBeaming" 
                            Margin="3"
                            Grid.Column="3"
                            Grid.Row="4"
                            Content="Beaming"
                            FontSize="36"
                            FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdBeaming_Click" >
                    </Button>
                    <Button Name="cmdDrawing" 
                            Margin="3"
                            Grid.Column="5"
                            Grid.Row="4"
                            Content="Drawing"
                            FontSize="36"
                            FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdDrawing_Click">
                    </Button>

                    <Button Name="cmdFinishingCoating" 
                            Margin="3" 
                            Grid.Column="1"
                            Grid.Row="7"
                            Content="Finishing Coating"
                            FontSize="36"
                            FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdFinishingCoating_Click" >
                    </Button>
                    <Button Name="cmdFinishingScouring" 
                            Margin="3" 
                            Grid.Column="3"
                            Grid.Row="7"
                            Content="Finishing Scouring"
                            FontSize="36"
                            FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdFinishingScouring_Click" >
                    </Button>
                    <Button Name="cmdFinishingDryer" 
                            Margin="3"
                            Grid.Column="5"
                            Grid.Row="7"
                            Content="Finishing Dryer"
                            FontSize="36"
                            FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdFinishingDryer_Click" >
                    </Button>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
