<UserControl x:Class="LuckyTex.Pages.DrawingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Drawing"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>

        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid Name="grid1"
                                      Height="268" 
                                      VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="151*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="165" />
                            <ColumnDefinition Width="175" />
                            <ColumnDefinition Width="165" />
                            <ColumnDefinition Width="175" />
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="200*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Item Code"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="1" 
                                               Grid.Column="0" />
                        <ComboBox Name="cbItemGoods"
                                              DisplayMemberPath="ITM_PREPARE" 
                                              SelectedValuePath="ITM_PREPARE"
                                              TextSearch.TextPath=""
                                              Margin="5,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding ITM_GETITEMPREPARELIST, Mode=OneWay}"    
                                              VerticalAlignment="Top" 
                                              Height="40"
                                              Grid.Row="1"
                                              Grid.Column="1" SelectionChanged="cbItemGoods_SelectionChanged"/>
                        <TextBlock Text="Heald No"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="2" 
                                               Grid.Column="0" />
                        <TextBox x:Name="txtNOYARN"  
                                Margin="3,11,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="1" 
                                Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtNOYARN_KeyDown">
                        </TextBox>
                        <TextBlock Text="Reed Type"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="2" 
                                               Grid.Column="2" />
                        <TextBox x:Name="txtREEDTYPE"  
                                Margin="3,11,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="3" 
                                Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtREEDTYPE_KeyDown">
                        </TextBox>

                        <TextBlock Text="No.of dent"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="3" 
                                               Grid.Column="0" />
                        <TextBox x:Name="txtNODENT"  
                                Margin="3,11,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="1" 
                                Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtNODENT_KeyDown">
                        </TextBox>
                        <TextBlock Text="Pitch (mm)"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="3" 
                                               Grid.Column="2" />
                        <TextBox x:Name="txtPITCH"  
                                Margin="3,11,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="3" 
                                Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtPITCH_KeyDown">
                        </TextBox>
                        <TextBlock Text="Air space (%)"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="4" 
                                               Grid.Column="0" />
                        <TextBox x:Name="txtAIRSPACE"  
                                Margin="3,11,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="1" 
                                Grid.Row="4" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtAIRSPACE_KeyDown">
                        </TextBox>
                        <Grid Name="grid4" 
                              Grid.ColumnSpan="6" 
                              Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="140*" />
                            </Grid.ColumnDefinitions>
                            <Button Name="cmdNew" 
                                            Content="New"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="2" Click="cmdNew_Click">
                            </Button>
                            <Button Name="cmdEdit" 
                                            Content="Edit"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="3" Click="cmdEdit_Click">
                            </Button>
                            <Button Name="cmdSave" 
                                            Content="Save"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="4" Click="cmdSave_Click">
                            </Button>
                        </Grid>
                    </Grid>
                    <Grid Name="grid3"
                                      Margin="0,274,0,0" Height="474">
                        <Grid Height="50" Name="grid2" VerticalAlignment="Bottom">
                            <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,13,0,0" Text="Operator" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" IsReadOnly="True" Margin="103,10,0,0" Name="txtOperator" TextAlignment="Center" VerticalAlignment="Top" Width="131" />
                        </Grid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
        
    </DockPanel>
  
</UserControl>
