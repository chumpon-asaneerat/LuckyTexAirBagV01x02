<UserControl x:Class="LuckyTex.Pages.WarpingConditionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Warping Condition"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>

        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid Name="grid1"
                                      Height="437" 
                                      VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="16*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="230" />
                            <ColumnDefinition Width="175" />
                            <ColumnDefinition Width="165" />
                            <ColumnDefinition Width="175" />
                            <ColumnDefinition Width="230" />
                            <ColumnDefinition Width="175" />
                            <ColumnDefinition Width="40*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Item Prepare"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="1" 
                                               Grid.Column="0" />
                        <ComboBox Name="cbItemGoods"
                                              DisplayMemberPath="ITM_PREPARE" 
                                              SelectedValuePath="ITM_PREPARE"
                                              TextSearch.TextPath=""
                                              Margin="5,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding ITM_GETITEMPREPARELIST, Mode=OneWay}"    
                                              VerticalAlignment="Top" 
                                              Height="40"
                                              Grid.Row="1"
                                              Grid.Column="1" SelectionChanged="cbItemGoods_SelectionChanged"/>
                        <TextBlock Text="Item Yarn"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="1" 
                                               Grid.Column="2" />
                        <ComboBox Name="cbITMYARN"
                                              DisplayMemberPath="ITM_YARN" 
                                              SelectedValuePath="ITM_YARN"
                                              TextSearch.TextPath=""
                                              Margin="5,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding ITM_GETITEMYARNLIST, Mode=OneWay}"    
                                              VerticalAlignment="Top" 
                                              Height="40"
                                              Grid.Row="1"
                                              Grid.Column="3" />
                        <TextBlock Text="Warper MC"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="1" 
                                               Grid.Column="4" />
                        <ComboBox Name="cbMCNO"
                                              Margin="5,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding str, Mode=OneWay}"    
                                              VerticalAlignment="Top" 
                                              Height="40"
                                              Grid.Row="1"
                                              Grid.Column="5" SelectionChanged="cbMCNO_SelectionChanged" />
                        <TextBlock Text="Warper Ends"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="2" 
                                               Grid.Column="0" />
                        <TextBox x:Name="txtWarperends"  
                                Margin="3,11,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="1" 
                                Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWarperends_KeyDown">
                        </TextBox>
                        <TextBlock Text="Keba Yarn"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="2" 
                                               Grid.Column="2" />
                        <TextBox x:Name="txtKebayarn"  
                                Margin="3,11,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="3" 
                                Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtKebayarn_KeyDown">
                        </TextBox>
                        <TextBlock Text="No.of warper beam"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="2" 
                                               Grid.Column="4" />
                        <TextBox x:Name="txtNowarpbeam"  
                                Margin="3,11,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="5" 
                                Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtNowarpbeam_KeyDown">
                        </TextBox>

                        <TextBlock Text="Warper Comb Type"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="3" 
                                               Grid.Column="0" />
                        <ComboBox Name="cbCombType"
                                              Margin="5,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding str, Mode=OneWay}"    
                                              VerticalAlignment="Top" 
                                              Height="40"
                                              Grid.Row="3"
                                              Grid.Column="1" />
                        <TextBlock Text="Pitch"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="3" 
                                               Grid.Column="2" />
                        <TextBox x:Name="txtCOMBPITCH"  
                                Margin="3,11,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="3" 
                                Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtCOMBPITCH_KeyDown">
                        </TextBox>
                        <TextBlock Text="Waxing"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="3" 
                                               Grid.Column="4" />
                        <ComboBox Name="cbWaxing"
                                              Margin="5,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding str, Mode=OneWay}"    
                                              VerticalAlignment="Top" 
                                              Height="40"
                                              Grid.Row="3"
                                              Grid.Column="5" />
                        <Grid Name="grid4" 
                              Grid.ColumnSpan="6" 
                              Grid.Row="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="140*" />
                            </Grid.ColumnDefinitions>
                            <Button Name="cmdNew" 
                                            Content="New"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="2" Click="cmdNew_Click">
                            </Button>
                            <Button Name="cmdEdit" 
                                            Content="Edit"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="3" Click="cmdEdit_Click">
                            </Button>
                            <Button Name="cmdSave" 
                                            Content="Save"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="4" Click="cmdSave_Click">
                            </Button>
                        </Grid>
                        <Grid Name="grid5" 
                              Grid.Row="4" 
                              Grid.RowSpan="4"  
                              Grid.ColumnSpan="7" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="595*" />
                                <ColumnDefinition Width="595*" />
                            </Grid.ColumnDefinitions>
                            <Grid Name="grid6"
                              Grid.Column ="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="285*" />
                                    <ColumnDefinition Width="155*" />
                                    <ColumnDefinition Width="155*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="52*" />
                                    <RowDefinition Height="52*" />
                                    <RowDefinition Height="52*" />
                                    <RowDefinition Height="52*" />
                                </Grid.RowDefinitions>
                                <TextBlock Background="RoyalBlue" FontSize="24" Foreground="White" Margin="3,6,3,0" Text="Item" TextAlignment="Center" VerticalAlignment="Top"  />
                                <TextBlock Background="RoyalBlue" FontSize="24" Foreground="White" Grid.Column="1" Margin="3,6,3,0" Text="Specifiaction" TextAlignment="Center" VerticalAlignment="Top" />
                                <TextBlock Background="RoyalBlue" FontSize="24" Foreground="White" Grid.Column="2" Margin="3,6,3,0" Text="Margin" TextAlignment="Center" VerticalAlignment="Top" />
                                <TextBlock Text="Speed" 
                                                               Margin="4,6,0,0"   
                                                                FontSize="24" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="1"  />
                                <TextBox x:Name="txtSpeed"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSpeed_KeyDown">
                                </TextBox>
                                <TextBox x:Name="txtSpeed_Margin"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSpeed_Margin_KeyDown">
                                </TextBox>
                                <TextBlock Text="Yarn Tension (Kg)" 
                                                               Margin="4,6,0,0"   
                                                                FontSize="24" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="2"  />
                                <TextBox x:Name="txtYarnTension"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtYarnTension_KeyDown">
                                </TextBox>
                                <TextBox x:Name="txtYarnTension_Margin"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="2" Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtYarnTension_Margin_KeyDown">
                                </TextBox>
                                <TextBlock Text="Winding Tension (Kg)" 
                                                               Margin="4,6,0,0"   
                                                                FontSize="24" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="3"  />
                                <TextBox x:Name="txtWindTension"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWindTension_KeyDown">
                                </TextBox>
                                <TextBox x:Name="txtWindTension_Margin"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="2" Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWindTension_Margin_KeyDown">
                                </TextBox>
                            </Grid>
                            <Grid Name="grid7"
                              Grid.Column ="1" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="285*" />
                                    <ColumnDefinition Width="155*" />
                                    <ColumnDefinition Width="155*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="52*" />
                                    <RowDefinition Height="52*" />
                                    <RowDefinition Height="52*" />
                                    <RowDefinition Height="52*" />
                                </Grid.RowDefinitions>
                                <TextBlock Background="RoyalBlue" FontSize="24" Foreground="White" Margin="3,6,3,0" Text="Item" TextAlignment="Center" VerticalAlignment="Top"  />
                                <TextBlock Background="RoyalBlue" FontSize="24" Foreground="White" Grid.Column="1" Margin="3,6,3,0" Text="Max." TextAlignment="Center" VerticalAlignment="Top" />
                                <TextBlock Background="RoyalBlue" FontSize="24" Foreground="White" Grid.Column="2" Margin="3,6,3,0" Text="Min." TextAlignment="Center" VerticalAlignment="Top" />
                                <TextBlock Text="Warp Length" 
                                                               Margin="4,6,0,0"   
                                                                FontSize="24" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="1"  />
                                <TextBox x:Name="txtMaxLength"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtMaxLength_KeyDown">
                                </TextBox>
                                <TextBox x:Name="txtMinLength"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtMinLength_KeyDown">
                                </TextBox>
                                <TextBlock Text="Hardness" 
                                                               Margin="4,6,0,0"   
                                                                FontSize="24" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="2"  />
                                <TextBox x:Name="txtMAXHARDNESS"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtMAXHARDNESS_KeyDown">
                                </TextBox>
                                <TextBox x:Name="txtMINHARDNESS"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="2" Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtMINHARDNESS_KeyDown">
                                </TextBox>

                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Name="grid3"
                                      Margin="0,443,0,0" Height="305">
                        <Grid Height="50" Name="grid2" VerticalAlignment="Bottom">
                            <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,13,0,0" Text="Operator" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBox CharacterCasing="Upper" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" IsReadOnly="True" Margin="103,10,0,0" Name="txtOperator" TextAlignment="Center" VerticalAlignment="Top" Width="131" />
                        </Grid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
        
    </DockPanel>
  
</UserControl>
