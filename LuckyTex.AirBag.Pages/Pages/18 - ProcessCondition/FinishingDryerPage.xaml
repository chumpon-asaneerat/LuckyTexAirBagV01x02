                                                       Margin="4,6"
                                                       FontSize="20" 
                                                       FontWeight="Bold" 
                                                       TextAlignment="Center"
                                                       HorizontalAlignment="Left"   
                                                       VerticalAlignment="Top" 
                                                       Grid.Row="11"  />
                            <TextBox x:Name="txtEXHAUSTFANSpecification"  
                                                         Margin="3"
                                                         IsReadOnly="False"
                                                         CharacterCasing="Upper"
                                                         FontSize="20"
                                                         FontWeight="Bold"
                                                         
                                                         TextAlignment="Center"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center" 
                                                         Grid.Row="11" 
                                                         Grid.Column="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtEXHAUSTFANSpecification_KeyDown">
