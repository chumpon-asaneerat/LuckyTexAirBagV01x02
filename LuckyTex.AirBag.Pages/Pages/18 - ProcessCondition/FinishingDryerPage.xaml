<UserControl x:Class="LuckyTex.Pages.FinishingDryerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Finishing Dryer"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>

        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid Name="grid1"
                                      Height="114" 
                                      VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="52" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="165" />
                            <ColumnDefinition Width="175" />
                            <ColumnDefinition Width="165" />
                            <ColumnDefinition Width="195" />
                            <ColumnDefinition Width="230" />
                            <ColumnDefinition Width="200*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Item Code"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="1" 
                                               Grid.Column="0" />
                        <ComboBox Name="cbItemGoods"
                                              DisplayMemberPath="ITM_CODE" 
                                              SelectedValuePath="ITM_CODE"
                                              TextSearch.TextPath=""
                                              Margin="5,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding ITM_GETITEMCODELIST, Mode=OneWay}"    
                                              VerticalAlignment="Top" 
                                              Height="40"
                                              Grid.Row="1"
                                              Grid.Column="1" SelectionChanged="cbItemGoods_SelectionChanged"/>
                        <CheckBox Name="chkAll" 
                                  Content="" 
                                  Margin="10,10,0,0"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" VerticalAlignment="Top" 
                                  Grid.Column="4" 
                                  Grid.Row="1" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" HorizontalAlignment="Left" />
                        <TextBlock Text="Dryer MC"
                                               Margin="0,11,5,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Right"    
                                               VerticalAlignment="Top" 
                                               Grid.Row="1" 
                                               Grid.Column="2" />
                        <ComboBox Name="cbDryer"
                                              Margin="5,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding str, Mode=OneWay}"    
                                              VerticalAlignment="Top" 
                                              Height="40"
                                              Grid.Row="1"
                                              Grid.Column="3" SelectionChanged="cbDryer_SelectionChanged" />
                        <Grid Name="grid4" 
                              Grid.ColumnSpan="6" 
                              Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="140*" />
                            </Grid.ColumnDefinitions>
                            <Button Name="cmdNew" 
                                            Content="New"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="2" Click="cmdNew_Click">
                            </Button>
                            <Button Name="cmdEdit" 
                                            Content="Edit"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="3" Click="cmdEdit_Click">
                            </Button>
                            <Button Name="cmdSave" 
                                            Content="Save"
                                            FontSize="22"
                                            FontWeight="Bold"
                                            Height="40" 
                                            Width="120" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"  
                                            Style="{StaticResource MenuButtonStyle}" Margin="17,6,0,0" Grid.Column="4" Click="cmdSave_Click">
                            </Button>
                        </Grid>
                    </Grid>
