                                                       VerticalAlignment="Top" 
                                                       Grid.Row="12"  />
                            <TextBox x:Name="txtWIDTH_AF_HEATSpecification"  
                                                         Margin="3"
                                                         IsReadOnly="False"
                                                         CharacterCasing="Upper"
                                                         FontSize="20"
                                                         FontWeight="Bold"
                                                         
                                                         TextAlignment="Center"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center" 
                                                         Grid.Row="12" 
                                                         Grid.Column="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWIDTH_AF_HEATSpecification_KeyDown">
