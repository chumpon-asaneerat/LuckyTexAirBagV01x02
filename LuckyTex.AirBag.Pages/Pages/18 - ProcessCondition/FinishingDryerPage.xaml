                                                       Margin="4,6"
                                                       FontSize="20" 
                                                       FontWeight="Bold" 
                                                       TextAlignment="Center"
                                                       HorizontalAlignment="Left"   
                                                       VerticalAlignment="Top" 
                                                       Grid.Row="10"  />
                            <TextBox x:Name="txtDRYERUPCIRCUFANSpecification"  
                                                         Margin="3"
                                                         IsReadOnly="False"
                                                         CharacterCasing="Upper"
                                                         FontSize="20"
                                                         FontWeight="Bold"
                                                         
                                                         TextAlignment="Center"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center" 
                                                         Grid.Row="10" 
                                                         Grid.Column="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtDRYERUPCIRCUFANSpecification_KeyDown">
                            </TextBox>
