                                                        TextAlignment="Center"
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Center" 
                                                        Grid.Row="12" 
                                                        Grid.Column="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWIDTH_AF_HEATActual_KeyDown">
