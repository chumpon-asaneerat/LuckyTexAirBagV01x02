                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtACCPRESURESpecification_KeyDown">
                            </TextBox>
                            <TextBlock Text="แรงดึงผ้าสะสม Ass Tension" 
                                                               Margin="4,6,0,0"   
                                                               FontSize="20" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="3"  />
                            <TextBox x:Name="txtASSTENSIONSpecification"  
                                                                Margin="3"
                                                                IsReadOnly="False"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtASSTENSIONSpecification_KeyDown">
                            </TextBox>
                            <TextBlock Text="แรงลมดึงผ้าสะสม Acc ari denser." 
                                                               Margin="4,6,0,0"   
                                                               FontSize="20" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="4"  />
                            <TextBox x:Name="txtACCARIDENSERSpecification"  
                                                                Margin="3"
                                                                IsReadOnly="False"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                               
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="4" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtACCARIDENSERSpecification_KeyDown">
                            </TextBox>
                            <TextBlock Text="แรงดึงผ้าด้านหน้า Chi Frot." 
                                                               Margin="4,6"
                                                               FontSize="20" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="5"  />
                            <TextBox x:Name="txtCHIFROTSpecification"  
                                                                 Margin="3"
                                                                 IsReadOnly="False"
                                                                 CharacterCasing="Upper"
                                                                 FontSize="20"
                                                                 FontWeight="Bold"
                                                                 
                                                                 TextAlignment="Center"
                                                                 HorizontalAlignment="Stretch"
                                                                 VerticalAlignment="Center" Grid.Column="1" Grid.Row="5" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtCHIFROTSpecification_KeyDown">
                            </TextBox>
                            <TextBlock Text="แรงดึงผ้าด้านหลัง Chi Rear" 
                                                                Margin="4,6"
                                                                FontSize="20" 
                                                                FontWeight="Bold" 
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Left"   
                                                                VerticalAlignment="Top" Grid.Row="6"  />
                            <TextBox x:Name="txtCHIREARSpecification"  
                                                                Margin="3"
                                                                IsReadOnly="False"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="6" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtCHIREARSpecification_KeyDown">
                            </TextBox>
                            <TextBlock Text="Dryer1 Temp. Controller" 
                                                               Margin="4,6"
                                                               FontSize="20" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="7"  />
                            <TextBox x:Name="txtDRYERTEMP1Specification"  
                                                                Margin="3"
                                                                IsReadOnly="False"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="7" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtDRYERTEMP1Specification_KeyDown">
                            </TextBox>
                            <TextBox x:Name="txtDRYERTEMP1_MARGIN"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="2" Grid.Row="7" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtDRYERTEMP1_MARGIN_KeyDown">
                            </TextBox>

                            <TextBlock Text="Production Speed" 
                                                       Margin="4,6"
                                                       FontSize="20" 
                                                       FontWeight="Bold" 
                                                       TextAlignment="Center"
                                                       HorizontalAlignment="Left"   
                                                       VerticalAlignment="Top" 
                                                       Grid.Row="8"  />
                            <TextBox x:Name="txtSPEED"  
                                                         Margin="3"
                                                         IsReadOnly="False"
                                                         CharacterCasing="Upper"
                                                         FontSize="20"
                                                         FontWeight="Bold"
                                                         
                                                         TextAlignment="Center"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center" 
                                                         Grid.Row="8" 
                                                         Grid.Column="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSPEED_KeyDown">
                            </TextBox>
                            <TextBox x:Name="txtSPEED_MARGIN"  
                                                        Margin="3"
                                                        CharacterCasing="Upper"
                                                        FontSize="20"
                                                        FontWeight="Bold"
                                                        TextAlignment="Center"
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Center" 
                                                        Grid.Row="8" 
                                                        Grid.Column="2" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSPEED_MARGIN_KeyDown">
                            </TextBox>

                            <TextBlock Text="แรงดันไอน้ำ Steam Pressure" 
                                                       Margin="4,6"
                                                       FontSize="20" 
                                                       FontWeight="Bold" 
                                                       TextAlignment="Center"
                                                       HorizontalAlignment="Left"   
                                                       VerticalAlignment="Top" 
                                                       Grid.Row="9"  />
                            <TextBox x:Name="txtSTEAMPRESSURESpecification"  
                                                         Margin="3"
                                                         IsReadOnly="False"
                                                         CharacterCasing="Upper"
                                                         FontSize="20"
                                                         FontWeight="Bold"
                                                         
                                                         TextAlignment="Center"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center" 
                                                         Grid.Row="9" 
                                                         Grid.Column="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtSTEAMPRESSURESpecification_KeyDown">
                            </TextBox>
