                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="285*" />
                                <ColumnDefinition Width="144*" />
                                <ColumnDefinition Width="109*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="41*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                                <RowDefinition Height="35*" />
                            </Grid.RowDefinitions>
                            <TextBlock Background="Orange" FontSize="24" Foreground="White" Margin="3,6,3,0" Text="Checking Item" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBlock Background="Orange" FontSize="24" Foreground="White" Grid.Column="1" Margin="3,6,3,0" Text="Specification" TextAlignment="Center" VerticalAlignment="Top" />
                            <TextBlock Background="Orange" FontSize="24" Foreground="White" Grid.Column="2" Margin="3,6,3,0" Text="Margin" TextAlignment="Center" VerticalAlignment="Top" />

                            <TextBlock Text="Fabric Width Before Heating" 
                                                               Margin="4,6,0,0"   
                                                               FontSize="20" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="1"  />
                            <TextBox x:Name="txtWIDTH_BE_HEATSpecification"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWIDTH_BE_HEATSpecification_KeyDown">
                            </TextBox>
                            <TextBox x:Name="txtWIDTH_BE_HEATActual"  
                                                                Margin="3"
                                                                CharacterCasing="Upper"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWIDTH_BE_HEATActual_KeyDown">
                            </TextBox>

                            <TextBlock Text="แรงตึงผ้าสะสม Acc Pressure" 
                                                               Margin="4,6,0,0"   
                                                               FontSize="20" 
                                                               FontWeight="Bold" 
                                                               TextAlignment="Center"
                                                               HorizontalAlignment="Left"   
                                                               VerticalAlignment="Top" Grid.Row="2"  />
                            <TextBox x:Name="txtACCPRESURESpecification"  
                                                                Margin="3"
