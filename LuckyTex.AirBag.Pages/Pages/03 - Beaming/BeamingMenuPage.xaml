<UserControl x:Class="LuckyTex.Pages.BeamingMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Beaming Main Menu"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <UniformGrid Columns="3" Rows="7" Margin="10">
                        <Grid />
                        <Grid />
                        <Grid />
                        <Grid />
                        <Grid />
                        <Grid />
                        <Grid />
                        <Button x:Name="cmdBeamingProcess"
                                Margin="5, 10" 
                                Content="Beaming Process"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" Click="cmdBeamingProcess_Click">
                        </Button>
                        <Grid />
                        <Grid />
                        <Button x:Name="cmdBeamingRecord"
                                Margin="5, 10" 
                                Content="Beaming Record"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" Click="cmdBeamingRecord_Click">
                        </Button>
                        <Grid />
                        <Grid />
                        <Button x:Name="cmdBeamingList"
                                Margin="5, 10" 
                                Content="Beaming List"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" Click="cmdBeamingList_Click">
                        </Button>
                        <Grid />
                        <Grid />
                        <Grid />
                        <Grid />
                    </UniformGrid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
