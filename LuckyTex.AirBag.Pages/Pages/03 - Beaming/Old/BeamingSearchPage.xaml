<UserControl x:Class="LuckyTex.Pages.BeamingSearchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Beaming Search"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="600*" />
                        <ColumnDefinition Width="600*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Grey Item : "
                               Margin="0,19,254,0"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Right" 
                               TextAlignment="Center" />
                    <Border Margin="0,13,76,0" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Background="CornflowerBlue" 
                            Height="43" 
                            Width="170"
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Right" >
                        <TextBlock x:Name="txtGreyItem" 
                                   Text=" " 
                                   Margin="5" 
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   TextAlignment="Center" />
                    </Border>
                    <CheckBox Name="chkAllGreyItem"
                              Content="All"  
                              Margin="0,19,12,0"  
                              FontSize="24" 
                              FontWeight="Bold"
                              Height="31" 
                              Width="58" 
                              HorizontalAlignment="Right" 
                              VerticalAlignment="Top"/>
                    <TextBlock Text="Created Date : " 
                               Margin="11,19,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               TextAlignment="Center" 
                               Grid.Column="1" />
                    <Border Margin="189,13,0,0" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Background="CornflowerBlue" 
                            Height="43"
                            Width="170" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left" 
                            Grid.Column="1">
                        <TextBlock x:Name="txtCreatedDate" 
                                   Text=" " 
                                   Margin="5" 
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   TextAlignment="Center" />
                    </Border>
                    <CheckBox Name="chkAllCreatedDate"
                              Content="All" 
                              Margin="365,19,0,0" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Height="31" 
                              Width="58"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Top"  
                              Grid.Column="1" />
                    <Grid Margin="0,67,0,0" Height="70" VerticalAlignment="Top" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="177*" />
                            <ColumnDefinition Width="778*" />
                            <ColumnDefinition Width="177*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="cmdSearch" 
                                Margin="8,6,0,0" 
                                Content="Search"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" 
                                Height="58" 
                                Width="250" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1">
                        </Button>
                        <Button x:Name="cmdNew" 
                                Margin="265,6,0,0" 
                                Content="New"
                                FontSize="40" 
                                FontWeight="Bold"
                                Height="58" 
                                Width="250" 
                                Style="{StaticResource MenuButtonStyle}" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1" 
                                Click="cmdNew_Click">
                        </Button>
                        <Button x:Name="cmdEdit" 
                                Margin="523,6,0,0" 
                                Content="Edit"
                                FontSize="40" 
                                FontWeight="Bold"
                                Height="58" 
                                Width="250"
                                Style="{StaticResource MenuButtonStyle}" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1" >
                        </Button>
                    </Grid>
                    <Grid Margin="0,143,0,0" Name="grid2" Grid.ColumnSpan="2">
                        <DataGrid x:Name="grid"
                                  Margin="5,5,5,0"
                                  ItemsSource="{Binding}"
                                  AlternatingRowBackground="AntiqueWhite"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False" 
                                  GridLinesVisibility="None"
                                  EnableColumnVirtualization="True"
                                  EnableRowVirtualization="True"
                                  SelectionMode="Extended"
                                  SelectionUnit="Cell"
                                  CanUserResizeColumns="False"
                                  CanUserSortColumns="False"
                                  IsSynchronizedWithCurrentItem="True"
                                  HorizontalGridLinesBrush="Silver" 
                                  VerticalGridLinesBrush="Silver"
                                  FontSize="22" 
                                  Height="151" 
                                  VerticalAlignment="Top">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="130" Header="Beam Lot No" 
                                                    Binding="{Binding BeamLotNo}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Grey Item" 
                                                    Binding="{Binding GreyItem}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Date" 
                                                    Binding="{Binding Date}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Operator" 
                                                    Binding="{Binding Operator}" 
                                                    IsReadOnly="True"/>
                                <DataGridTemplateColumn Width="90"
                                                        Header="Drawing">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <RadioButton x:Name="rbDrawing" Width="50"
                                                         Background="Transparent"
                                                         GroupName="{Binding Index}"
                                                         IsChecked="{Binding Drawing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource imageRadioButtonOKStyle}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="140" Header="จำนวนเส้นด้าย" 
                                                    Binding="{Binding Qty}" 
                                                    IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid AlternatingRowBackground="AntiqueWhite" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="True" 
                                  CanUserDeleteRows="True" 
                                  CanUserReorderColumns="False" 
                                  CanUserResizeColumns="False" 
                                  CanUserResizeRows="False" 
                                  CanUserSortColumns="False" 
                                  EnableColumnVirtualization="True" 
                                  EnableRowVirtualization="True" 
                                  FontSize="22" 
                                  GridLinesVisibility="None" 
                                  Height="151" 
                                  HorizontalGridLinesBrush="Silver" 
                                  IsSynchronizedWithCurrentItem="True" 
                                  ItemsSource="{Binding}" Margin="5,162,5,0" 
                                  Name="dataGrid1" 
                                  SelectionMode="Extended" 
                                  SelectionUnit="Cell" 
                                  VerticalAlignment="Top" 
                                  VerticalGridLinesBrush="Silver">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding WarpNo}" Header="Warp No" IsReadOnly="True" Width="120" />
                                <DataGridTextColumn Width="120" Header="Grey Item" 
                                                    Binding="{Binding GreyItem}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Date" 
                                                    Binding="{Binding Date}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Binding="{Binding Length}" Header="Length" IsReadOnly="True" Width="120" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid x:Name="grid3"
                                  Margin="5,319,5,5"
                                  ItemsSource="{Binding}"
                                  AlternatingRowBackground="AntiqueWhite"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False" 
                                  GridLinesVisibility="None"
                                  EnableColumnVirtualization="True"
                                  EnableRowVirtualization="True"
                                  SelectionMode="Extended"
                                  SelectionUnit="Cell"
                                  CanUserResizeColumns="False"
                                  CanUserSortColumns="False"
                                  IsSynchronizedWithCurrentItem="True"
                                  HorizontalGridLinesBrush="Silver" 
                                  VerticalGridLinesBrush="Silver"
                                  FontSize="22">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="50" Header="No" 
                                                    Binding="{Binding No}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Beam No" 
                                                    Binding="{Binding BeamNo}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Beam Lot No" 
                                                    Binding="{Binding BeamLotNo}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Date" 
                                                    Binding="{Binding Date}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Start" 
                                                    Binding="{Binding Start}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="End" 
                                                    Binding="{Binding End}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Length" 
                                                    Binding="{Binding Length}" 
                                                    IsReadOnly="True"/>
                                <DataGridTemplateColumn Header="L" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding L}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="M" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding M}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="R" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding R}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="100" Header="Tension" 
                                                    Binding="{Binding Tension}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Operator" 
                                                    Binding="{Binding Operator}" 
                                                    IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
