<UserControl x:Class="LuckyTex.Pages.BeamingProcessDetailPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Beaming Process Detail"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="600*" />
                        <ColumnDefinition Width="600*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Grey Item : " 
                               Margin="0,13,220,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Right" 
                               Width="144" 
                               Height="41" 
                               VerticalAlignment="Top" 
                               TextAlignment="Center" />
                    <ComboBox x:Name="cbGreyItem" 
                              Margin="0,13,12,0" 
                              Width="200" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Height="41" 
                              VerticalAlignment="Top" 
                              HorizontalAlignment="Right" />
                    <TextBlock Text="Beam Lot No. : "
                               Margin="0,68,220,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="LeftToRight" 
                               Width="184" 
                               HorizontalAlignment="Right"   
                               VerticalAlignment="Top" 
                               TextAlignment="Right" />
                    <Border Margin="0,62,42,0"
                            Background="CornflowerBlue" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Height="43"  
                            Width="170"
                            HorizontalAlignment="Right"  
                            VerticalAlignment="Top">
                        <TextBlock Name="txtBeamLotNo" 
                                   Text=" " 
                                   Margin="5" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"  
                                   VerticalAlignment="Center" 
                                   TextAlignment="Center"/>
                    </Border>
                    <TextBlock Text="M/C : " 
                               Margin="23,67,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="LeftToRight" 
                               Width="109" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               TextAlignment="Right" 
                               Grid.Column="1" />
                    <Border Margin="143,62,0,0" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Background="CornflowerBlue" 
                            Height="43" 
                            Width="170"
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left"  
                            Grid.Column="1">
                        <TextBlock x:Name="txtMC" 
                                   Text=" "
                                   Margin="5"  
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   TextAlignment="Center" />
                    </Border>
                    <TextBlock Text="Beam No : " 
                               Margin="0,117,220,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               Height="41" 
                               Width="144"
                               HorizontalAlignment="Right"   
                               VerticalAlignment="Top" 
                               TextAlignment="Right"  />
                    <Border Margin="0,117,42,0"
                            Background="CornflowerBlue" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Height="43"  
                            Width="170"
                            HorizontalAlignment="Right"  
                            VerticalAlignment="Top">
                        <TextBlock Name="txtBeamNo" 
                                   Text=" " 
                                   Margin="5"  
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   TextAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Operator : " 
                               Margin="8,116,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Right" 
                               Width="124" 
                               Height="42" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               Grid.Column="1"/>
                    <Border Margin="143,114,0,0"
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3"  
                            Background="White" 
                            Width="389" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left" 
                            Grid.Column="1">
                        <TextBox x:Name="txtOperator" 
                                 Text="" 
                                 Margin="5" 
                                 Foreground="Black" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Width="383" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Center" 
                                 TextAlignment="Center" />
                    </Border>
                    <TextBlock Text="Inner Width : " 
                               Margin="0,178,225,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               Height="42" 
                               Width="184"
                               HorizontalAlignment="Right" 
                               VerticalAlignment="Top"  
                               TextAlignment="Right"  />
                    <Border Margin="0,172,17,0"
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3"  
                            VerticalAlignment="Top" 
                             Width="200"
                            HorizontalAlignment="Right">
                        <TextBox Name="txtInnerWidth" 
                                 Text=" " 
                                 Margin="5" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                  Width="190" 
                                 HorizontalAlignment="Center"  
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Full Width : "
                               Margin="8,174,0,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               Height="42" 
                               Width="124"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"  
                               TextAlignment="Right"   
                               Grid.Column="1" />
                    <Border  Margin="143,172,0,0" 
                             Background="White" 
                             BorderBrush="Black" 
                             BorderThickness="1" 
                             CornerRadius="3" 
                             Width="200"
                             HorizontalAlignment="Left" 
                             VerticalAlignment="Top"
                             Grid.Column="1">
                        <TextBox Name="txtFullWidth" 
                                 Text=" " 
                                 Margin="5"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 Width="190"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"  
                                 TextAlignment="Center" />
                    </Border>
                    <TextBlock Text="Outer Width : " 
                               Margin="0,236,225,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               Height="42" 
                               Width="184" 
                               HorizontalAlignment="Right"  
                               VerticalAlignment="Top" 
                               TextAlignment="Right" />
                    <Border Margin="0,230,17,0"
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="200"
                            HorizontalAlignment="Right"  
                            VerticalAlignment="Top" >
                        <TextBox Name="txtOuterWidth" 
                                 Text=" " 
                                 Margin="5"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 Width="190"
                                 HorizontalAlignment="Center"  
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" />
                    </Border>
                    <Grid Margin="0,286,0,0" Height="70" VerticalAlignment="Top" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="531*" />
                            <ColumnDefinition Width="486*" />
                            <ColumnDefinition Width="183*" />
                        </Grid.ColumnDefinitions>
                        <Button Name="cmdSpecific" 
                                Margin="0,6,7,0" 
                                Content="Specific M/C STOP Reason"
                                FontSize="40" 
                                FontWeight="Bold"
                                Height="58" 
                                Width="515"
                                Style="{StaticResource MenuButtonStyle}"
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Right" 
                                Click="cmdSpecific_Click" >
                        </Button>
                        <Button x:Name="cmdStart" 
                                Margin="6,6,0,0" 
                                Content="Start"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" 
                                Height="58" 
                                Width="234"
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1">
                        </Button>

                        <Button Name="cmdDoffing" 
                            Margin="250,6,0,0" 
                            Content="Doffing"
                            FontSize="40" 
                            FontWeight="Bold"
                            Height="58" 
                            Width="227"
                            Style="{StaticResource MenuButtonStyle}" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left"
                            Grid.Column="1" 
                            Click="cmdDoffing_Click" >
                        </Button>
                    </Grid>
                    <Grid Margin="0,358,0,0" Name="grid2" Grid.ColumnSpan="2">
                        <DataGrid x:Name="grid"
                                  Margin="5"
                                  ItemsSource="{Binding}"
                                  AlternatingRowBackground="AntiqueWhite"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False" 
                                  GridLinesVisibility="None"
                                  EnableColumnVirtualization="True"
                                  EnableRowVirtualization="True"
                                  SelectionMode="Extended"
                                  SelectionUnit="Cell"
                  
                                  CanUserResizeColumns="False"
                                  CanUserSortColumns="False"
                                  IsSynchronizedWithCurrentItem="True"
                                  HorizontalGridLinesBrush="Silver" 
                                  VerticalGridLinesBrush="Silver"
                                  FontSize="22">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="50" Header="No" 
                                                    Binding="{Binding No}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Beam No" 
                                                    Binding="{Binding BeamNo}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Beam Lot No" 
                                                    Binding="{Binding BeamLotNo}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Date" 
                                                    Binding="{Binding Date}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Start" 
                                                    Binding="{Binding Start}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="End" 
                                                    Binding="{Binding End}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Length" 
                                                    Binding="{Binding Length}" 
                                                    IsReadOnly="True"/>
                                <DataGridTemplateColumn Header="L" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding L}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="M" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding M}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="R" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding R}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="100" Header="Tension" 
                                                    Binding="{Binding Tension}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Operator" 
                                                    Binding="{Binding Operator}" 
                                                    IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
