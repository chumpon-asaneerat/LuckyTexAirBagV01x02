<UserControl x:Class="LuckyTex.Pages.BeamingSettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Beaming Setting"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <DockPanel LastChildFill="True">
                        <Grid Height="60" DockPanel.Dock="Bottom">
                            <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" Background="#F0F0F0">
                                <Grid HorizontalAlignment="Right">
                                    <TextBlock Text="Operator : " 
                                               Margin="5,0,0,11" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Width="124" 
                                               Height="42" 
                                               VerticalAlignment="Bottom" 
                                               HorizontalAlignment="Left" 
                                               TextAlignment="Center"/>
                                    <Border Margin="137,0,0,5"
                                            BorderBrush="Black" 
                                            BorderThickness="1" 
                                            CornerRadius="3" 
                                            Background="White" 
                                            Width="412"
                                            VerticalAlignment="Bottom" 
                                            HorizontalAlignment="Left">
                                        <TextBox x:Name="txtOperator" Margin="5" Text="" Foreground="Black" FontSize="24" FontWeight="Bold" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" />
                                    </Border>
                                </Grid>
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                    <Button x:Name="cmdSave"
                                            Margin="3" 
                                            Content="Save"
                                            FontSize="40" 
                                            FontWeight="Bold"
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Click="cmdSave_Click">
                                    </Button>
                                </StackPanel>
                                <Grid/>
                            </DockPanel>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="195*" />
                                <RowDefinition Height="450*" />
                                <RowDefinition Height="68*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="600*" />
                                <ColumnDefinition Width="600*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Grey Item : " 
                                       Margin="0,19,215,0" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Width="144" 
                                       Height="41" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Top" 
                                       TextAlignment="Right"/>
                            <Border Margin="0,16,9,0" 
                                    Background="White" 
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Width="200"
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Top" >
                                <TextBox Name="txtStartTime" 
                                         Text=" " 
                                         Margin="5"
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="Black" 
                                         Width="185"
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" 
                                         TextAlignment="Center" />
                            </Border>
                            <TextBlock Text="M/C No : " 
                                       Margin="26,19,0,0"
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Height="43" 
                                       Width="144" 
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top" TextAlignment="Right" Grid.Column="1" />
                            <Border Margin="176,19,0,0"
                                    Background="CornflowerBlue" 
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Height="43" 
                                    Width="170"
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top"  
                                    Grid.Column="1">
                                <TextBlock Name="txtMCNo" 
                                           Text="3"  
                                           Margin="5"  
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           TextAlignment="Center"/>
                            </Border>
                            <TextBlock  Text="No Beam : " 
                                        Margin="0,74,215,0" 
                                        FontSize="24" 
                                        FontWeight="Bold" 
                                        Height="41" 
                                        Width="144" 
                                        VerticalAlignment="Top" 
                                        HorizontalAlignment="Right" 
                                        TextAlignment="Right" />
                            <Border Margin="0,72,9,0"
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3"  
                                    Background="CornflowerBlue" 
                                    Height="43" 
                                    Width="200"
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Right" >
                                <TextBlock x:Name="txtNoBeam"  
                                           Text="6"
                                           Margin="5" 
                                           Foreground="White" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" 
                                           TextAlignment="Center" />
                            </Border>
                            <TextBlock Text="Actual Beam : "
                                       Margin="10,74,0,0"
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Height="41"  
                                       Width="160"
                                       HorizontalAlignment="Left"   TextAlignment="Right" VerticalAlignment="Top" Grid.Column="1" />
                            <Border  Margin="176,71,0,0" 
                                     Background="White" 
                                     BorderBrush="Black" 
                                     BorderThickness="1" 
                                     CornerRadius="3" 
                                     Width="200"
                                     HorizontalAlignment="Left" 
                                     VerticalAlignment="Top"  
                                     Grid.Column="1">
                                <TextBox Name="txtActualBeam" 
                                         Text="" 
                                         Margin="5" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="Black" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" 
                                         TextAlignment="Center"
                                         Width="185" />
                            </Border>
                            <Button x:Name="cmdSearch"
                                    Margin="176,130,0,0" 
                                    Content="Search"
                                    FontSize="40" 
                                    FontWeight="Bold"
                                    Width="206" 
                                    Height="51" 
                                    Style="{StaticResource MenuButtonStyle}"
                                    Grid.Column="1" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top">
                            </Button>
                            <Grid Margin="0,3,0,0" Name="grid2" Grid.ColumnSpan="2" Height="191" VerticalAlignment="Top" Grid.Row="1">
                                <DataGrid x:Name="grid"
                                          Margin="5"
                                          ItemsSource="{Binding}"
                                          AlternatingRowBackground="AntiqueWhite"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="True"
                                          CanUserDeleteRows="True"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False" 
                                          GridLinesVisibility="None"
                                          EnableColumnVirtualization="True"
                                          EnableRowVirtualization="True"
                                          SelectionMode="Extended"
                                          SelectionUnit="Cell"
                                          CanUserResizeColumns="False"
                                          CanUserSortColumns="False"
                                          IsSynchronizedWithCurrentItem="True"
                                          HorizontalGridLinesBrush="Silver" 
                                          VerticalGridLinesBrush="Silver"
                                          FontSize="22">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="120" Header="Warp No" 
                                                            Binding="{Binding WarpNo}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="120" Header="Grey Item" 
                                                            Binding="{Binding GreyItem}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="150" Header="Date" 
                                                            Binding="{Binding Date}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="120" Header="Length" 
                                                            Binding="{Binding Length}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="150" Header="จำนวนเส้นด้าย" 
                                                            Binding="{Binding Qty}" 
                                                            IsReadOnly="True"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                            <TextBlock Text="Warp No : " 
                                       Margin="0,140,215,0" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Height="41" 
                                       Width="144" 
                                       HorizontalAlignment="Right"   
                                       VerticalAlignment="Top" 
                                       TextAlignment="Right"/>
                            <Border Margin="0,138,9,0"
                                    Background="CornflowerBlue" 
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Height="43" 
                                    Width="200"
                                    HorizontalAlignment="Right"  
                                    VerticalAlignment="Top" >
                                <TextBlock Name="txtWarpNo" 
                                           Text="W3140211 15B" 
                                           Margin="5"
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           TextAlignment="Center"/>
                            </Border>
                            <Grid Margin="0,204,0,7" Name="grid3" Grid.ColumnSpan="2" Grid.Row="1">
                                <DataGrid x:Name="grid4"
                                          Margin="5"
                                          ItemsSource="{Binding}"
                                          AlternatingRowBackground="AntiqueWhite"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="True"
                                          CanUserDeleteRows="True"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False" 
                                          GridLinesVisibility="None"
                                          EnableColumnVirtualization="True"
                                          EnableRowVirtualization="True"
                                          SelectionMode="Extended"
                                          SelectionUnit="Cell"
                                          CanUserResizeColumns="False"
                                          CanUserSortColumns="False"
                                          IsSynchronizedWithCurrentItem="True"
                                          HorizontalGridLinesBrush="Silver" 
                                          VerticalGridLinesBrush="Silver"
                                          FontSize="22">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="120" Header="Warp No" 
                                                            Binding="{Binding WarpNo}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="120" Header="Grey Item" 
                                                            Binding="{Binding GreyItem}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="150" Header="Date" 
                                                            Binding="{Binding Date}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="120" Header="Length" 
                                                            Binding="{Binding Length}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="150" Header="จำนวนเส้นด้าย" 
                                                            Binding="{Binding Qty}" 
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Width="150" Header="Take Out" 
                                                            Binding="{Binding TakeOut}" 
                                                            IsReadOnly="True"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                            <TextBlock Text="จำนวนเส้นด้ายทั้งหมด : "
                                       Margin="0,15,215,0"
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Height="41" 
                                       Width="263" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Top" 
                                       TextAlignment="Right" 
                                       Grid.Row="2" />
                            <Border Margin="0,12,9,0"
                                    Background="White" 
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Width="200"
                                    HorizontalAlignment="Right"  
                                    VerticalAlignment="Top" 
                                    Grid.Row="2">
                                <TextBox  Name="txtTotalQty" 
                                          Text=""
                                          Margin="5"
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          Foreground="Black" 
                                          Width="185"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center" 
                                          TextAlignment="Center" />
                            </Border>
                            <Border Margin="10,12,0,0"
                                    Background="White" 
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Width="200"
                                    HorizontalAlignment="Left"  
                                    VerticalAlignment="Top"  
                                    Grid.Column="1" 
                                    Grid.Row="2">
                                <TextBox Name="txtTotalTakeOut" 
                                         Text=" " 
                                         Margin="5" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="Black" 
                                         Width="185"
                                         HorizontalAlignment="Center"  
                                         VerticalAlignment="Center" 
                                         TextAlignment="Center"  />
                            </Border>
                        </Grid>
                    </DockPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
