<UserControl x:Class="LuckyTex.Pages.CutPrintListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Cut &amp; Print List"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="290" />
                        <ColumnDefinition Width="162*" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="520*" />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Start Date" 
                               Margin="3"
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft" 
                               TextAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" />
                    <DatePicker Name="dteSTARTDATE" 
                                 Margin="3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                               
                                 VerticalAlignment="Center" 
                                Grid.Column="2" 
                                Grid.Row="1" />
                    <TextBlock Text="Printer" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="3" Grid.Row="1" />
                    <ComboBox Name="cbMCItem" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding DisplayName, Mode=OneWay}"
                              Grid.Column="4" Grid.Row="1"/>
                    <Button Name="cmdSearch" 
                            Content="Search"
                            Margin="8,3,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="107" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="2" Grid.Column="4" Click="cmdSearch_Click">
                    </Button>
                    <Button Name="cmdClear" 
                            Content="Clear"
                            Margin="122,3,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="107" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Click="cmdClear_Click">
                    </Button>
                <Button Name="cmdCutPrintRecord"
                        Content="Cut &amp; Print Record" Margin="9,3,0,0"
                        FontSize="22" 
                        FontWeight="Bold" 
                        Grid.Column="6" 
                        Grid.Row="2" 
                        Height="40" HorizontalAlignment="Left"   
                        Style="{StaticResource MenuButtonStyle}"
                        VerticalAlignment="Top" 
                        Width="210" Click="cmdCutPrintRecord_Click" />
                <Button Content="Send D365" FontSize="22" FontWeight="Bold" Grid.Column="7" Grid.Row="2" Height="40" HorizontalAlignment="Right" Margin="0,3,3,0" Name="cmdSendD365" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="130" Click="cmdSendD365_Click" />
                <Button Name="cmdPrint" 
                            Content="Print Slip"
                            Margin="0,3,3,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="4" Grid.Column="7" HorizontalAlignment="Right" Click="cmdPrint_Click" Width="146">
                    </Button>
                    
                    <DataGrid 
                             x:Name="gridCutPrint" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="3" Grid.ColumnSpan="7" Grid.Column="1" SelectedCellsChanged="gridCutPrint_SelectedCellsChanged" HorizontalContentAlignment="Left">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding ITEMLOT}" Header="Item Lot" IsReadOnly="True" Width="160" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding ITEMCODE}" Header="Item Code" IsReadOnly="True" Width="160" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding MCNAME}" Header="Printer No" IsReadOnly="True" Width="110" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding LENGTHDETAIL}" Header="Length" IsReadOnly="True" Width="200" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Width="180" Header="Start Date" 
                                    Binding="{Binding STARTDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="180" Header="End Date" 
                                    Binding="{Binding ENDDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding PARTNO}" Header="Batch No" IsReadOnly="True" Width="250" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding OPERATORID}" Header="Operator" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid 
                        Grid.Row="4" 
                        Grid.Column="1"  Grid.ColumnSpan="2">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                <Grid 
                        Grid.Row="4" 
                        Grid.Column="3" VerticalAlignment="Bottom" Height="40" Margin="3,0,0,3" HorizontalAlignment="Left"  Grid.ColumnSpan="4" Width="439">
                    <TextBlock 
                                            Text="Total" 
                                            Margin="6,0,0,8" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="67" />
                    <TextBox x:Name="txtTotalLot"  
                                             Margin="79,0,0,6"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Right" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="70">
                    </TextBox>
                    <TextBlock 
                                            Text="lot" 
                                            Margin="155,0,0,8" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="37" />
                    <TextBlock 
                                            Text="length" 
                                            Margin="198,0,0,8" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="67" />
                    
                    <TextBox x:Name="txtTotalLeng"  
                                             Margin="272,0,0,6"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Right" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="113">
                    </TextBox>
                    <TextBlock 
                                            Text="m." 
                                            Margin="392,0,0,8" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="37" />
                </Grid>

            </Grid>
        </Border>
    </DockPanel>
  
</UserControl>
