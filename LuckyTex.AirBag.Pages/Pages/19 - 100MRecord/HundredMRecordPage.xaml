<UserControl x:Class="LuckyTex.Pages.HundredMRecordPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="100M Record Setup"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="520" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="770" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Item Code" 
                               Grid.Column="1" Grid.Row="1" />
                    <ComboBox Name="cbItemGoods" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding ITM_CODE, Mode=OneWay}"
                              Grid.Column="2" Grid.Row="1"/>
                    <CheckBox Name="chkAll" 
                                  Content="All" 
                                  Margin="3,10,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" 
                                  Grid.Column="3" 
                                  Grid.Row="1"/>
                    <Button Name="cmdSearch" 
                            Content="Search" 
                            Margin="3,3,0,0" 
                            FontSize="22" 
                            FontWeight="Bold" 
                            Height="40" 
                            Width="107" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Click="cmdSearch_Click" 
                            Grid.Column="4" 
                            Grid.Row="1">
                    </Button>
                    <Grid Name="grid1"
                          Grid.Column="3" 
                          Grid.ColumnSpan="2" 
                          Grid.Row="5" Margin="0,0,492,0">
                        <Button Name="cmdSave" 
                                Content="Save"
                                Margin="4,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click">
                        </Button>
                        <Button Name="cmdNew" 
                                Content="New"
                                Margin="116,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdNew_Click">
                        </Button>
                        <Button Name="cmdEdit" 
                                Content="Edit"
                                Margin="228,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdEdit_Click">
                        </Button>
                    </Grid>
                    <DataGrid 
                             x:Name="gridHundredM" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="6" Grid.ColumnSpan="5" 
                                Grid.Column="1" 
                                HorizontalContentAlignment="Center" 
                                VerticalContentAlignment="Center"
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                        SelectedCellsChanged="gridHundredM_SelectedCellsChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding ITM_CODE}" Header="Item Code" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkDENSITY_W}" Header="Density W" IsReadOnly="True" Width="110" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkDENSITY_F}" Header="Density F" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkTRIM_L}" Header="Trim L" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkTRIM_R}" Header="Trim R" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkFLOPPY_L}" Header="Floppy L" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkFLOPPY_R}" Header="Floppy R" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkWIDTH_ALL}" Header="Width All" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkWIDTH_PIN}" Header="Width Pin" IsReadOnly="True" Width="110" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkWIDTH_COAT}" Header="Width Coat" IsReadOnly="True" Width="120" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkWIDTH_SelvageL}" Header="Width Selvage L" IsReadOnly="True" Width="120" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkWIDTH_SelvageR}" Header="Width Selvage R" IsReadOnly="True" Width="120" CellStyle="{StaticResource CenterCellStyle}"/>
                            
                            <DataGridCheckBoxColumn Binding="{Binding ChkHARDNESS_L}" Header="Hardness L" IsReadOnly="True" Width="120" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkHARDNESS_C}" Header="Hardness C" IsReadOnly="True" Width="120" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkHARDNESS_R}" Header="Hardness R" IsReadOnly="True" Width="120" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkUNWINDER}" Header="Unwinder" IsReadOnly="True" Width="110" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Binding="{Binding ChkWINDER}" Header="Winder" IsReadOnly="True" Width="110" CellStyle="{StaticResource CenterCellStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid 
                        Grid.Row="7" 
                        Grid.Column="1"  Grid.ColumnSpan="2">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                    <Grid Name="grid2"
                          Grid.Column="1" 
                          Grid.ColumnSpan="5" 
                          Grid.Row="2" 
                          Margin="3" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="129*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="chkDENSITY_W" 
                                  Content="Density W" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" />
                        <CheckBox Name="chkDENSITY_F" 
                                  Content="Density F" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="1"/>
                        <CheckBox Name="chkTRIM_L" 
                                  Content="Trim L" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="2"/>
                        <CheckBox Name="chkTRIM_R" 
                                  Content="Trim R" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="3"/>
                        <CheckBox Name="chkFLOPPY_L" 
                                  Content="Floppy L" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="4"/>
                        <CheckBox Name="chkFLOPPY_R" 
                                  Content="Floppy R" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="5"/>
                    </Grid>
                    <Grid Name="grid3"
                          Grid.Column="1" 
                          Grid.ColumnSpan="5" 
                          Grid.Row="3" 
                          Margin="3" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="129*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="chkWIDTH_ALL" 
                                  Content="Width All" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" />
                        <CheckBox Name="chkWIDTH_PIN" 
                                  Content="Width Pin" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="1"/>
                        <CheckBox Name="chkWIDTH_COAT" 
                                  Content="Width Coat" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="2"/>

                        <CheckBox Name="chkWIDTH_Selvage_L" 
                                  Content="Selvage L" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="3"/>

                        <CheckBox Name="chkWIDTH_Selvage_R" 
                                  Content="Selvage R" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="4"/>
                        <CheckBox Name="chkHARDNESS_L" 
                                  Content="Hardness L" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="5"/>
                        
                        
                    </Grid>
                    <Grid Name="grid4"
                          Grid.Column="1" 
                          Grid.ColumnSpan="5" 
                          Grid.Row="4" 
                          Margin="3" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="155" />
                            <ColumnDefinition Width="155" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="31*" />
                            <ColumnDefinition Width="31*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="129*" />
                        </Grid.ColumnDefinitions>
<CheckBox Name="chkHARDNESS_C" 
                                  Content="Hardness C" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="0"/>
                        <CheckBox Name="chkHARDNESS_R" 
                                  Content="Hardness R" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="1" />
                        <CheckBox Name="chkUNWINDER" 
                                  Content="Unwinder" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="2" />
                        <CheckBox Name="chkWINDER" 
                                  Content="Winder" 
                                  Margin="3,7,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" Grid.Column="3"/>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
