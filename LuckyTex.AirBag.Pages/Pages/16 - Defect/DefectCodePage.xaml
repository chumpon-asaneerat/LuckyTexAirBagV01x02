<UserControl x:Class="LuckyTex.Pages.DefectCodePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Defect Code"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="615" />
                        <RowDefinition Height="5*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="190" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Defect Code" 
                               Grid.Column="1" Grid.Row="1" />
                    <TextBox x:Name="txtDEFECTID"  
                                Margin="3,7,3,0"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="1" KeyDown="txtDEFECTID_KeyDown" >
                    </TextBox>
                    <CheckBox Name="chkAll" 
                                  Content="All" 
                                  Margin="27,10,0,0"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" VerticalAlignment="Top" 
                                  Grid.Column="3" 
                                  Grid.Row="1" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" Width="66" HorizontalAlignment="Left" />
                    <TextBlock Text="Process" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="4" Grid.Row="1" />
                    <ComboBox Name="cbPROCESSID" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding PROCESSID, Mode=OneWay}"
                              Grid.Column="5" Grid.Row="1"/>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Thai Description" 
                               Grid.Column="1" Grid.Row="2" />
                    <TextBox x:Name="txtTHAIDESC"  
                                Margin="3,6,3,0"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Left" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="2" Grid.ColumnSpan="3" KeyDown="txtTHAIDESC_KeyDown">
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Eng Description" 
                               Grid.Column="1" Grid.Row="3" />
                    <TextBox x:Name="txtENGDESC"  
                                Margin="3,6,3,0"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Left" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="3" Grid.ColumnSpan="3" KeyDown="txtENGDESC_KeyDown">
                    </TextBox>
                    <CheckBox Name="chkPOINT" 
                                  Content="Point" 
                                  Margin="0,10,14,0"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" VerticalAlignment="Top" 
                                  Grid.Column="1" 
                                  Grid.Row="4" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" Width="94" HorizontalAlignment="Right" />
                    <Grid Name="grid1"
                          Grid.Column="2" 
                          Grid.ColumnSpan="4" 
                          Grid.Row="4" >
                        <Button Name="cmdSearch" 
                                Content="Search"
                                Margin="3,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdSearch_Click">
                        </Button>
                        <Button Name="cmdSave" 
                                Content="Save"
                                Margin="115,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click">
                        </Button>
                        <Button Name="cmdNew" 
                                Content="New"
                                Margin="227,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdNew_Click">
                        </Button>
                        <Button Name="cmdEdit" 
                                Content="Edit"
                                Margin="339,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdEdit_Click">
                        </Button>
                        <Button Name="cmdDelete" 
                                Content="Delete"
                                Margin="451,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdDelete_Click">
                        </Button>
                    </Grid>
                    <DataGrid 
                             x:Name="gridDefect" 
                                Margin="3,3,3,3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="5" Grid.ColumnSpan="8" Grid.Column="1" HorizontalContentAlignment="Left" 
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" SelectedCellsChanged="gridDefect_SelectedCellsChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding DEFECTCODE}" Header="Defect Code" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding PROCESSDESCRIPTION}" Header="Process" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding DESCRIPTION_TH}" Header="Thai Description" IsReadOnly="True" Width="250" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding DESCRIPTION_EN}" Header="Eng Description" IsReadOnly="True" Width="250" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Width="80" Header="Point" 
                                    Binding="{Binding POINT}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource CenterCellStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
