<UserControl x:Class="LuckyTex.Pages.OperatorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Operator"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="159" />
                        <ColumnDefinition Width="175" />
                        <ColumnDefinition Width="135" />
                        <ColumnDefinition Width="270" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="291*" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="548*" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Operator : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="1" />
                    <TextBox x:Name="txtOperatorID"  
                             Margin="5"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="2" Grid.Row="1" KeyDown="txtOperatorID_KeyDown" LostFocus="txtOperatorID_LostFocus">
                    </TextBox>
                    <TextBlock Text="Status : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="1" />
                    <ComboBox Name="cbStatus"
                                TextSearch.TextPath=""
                                Margin="5,5,105,5"
                                FontSize="22"      
                                FontWeight="Bold" 
                                ItemsSource="{Binding Status, Mode=OneWay}"
                                Grid.Column="4" Grid.Row="1" Width="160" LostFocus="cbStatus_LostFocus" />
                    <CheckBox Name="chkWeb" 
                                  Content="Web" 
                                  Margin="0,5,0,5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Center" 
                                  Grid.Column="5" 
                                  Grid.Row="1" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Left" 
                                  Checked="chkWeb_Checked" 
                                  Unchecked="chkWeb_Unchecked" />
                    <CheckBox Name="chkWIP" 
                              Content="WIP" 
                              FontSize="22" 
                              FontWeight="Bold" 
                              Grid.Column="5" 
                              Grid.Row="1" 
                              HorizontalAlignment="Left" 
                              IsChecked="False" 
                              Margin="78,5,0,5"
                              Style="{StaticResource imageCheckedBoxOKStyle}" VerticalAlignment="Center" 
                              Checked="chkWIP_Checked" 
                              Unchecked="chkWIP_Unchecked"/>
                    <TextBlock Text="Title : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="2" />
                    <ComboBox Name="cbTitle"
                                TextSearch.TextPath=""
                                Margin="5"
                                FontSize="22"      
                                FontWeight="Bold" 
                                ItemsSource="{Binding Title, Mode=OneWay}"
                                Grid.Column="2" Grid.Row="2" LostFocus="cbTitle_LostFocus" />
                    <TextBlock Text="Name : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="2" />
                    <TextBox x:Name="txtFname"  
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="4" Grid.Row="2" KeyDown="txtFname_KeyDown" LostFocus="txtFname_LostFocus">
                    </TextBox>
                    <TextBlock Text="Last Name : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="5" Grid.Row="2" />
                    <TextBox x:Name="txtLName"  
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="6" Grid.Row="2" KeyDown="txtLName_KeyDown" LostFocus="txtLName_LostFocus">
                    </TextBox>
                    <TextBlock Text="แผนก : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="3" />
                    <ComboBox Name="cbProcess"
                                TextSearch.TextPath=""
                                Margin="5"
                                FontSize="22"      
                                FontWeight="Bold" 
                                ItemsSource="{Binding Process, Mode=OneWay}"
                                Grid.Column="2" Grid.Row="3" LostFocus="cbProcess_LostFocus" />
                    <TextBlock Text="Positon : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="3" Grid.Row="3" />
                    <ComboBox Name="cbPositon"
                                TextSearch.TextPath=""
                                Margin="5"
                                FontSize="22"      
                                FontWeight="Bold" 
                                ItemsSource="{Binding Positon, Mode=OneWay}"
                                Grid.Column="4" Grid.Row="3" LostFocus="cbPositon_LostFocus" />
                    <TextBlock Text="Password : " 
                               Margin="3"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Right"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center" 
                               Grid.Column="5" Grid.Row="3" />
                    <TextBox x:Name="txtPassword"  
                             Margin="3"
                             CharacterCasing="Upper"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center" 
                             Grid.Column="6" Grid.Row="3" KeyDown="txtPassword_KeyDown" LostFocus="txtPassword_LostFocus">
                    </TextBox>
                    <CheckBox Name="chkAll" 
                                  Content="All" 
                                  Margin="5"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" VerticalAlignment="Center" 
                                  Grid.Column="1" 
                                  Grid.Row="4" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  HorizontalAlignment="Right"/>
                    <Button Name="cmdSearch" 
                                Content="Search"
                                Margin="0,5,17,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="2" 
                                Grid.Row="4" Click="cmdSearch_Click">
                    </Button>
                    <Button Name="cmdNew" 
                                Content="New"
                                Margin="5" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="4" 
                                Grid.Row="4" Click="cmdNew_Click">
                    </Button>
                    <Button Name="cmdEdit" 
                                Content="Edit"
                                Margin="118,5,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="4" 
                                Grid.Row="4" Click="cmdEdit_Click">
                    </Button>
                    <Button Name="cmdSave" 
                                Content="Save"
                                Margin="231,5,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"  
                                Style="{StaticResource MenuButtonStyle}" 
                                Grid.Column="4" 
                                Grid.Row="4" Grid.ColumnSpan="2" Click="cmdSave_Click">
                    </Button>

                    <Grid Name="grid1"
                          Margin="5"
                          Grid.Row="5" Grid.Column="1" 
                          Grid.ColumnSpan="7">
                        <DataGrid x:Name="gridOperator" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver" SelectedCellsChanged="gridOperator_SelectedCellsChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="125" Header="Operator ID" 
                                    Binding="{Binding OPERATORID}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="80" Header="Title" 
                                    Binding="{Binding TITLE}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="250" Header="Name" 
                                    Binding="{Binding FNAME}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="250" Header="Last Name" 
                                    Binding="{Binding LNAME}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="แผนก" 
                                    Binding="{Binding PROCESSID}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Positon" 
                                    Binding="{Binding POSITIONLEVEL}" 
                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Password" 
                                    Binding="{Binding PASSWORD}" 
                                    IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                   
                </Grid>
        </Border>
    </DockPanel>
</UserControl>
