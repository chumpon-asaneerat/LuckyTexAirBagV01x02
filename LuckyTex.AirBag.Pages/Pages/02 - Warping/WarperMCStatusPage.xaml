<UserControl x:Class="LuckyTex.Pages.WarperMCStatusPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Warping Process"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="595*" />
                        <ColumnDefinition Width="595*" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45" />
                        <RowDefinition Height="683*" />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>
                    <TextBox CharacterCasing="Upper" 
                             FontSize="20" 
                             FontWeight="Bold" 
                             Grid.Column="1" 
                             IsReadOnly="True" 
                             Margin="3,6,3,0" 
                             Name="txtMCName" 
                             TextAlignment="Center" 
                             VerticalAlignment="Top" />

                    <Grid 
                        Margin="3,0,3,0"
                        Grid.Row="1" 
                        Grid.Column="1" >
                        <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Creel Side A" TextAlignment="Center" VerticalAlignment="Top" />
                        <TextBlock 
                                            Text="Warper Lot" 
                                            Margin="81,56,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtWARPHEADNOSideA"  
                                             Margin="191,53,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="Item Prepare" 
                                            Margin="63,95,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtITM_PREPARESideA"  
                                             Margin="191,92,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="No CH" 
                                            Margin="124,134,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtACTUALCHSideA"  
                                             Margin="191,131,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="Setting By" 
                                            Margin="88,173,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtCREATEBYSideA"  
                                             Margin="191,170,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="Start Conditioning" 
                                            Margin="11,212,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtCONDITIONSTARTSideA"  
                                             Margin="191,209,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="Conditioning Time" 
                                            Margin="10,251,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtCONDITIONINGSideA"  
                                             Margin="191,248,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="Status" 
                                            Margin="127,290,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtStatusSideA"  
                                             Margin="191,287,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <Grid 
                        Margin="3,335,3,0" Height="45" VerticalAlignment="Top">
                            
                            <Button Name="cmdStartSideA" 
                            Content="Start"
                            Margin="3,9,0,0" 
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Width="110" Style="{StaticResource MenuButtonStyle}" Click="cmdStartSideA_Click">
                            </Button>
                            <Button Name="cmdWarperRollA" 
                            Content="Warper Roll"
                            Margin="0,9,116,0" 
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Width="140" Style="{StaticResource MenuButtonStyle}" Click="cmdWarperRollA_Click">
                            </Button>
                        </Grid>
                    </Grid>

                    <Grid 
                        Margin="3,0,3,0"
                        Grid.Row="1" 
                        Grid.Column="2" >
                        <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Creel Side B" TextAlignment="Center" VerticalAlignment="Top" />
                        <TextBlock 
                                            Text="Warper Lot" 
                                            Margin="81,56,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtWARPHEADNOSideB"  
                                             Margin="191,53,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="Item Prepare" 
                                            Margin="63,95,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtITM_PREPARESideB"  
                                             Margin="191,92,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="No CH" 
                                            Margin="124,134,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtACTUALCHSideB"  
                                             Margin="191,131,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="Setting By" 
                                            Margin="88,173,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtCREATEBYSideB"  
                                             Margin="191,170,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="Start Conditioning" 
                                            Margin="11,212,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtCONDITIONSTARTSideB"  
                                             Margin="191,209,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="Conditioning Time" 
                                            Margin="10,251,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtCONDITIONINGSideB"  
                                             Margin="191,248,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <TextBlock 
                                            Text="Status" 
                                            Margin="127,290,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtStatusSideB"  
                                             Margin="191,287,6,0"
                                             IsReadOnly="True"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Left" VerticalAlignment="Top" >
                        </TextBox>
                        <Grid Margin="3,335,3,0" Height="45" VerticalAlignment="Top">
                            <Button Name="cmdStartSideB" 
                            Content="Start"
                            Margin="3,9,0,0" 
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Width="110" Style="{StaticResource MenuButtonStyle}" Click="cmdStartSideB_Click">
                            </Button>
                            <Button Name="cmdWarperRollB" 
                            Content="Warper Roll"
                            Margin="0,9,116,0" 
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Width="140" Style="{StaticResource MenuButtonStyle}" Click="cmdWarperRollB_Click">
                            </Button>
                        </Grid>
                    </Grid>
                    
                    
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
