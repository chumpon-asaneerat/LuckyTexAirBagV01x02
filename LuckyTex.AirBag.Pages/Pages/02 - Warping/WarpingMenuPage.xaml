<UserControl x:Class="LuckyTex.Pages.WarpingMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Warping Main Menu"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdBack_Click">
                </Button>
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <UniformGrid Columns="3" Rows="7" Margin="10">
                <Grid />
                <Grid />
                <Grid />
                <Grid />
                <Grid>
                    <Button x:Name="cmdReceiveYarn" Content="Receive Yarn" Margin="10" FontSize="40" FontWeight="Bold"  Style="{StaticResource MenuButtonStyle}" Click="cmdReceiveYarn_Click" />
                </Grid>
                <Grid />
                
                <Grid >
                <Button x:Name="cmdRequestYarn"
                        Content="Request Yarn"
                        Margin="5" 
                        FontSize="40"
                        FontWeight="Bold"
                        Height="70"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdRequestYarn_Click" />
                </Grid>
                <Grid>
                    <Button x:Name="cmdRemainYarn" Content="Remain Yarn" Margin="10" FontSize="40" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdRemainYarn_Click" />
                </Grid>
                <Grid >
                <Button x:Name="cmdReturnYarn"
                        Content="Return Yarn"
                        Margin="5" 
                        FontSize="40"
                        FontWeight="Bold"
                        Height="70"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdReturnYarn_Click" />
                </Grid>
                <Grid ></Grid>
                <Grid>
                    <Button x:Name="cmdWarpingProcess" Content="Warping Process" Margin="10" FontSize="40" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdWarpingProcess_Click" />
                </Grid>
                <Grid ></Grid>
                <Grid />
                <Grid>
                    <Button x:Name="cmdWarpingRecord" Content="Warping Record" Margin="10" FontSize="40" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdWarpingRecord_Click" />
                </Grid>
                <Grid />
                <Grid ></Grid>
                <Grid>
                    <Button x:Name="cmdWarpingList"
                        Margin="10" 
                        Content="Warping List"
                        FontSize="40" 
                        FontWeight="Bold"
                        
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdWarpingList_Click">
                    </Button>
                </Grid>
                <Grid />
            </UniformGrid>
        </Border>
    </DockPanel>
</UserControl>
