                               Height="41" 
                               VerticalAlignment="Top" 
                               TextAlignment="Center" />
                    <ComboBox x:Name="cbGreyItem" 
                              Margin="0,13,12,0" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Height="41" 
                              Width="200" 
                              VerticalAlignment="Top" 
                              HorizontalAlignment="Right" />
                    <TextBlock Text="M/C : " 
                               Margin="0,70,220,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Width="144" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Right" 
                               TextAlignment="Right"
                               FlowDirection="LeftToRight" />
                    <Border Margin="0,64,42,0" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Background="CornflowerBlue" 
                            Height="43"  
                            Width="170"
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Right">
                        <TextBlock x:Name="txtMC" 
