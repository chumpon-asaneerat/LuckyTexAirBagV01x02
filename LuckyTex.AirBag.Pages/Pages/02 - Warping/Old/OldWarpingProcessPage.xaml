                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   TextAlignment="Center" />
                    </Border>
                    <TextBlock Text="Side : "
                               Margin="8,72,0,0"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               Width="124"
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               TextAlignment="Right" 
                               Grid.Column="1" />
                    <Border Margin="143,63,0,0"
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="160" 
                            HorizontalAlignment="Left"  
                            VerticalAlignment="Top" 
                            Grid.Column="1">
                        <TextBox Name="txtSide" 
                                 Text="" 
                                 Margin="5" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 Width="150"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" />
                    </Border>
                    <TextBlock Text="M/C Speed : "
                               Margin="0,129,220,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               Width="144"
                               HorizontalAlignment="Right" 
                               VerticalAlignment="Top"  
                               TextAlignment="Right"  />
                    <Border Margin="0,123,42,0" 
                            Background="CornflowerBlue" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Height="43"
                            Width="170"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top" >
                        <TextBlock Name="txtMCSpeed" 
                                   Text=" "
                                   Margin="5" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"  
                                   VerticalAlignment="Center" 
                                   TextAlignment="Center" />
                    </Border>
                    <Border Margin="52,120,0,0" 
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="160" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Grid.Column="1">
                        <TextBox Name="txtMCSpeed2" 
                                 Margin="5" 
                                 Text="" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 Width="150" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Beam No : "
                               Margin="0,177,220,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               Height="41" 
                               Width="144"
                               HorizontalAlignment="Right"  
                               VerticalAlignment="Top"
                               TextAlignment="Right"  />
                    <ComboBox Name="cbBeamNo"
                              Margin="0,177,12,0" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Height="41" 
                              Width="200"
                              HorizontalAlignment="Right"  
                              VerticalAlignment="Top"  />
                    <TextBlock Text="Operator : " 
                               Margin="8,179,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Right" 
                               Width="124" 
                               Height="42" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               Grid.Column="1"/>
                    <Border Margin="143,177,0,0" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3"  
                            Background="White" 
                            Width="389"
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left" 
                            Grid.Column="1">
                        <TextBox x:Name="txtOperator" 
                                 Margin="5" 
                                 Text="" 
                                 Foreground="Black" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Width="383" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Center" 
                                 TextAlignment="Center" />
                    </Border>
                    <TextBlock Text="Warper Lot : "
                               Margin="0,247,445,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Right"  
                               VerticalAlignment="Top"  
                               TextAlignment="Right" />
                    <Border Margin="0,238,277,0"
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            HorizontalAlignment="Right"  
                            VerticalAlignment="Top" 
                            Width="160">
                        <TextBox Name="txtWarperLot" 
                                 Text="" 
                                 Margin="5"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 Width="150" 
                                 TextAlignment="Center"
                                 HorizontalAlignment="Center"  
                                 VerticalAlignment="Center" />
                    </Border>

                    <TextBlock Text="Length : " 
                               Margin="0,247,172,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Right" 
                               VerticalAlignment="Top" 
                               TextAlignment="Right" />
                    <Border Margin="0,238,4,0" 
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="160"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" >
                        <TextBox Name="txtLength" 
                                 Text="" 
                                 Margin="5" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 Width="150"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 TextAlignment="Center" />
                    </Border>

                    <Grid Margin="0,295,0,0" Height="78" VerticalAlignment="Top" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="522*" />
                            <ColumnDefinition Width="485*" />
                            <ColumnDefinition Width="193*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="cmdSpecific" 
                            Margin="0,8,6,0" 
                            Content="Specific M/C STOP Reason"
                            FontSize="40" 
                            FontWeight="Bold"
                            Height="58" 
                            Width="530"
                            Style="{StaticResource MenuButtonStyle}" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Click="cmdSpecific_Click">
                            
                        </Button>
                        <Button x:Name="cmdStart" 
                                Margin="9,8,0,0" 
                                Content="Start"
                                FontSize="40" 
                                FontWeight="Bold"
                                Height="58" 
                                Width="234"
                                Style="{StaticResource MenuButtonStyle}" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1" >
                        </Button>

                        <Button Name="cmdDoffing"
                                Margin="249,8,0,0"  
                                Content="Doffing"
                                FontSize="40" 
                                FontWeight="Bold"
                                Height="58" 
                                Width="227"
                                Style="{StaticResource MenuButtonStyle}" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1" 
                                Click="cmdDoffing_Click" >
                        </Button>
                    </Grid>
                    <Grid Margin="0,379,0,0" Name="grid2" Grid.ColumnSpan="2">
                        <DataGrid x:Name="grid"
                                  Margin="5"
                                  ItemsSource="{Binding}"
                                  AlternatingRowBackground="AntiqueWhite"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False" 
                                  GridLinesVisibility="None"
                                  EnableColumnVirtualization="True"
                                  EnableRowVirtualization="True"
                                  SelectionMode="Extended"
                                  SelectionUnit="Cell"
                                  CanUserResizeColumns="False"
                                  CanUserSortColumns="False"
                                  IsSynchronizedWithCurrentItem="True"
                                  HorizontalGridLinesBrush="Silver" 
                                  VerticalGridLinesBrush="Silver" 
                                  FontSize="22">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="50" Header="No" 
                                                    Binding="{Binding No}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Beam No" 
                                                    Binding="{Binding BeamNo}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Warper lot no" 
                                                    Binding="{Binding WarperLotNo}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Date" 
                                                    Binding="{Binding Date}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Start" 
                                                    Binding="{Binding Start}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="End" 
                                                    Binding="{Binding End}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Length" 
                                                    Binding="{Binding Length}" 
                                                    IsReadOnly="True"/>
                                <DataGridTemplateColumn Header="L" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding L}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="M" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding M}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="R" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding R}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="100" Header="Tension" 
                                                    Binding="{Binding Tension}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Start by" 
                                                    Binding="{Binding StartBy}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="100" Header="Doff By" 
                                                    Binding="{Binding DoffBy}" 
                                                    IsReadOnly="True"/>
                                <DataGridTemplateColumn Header="M/C Stop Reason" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="cmdMCStopReason" Width="75" Content="Click" 
                                                    Background="Transparent" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <TextBlock Text="L : " 
                               Margin="8,247,0,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Left"  
                               VerticalAlignment="Top" 
                               TextAlignment="Right"
                               Grid.Column="1" />
                    <Border Margin="51,238,0,0"
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="60" 
                            HorizontalAlignment="Left"  
                            VerticalAlignment="Top" 
                            Grid.Column="1">
                        <TextBox Name="txtL" 
                                 Text="" 
                                 Margin="5" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 Width="50" 
                                 HorizontalAlignment="Center"   
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" />
                    </Border>
                    <TextBlock Text="M : " 
                               Margin="118,247,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Top" 
                               TextAlignment="Right" 
                               Grid.Column="1" />
                    <Border  Margin="171,238,0,0"
                             Background="White" 
                             BorderBrush="Black" 
                             BorderThickness="1" 
                             CornerRadius="3" 
                             Width="60" 
                             HorizontalAlignment="Left" 
                             VerticalAlignment="Top" 
                             Grid.Column="1">
                        <TextBox Name="txtM" 
                                 Text="" 
                                 Margin="5" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 Width="50"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center"  />
                    </Border>
                    <TextBlock  Text="R : " 
                                Margin="239,247,0,0"
                                FontSize="24" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                TextAlignment="Right" 
                                Grid.Column="1" />
                    <Border Margin="286,238,0,0" 
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="60" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Grid.Column="1">
                        <TextBox Name="txtR" 
                                 Text="" 
                                 Margin="5" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 Width="50" 
                                 HorizontalAlignment="Center" 
                                 TextAlignment="Center" 
                                 VerticalAlignment="Center" />
                    </Border>
                    <TextBlock Text="Tension : " 
                               Margin="356,247,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Top" 
                               TextAlignment="Right" 
                               Grid.Column="1" />
                    <Border Margin="472,238,0,0"
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="60" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Grid.Column="1">
                        <TextBox Name="txtTension" 
                                 Text=""
                                 Margin="5"  
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 Width="50" />
                    </Border>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>  
</UserControl>
