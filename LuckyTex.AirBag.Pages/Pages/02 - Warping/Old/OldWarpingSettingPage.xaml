<UserControl x:Class="LuckyTex.Pages.OldWarpingSettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1217">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Warping Setting"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <DockPanel LastChildFill="True">
                        <Grid Height="60" DockPanel.Dock="Bottom">
                            <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" Background="#F0F0F0">
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                    <Button x:Name="cmdSave"
                                            Margin="3" 
                                            Content="Save"
                                            FontSize="40" 
                                            FontWeight="Bold"
                                            Style="{StaticResource MenuButtonStyle}" 
                                            Click="cmdSave_Click">
                                    </Button>
                                </StackPanel>
                                <Grid/>
                            </DockPanel>
                        </Grid>
                        <Grid>
                            <Grid Grid.ColumnSpan="2" Height="178" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="372*" />
                                    <ColumnDefinition Width="828*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Grey Item : " 
                                           Margin="0,19,193,0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Width="144" 
                                           Height="41"  
                                           HorizontalAlignment="Right" 
                                           VerticalAlignment="Top" 
                                           TextAlignment="Right"/>
                                <ComboBox x:Name="cbGreyItem" 
                                          Margin="0,19,17,0" 
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          Width="170" 
                                          Height="41" 
                                          VerticalAlignment="Top" 
                                          HorizontalAlignment="Right" />
                                <TextBlock Text="Type : " 
                                           Margin="35,19,0,0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Width="94" 
                                           Height="41"
                                           HorizontalAlignment="Left"  
                                           VerticalAlignment="Top"
                                           Grid.Column="1"  TextAlignment="Right"/>
                                <ComboBox x:Name="cbType" 
                                          Margin="135,19,0,0" 
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          Width="170" 
                                          Height="41"
                                          VerticalAlignment="Top" 
                                          HorizontalAlignment="Left"
                                          Grid.Column="1"  />
                                <Grid Grid.Column="1" Height="159" HorizontalAlignment="Left" Margin="561,14,0,0" Name="grid1" VerticalAlignment="Top" Width="261">
                                    <TextBlock Text="Type of Product : " 
                                               Margin="6,6,0,0" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Height="41" 
                                               Width="248" 
                                               VerticalAlignment="Top" 
                                               HorizontalAlignment="Left"  />
                                    <RadioButton x:Name="rbMassProduction" IsChecked="True"
                                                 Content="Mass Production" 
                                                 Margin="4,53,0,0"
                                                 FontSize="24" FontWeight="Bold"
                                                 Style="{StaticResource imageRadioButtonORBStyle}" Height="42" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250" />
                                    <RadioButton x:Name="rbTest" 
                                                 Margin="4,101,0,0"
                                                 Content="Test" 
                                                 FontSize="24" FontWeight="Bold"
                                                 Style="{StaticResource imageRadioButtonORBStyle}" Height="42" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250" />
                                </Grid>
                                <TextBlock Text="No CH : " 
                                           Margin="0,69,193,0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Width="144" 
                                           Height="41" 
                                           VerticalAlignment="Top" 
                                           HorizontalAlignment="Right" 
                                           TextAlignment="Right" />
                                <Border Margin="0,67,17,0"
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3"  
                                        Background="CornflowerBlue" 
                                        Height="43"  
                                        Width="170"
                                        VerticalAlignment="Top" 
                                        HorizontalAlignment="Right">
                                    <TextBlock x:Name="txtNoCH" 
                                               Text="550"
                                               Margin="5"  
                                               Foreground="White" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               VerticalAlignment="Center" 
                                               HorizontalAlignment="Center" 
                                               TextAlignment="Center" />
                                </Border>
                                <TextBlock Text="M/C No : "
                                           Margin="11,67,0,0"
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Width="118" 
                                           Height="43"
                                           HorizontalAlignment="Left"  
                                           VerticalAlignment="Top" 
                                           TextAlignment="Right" Grid.Column="1"  />
                                <Border Margin="135,67,0,0"
                                        Background="CornflowerBlue" 
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Height="43" 
                                        Width="170"
                                        HorizontalAlignment="Left"  
                                        VerticalAlignment="Top"
                                        Grid.Column="1">
                                    <TextBlock Name="txtMCNo" 
                                               Text="3" 
                                               Margin="5"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center"  
                                               VerticalAlignment="Center"
                                               TextAlignment="Center"  />
                                </Border>
                                <TextBlock Text="Side : " 
                                           Margin="311,69,0,0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Width="94" 
                                           Height="41"
                                           HorizontalAlignment="Left"  
                                           VerticalAlignment="Top" 
                                           Grid.Column="1" 
                                           TextAlignment="Right" />
                                <ComboBox x:Name="cbSide" 
                                          Margin="411,69,0,0" 
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          Width="144"
                                          Height="41" 
                                          VerticalAlignment="Top" 
                                          HorizontalAlignment="Left" 
                                          Grid.Column="1" />
                                <TextBlock Text="Reed No : " 
                                           Margin="0,120,193,0"
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Height="43" 
                                           Width="144"
                                           HorizontalAlignment="Right"  
                                           VerticalAlignment="Top"  
                                           TextAlignment="Right"/>
                                <Border Margin="0,120,17,0"
                                        Background="CornflowerBlue" 
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Height="43" 
                                        Width="170"
                                        HorizontalAlignment="Right"  
                                        VerticalAlignment="Top" >
                                    <TextBlock Name="txtReedNo" 
                                               Text="421" 
                                               Margin="5"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center"  
                                               VerticalAlignment="Center"
                                               TextAlignment="Center" />
                                </Border>
                                <TextBlock Text="Wax App : "
                                           Margin="11,120,0,0"
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Height="43" 
                                           Width="118" 
                                           HorizontalAlignment="Left"   
                                           VerticalAlignment="Top"  
                                           TextAlignment="Right"
                                           Grid.Column="1" />
                                <Border Margin="135,120,0,0"
                                        Background="CornflowerBlue" 
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Height="43" 
                                        Width="170"
                                        HorizontalAlignment="Left"  
                                        VerticalAlignment="Top"  
                                        Grid.Column="1">
                                    <TextBlock  Name="txtWaxApp" 
                                                Text="No Wax"
                                                Margin="5" 
                                                FontSize="24" 
                                                FontWeight="Bold" 
                                                Foreground="White"
                                                HorizontalAlignment="Center" 
                                                TextAlignment="Center" 
                                                VerticalAlignment="Center" />
                                </Border>
                                <RadioButton x:Name="rbOther" 
                                             Margin="411,120,0,0"
                                             Content="Other" 
                                             FontSize="24" FontWeight="Bold"
                                             Style="{StaticResource imageRadioButtonORBStyle}" Height="42" VerticalAlignment="Top" HorizontalAlignment="Left" Width="116" Grid.Column="1" />
                            </Grid>
                            <Grid VerticalAlignment="Stretch" Margin="0,179,0,76">
                                <DataGrid x:Name="grid2"
                                          Margin="5"
                                          ItemsSource="{Binding}"
                                          AlternatingRowBackground="AntiqueWhite"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="True"
                                          CanUserDeleteRows="True"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False" 
                                          GridLinesVisibility="None"
                                          EnableColumnVirtualization="True"
                                          EnableRowVirtualization="True"
                                          SelectionMode="Extended"
                                          SelectionUnit="Cell"
                  
                                          CanUserResizeColumns="False"
                                          CanUserSortColumns="False"
                                          IsSynchronizedWithCurrentItem="True"
                                          HorizontalGridLinesBrush="Silver" 
                                          VerticalGridLinesBrush="Silver"
                                          FontSize="22">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Width="80"
                                                                Header="Select">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton x:Name="rbSelect" Width="50"
                                                                 Background="Transparent"
                                                                 GroupName="{Binding Index}"
                                                                 IsChecked="{Binding Select, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource imageRadioButtonNGStyle}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Width="150" Header="Yarn Type" 
                                                            Binding="{Binding YarnType}" IsReadOnly="True"/>
                                        <DataGridTextColumn Width="220" Header="Palette No"
                                                            Binding="{Binding PaletteNo}" IsReadOnly="True"/>
                                        <DataGridTextColumn Width="100" Header="No CH" 
                                                            Binding="{Binding NoCH}" IsReadOnly="True"/>
                                        <DataGridTextColumn Width="120" Header="Use" 
                                                            Binding="{Binding Use}" IsReadOnly="True"/>
                                        <DataGridTextColumn Width="100" Header="Reject" 
                                                            Binding="{Binding Reject}" IsReadOnly="True"/>
                                        <DataGridTextColumn Width="120" Header="Remain" 
                                                            Binding="{Binding Remain}" IsReadOnly="True"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                            <Grid VerticalAlignment="Bottom" Height="70" Margin="0,0,0,0" Grid.ColumnSpan="2" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="600*" />
                                    <ColumnDefinition Width="600*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Operator : " 
                                           Margin="11,15,0,0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Height="38"
                                           VerticalAlignment="Top" 
                                           HorizontalAlignment="Left" 
                                           TextAlignment="Center" />
                                <Border Margin="140,9,0,0"
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3"  
                                        Background="White" 
                                        Height="50" 
                                        Width="412"
                                        VerticalAlignment="Top" 
                                        HorizontalAlignment="Left" >
                                    <TextBox x:Name="txtOperator" 
                                             Text=""
                                             Margin="5"  
                                             Foreground="Black" 
                                             FontSize="24" 
                                             FontWeight="Bold" 
                                             Width="400" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" 
                                             TextAlignment="Center" />
                                </Border>
                                <TextBlock Text="Total CH : "
                                           Margin="0,15,189,0"  
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Width="118" 
                                           Height="43"
                                           VerticalAlignment="Top" 
                                           HorizontalAlignment="Right" 
                                           TextAlignment="Center" 
                                           Grid.Column="1" />
                                <Border Margin="0,15,13,0"
                                        Background="CornflowerBlue" 
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Height="43"
                                        Width="170"
                                        HorizontalAlignment="Right"  
                                        VerticalAlignment="Top"  
                                        Grid.Column="1">
                                    <TextBlock Name="txtTotalCH" 
                                               Text="0"
                                               Margin="5"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center"   
                                               VerticalAlignment="Center" 
                                               TextAlignment="Center" />
                                </Border>
                            </Grid>
                        </Grid>
                    </DockPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
