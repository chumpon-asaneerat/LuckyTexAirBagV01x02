<UserControl x:Class="LuckyTex.Pages.OldWarpingReceiveYarnPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Receive Yarn Warping"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <!-- Save -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdSave"
                        Content="Save"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdSave_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid>
                        <Grid Height="77" Name="grid1" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="600*" />
                                <ColumnDefinition Width="600*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Pallet No : " 
                                       Margin="0,19,188,0" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Top" 
                                       HorizontalAlignment="Right" 
                                       TextAlignment="Center" />
                            <Border Margin="0,10,10,0" 
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Background="White" 
                                    Width="170" 
                                    Height="50" 
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Top">
                                <TextBox x:Name="txtPalletNo" 
                                         Margin="5" 
                                         Text="2140126008" 
                                         Foreground="Black" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Width="164" 
                                         VerticalAlignment="Center" 
                                         HorizontalAlignment="Center" 
                                         TextAlignment="Center" 
                                         KeyUp="txtPalletNo_KeyUp" />
                            </Border>
                            <TextBlock Text="Receive Date : " 
                                       Margin="11,19,0,0" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Top" 
                                       HorizontalAlignment="Left" 
                                       TextAlignment="Center" 
                                       Grid.Column="1" />
                            <Border Margin="184,13,0,0"
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Background="CornflowerBlue" 
                                    Height="43" 
                                    Width="170" 
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Left" 
                                    Grid.Column="1">
                                <TextBlock x:Name="txtReceiveDate" 
                                           Margin="5" 
                                           Text="10/10/2014" 
                                           Foreground="White" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" 
                                           TextAlignment="Center" />
                            </Border>
                        </Grid>
                        <Grid Margin="0,77,0,76" Name="grid2" >
                            <DataGrid x:Name="grid"
                                      Margin="5"
                                      ItemsSource="{Binding}"
                                      AlternatingRowBackground="AntiqueWhite"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      CanUserReorderColumns="False"
                                      CanUserResizeRows="False" 
                                      GridLinesVisibility="None"
                                      EnableColumnVirtualization="True"
                                      EnableRowVirtualization="True"
                                      SelectionMode="Extended"
                                      SelectionUnit="Cell"
                                      CanUserResizeColumns="False"
                                      CanUserSortColumns="False"
                                      IsSynchronizedWithCurrentItem="True"
                                      HorizontalGridLinesBrush="Silver" 
                                      VerticalGridLinesBrush="Silver"
                                      FontSize="22">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Width="50" Header="No" 
                                                        Binding="{Binding No}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="120" Header="Request No" 
                                                        Binding="{Binding RequestNo}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="150" Header="Date" 
                                                        Binding="{Binding ReceiveDate}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="250" Header="Palette No" 
                                                        Binding="{Binding ReceiveDate}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="150" Header="Weight Kgs" 
                                                        Binding="{Binding Weight}" />
                                    <DataGridTemplateColumn Width="90"
                                                            Header="Receive">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <RadioButton x:Name="rbReceive" Width="50"
                                                             Background="Transparent"
                                                             GroupName="{Binding Index}"
                                                             IsChecked="{Binding Receive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource imageRadioButtonOKStyle}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="90"
                                                            Header="Reject">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <RadioButton x:Name="rbReject" Width="50"
                                                             Background="Transparent"
                                                             GroupName="{Binding Index}"
                                                             IsChecked="{Binding Reject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource imageRadioButtonNGStyle}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button x:Name="cmdOpenForm" Width="75" Content="Open" 
                                                        Background="Transparent" Click="cmdOpenForm_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Height="70" VerticalAlignment="Bottom">
                            <TextBlock  Text="Operator : " 
                                        Margin="6,0,0,15" 
                                        FontSize="24" 
                                        FontWeight="Bold" 
                                        TextAlignment="Center" 
                                        Width="124" 
                                        Height="42" 
                                        VerticalAlignment="Bottom" 
                                        HorizontalAlignment="Left" />
                            <Border Margin="138,0,0,9"
                                    BorderBrush="Black" 
                                    BorderThickness="1" 
                                    CornerRadius="3"  
                                    Background="White" 
                                    Width="412"
                                    VerticalAlignment="Bottom" 
                                    HorizontalAlignment="Left" >
                                <TextBox x:Name="txtOperator" 
                                         Text="" 
                                         Margin="5" 
                                         Foreground="Black" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Width="400" 
                                         VerticalAlignment="Center" 
                                         HorizontalAlignment="Center" 
                                         TextAlignment="Center" />
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
