<UserControl x:Class="LuckyTex.Pages.WarpingConditioningPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Warping Conditioning"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="600*" />
                            <ColumnDefinition Width="600*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Grey Item : " 
                                   Margin="0,19,254,0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Top" 
                                   HorizontalAlignment="Right" 
                                   TextAlignment="Center" />
                        <Border 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="0,13,76,0" 
                            Background="CornflowerBlue" 
                            Height="43" 
                            Width="170"
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Right" >
                            <TextBlock x:Name="txtGreyItem" 
                                       Text=" "
                                       Margin="5"  
                                       Foreground="White" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       TextAlignment="Center" />
                        </Border>
                        <CheckBox Name="chkAllGreyItem" 
                                Margin="0,19,12,0"
                                Content="All" 
                                FontSize="24" 
                                FontWeight="Bold" 
                                Width="58"
                                Height="31" 
                                HorizontalAlignment="Right"  
                                VerticalAlignment="Top" />
                        <TextBlock Text="Created Date : " 
                                   Margin="11,19,0,0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Top" 
                                   HorizontalAlignment="Left" 
                                   TextAlignment="Center" 
                                   Grid.Column="1" />
                        <Border Margin="189,13,0,0"
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3"
                                Background="CornflowerBlue" 
                                Height="43" 
                                Width="170" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1">
                            <TextBlock x:Name="txtCreatedDate" 
                                       Text="" 
                                       Margin="5" 
                                       Foreground="White" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       TextAlignment="Center" />
                        </Border>
                        <CheckBox  Name="chkAllCreatedDate"
                                   Margin="365,19,0,0"
                                   Content="All" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Height="31" 
                                   Width="58" 
                                   HorizontalAlignment="Left"  
                                   VerticalAlignment="Top" 
                                   Grid.Column="1" />

                        <TextBlock Text="M/C : "
                                   Margin="0,69,254,0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Top" 
                                   HorizontalAlignment="Right" 
                                   TextAlignment="Center" />
                        <Border Margin="0,63,76,0"
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Background="CornflowerBlue" 
                                Height="43" 
                                Width="170"
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Right">
                            <TextBlock x:Name="txtMC" 
                                       Text=" " 
                                       Margin="5" 
                                       Foreground="White" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       TextAlignment="Center" />
                        </Border>
                        <CheckBox Name="chkAllMC" 
                                  Margin="0,69,12,0" 
                                  Content="All" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Width="58" 
                                  Height="31" 
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Top"/>
                        <TextBlock Text="Status : " 
                                   Margin="88,69,0,0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Top" 
                                   HorizontalAlignment="Left" 
                                   TextAlignment="Center" 
                                   Grid.Column="1" />
                        <Border BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Margin="189,63,0,0" 
                                Background="CornflowerBlue" 
                                Height="43" 
                                Width="170"
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1">
                            <TextBlock x:Name="txtStatus" 
                                       Text="" 
                                       Margin="5" 
                                       Foreground="White" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       TextAlignment="Center" />
                        </Border>
                        <CheckBox Name="chkAllStatus"
                                  Margin="365,69,0,0"  
                                  Content="All" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Height="31" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Top" 
                                  Width="58" 
                                  Grid.Column="1" />

                        <Grid Margin="0,116,0,0" 
                              Height="70" 
                              VerticalAlignment="Top" 
                              Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="294*" />
                                <ColumnDefinition Width="171*" />
                                <ColumnDefinition Width="294*" />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="cmdSearch" 
                                    Content ="Search"
                                    FontSize="30" 
                                    FontWeight="Bold"
                                    Margin="10,6,10,0" 
                                    Style="{StaticResource MenuButtonStyle}" 
                                    Width="150"
                                    Height="58" 
                                    VerticalAlignment="Top" 
                                    Grid.Column="1">
                            </Button>
                        </Grid>
                        <Grid Margin="0,191,0,0" Name="grid2" Grid.ColumnSpan="2">
                            <DataGrid x:Name="grid"
                                      Margin="5"
                                      ItemsSource="{Binding}"
                                      AlternatingRowBackground="AntiqueWhite"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      CanUserReorderColumns="False"
                                      CanUserResizeRows="False" 
                                      GridLinesVisibility="None"
                                      EnableColumnVirtualization="True"
                                      EnableRowVirtualization="True"
                                      SelectionMode="Extended"
                                      SelectionUnit="Cell"
                  
                                      CanUserResizeColumns="False"
                                      CanUserSortColumns="False"
                                      IsSynchronizedWithCurrentItem="True"
                                      HorizontalGridLinesBrush="Silver" 
                                      VerticalGridLinesBrush="Silver"
                                      FontSize="22">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Width="120" Header="Warp No" 
                                                        Binding="{Binding WarpNo}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="120" Header="Warp M/C" 
                                                        Binding="{Binding WarpMC}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="100" Header="Side" 
                                                        Binding="{Binding Side}" />
                                    <DataGridTextColumn Width="120" Header="Grey Item" 
                                                        Binding="{Binding GreyItem}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="150" Header="Date" 
                                                        Binding="{Binding Date}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="120" Header="Start Time" 
                                                        Binding="{Binding StartTime}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="120" Header="Con.time" 
                                                        Binding="{Binding Contime}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="150" Header="End Date time" 
                                                        Binding="{Binding EndDatetime}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTemplateColumn Header="" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button x:Name="cmdEnd" Width="75" Content="End" 
                                                        Background="Transparent" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                    <Grid Height="60" VerticalAlignment="Bottom">
                        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" Background="#F0F0F0">
                            <Grid HorizontalAlignment="Right">
                                <TextBlock Text="Operator : " 
                                           Margin="5,0,0,11" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           TextAlignment="Center" 
                                           Width="124" 
                                           Height="42" 
                                           VerticalAlignment="Bottom" 
                                           HorizontalAlignment="Left" />
                                <Border Margin="137,0,0,5"
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Background="White" 
                                        VerticalAlignment="Bottom" 
                                        HorizontalAlignment="Left" 
                                        Width="412">
                                    <TextBox x:Name="txtOperator" 
                                             Text="" 
                                             Margin="5" 
                                             Foreground="Black" 
                                             FontSize="24" 
                                             FontWeight="Bold" 
                                             Width="400" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" 
                                             TextAlignment="Center" />
                                </Border>
                            </Grid>
                            <Grid/>
                        </DockPanel>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
