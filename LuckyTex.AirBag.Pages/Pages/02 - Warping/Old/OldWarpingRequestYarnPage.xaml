<UserControl x:Class="LuckyTex.Pages.OldWarpingRequestYarnPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Request Yarn"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="600*" />
                            <ColumnDefinition Width="600*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Yarn Type : " 
                                   Margin="0,26,188,0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Top" 
                                   HorizontalAlignment="Right" 
                                   TextAlignment="Center" />
                        <Border Margin="0,17,10,0" 
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Background="White" 
                                Width="170" 
                                Height="50" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top">
                            <TextBox x:Name="txtYarnType" 
                                     Text="470-72-1781"
                                     Margin="5"  
                                     Foreground="Black" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Width="164" 
                                     VerticalAlignment="Center" 
                                     HorizontalAlignment="Center" 
                                     TextAlignment="Center" />
                        </Border>
                        <StackPanel Orientation="Horizontal" 
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Right"
                                    Margin="0,76,10,0">
                            <TextBlock Text="Type : " 
                                       Margin="5"
                                       FontSize="24" FontWeight="Bold"/>
                            <RadioButton x:Name="rbWarp" IsChecked="True"
                                         Content="Warp" 
                                         Margin="5"
                                         FontSize="24" FontWeight="Bold"
                                         Style="{StaticResource imageRadioButtonORBStyle}"/>
                            <RadioButton x:Name="rbWeft" 
                                         Margin="5"
                                         Content="Weft" 
                                         FontSize="24" FontWeight="Bold"
                                         Style="{StaticResource imageRadioButtonORBStyle}"/>
                        </StackPanel>
                        <TextBlock Text="Quantity" 
                                   Margin="0,143,265,0"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Right"  
                                   VerticalAlignment="Top" 
                                   TextAlignment="Center" />
                        <TextBlock Text="Full : "
                                   Margin="0,143,188,0"  
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Top" 
                                   HorizontalAlignment="Right" 
                                   TextAlignment="Center" />
                        <Border Margin="0,134,10,0"
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3"  
                                Background="White" 
                                Width="170" 
                                Height="50"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top">
                            <TextBox x:Name="txtFull" 
                                     Text=""
                                     Margin="5"  
                                     Foreground="Black" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Width="164" 
                                     VerticalAlignment="Center" 
                                     HorizontalAlignment="Center" 
                                     TextAlignment="Center" />
                        </Border>
                        <TextBlock Text="Pallet" 
                                   Margin="12,143,0,0"
                                   FontSize="24"
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Left"   
                                   VerticalAlignment="Top"
                                   TextAlignment="Center" 
                                   Grid.Column="1" />
                        <TextBlock Text="Short : "
                                   Margin="0,204,188,0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Right"  
                                   VerticalAlignment="Top"
                                   TextAlignment="Center"  />
                        <Border  Margin="0,195,10,0"
                                 Background="White" 
                                 BorderBrush="Black" 
                                 BorderThickness="1" 
                                 CornerRadius="3" 
                                 Height="50" 
                                 Width="170"
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Top" >
                            <TextBox Name="txtShort" 
                                     Text="" 
                                     Margin="5" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="Black" 
                                     Width="164"
                                     HorizontalAlignment="Center"  
                                     VerticalAlignment="Center" 
                                     TextAlignment="Center" />
                        </Border>
                        <TextBlock Text="Pallet" 
                                   Margin="12,204,0,0"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Left"   
                                   VerticalAlignment="Top" 
                                   TextAlignment="Center"
                                   Grid.Column="1" />
                        <Button x:Name="cmdAdd"
                                Margin="92,195,0,0" 
                                Content="Add"
                                FontSize="40" 
                                FontWeight="Bold"
                                Height="50" 
                                Width="130" 
                                Style="{StaticResource MenuButtonStyle}" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1">
                        </Button>
                        <Grid Margin="0,251,0,0" Grid.ColumnSpan="2">
                            <DataGrid x:Name="grid"
                                      Margin="5"
                                      ItemsSource="{Binding}"
                                      AlternatingRowBackground="AntiqueWhite"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      CanUserReorderColumns="False"
                                      CanUserResizeRows="False" 
                                      GridLinesVisibility="None"
                                      EnableColumnVirtualization="True"
                                      EnableRowVirtualization="True"
                                      SelectionMode="Extended"
                                      SelectionUnit="Cell"
                                      CanUserResizeColumns="False"
                                      CanUserSortColumns="False"
                                      IsSynchronizedWithCurrentItem="True"
                                      HorizontalGridLinesBrush="Silver" 
                                      VerticalGridLinesBrush="Silver"
                                      FontSize="22">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Width="50" Header="No" 
                                                        Binding="{Binding No}" 
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Width="150" Header="Yarn Type" 
                                                        Binding="{Binding Yarn Type}" IsReadOnly="True"/>
                                    <DataGridTextColumn Width="100" Header="Full" 
                                                        Binding="{Binding Full}" IsReadOnly="True"/>
                                    <DataGridTextColumn Width="100" Header="Short" 
                                                        Binding="{Binding Short}" 
                                                        IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                    <Grid Height="60" VerticalAlignment="Bottom">
                        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" Background="#F0F0F0">
                            <Grid HorizontalAlignment="Right">
                                <TextBlock Text="Operator : " 
                                           Margin="5,0,0,11" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           TextAlignment="Center"
                                           Width="124" 
                                           Height="42" 
                                           VerticalAlignment="Bottom" 
                                           HorizontalAlignment="Left" />
                                <Border Margin="137,0,0,5"
                                        BorderBrush="Black" 
                                        BorderThickness="1" 
                                        CornerRadius="3"  
                                        Background="White" 
                                        Width="412"
                                        VerticalAlignment="Bottom" 
                                        HorizontalAlignment="Left" >
                                    <TextBox x:Name="txtOperator" 
                                             Text=""
                                             Margin="5"  
                                             Foreground="Black" 
                                             FontSize="24" 
                                             FontWeight="Bold" 
                                             Width="400" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" 
                                             TextAlignment="Center" />
                                </Border>
                            </Grid>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                <Button x:Name="cmdDelete"
                                        Margin="3" 
                                        Content="Delete"
                                        FontSize="40" 
                                        FontWeight="Bold"
                                        Style="{StaticResource MenuButtonStyle}" 
                                        Click="cmdDelete_Click">
                                </Button>
                                <Button x:Name="cmdSave"
                                        Margin="3" 
                                        Content="Save"
                                        FontSize="40" 
                                        FontWeight="Bold"
                                        Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click">
                                </Button>
                            </StackPanel>
                            <Grid/>
                        </DockPanel>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
