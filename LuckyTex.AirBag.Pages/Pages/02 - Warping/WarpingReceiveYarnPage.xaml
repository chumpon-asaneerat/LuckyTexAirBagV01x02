<UserControl x:Class="LuckyTex.Pages.WarpingReceiveYarnPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Receive Yarn Warping"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Name="cmdSave" 
                        Content="Save" 
                        Margin="2"
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}"  
                        Click="cmdSave_Click"/>
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="185*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="600*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Pallet No" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" />
                    <TextBox x:Name="txtPalletNo"  
                                Margin="3"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="1" LostFocus="txtPalletNo_LostFocus" KeyDown="txtPalletNo_KeyDown">
                    </TextBox>
                    <TextBlock Text="Item Yarn" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="3" Grid.Row="1" />
                    <ComboBox Name="cbItemCode" 
                              Margin="3"
                               DisplayMemberPath="ITM_YARN" 
                               SelectedValuePath="ITM_YARN"
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding GetItemCodeData, Mode=OneWay}"
                              Grid.Column="4" Grid.Row="1" VerticalAlignment="Top"  />
                    <TextBlock Text="Receive Date" 
                               Margin="3"
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft" 
                               TextAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Grid.Column="5" />
                    <DatePicker Name="dteReceiveDate" 
                                 Margin="3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                               
                                 VerticalAlignment="Center" 
                                Grid.Column="6" 
                                Grid.Row="1" />
                    <Button Name="cmdAdd" 
                            Content="Add"
                            Margin="3" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="107" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="1" Grid.Column="7" Click="cmdAdd_Click">
                    </Button>
                    <TextBlock Text="CH" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                    <TextBox x:Name="txtCH"  
                                Margin="3"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="2" KeyDown="txtCH_KeyDown" PreviewKeyDown="Common_PreviewKeyDown">
                    </TextBox>
                    <TextBlock Text="Weight Kg" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="3" Grid.Row="2" />
                    <TextBox x:Name="txtWeight"  
                                Margin="3"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="4" 
                                Grid.Row="2" KeyDown="txtWeight_KeyDown" PreviewKeyDown="Common_PreviewKeyDown">
                    </TextBox>
                    <DataGrid 
                             x:Name="gridWarping" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="3" Grid.ColumnSpan="7" Grid.Column="1" HorizontalContentAlignment="Left" SelectedCellsChanged="gridWarping_SelectedCellsChanged"
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" KeyUp="gridWarping_KeyUp">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding RowNo}" Header="No" IsReadOnly="True" Width="50" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="150" Header="Date" 
                                    Binding="{Binding P_RECEIVEDATE, StringFormat=\{0:dd/MM/yyyy \}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding P_PALLETNO, Mode=TwoWay}" Header="Pallet No" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTemplateColumn Header="CH"  Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding P_CH, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,StringFormat={}{0:n2}}" Name="P_CH" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LostFocus="P_CH_LostFocus" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Weight Kgs"  Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding P_WEIGHT, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,StringFormat={}{0:n2}}" Name="P_WEIGHT" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LostFocus="P_WEIGHT_LostFocus" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Receive"  Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding Path=Receive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Name="Selected" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" 
                                                  Checked="Receive_Checked" 
                                                  Unchecked="Receive_Unchecked" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Reject" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding Path=Reject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Name="Selected" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" 
                                                  Checked="Reject_Checked" 
                                                  Unchecked="Reject_Unchecked" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid 
                        Grid.Row="4" 
                        Grid.Column="1"  Grid.ColumnSpan="2">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
  
</UserControl>
