<UserControl x:Class="LuckyTex.Pages.WarpingProcessMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Warping Process Menu"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <UniformGrid Columns="3" Rows="7" Margin="8">
                <Grid />
                <Grid />
                <Grid />
                <TextBlock Name="txtMCNo" Text="" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               Height="41" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" TextAlignment="Center" />
                <Button x:Name="cmdWarpingSetting"
                        Margin="0, 10" 
                        Content="Creel Set Up"
                        FontSize="40" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdWarpingSetting_Click">
                </Button>
                <Grid />
                <Grid />
                <Button x:Name="cmdWarpingProcess"
                        Margin="0, 10" 
                        Content="Warping Process"
                        FontSize="40" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdWarpingProcess_Click">
                </Button>
                <Grid />
                <Grid />
                <Button x:Name="cmdWarpingSearch"
                        Margin="0, 10" 
                        Content="Warping Search"
                        FontSize="40" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdWarpingSearch_Click">
                </Button>
                <Grid />
                <Grid />
                <Grid />
                <Grid />
                <Grid />
                <Grid />
                <Grid />
            </UniformGrid>
        </Border>
    </DockPanel>
</UserControl>
