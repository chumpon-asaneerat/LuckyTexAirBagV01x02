<UserControl x:Class="LuckyTex.Pages.ItemCodePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Item Code"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="530" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="195" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Item Code" 
                               Grid.Column="1" Grid.Row="1" />
                    <TextBox x:Name="txtITEMCODE"  
                                Margin="3,7,3,0"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="1" KeyDown="txtITEMCODE_KeyDown" >
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Item Weaving" 
                               Grid.Column="3" Grid.Row="1" />
                    <TextBox x:Name="txtITEMWEAV"  
                                Margin="3,7,3,0"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="4" 
                                Grid.Row="1" KeyDown="txtITEMWEAV_KeyDown" >
                    </TextBox>
                    <TextBlock Text="Yarn Code" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="5" Grid.Row="1" />
                    <ComboBox Name="cbYARNCODE" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding YARNCODE, Mode=OneWay}"
                              Grid.Column="6" Grid.Row="1"/>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Item Prepare" 
                               Grid.Column="1" Grid.Row="2" />
                    <TextBox x:Name="txtITEMPREPARE"  
                                Margin="3,7,3,0"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="2" KeyDown="txtITEMPREPARE_KeyDown" >
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Item Yarn" 
                               Grid.Column="3" Grid.Row="2" />
                    <TextBox x:Name="txtITEMYARN"  
                                Margin="3,7,3,0"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="4" 
                                Grid.Row="2" KeyDown="txtITEMYARN_KeyDown" >
                    </TextBox>
                    <Button Name="cmdSearch" 
                            Content="Search" 
                            Margin="10,3,0,0" 
                            FontSize="22" 
                            FontWeight="Bold" 
                            Height="40" 
                            Width="107" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Click="cmdSearch_Click" 
                            Grid.Column="5" 
                            Grid.Row="2">
                    </Button>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Width" 
                               Grid.Column="1" Grid.Row="3" />
                    <TextBox x:Name="txtWIDTH"  
                                Margin="3,7,3,0"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWIDTH_KeyDown" >
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Weaving Width" 
                               Grid.Column="3" Grid.Row="3" />
                    <TextBox x:Name="txtWEAVEWIDTH"  
                                Margin="3,7,3,0"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="4" 
                                Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtWEAVEWIDTH_KeyDown" >
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Core Weight" 
                               Grid.Column="5" Grid.Row="3" />
                    <TextBox x:Name="txtCOREWEIGHT"  
                                Margin="3,7,3,0"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="6" 
                                Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtCOREWEIGHT_KeyDown" >
                    </TextBox>
                    <Grid Name="grid2" 
                          Grid.Column="1" 
                          Grid.ColumnSpan="6" 
                          Grid.Row="4" 
                          Margin="3,0,3,0">
                        <CheckBox Name="chkPROC1_DRYER" 
                                  Content="DRYER" 
                                  Margin="43,10,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  Width="110" 
                                  HorizontalAlignment="Left" />
                        <CheckBox Name="chkPROC2_SCOURING" 
                                  Content="SCOURING" 
                                  Margin="162,10,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  Width="160" 
                                  HorizontalAlignment="Left" />
                        <CheckBox Name="chkPROC3_DRYING" 
                                  Content="DRYING" 
                                  Margin="332,10,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  Width="130" 
                                  HorizontalAlignment="Left" />
                        <CheckBox Name="chkPROC4_HEATSETTING" 
                                  Content="HEAT SETTING" 
                                  Margin="472,10,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  Width="200" 
                                  HorizontalAlignment="Left" />
                        <CheckBox Name="chkPROC5_COATING" 
                                  Content="COATING" 
                                  Margin="682,10,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  Width="140" 
                                  HorizontalAlignment="Left" />
                        <CheckBox Name="chkPROC6_INSPECTION" 
                                  Content="INSPECTION" 
                                  Margin="832,10,0,0" 
                                  IsChecked="False" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  VerticalAlignment="Top" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" 
                                  Width="180" 
                                  HorizontalAlignment="Left" />
                    </Grid>
                    <Grid Name="grid1"
                          Grid.Column="3" 
                          Grid.ColumnSpan="2" 
                          Grid.Row="5" >
                        <Button Name="cmdSave" 
                                Content="Save"
                                Margin="4,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click">
                        </Button>
                        <Button Name="cmdNew" 
                                Content="New"
                                Margin="116,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdNew_Click">
                        </Button>
                        <Button Name="cmdEdit" 
                                Content="Edit"
                                Margin="228,1,0,0" 
                                FontSize="22"
                                FontWeight="Bold"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top" 
                                Style="{StaticResource MenuButtonStyle}" Click="cmdEdit_Click">
                        </Button>
                    </Grid>
                    <DataGrid 
                             x:Name="gridItem" 
                                Margin="3,3,0,3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="6" Grid.ColumnSpan="7" 
                                Grid.Column="1" 
                                HorizontalContentAlignment="Center" 
                                VerticalContentAlignment="Center"
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                        SelectedCellsChanged="gridItem_SelectedCellsChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding ITM_CODE}" Header="Item Code" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding ITM_WEAVING}" Header="Item Weaving" IsReadOnly="True" Width="170" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding ITM_PREPARE}" Header="Item Prepare" IsReadOnly="True" Width="170" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding ITM_YARN}" Header="Item Yarn" IsReadOnly="True" Width="190" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding YARNCODE}" Header="Yarn Code" IsReadOnly="True" Width="110" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding ITM_WIDTH}" Header="Width" IsReadOnly="True" Width="80" CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding WIDTHWEAVING}" Header="Weaving Width" IsReadOnly="True" Width="160" CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding COREWEIGHT}" Header="Core Weight" IsReadOnly="True" Width="130" CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridCheckBoxColumn Width="80" Header="DRYER" 
                                    Binding="{Binding PROC1}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Width="120" Header="SCOURING" 
                                    Binding="{Binding PROC2}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Width="90" Header="DRYING" 
                                    Binding="{Binding PROC3}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Width="150" Header="HEAT SETTING" 
                                    Binding="{Binding PROC4}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Width="100" Header="COATING" 
                                    Binding="{Binding PROC5}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridCheckBoxColumn Width="130" Header="INSPECTION" 
                                    Binding="{Binding PROC6}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource CenterCellStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid 
                        Grid.Row="7" 
                        Grid.Column="1"  Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                    
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
