<UserControl x:Class="LuckyTex.Pages.QualityAssuranceMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Quality Assurance (QA) Main Menu"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="130" />
                        <RowDefinition Height="122" />
                        <RowDefinition Height="122" />
                        <RowDefinition Height="122" />
                        <RowDefinition Height="122" />
                        <RowDefinition Height="130" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="344*" />
                        <ColumnDefinition Width="502" />
                        <ColumnDefinition Width="344*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="cmdCheckingAirbagReport"
                                Margin="5" 
                                Content="Check Report"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" 
                                Click="cmdCheckingAirbagReport_Click" Grid.Column="1" Grid.Row="1">
                    </Button>

                    <Button x:Name="cmdCheckingReportData"
                                Margin="5" 
                                Content="Attached Report"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" 
                                Click="cmdCheckingReportData_Click" Grid.Column="1" Grid.Row="2">
                    </Button>
                    <Button x:Name="cmdManagement"
                                Margin="5" 
                                Content="Management"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" Grid.Column="1" Grid.Row="3" Click="cmdManagement_Click">
                    </Button>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
