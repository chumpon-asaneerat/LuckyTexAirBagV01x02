<UserControl x:Class="LuckyTex.Pages.ManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded" >
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Calendar}">
                            <!-- Wrapping in ViewBox will enlarge calendar of that size.-->
                            <Viewbox Height="400"
                         Width="400">
                                <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                            </Viewbox>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Management"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="190" />
                        <ColumnDefinition Width="215" />
                        <ColumnDefinition Width="301" />
                    <ColumnDefinition Width="339*" />
                </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="163" />
                        <RowDefinition Height="490*" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Customer"
                                               Margin="0,5,4,0"
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Right"   
                                               VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" />
                    <ComboBox Name="cbCustomer"
                              DisplayMemberPath="CUSTOMERNAME" 
                              SelectedValuePath="CUSTOMERNAME"
                              TextSearch.TextPath=""
                              Margin="5,5,5,0"
                              FontSize="22"      
                              FontWeight="Bold" 
                              ItemsSource="{Binding CUS_GETLIST, Mode=OneWay}"    
                              VerticalAlignment="Top" 
                              Height="40"
                              Grid.Row="1"
                              Grid.Column="2" 
                              SelectionChanged="cbCustomer_SelectionChanged" 
                              IsEditable="True"/>
                <TextBlock Name="labCheckingDate" Margin="0,5,4,0"
                           Text="Checking Date"
                           FontSize="24" 
                           FontWeight="Bold" 
                           Grid.Column="3" 
                           Grid.Row="1" 
                           HorizontalAlignment="Right"   
                           VerticalAlignment="Top" />
                <DatePicker Name="dteCheckingDate"
                                 Margin="3,3,124,3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Center" 
                                 Grid.Column="4" 
                                 Grid.Row="1" 
                                 CalendarStyle="{StaticResource styleCalendar}" SelectedDateChanged="dteCheckingDate_SelectedDateChanged" />
                <TextBlock Text="Testing Report" 
                           Margin="10,4,0,0"
                           FontSize="24" 
                           FontWeight="Bold" 
                           Grid.Column="2" 
                           Grid.Row="2" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top"/> 
                <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="18,44,0,0" Text="Item Code" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="50,84,0,0" Text="Lot No." VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="23,124,0,0" Text="Batch No." VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                <TextBox Name="txtItemCode" 
                         Margin="5,42,0,0"
                         Text=""
                         CharacterCasing="Upper"
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="Black"   
                         TextAlignment="Center" 
                         VerticalAlignment="Top" 
                         HorizontalAlignment="Left" 
                         Width="180" 
                         KeyDown="txtItemCode_KeyDown" 
                         LostFocus="txtItemCode_LostFocus" 
                         Grid.Column="2" 
                         Grid.Row="2" />
                <TextBox Name="txtLotNo" 
                         Margin="5,83,0,0" 
                         Text=""
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="Black" 
                         HorizontalAlignment="Left"  
                         TextAlignment="Center" 
                         VerticalAlignment="Top" 
                         Width="180" 
                         KeyDown="txtLotNo_KeyDown" 
                         CharacterCasing="Upper" 
                         Grid.Column="2" Grid.Row="2" />
                <TextBox Name="txtBatchNo" 
                         Margin="5,124,0,0"
                         Text=""
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="Black" 
                         HorizontalAlignment="Left"   
                         TextAlignment="Center" 
                         VerticalAlignment="Top" 
                         Width="180" 
                         KeyDown="txtBatchNo_KeyDown" 
                         PreviewKeyDown="Common_PreviewKeyDown" 
                         Grid.Column="2"  
                         Grid.Row="2" />
                <TextBlock Text="Inspection Report"
                           Margin="6,4,0,0"
                           FontSize="24" 
                           FontWeight="Bold" 
                           Grid.Column="3" 
                           Grid.Row="2" 
                           HorizontalAlignment="Left"  
                           VerticalAlignment="Top" 
                           />
                <TextBox Name="txtItemCodeIns"
                         Text=""
                         Margin="19,42,0,0"
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="Black" 
                         HorizontalAlignment="Left"   
                         TextAlignment="Center" 
                         VerticalAlignment="Top" 
                         Width="180" 
                         KeyDown="txtItemCodeIns_KeyDown" 
                         CharacterCasing="Upper" 
                         LostFocus="txtItemCodeIns_LostFocus" 
                         Grid.Column="3" 
                         Grid.Row="2" />
                <TextBox Name="txtLotNoIns" 
                         Margin="19,83,0,0"
                         Text=""
                         CharacterCasing="Upper"
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="Black" 
                         HorizontalAlignment="Left"  
                         TextAlignment="Center" 
                         VerticalAlignment="Top" 
                         Width="180" 
                         KeyDown="txtLotNoIns_KeyDown" 
                         LostFocus="txtLotNoIns_LostFocus" 
                         Grid.Column="3" 
                         Grid.Row="2" />
                <TextBox Name="txtBatchNoIns"
                         Text=""
                         Margin="19,124,0,0"
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="Black" 
                         HorizontalAlignment="Left" 
                         TextAlignment="Center" 
                         VerticalAlignment="Top" 
                         Width="180" 
                         KeyDown="txtBatchNoIns_KeyDown" 
                         PreviewKeyDown="Common_PreviewKeyDown" 
                         LostFocus="txtBatchNoIns_LostFocus" 
                         Grid.Column="3" 
                         Grid.Row="2" />
                <TextBlock Text="Remark" 
                           Margin="5,4,0,0" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Grid.Column="4" 
                           Grid.Row="2" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top" 
                           Width="100" />
                <TextBox Name="txtRemark" 
                         Text="" 
                         Margin="5,42,5,0"
                         CharacterCasing="Upper" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="Black" 
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Grid.Column="4" 
                         Grid.Row="2" 
                         VerticalAlignment="Top" Grid.ColumnSpan="2" Height="75" />
                <Button  Name="cmdSave" 
                         Content="Save" 
                         Margin="152,120,0,0"
                         FontSize="30" 
                         FontWeight="Bold" 
                         Grid.Column="4" 
                         Grid.Row="2" 
                         Height="39" 
                         HorizontalAlignment="Left"
                         Style="{StaticResource MenuButtonStyle}" 
                         VerticalAlignment="Top" 
                         Width="141" Click="cmdSave_Click" />
                <Button Name="cmdDelete"
                        Content="Delete" 
                        Margin="5,120,0,0" 
                        FontSize="30" 
                        FontWeight="Bold" 
                        Grid.Column="4" 
                        Grid.Row="2" 
                        Height="39" 
                        HorizontalAlignment="Left" 
                        Style="{StaticResource MenuButtonStyle}" 
                        VerticalAlignment="Top" 
                        Width="141" Click="cmdDelete_Click" />
                <DataGrid 
                             x:Name="gridCheckingData" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="3"  
                                Grid.Column="1" Grid.ColumnSpan="5"
                                HorizontalContentAlignment="Left" 
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" SelectedCellsChanged="gridCheckingData_SelectedCellsChanged">
                        <DataGrid.Columns>

                        <DataGridTextColumn Binding="{Binding RowNo}" Header="No" IsReadOnly="True" Width="50" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding CUS_CODE}" Header="Customer" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding LAB_ITMCODE}" Header="Item LTX" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding LAB_LOT}" Header="Lot No." IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding LAB_BATCHNO}" Header="Batch No" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding CHECKEDBY}" Header="Operator" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding SHIFT}" Header="Shift" IsReadOnly="True" Width="80" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding REMARK}" Header="Remark" IsReadOnly="True" Width="250" /> 
                        <DataGridTextColumn Width="180" Header="Checking Date" 
                                    Binding="{Binding CHECKDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Binding="{Binding CHECKEDBY}" Header="Checking By" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}"/>
                    </DataGrid.Columns>
                    </DataGrid>
                <Grid 
                        Grid.Row="4" 
                        Grid.Column="1"  Grid.ColumnSpan="2">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                <TextBlock Text="Shift"
                            Margin="16,0,0,10"
                           FontSize="24" FontWeight="Bold" Grid.Column="3" Grid.Row="4" HorizontalAlignment="Left"  VerticalAlignment="Bottom" />
                <ComboBox Name="cbShift" 
                              Margin="80,0,0,6"
                              TextSearch.TextPath=""
                               FontSize="24"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding Shift , Mode=OneWay}"
                               Width="70" Grid.Column="3" Grid.Row="4" HorizontalAlignment="Left"  VerticalAlignment="Bottom"/>
                <Grid 
                        Grid.Row="4" 
                        Grid.Column="4" Margin="0,0,121,0">
                    <TextBlock 
                                            Text="Total Roll" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                    <TextBox x:Name="txtTotalRoll"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                    </TextBox>
                </Grid>
                <Button Name="cmdClear"
                        Content="Clear" 
                        Margin="0,0,154,7"
                        FontSize="30" 
                        FontWeight="Bold" 
                        Grid.Column="5" 
                        Grid.Row="4" 
                        Height="39" 
                        HorizontalAlignment="Right"   
                        Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Bottom" Width="141" Click="cmdClear_Click" />
                <Button Name="cmdPrint"
                        Content="Print" 
                        Margin="0,0,6,7"
                        FontSize="30" 
                        FontWeight="Bold" 
                        Grid.Column="5" 
                        Grid.Row="4" 
                        Height="39" 
                        HorizontalAlignment="Right"   
                        Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Bottom" Width="141" Click="cmdPrint_Click" />
                
            </Grid>
        </Border>
    </DockPanel>
  
</UserControl>
