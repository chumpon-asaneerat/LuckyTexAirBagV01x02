<UserControl x:Class="LuckyTex.Pages.AutolivLabelPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Autoliv Label"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="50*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Inspection Lot" 
                               Grid.Column="1" Grid.Row="1" />
                    <TextBox x:Name="txtINSPECTIONLOT"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="1" KeyDown="txtINSPECTIONLOT_KeyDown" LostFocus="txtINSPECTIONLOT_LostFocus">
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Item Code" 
                               Grid.Column="3" Grid.Row="1" />
                    <TextBox x:Name="txtITEMCODE"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                IsReadOnly="True"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="4" 
                                Grid.Row="1">
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Grade" 
                               Grid.Column="5" Grid.Row="1" />
                    <TextBox x:Name="txtGRADE"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                IsReadOnly="True"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="6" 
                                Grid.Row="1">
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Quantity" 
                               Grid.Column="1" Grid.Row="2" />
                    <TextBox x:Name="txtQUANTITY"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                IsReadOnly="True"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Right" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="2">
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Gross Weight" 
                               Grid.Column="3" Grid.Row="2" />
                    <TextBox x:Name="txtGROSSWEIGHT"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                IsReadOnly="True"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Right" VerticalAlignment="Top"
                                Grid.Column="4" 
                                Grid.Row="2">
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Net Weight" 
                               Grid.Column="5" Grid.Row="2" />
                    <TextBox x:Name="txtNETWEIGHT"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                IsReadOnly="True"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Right" VerticalAlignment="Top"
                                Grid.Column="6" 
                                Grid.Row="2">
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Description" 
                               Grid.Column="1" Grid.Row="3" />
                    <TextBox x:Name="txtDESCRIPTION"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                IsReadOnly="True"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Left" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="3" Grid.ColumnSpan="3">
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Supplier" 
                               Grid.Column="5" Grid.Row="3" />

                    <TextBox x:Name="txtSUPPLIERCODE"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                IsReadOnly="True"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="6" 
                                Grid.Row="3">
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Date" 
                               Grid.Column="1" Grid.Row="4" />

                    <TextBox x:Name="txtPDATE"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                IsReadOnly="True"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="4">
                    </TextBox>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Part No." 
                               Grid.Column="3" Grid.Row="4" />
                    <TextBox x:Name="txtCUSTOMERPARTNO"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                IsReadOnly="True"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="4" 
                                Grid.Row="4">
                    </TextBox>

                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Batch No." 
                               Grid.Column="5" Grid.Row="4" />
                    <TextBox x:Name="txtBATCHNO"  
                                Margin="3,34,3,0"
                                CharacterCasing="Upper"
                                IsReadOnly="True"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="6" 
                                Grid.Row="4">
                    </TextBox>
                    <Grid 
                        Grid.Row="7" 
                        Grid.ColumnSpan="9" Height="50" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="230*" />
                            <ColumnDefinition Width="955*" />
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                            <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                            </TextBox>
                        </Grid>
                        <Button Name="cmdPrint" Content="Print" Height="40" Width="120" Margin="0,0,6,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="24" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" Click="cmdPrint_Click" Grid.Column="1" />
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
