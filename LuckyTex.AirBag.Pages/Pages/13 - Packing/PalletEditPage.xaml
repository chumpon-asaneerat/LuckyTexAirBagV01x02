<UserControl x:Class="LuckyTex.Pages.PalletEditPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Pallet Edit"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <!--<ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="190" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="150*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="150*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Inspection Date" 
                               Margin="3"
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft" 
                               TextAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" />
                    <DatePicker Name="dteInspectionDate" 
                                 Margin="3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                               
                                 VerticalAlignment="Center" 
                                Grid.Column="2" 
                                Grid.Row="1" />
                    <TextBlock Text="Item Code" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="3" Grid.Row="1" />
                    <ComboBox Name="cbItemCode" 
                              Margin="3"
                               DisplayMemberPath="ITM_CODE" 
                               SelectedValuePath="ITM_CODE"
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding GetItemCodeData, Mode=OneWay}"
                              Grid.Column="4" Grid.Row="1"/>
                    <CheckBox Name="chkAll" 
                                  Content="All" 
                                  Margin="10,10,0,0"
                                  IsChecked="False"
                                  FontSize="22" 
                                  FontWeight="Bold" VerticalAlignment="Top" 
                                  Grid.Column="5" 
                                  Grid.Row="1" 
                                  Style="{StaticResource imageCheckedBoxOKStyle}" Width="66" HorizontalAlignment="Left" />
                    <TextBlock Text="Grade" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="6" Grid.Row="1" />
                    <ComboBox Name="cbGrade" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding ItemCode, Mode=OneWay}"
                              Grid.Column="7" Grid.Row="1"/>
                    <Button Name="cmdClear" 
                            Content="Clear"
                            Margin="0,1,3,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="90" HorizontalAlignment="Right"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="1" Grid.Column="8" Click="cmdClear_Click">
                    </Button>

                    <Button Name="cmdSearch" 
                            Content="Search"
                            Margin="3,1,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="107" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="1" Grid.Column="9" Click="cmdSearch_Click">
                    </Button>
                    <DataGrid 
                             x:Name="gridPack" 
                                Margin="3,3,3,3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="3" Grid.ColumnSpan="10" Grid.Column="1" SelectedCellsChanged="gridPack_SelectedCellsChanged" HorizontalContentAlignment="Left"
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns> 
                        <DataGridTextColumn Width="180" Header="Inspection Date" 
                                    Binding="{Binding STARTDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                                <DataGridTextColumn Binding="{Binding INSPECTIONLOT}" Header="Inspection Lot" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                                <DataGridTextColumn Binding="{Binding ITEMCODE}" Header="Item Code" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                                <DataGridTextColumn Binding="{Binding CUSTOMERTYPE}" Header="Customer Type" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                                <DataGridTextColumn Binding="{Binding GRADE}" Header="Grade" IsReadOnly="True" Width="70" CellStyle="{StaticResource CenterCellStyle}"/>
                                <DataGridTextColumn Binding="{Binding LOADINGTYPE}" Header="Loading Type" IsReadOnly="True" Width="140" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Width="140" Header="Gross Length" 
                                    Binding="{Binding GROSSLENGTH,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                        <DataGridTextColumn Width="140" Header="Net Length" 
                                    Binding="{Binding NETLENGTH,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                <DataGridTextColumn Width="140" Header="Gross Weight" 
                                    Binding="{Binding GROSSWEIGHT,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                <DataGridTextColumn Width="140" Header="Net Weight" 
                                    Binding="{Binding NETWEIGHT,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                            </DataGrid.Columns>
                    </DataGrid>
                <TextBlock Text="Pallet No" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="1" Grid.Row="4" />
                <TextBox x:Name="txtPalletNo"  
                                Margin="3"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="4" KeyDown="txtPalletNo_KeyDown">
                </TextBox>
                <Button Name="cmdGetPalletDetail" 
                            Content="Get Pallet Detail"
                            Margin="3,3,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="200" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" Click="cmdGetPalletDetail_Click">
                </Button>
                <Button Name="cmdNew" 
                            Content="New"
                            Margin="3,3,3,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="100" HorizontalAlignment="Right"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="4" Grid.Column="4" Click="cmdNew_Click">
                    </Button>
                <TextBlock Text="Inspection Lot" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="4" />
                <TextBox x:Name="txtInspectionLot"  
                                Margin="3,3,3,0"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="7"  Grid.ColumnSpan="2"
                                Grid.Row="4" KeyDown="txtInspectionLot_KeyDown" LostFocus="txtInspectionLot_LostFocus">
                </TextBox>
                <DataGrid 
                             x:Name="gridPallet" 
                                Margin="3,3,3,3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="5" Grid.ColumnSpan="10" Grid.Column="1" HorizontalContentAlignment="Left" KeyUp="gridPallet_KeyUp" SelectedCellsChanged="gridPallet_SelectedCellsChanged"
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ORDERNO}" Header="No" IsReadOnly="True" Width="50" CellStyle="{StaticResource CenterCellStyle}"/>
                        <DataGridTextColumn Width="180" Header="Inspection Date" 
                                    Binding="{Binding INSPECTIONDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding INSPECTIONLOT}" Header="Inspection Lot" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding ITEMCODE}" Header="Item Code" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding CUSTOMERTYPE}" Header="Customer Type" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding GRADE}" Header="Grade" IsReadOnly="True" Width="70" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding LOADINGTYPE}" Header="Loading Type" IsReadOnly="True" Width="140" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="140" Header="Gross Length" 
                                        Binding="{Binding GROSSLENGTH,StringFormat={}{0:n2}}" 
                                        IsReadOnly="True" 
                                        CanUserSort="False"
                                        CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridTextColumn Width="140" Header="Net Length" 
                                    Binding="{Binding NETLENGTH,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridTextColumn Width="140" Header="Gross Weight" 
                                    Binding="{Binding GROSSWEIGHT,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridTextColumn Width="140" Header="Net Weight" 
                                    Binding="{Binding NETWEIGHT,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid 
                        Grid.Row="6" 
                        Grid.Column="1">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                <Grid 
                        Grid.Row="6" 
                        Grid.Column="7" Grid.ColumnSpan="4">
                    <Button Name="cmdDelete" 
                            Content="Delete"
                            Margin="0,0,256,3" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="90" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Style="{StaticResource MenuButtonStyle}" Click="cmdDelete_Click">
                    </Button>
                    <Button Name="cmdSave" 
                            Content="Save"
                            Margin="0,0,159,3" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="90" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click" >
                    </Button>
                    <Button Name="cmdCancelPallet" 
                            Content="Cancel Pallet"
                            Margin="0,0,7,3" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="145" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Style="{StaticResource MenuButtonStyle}" Click="cmdCancelPallet_Click">
                    </Button>
                </Grid>
                <Button Content="Cancel D365" FontSize="22" FontWeight="Bold" Grid.Column="2" Grid.Row="6" Height="40" HorizontalAlignment="Left" Margin="6,3,0,0" Name="cmdSendD365" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="145" Click="cmdSendD365_Click" />
            </Grid>
            <!--</ScrollViewer>-->
        </Border>
    </DockPanel>
  
</UserControl>
