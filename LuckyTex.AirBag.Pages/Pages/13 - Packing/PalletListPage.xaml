<UserControl x:Class="LuckyTex.Pages.PalletListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1450" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Pallet List"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="180*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="300" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="300" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Pallet No" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" />
                    <TextBox x:Name="txtPalletNo"  
                                Margin="3"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="1">
                    </TextBox>
                    <TextBlock Text="Packing Date" 
                               Margin="3"
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft" 
                               TextAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Grid.Column="3" />
                    <DatePicker Name="dtePackingDate" 
                                 Margin="3"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                               
                                 VerticalAlignment="Center" 
                                Grid.Column="4" 
                                Grid.Row="1" />
                    
                    <TextBlock Text="Checking Status" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                    <ComboBox Name="cbCheckingStatus" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding CheckingStatus, Mode=OneWay}"
                              Grid.Column="2" Grid.Row="2"/>
                    <Button Name="cmdClear" 
                            Content="Clear"
                            Margin="8,1,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="107" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="2" Grid.Column="4" Click="cmdClear_Click" >
                    </Button>
                    <Button Name="cmdSearch" 
                            Content="Search"
                            Margin="120,1,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="107" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="2" Grid.Column="4" Click="cmdSearch_Click">
                    </Button>
                    <Button Name="cmdCheckingPallet" 
                            Content="Checking Pallet"
                            Margin="8,1,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="180" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="2" Grid.Column="5" Click="cmdCheckingPallet_Click">
                    </Button>

                    <DataGrid 
                             x:Name="gridPack" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="4" Grid.ColumnSpan="6" Grid.Column="1" SelectedCellsChanged="gridPack_SelectedCellsChanged" HorizontalContentAlignment="Left"
                        ScrollViewer.CanContentScroll="True" 
      ScrollViewer.VerticalScrollBarVisibility="Auto"
      ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding PALLETNO}" Header="Pallet No" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            
                            <DataGridTextColumn Width="180" Header="Packing Date" 
                                    Binding="{Binding PACKINGDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>

                            <DataGridTemplateColumn Width="160" Header="Pallet Checking" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox x:Name="chkPalletChecking"
                                                  IsChecked="{Binding Path=PalletChecking, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="400" Header="Remark" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox x:Name="txtRemark" Text="{Binding Path= REMARK, Mode= TwoWay, UpdateSourceTrigger=LostFocus}" 
                                                  HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">  
                                        </TextBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!--<DataGridTextColumn x:Name="txtRemark"
                                Binding="{Binding Path= REMARK, Mode= TwoWay, UpdateSourceTrigger=LostFocus}" Header="Remark" Width="250" CellStyle="{StaticResource CenterCellStyle}"/>-->
                            
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Name="cmdGetPalletDetail" 
                            Content="Get Pallet Detail"
                            Margin="8,3,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="180" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="5" Grid.Column="1" Click="cmdGetPalletDetail_Click">
                    </Button>
                    <Button Content="Send D365" FontSize="22" FontWeight="Bold" Grid.Column="5" Grid.Row="5" Height="40" HorizontalAlignment="Right" Margin="0,3,3,0" Name="cmdSendD365" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="130" Click="cmdSendD365_Click" />
                    <DataGrid 
                             x:Name="gridPallet" 
                                Margin="3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                Grid.Row="6" Grid.ColumnSpan="6" Grid.Column="1" HorizontalContentAlignment="Left"
                        ScrollViewer.CanContentScroll="True" 
      ScrollViewer.VerticalScrollBarVisibility="Auto"
      ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding RowNo}" Header="No" IsReadOnly="True" Width="50" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="180" Header="Inspection Date" 
                                    Binding="{Binding INSPECTIONDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding INSPECTIONLOT}" Header="Inspection Lot" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding ITEMCODE}" Header="Item Code" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding CUSTOMERTYPE}" Header="Customer Type" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding GRADE}" Header="Grade" IsReadOnly="True" Width="70" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding LOADINGTYPE}" Header="Loading Type" IsReadOnly="True" Width="140" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="140" Header="Net Length" 
                                    Binding="{Binding NETLENGTH,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding ISLAB}" Header="ISLAB" IsReadOnly="True" Width="70" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="140" Header="Gross Weight" 
                                    Binding="{Binding GROSSWEIGHT,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridTextColumn Width="140" Header="Net Weight" 
                                    Binding="{Binding NETWEIGHT,StringFormat={}{0:n2}}" 
                                    IsReadOnly="True" 
                                    CanUserSort="False"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid 
                        Grid.Row="7" 
                        Grid.Column="1">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                    <Button Name="cmdPrintPalletSheet" 
                            Content="Print Pallet Sheet"
                            Margin="0,0,8,3" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="225" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Style="{StaticResource MenuButtonStyle}" Grid.Row="7" Grid.Column="5" Click="cmdPrintPalletSheet_Click">
                    </Button>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
  
</UserControl>
