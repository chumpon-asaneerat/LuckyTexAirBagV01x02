<UserControl x:Class="LuckyTex.Pages.DrawingProcessPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Drawing Search"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="600*" />
                        <ColumnDefinition Width="600*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Grey Item : "
                               Margin="0,19,254,0"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Right" 
                               TextAlignment="Center" />
                    <Border Margin="0,13,76,0" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Background="CornflowerBlue" 
                            Height="43" 
                            Width="170"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right" >
                        <TextBlock x:Name="txtGreyItem"
                                   Text=" "
                                   Margin="5"  
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   TextAlignment="Center" />
                    </Border>
                    <CheckBox Name="chkAllGreyItem"
                              Margin="0,19,12,0" 
                              Content="All"   
                              FontSize="24" 
                              FontWeight="Bold" 
                              Width="58" 
                              Height="31" 
                              HorizontalAlignment="Right" 
                              VerticalAlignment="Top" />
                    <TextBlock Text="Created Date : " 
                               Margin="11,19,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left" 
                               TextAlignment="Center" 
                               Grid.Column="1" />
                    <Border Margin="189,13,0,0"
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3"  
                            Background="CornflowerBlue" 
                            Height="43" 
                            Width="170"
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left"  
                            Grid.Column="1">
                        <TextBlock x:Name="txtCreatedDate" 
                                   Margin="5" 
                                   Text="" 
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   TextAlignment="Center" />
                    </Border>
                    <CheckBox Name="chkAllCreatedDate" 
                              Content="All"  
                              Margin="365,19,0,0" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Height="31" 
                              Width="58" 
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top" 
                              Grid.Column="1" />
                    <Grid Margin="0,67,0,0" Height="70" VerticalAlignment="Top" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="177*" />
                            <ColumnDefinition Width="778*" />
                            <ColumnDefinition Width="177*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="cmdSearch" 
                                Margin="8,6,0,0" 
                                Content="Search"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" 
                                Height="58" 
                                Width="250" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1">
                        </Button>
                        <Button x:Name="cmdNew" 
                                Margin="265,6,0,0" 
                                Content="New"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" 
                                Height="58" 
                                Width="250" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1" 
                                Click="cmdNew_Click">
                        </Button>
                        <Button x:Name="cmdEdit" 
                                Margin="523,6,0,0" 
                                Content="Edit"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}" 
                                Height="58" 
                                Width="250"
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1" >
                        </Button>
                    </Grid>
                    <Grid Margin="0,143,0,0" Name="grid2" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="218*" />
                            <RowDefinition Height="352*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="600*" />
                            <ColumnDefinition Width="600*" />
                        </Grid.ColumnDefinitions>
                        <DataGrid x:Name="grid"
                                  Margin="5,5,5,11"
                                  ItemsSource="{Binding}"
                                  AlternatingRowBackground="AntiqueWhite"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False" 
                                  GridLinesVisibility="None"
                                  EnableColumnVirtualization="True"
                                  EnableRowVirtualization="True"
                                  SelectionMode="Extended"
                                  SelectionUnit="Cell"
                                  CanUserResizeColumns="False"
                                  CanUserSortColumns="False"
                                  IsSynchronizedWithCurrentItem="True"
                                  HorizontalGridLinesBrush="Silver" 
                                  VerticalGridLinesBrush="Silver"
                                  FontSize="22" 
                                  Grid.ColumnSpan="2">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="140" Header="Beam Lot No" 
                                                    Binding="{Binding BeamLotNo}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Grey Item" 
                                                    Binding="{Binding GreyItem}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Drawing Date" 
                                                    Binding="{Binding DrawingDate}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Operator" 
                                                    Binding="{Binding Operator}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="120" Header="Type" 
                                                    Binding="{Binding Type}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="Start Date Time" 
                                                    Binding="{Binding StartDate}" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Width="150" Header="End Date Time" 
                                                    Binding="{Binding EndDate}" 
                                                    IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock Text="Date/Time : " 
                                   Margin="11,16,0,0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Width="155"
                                   TextAlignment="Right"
                                   HorizontalAlignment="Left"   
                                   VerticalAlignment="Top"  
                                   Grid.Column="1" 
                                   Grid.Row="1" />
                        <Border Margin="177,14,0,0"
                                Background="CornflowerBlue" 
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Height="43"  
                                Width="200"
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top"
                                Grid.Column="1" 
                                Grid.Row="1">
                            <TextBlock Name="txtDateTime" 
                                       Text=" " 
                                       Margin="5"
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"   
                                       VerticalAlignment="Center" />
                        </Border>
                        <TextBlock Text="Hr." 
                                   Margin="383,16,0,0"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   TextAlignment="Right" 
                                   FlowDirection="LeftToRight" 
                                   Width="46" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Grid.Column="1" 
                                   Grid.Row="1" />
                        <TextBlock Text="Item " 
                                   Margin="0,77,220,0"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   TextAlignment="Right"
                                   Width="144"
                                   HorizontalAlignment="Right" 
                                   VerticalAlignment="Top" 
                                   Grid.Row="1" />
                        <Border Margin="0,71,12,0" 
                                Background="White" 
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Width="200"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                Grid.Row="1">
                            <TextBox Name="txtItem" 
                                     Text="" 
                                     Margin="5" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="Black" 
                                     TextAlignment="Center"
                                     Width="185"
                                     HorizontalAlignment="Center"   
                                     VerticalAlignment="Center"  />
                        </Border>
                        <TextBlock Text="Reed no : "
                                   Margin="11,77,0,0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   TextAlignment="Right"
                                   Width="155"
                                   HorizontalAlignment="Left"   
                                   VerticalAlignment="Top"  
                                   Grid.Column="1" 
                                   Grid.Row="1" />
                        <Border Margin="177,71,0,0"
                                Background="White" 
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Width="200"
                                HorizontalAlignment="Left"  
                                VerticalAlignment="Top"  
                                Grid.Column="1" 
                                Grid.Row="1">
                            <TextBox Name="txtReedNo" 
                                     Text=""
                                     Margin="5"
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="Black"  
                                     TextAlignment="Center"
                                     HorizontalAlignment="Center"  
                                     VerticalAlignment="Center" 
                                     Width="185" />
                        </Border>
                        <TextBlock Text="Heald no : " 
                                   Margin="0,134,220,0"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   TextAlignment="Right"
                                   Width="144"
                                   HorizontalAlignment="Right"    
                                   VerticalAlignment="Top"  
                                   Grid.Row="1" />
                        <Border Margin="0,132,12,0"
                                Background="CornflowerBlue" 
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Height="43"  
                                Width="200"
                                HorizontalAlignment="Right"  
                                VerticalAlignment="Top" 
                                Grid.Row="1">
                            <TextBlock Name="txtHealdNo" 
                                       Text=" "  
                                       Margin="5"
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" />
                        </Border>
                        <TextBlock Text="Reed type : " 
                                   Margin="11,134,0,0"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   TextAlignment="Right" 
                                   Width="155"
                                   HorizontalAlignment="Left"   
                                   VerticalAlignment="Top"  
                                   Grid.Column="1" 
                                   Grid.Row="1" />
                        <Border Margin="177,132,0,0" 
                                Background="CornflowerBlue" 
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Height="43" 
                                Width="200" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                Grid.Column="1" 
                                Grid.Row="1">
                            <TextBlock Name="txtReedType" 
                                       Text=" " 
                                       Margin="5"
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"  
                                       VerticalAlignment="Center" />
                        </Border>
                        <StackPanel Margin="0,187,10,0"
                                    Width="240"
                                    HorizontalAlignment="Right"  
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Top"  
                                    Grid.Row="1">
                            <RadioButton Name="rbTying"
                                         Content="Tying" 
                                         Margin="5"
                                         FlowDirection="RightToLeft" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         IsChecked="True"   
                                         Style="{StaticResource imageRadioButtonORBStyle}" />
                            <RadioButton Name="rbDrawing" 
                                         Content="Drawing" 
                                         Margin="5"
                                         FlowDirection="RightToLeft" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         HorizontalContentAlignment="Left"  
                                         Style="{StaticResource imageRadioButtonORBStyle}" />
                        </StackPanel>
                        <TextBlock Text="Heald Color : "
                                   Margin="11,187,0,0"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Height="41" 
                                   Width="158"
                                   TextAlignment="Right"
                                   HorizontalAlignment="Left"   
                                   VerticalAlignment="Top"  
                                   Grid.Column="1" 
                                   Grid.Row="1" />
                        <ComboBox Name="cbHealdColor"
                                  Margin="177,187,0,0" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Height="41" 
                                  Width="200"
                                  HorizontalAlignment="Left"  
                                  VerticalAlignment="Top"  
                                  Grid.Column="1" 
                                  Grid.Row="1" />
                        <TextBlock Text="Operator : "
                                   Margin="0,249,220,0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   TextAlignment="Right" 
                                   Width="144"
                                   HorizontalAlignment="Right"  
                                   VerticalAlignment="Top"  
                                   Grid.Row="1" />
                        <Border Margin="0,240,12,0"
                                Background="White" 
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Width="200"
                                HorizontalAlignment="Right"  
                                VerticalAlignment="Top" 
                                Grid.Row="1">
                            <TextBox Name="txtOperator" 
                                     Text=""
                                     Margin="5"
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="Black" 
                                     TextAlignment="Center"
                                     Width="185" 
                                     HorizontalAlignment="Center"    
                                     VerticalAlignment="Center" />
                        </Border>
                        <TextBlock Text="Beam lot : " 
                                   Margin="11,249,0,0"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   TextAlignment="Right"
                                   Width="158" 
                                   HorizontalAlignment="Left"   
                                   VerticalAlignment="Top" 
                                   Grid.Column="1" 
                                   Grid.Row="1" />
                        <Border 
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            HorizontalAlignment="Left" 
                            Margin="177,240,0,0" 
                            VerticalAlignment="Top"
                            Width="200" 
                            Grid.Column="1" 
                            Grid.Row="1">
                            <TextBox Name="txtBeamLot" 
                                     Text=""  
                                     Margin="5" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="Black" 
                                     TextAlignment="Center"
                                     Width="185"
                                     HorizontalAlignment="Center"  
                                     VerticalAlignment="Center" />
                        </Border>
                        <Button  Name="cmdStart" 
                                Margin="177,296,0,0" 
                                Content="Start"
                                FontSize="40" 
                                FontWeight="Bold"
                                Width="107" 
                                Height="40"
                                Style="{StaticResource MenuButtonStyle}" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Grid.Column="1" 
                                Grid.Row="1" 
                                Click="cmdStart_Click">
                        </Button>
                        <Button Name="cmdEnd" 
                                Margin="290,296,0,0" 
                                Content="End"
                                FontSize="40" 
                                FontWeight="Bold"
                                Style="{StaticResource MenuButtonStyle}"
                                Height="40" 
                                Width="107" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top" 
                                Grid.Column="1" 
                                Grid.Row="1" 
                                Click="cmdEnd_Click">
                        </Button>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
