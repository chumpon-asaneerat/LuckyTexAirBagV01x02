<UserControl x:Class="LuckyTex.Pages.DrawingSettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Drawing Setting"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="600*" />
                        <ColumnDefinition Width="600*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Date/Time : " 
                               Margin="11,14,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Right"
                               Width="155" 
                               HorizontalAlignment="Left"  
                               VerticalAlignment="Top" 
                               Grid.Column="1" />
                    <Border Margin="177,12,0,0"
                            Background="CornflowerBlue" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Height="43" 
                            Width="200"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Grid.Column="1">
                        <TextBlock Name="txtDateTime" 
                                   Text=" " 
                                   Margin="5" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" />
                    </Border>
                    <TextBlock Text="Hr."
                               Margin="383,14,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Right"
                               FlowDirection="LeftToRight" 
                               Width="46" 
                               HorizontalAlignment="Left"   
                               VerticalAlignment="Top" 
                               Grid.Column="1" />
                    <TextBlock Text="Item "
                               Margin="0,75,220,0"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Right"
                               Width="144"
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Right"   />
                    <Border Margin="0,69,12,0"
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="200"
                            HorizontalAlignment="Right"  
                            VerticalAlignment="Top" >
                        <TextBox Name="txtItem" 
                                 Text="" 
                                 Margin="5" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 TextAlignment="Center"
                                 Width="185"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"  />
                    </Border>

                    <TextBlock Text="Reed no : " 
                               Margin="11,75,0,0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Right"
                               Width="155" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left"  
                               Grid.Column="1" />
                    <Border Margin="177,69,0,0"
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="200"
                            HorizontalAlignment="Left"  
                            VerticalAlignment="Top" 
                            Grid.Column="1">
                        <TextBox  Name="txtReedNo" 
                                  Text="" 
                                  Margin="5"
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="Black" 
                                  TextAlignment="Center"
                                  Width="185"
                                  HorizontalAlignment="Center"  
                                  VerticalAlignment="Center" />
                    </Border>
                    <TextBlock Text="Heald no : " 
                               Margin="0,132,220,0"
                               FontSize="24"    
                               FontWeight="Bold" 
                               TextAlignment="Right" 
                               Width="144"
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Right"  />
                    <Border Margin="0,130,12,0"
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3"  
                            Background="CornflowerBlue" 
                            Height="43" 
                            Width="200"
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Right" >
                        <TextBlock x:Name="txtHealdNo" 
                                   Text=" " 
                                   Margin="5"
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" />
                    </Border>
                    <TextBlock Text="Reed type : " 
                               Margin="11,132,0,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Right"
                               Width="155" 
                               HorizontalAlignment="Left"    
                               VerticalAlignment="Top" 
                               Grid.Column="1" />
                    <Border Margin="177,130,0,0"
                            Background="CornflowerBlue" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Height="43" 
                            Width="200"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top"  
                            Grid.Column="1">
                        <TextBlock Name="txtReedType" 
                                   Text=" "
                                   Margin="5"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"   
                                   VerticalAlignment="Center" />
                    </Border>
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Right"
                                Margin="0,185,10,0" Width="240">
                        <RadioButton x:Name="rbTying" IsChecked="True"
                                     Content="Tying" 
                                     Margin="5"
                                     FontSize="24" FontWeight="Bold"
                                     Style="{StaticResource imageRadioButtonORBStyle}" FlowDirection="RightToLeft" />
                        <RadioButton x:Name="rbDrawing" 
                                     Margin="5"
                                     Content="Drawing" 
                                     FontSize="24" FontWeight="Bold"
                                     Style="{StaticResource imageRadioButtonORBStyle}" HorizontalContentAlignment="Left" FlowDirection="RightToLeft" />
                    </StackPanel>
                    <TextBlock Text="Heald Color : " 
                               Margin="11,185,0,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Right"
                               Height="41" 
                               Width="158"
                               HorizontalAlignment="Left"    
                               VerticalAlignment="Top"  
                               Grid.Column="1" />
                    <ComboBox Name="cbHealdColor" 
                              Margin="177,185,0,0" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Height="41" 
                              Width="200"
                              HorizontalAlignment="Left"   
                              VerticalAlignment="Top"
                              Grid.Column="1" />
                    <TextBlock Text="Operator : " 
                               Margin="0,247,220,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Right"
                               Width="144"
                               HorizontalAlignment="Right"   
                               VerticalAlignment="Top" />
                    <Border Margin="0,238,12,0"
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="200"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" >
                        <TextBox Name="txtOperator" 
                                 Text="" 
                                 Margin="5" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 TextAlignment="Center" 
                                 Width="185" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center" />
                    </Border>
                    <TextBlock Text="Beam lot : " 
                               Margin="11,247,0,0"
                               FontSize="24" 
                               FontWeight="Bold" 
                               TextAlignment="Right"
                               Width="158"
                               HorizontalAlignment="Left"  
                               VerticalAlignment="Top" 
                               Grid.Column="1" />
                    <Border Margin="177,238,0,0"
                            Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Width="200"
                            HorizontalAlignment="Left"  
                            VerticalAlignment="Top" 
                            Grid.Column="1">
                        <TextBox Name="txtBeamLot" 
                                 Text=""
                                 Margin="5"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 TextAlignment="Center"
                                 Width="185"
                                 HorizontalAlignment="Center"   
                                 VerticalAlignment="Center" />
                    </Border>
                    <Button x:Name="cmdConfirm" 
                            Margin="177,303,0,0" 
                            Content="Confirm"
                            FontSize="40" 
                            FontWeight="Bold"
                            Height="50" 
                            Width="200" 
                            Style="{StaticResource MenuButtonStyle}" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Grid.Column="1" >
                    </Button>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
