<UserControl x:Class="LuckyTex.Pages.DrawingStartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded" >
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Drawing Start"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="365*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="473" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Item Prepare" 
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                    <ComboBox Name="cbItemCode" 
                              Margin="3"
                               DisplayMemberPath="ITM_PREPARE" 
                               SelectedValuePath="ITM_PREPARE"
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding GetItemCodeData, Mode=OneWay}"
                              Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"  VerticalAlignment="Top" LostFocus="cbItemCode_LostFocus" />
                    <TextBlock Text="Reed No"
                               Margin="3,3,3,0"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="4" Grid.Row="2"/>
                    <TextBox x:Name="txtReedNo"  
                                Margin="3"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="5" 
                                Grid.Row="2" KeyDown="txtReedNo_KeyDown">
                    </TextBox>
                    
                    <TextBlock Text="Heald No "
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3" />
                    <TextBox x:Name="txtNOYARN"  
                                Margin="3"
                             IsReadOnly="True"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" >
                    </TextBox>
                    <TextBox x:Name="txtHealdNo"  
                                Margin="3"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="3" 
                                Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="txtHealdNo_KeyDown">
                    </TextBox>
                    <TextBlock Text="Reed Type "
                               Margin="3,3,3,0"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="4" Grid.Row="3" />
                    <TextBox x:Name="txtREEDTYPE"  
                                Margin="3"
                                IsReadOnly="True"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="5" 
                                Grid.Row="3" PreviewKeyDown="Common_PreviewKeyDown">
                    </TextBox>
                    <TextBlock Text="Beamer Roll "
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="1" Grid.Row="4" />
                    <TextBox x:Name="txtBeamLot"  
                                Margin="3"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="4" LostFocus="txtBeamLot_LostFocus" KeyDown="txtBeamLot_KeyDown">
                    </TextBox>
                    <TextBlock Text="Heald Color "
                               Margin="3,3,3,0"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="4" Grid.Row="4" />
                    <ComboBox Name="cmbColors"  
                              Margin="3"
                              FontSize="22"      
                               FontWeight="Bold" 
                              Grid.Column="5" 
                              Grid.Row="4" 
                              LostFocus="cmbColors_LostFocus">
                        <ComboBoxItem Background="Orange" Foreground="Orange" Content="Orange"></ComboBoxItem>
                        <ComboBoxItem Background="Green" Foreground="Green" Content="Green"></ComboBoxItem>
                        <ComboBoxItem Background="Blue" Foreground="Blue" Content="Blue"></ComboBoxItem>
                        <ComboBoxItem Background="Gray" Foreground="Gray" Content="Gray"></ComboBoxItem>
                    </ComboBox>
                    <TextBlock Text="No Beam "
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="1" Grid.Row="5" />
                    <TextBox x:Name="txtBEAMNO"  
                                IsReadOnly="True"
                                Margin="3"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="2" 
                                Grid.Row="5" >
                    </TextBox>
                    <TextBlock Text="Total Beam Warper End"
                               Margin="3"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft"
                               Height="41" VerticalAlignment="Top" Grid.Column="3" Grid.Row="5" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="txtTotalBeam"  
                             IsReadOnly="True"
                                Margin="3"
                                CharacterCasing="Upper"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center" VerticalAlignment="Top"
                                Grid.Column="5" 
                                Grid.Row="5" PreviewKeyDown="Common_PreviewKeyDown" >
                    </TextBox>
                    <Grid Name="grid2"  
                                          Margin="2,4,0,0" 
                                          VerticalAlignment="Top" 
                              HorizontalAlignment="Left" 
                              Grid.Column="6" 
                              Grid.RowSpan="3" Height="118" Grid.Row="1">
                        <TextBlock Text="Type of Drawing"
                                                   Margin="6,6,0,0"
                                                   FontSize="24" 
                                                   FontWeight="Bold" 
                                                   TextAlignment="Right"
                                                   Width="197"
                                                   HorizontalAlignment="Left"   
                                                   VerticalAlignment="Top"  />
                        <StackPanel Margin="5,44,5,5" Orientation="Vertical">
                            <RadioButton Name="rbTying" 
                                                         Content="Tying" 
                                                         Margin="5" 
                                                         FlowDirection="LeftToRight" 
                                                         FontSize="24" 
                                                         FontWeight="Bold" 
                                                         IsChecked="True"   
                                                         Style="{StaticResource imageRadioButtonORBStyle}" />
                            <RadioButton Name="rbDrawing" 
                                                         Content="Drawing" 
                                                         Margin="5" 
                                                         FlowDirection="LeftToRight" 
                                                         FontSize="24" 
                                                         FontWeight="Bold"  
                                                         Style="{StaticResource imageRadioButtonORBStyle}" />
                        </StackPanel>
                    </Grid>
                    <Button Name="cmdConfirm" 
                        Content="Confirm" 
                        Margin="6,3,0,0"
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}"  
                        Grid.Column="6" 
                                Grid.Row="5" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Click="cmdConfirm_Click" />
                    <Grid 
                        Grid.Row="6" 
                        Grid.Column="1"  Grid.ColumnSpan="2">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                    <TextBlock Name="labGroup"
                               Text="Group" 
                               Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Right" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="4" 
                               Grid.Row="6" Width="80" />
                    <ComboBox Name="cbGroup" 
                              Margin="3"
                              TextSearch.TextPath=""
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding Group , Mode=OneWay}"
                              Grid.Column="5" Grid.Row="6" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" />
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
  
</UserControl>
