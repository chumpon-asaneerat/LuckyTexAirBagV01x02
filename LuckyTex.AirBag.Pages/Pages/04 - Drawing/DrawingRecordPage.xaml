<UserControl x:Class="LuckyTex.Pages.DrawingRecordPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded" >
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Drawing Daily Report"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="712" />
                    <ColumnDefinition Width="313*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                    <RowDefinition Height="90" />
                        <RowDefinition Height="608*" />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>
                    <Grid 
                        Grid.Row="1" 
                        Grid.Column="1" HorizontalAlignment="Left" Width="712">
                        <TextBlock Text="Date" 
                               Margin="3,3,0,0"  
                               FontSize="24" 
                               FontWeight="Bold" 
                               Height="41" VerticalAlignment="Top" Width="70" HorizontalAlignment="Left" />
                        <DatePicker Name="dteDrawingDate" 
                                 Margin="79,3,0,0"
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="170" />
                    <TextBlock Text="Operator" Margin="276,3,0,0" FontSize="24" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <TextBox x:Name="txtOperator" Margin="386,3,0,0" IsReadOnly="True" CharacterCasing="Upper" FontSize="24" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" Width="191"></TextBox>
                    <Button Name="cmdSearch" Content="Search" Margin="267,44,0,0" FontSize="30" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="141" Click="cmdSearch_Click" />
                    <Button Name="cmdClear" Content="Clear" Margin="415,44,0,0" FontSize="30" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="141" Click="cmdClear_Click" />
                    <Button Name="cmdRePrint" Content="Re-Print" Margin="563,44,0,0" FontSize="30" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="141" Click="cmdRePrint_Click" />
                </Grid>
                    <DataGrid 
                             x:Name="gridDrawing" 
                                Margin="3,3,3,3"
                                ItemsSource="{Binding}"
                                SelectionMode="Single"
                                AlternatingRowBackground="AntiqueWhite"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="20" 
                                FontWeight="Bold" 
                                HorizontalGridLinesBrush="Silver" 
                                VerticalGridLinesBrush="Silver"
                                HorizontalContentAlignment="Left" 
                                ScrollViewer.CanContentScroll="True" 
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                                Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="1"
                                SelectedCellsChanged="gridDrawing_SelectedCellsChanged">
                        <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding No}" Header="No" IsReadOnly="True" Width="40" CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding BEAMLOT}" Header="Beamer Roll" IsReadOnly="True" Width="160" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding ITM_PREPARE}" Header="Item prepare" IsReadOnly="True" Width="170" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding LENGTH, StringFormat='{}{0:#,##0.##}'}" Header="Length" IsReadOnly="True" Width="90" CellStyle="{StaticResource RightCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding DRAWINGTYPE}" Header="Drawing Type" IsReadOnly="True" Width="140" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding REEDNO}" Header="Reed No" IsReadOnly="True" Width="170" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding HEALDCOLOR}" Header="Heald Color" IsReadOnly="True" Width="130" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding BEAMNO}" Header="No Beam" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="170" Header="Start Date" 
                                    Binding="{Binding STARTDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding STARTBY}" Header="Start By" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Width="170" Header="End Date" 
                                    Binding="{Binding ENDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Binding="{Binding FINISHBY}" Header="Finish By" IsReadOnly="True" Width="100" CellStyle="{StaticResource CenterCellStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                <Grid 
                        Grid.Row="3" 
                        Grid.Column="1" Height="45" VerticalAlignment="Top" Width="712" HorizontalAlignment="Left">
                        <TextBlock Text="Total : " Margin="3,1,0,0" FontSize="24" FontWeight="Bold" Height="41" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" />
                        <TextBox x:Name="txtTotal" Margin="86,7,0,0" IsReadOnly="True" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" HorizontalAlignment="Left" Width="154"></TextBox>
                        <TextBlock Text="Beams :" Margin="246,1,0,0" FontSize="24" FontWeight="Bold" Height="41" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" />
                        <TextBox x:Name="txtTotalBeam" IsReadOnly="True" Margin="352,7,0,0" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" PreviewKeyDown="Common_PreviewKeyDown" HorizontalAlignment="Left" Width="154"></TextBox>
                        <Button Name="cmdPrintReport" Content="Print Report" Margin="514,3,0,0" FontSize="30" FontWeight="Bold" Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Click="cmdPrintReport_Click" Width="190" />
                    </Grid>
                <Button Content="Send D365" FontSize="22" FontWeight="Bold" Grid.Column="2" Grid.Row="1" Height="40" HorizontalAlignment="Right" Margin="0,44,3,0" Name="cmdSendD365" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="130" Click="cmdSendD365_Click" />
            </Grid>
        </Border>
    </DockPanel>
  
</UserControl>
