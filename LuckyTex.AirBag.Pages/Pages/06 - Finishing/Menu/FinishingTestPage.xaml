<UserControl x:Class="LuckyTex.Pages.FinishingTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="554" 
             d:DesignWidth="1007" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Finishing Data"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200*" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="75" />
                        <RowDefinition Height="75" />
                        <RowDefinition Height="300*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="111*" />
                        <ColumnDefinition Width="155*" />
                        <ColumnDefinition Width="221*" />
                        <ColumnDefinition Width="111*" />
                        <ColumnDefinition Width="221*" />
                        <ColumnDefinition Width="38*" />
                        <ColumnDefinition Width="294*" />
                        <ColumnDefinition Width="111*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Batch No" 
                               Grid.Column="1" Grid.Row="1" />
                    <TextBox Name="txtBatchNo" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="2" Grid.Row="1" KeyDown="txtBatchNo_KeyDown" />

                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Item Grey" 
                               Grid.Column="1" Grid.Row="2" />
                    <TextBox Name="txtItemGrey" 
                             Margin="3"
                             MaxLength="20"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             VerticalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             HorizontalContentAlignment="Center" 
                             Grid.Column="2" Grid.Row="2" 
                             KeyDown="txtItemGrey_KeyDown"/>

                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Lot" 
                               Grid.Column="3" Grid.Row="2" />
                    <TextBox Name="txtLot" 
                             Margin="3"
                             MaxLength="10"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="4" Grid.Row="2" 
                             KeyDown="txtLot_KeyDown" />
                    
                    <TextBlock Margin="3" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Text="Length"
                               Grid.Column="1" Grid.Row="3" />
                    <TextBox Name="txtLength" 
                             Margin="3"
                             FontSize="24" 
                             FontWeight="Bold"
                             CharacterCasing="Upper"
                             HorizontalContentAlignment="Center" 
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center" 
                             Grid.Column="2" Grid.Row="3" 
                             KeyDown="txtLength_KeyDown"
                             PreviewKeyDown="txtLength_PreviewKeyDown"/>

                    

                    <Grid HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch" 
                          Grid.ColumnSpan="8" Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*" />
                            <RowDefinition Height="50*" />
                            <RowDefinition Height="20*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100*" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="100*" />
                        </Grid.ColumnDefinitions>
                        <Button Name="cmdSave" 
                                Content="Save" 
                                Height="40"
                                Width="120"
                                Margin="3"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right" 
                                FontSize="24" 
                                FontWeight="Bold" 
                                Style="{StaticResource MenuButtonStyle}"
                                Grid.Row="1" Click="cmdSave_Click" />
                        <Button Name="cmdCancel" 
                                Content="Cancel" 
                                Height="40"
                                Width="120"
                                Margin="3"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Left" 
                                FontSize="24" 
                                FontWeight="Bold" 
                                Style="{StaticResource MenuButtonStyle}"
                                Grid.Column="2" Grid.Row="1" Click="cmdCancel_Click" />
                    </Grid>
                    <RadioButton Name="rbMass" 
                                 Content="Mass Production" 
                                 IsChecked="True"
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Left" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 GroupName="rbMain" 
                                 Style="{StaticResource imageRadioButtonORBStyle}"
                                 Grid.Column="6" Grid.Row="1" />
                    <RadioButton Name="rbTest" 
                                 Content="Test" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Left" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 GroupName="rbMain" 
                                 Style="{StaticResource imageRadioButtonORBStyle}"
                                 Grid.Column="6" Grid.Row="2" />
                    <TextBlock Text="Type Of Product" 
                               Margin="0, 0, 0, 5"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch"                            
                               TextAlignment="Left" 
                               VerticalAlignment="Bottom" 
                               Grid.Column="6"/>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
