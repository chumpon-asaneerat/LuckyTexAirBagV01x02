<Window x:Class="LuckyTex.Windows.DefectListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Defect List" 
        Height="550" 
        Width="810" 
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Defect List"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <Border Background="#F0F0F0"
                DockPanel.Dock="Bottom"
                Margin="3"
                Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="178*" />
                    <ColumnDefinition Width="212*" />
                    <ColumnDefinition Width="212*" />
                    <ColumnDefinition Width="178*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="cmdClose" 
                    Content="Close"
                    Margin="5" 
                    FontSize="24" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}" 
                    Grid.Column="1" 
                    Click="cmdClose_Click" />
                <Button x:Name="cmdDelete" 
                    Content="Delete"
                    Margin="5" 
                    Width="200"
                    FontSize="24" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}" 
                    Grid.Column="2" Click="cmdDelete_Click" />
                <Button x:Name="cmdOk" 
                        Content="Ok"
                        Margin="5" 
                        FontSize="24" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Grid.Column="1"  
                        Click="cmdOk_Click" >           
                </Button>
                <Button x:Name="cmdCancel" 
                        Content="Cancel"  
                        Margin="5" 
                        Width="200"
                        FontSize="24" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Grid.Column="2"
                        Click="cmdCancel_Click">
                </Button>
                <Button x:Name="cmdEdit" 
                        Content="Edit"  
                        Margin="5,5,5,5" FontSize="24" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Grid.Column="3"
                        Click="cmdEdit_Click">
                </Button>
            </Grid>
            
        </Border>
        <!-- Button Command Bars -->
        <Border Name ="totalBorder"
                Background="#F0F0F0"
                DockPanel.Dock="Bottom"
                Margin="3"
                Height="150">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160*" />
                    <ColumnDefinition Width="160*" />
                    <ColumnDefinition Width="160*" />
                    <ColumnDefinition Width="160*" />
                    <ColumnDefinition Width="170*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="58*" />
                    <RowDefinition Height="90*" />
                </Grid.RowDefinitions>
                <TextBlock Margin="0,9,1,17" 
                           Text="Total : " 
                           FontSize="24" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right" 
                           TextAlignment="Center" Grid.Column="1" />
                <Border BorderBrush="Black" BorderThickness="1" 
                        CornerRadius="3" Margin="5,5,5,0"
                        Background="White" VerticalAlignment="Center" Grid.Column="2">
                    <TextBox x:Name="txtTotal" 
                             Margin="1" 
                             BorderBrush="{x:Null}" 
                             Text="" 
                             Foreground="Black" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             IsReadOnly="True"
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch" 
                             TextAlignment="Center" />
                </Border>
                <TextBlock Text="Defect Code"
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Left" 
                           Margin="8,5,0,0"  
                           TextAlignment="Center" 
                           VerticalAlignment="Top"
                           Grid.Row="1" />
                <Border BorderBrush="Black" 
                        BorderThickness="1" 
                        CornerRadius="3" Margin="3,43,3,0"
                        Background="White" VerticalAlignment="Top"
                        Grid.Row="1">
                    <TextBox x:Name="txtDefectCode" 
                             Margin="1" 
                             BorderBrush="{x:Null}" 
                             Text="" 
                             Foreground="Black" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             IsReadOnly="True"
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch" 
                             TextAlignment="Center" KeyUp="txtDefectCode_KeyUp" LostFocus="txtDefectCode_LostFocus" />
                </Border>
                <TextBlock Text="Length 1"
                           FontSize="24" 
                           FontWeight="Bold" Margin="27,5,0,0"  
                           TextAlignment="Center" 
                           VerticalAlignment="Top"
                           Grid.Row="1" 
                           Grid.Column="1" HorizontalAlignment="Left" Width="99" />
                <Border BorderBrush="Black" 
                        BorderThickness="1" 
                        CornerRadius="3" Margin="3,43,3,0"
                        Background="White" VerticalAlignment="Top"
                        Grid.Row="1" 
                        Grid.Column="1">
                    <TextBox x:Name="txtLength1" 
                             Margin="1" 
                             BorderBrush="{x:Null}" 
                             Text="" 
                             Foreground="Black" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             IsReadOnly="True"
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch" 
                             TextAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown"/>
                </Border>
                <TextBlock Text="Length 2"
                           FontSize="24" 
                           FontWeight="Bold" Margin="27,5,0,0"  
                           TextAlignment="Center" 
                           VerticalAlignment="Top"
                           Grid.Row="1" 
                           Grid.Column="2" HorizontalAlignment="Left" Width="99" />
                <Border BorderBrush="Black" 
                        BorderThickness="1" 
                        CornerRadius="3" Margin="3,43,3,0"
                        Background="White" VerticalAlignment="Top"
                        Grid.Row="1" 
                        Grid.Column="2">
                    <TextBox x:Name="txtLength2" 
                             Margin="1" 
                             BorderBrush="{x:Null}" 
                             Text="" 
                             Foreground="Black" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             IsReadOnly="True"
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch" 
                             TextAlignment="Center" PreviewKeyDown="Common_PreviewKeyDown"/>
                </Border>
                <TextBlock Text="Position"
                           FontSize="24" 
                           FontWeight="Bold" Margin="31,5,0,0"  
                           TextAlignment="Center" 
                           VerticalAlignment="Top"
                           Grid.Row="1" 
                           Grid.Column="3" HorizontalAlignment="Left" Width="92" />
                <Border BorderBrush="Black" 
                        BorderThickness="1" 
                        CornerRadius="3" Margin="3,43,3,0"
                        Background="White" VerticalAlignment="Top"
                        Grid.Row="1" 
                        Grid.Column="3">
                    <TextBox x:Name="txtPosition" 
                             Margin="1" 
                             BorderBrush="{x:Null}" 
                             Text="" 
                             Foreground="Black" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             IsReadOnly="True"
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch" 
                             TextAlignment="Center" KeyUp="txtPosition_KeyUp" PreviewKeyDown="Common_PreviewKeyDown"/>
                </Border>
                <Button Name="cmdSave" 
                        Margin="4,42,0,0"
                        Content="Save" 
                        FontSize="22" 
                        FontStretch="Normal" 
                        FontWeight="Bold" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Grid.Row="1" 
                        Grid.Column="4" 
                        HorizontalAlignment="Left" 
                        Width="94" 
                        Height="43" 
                        VerticalAlignment="Top" Click="cmdSave_Click" />
                <Button Name="btnCancel" 
                    Content="Cancel" 
                    FontSize="22" 
                    FontStretch="Normal" 
                    FontWeight="Bold" 
                    Height="43" 
                    HorizontalAlignment="Left"
                    Margin="104,42,0,0"
                    Style="{StaticResource MenuButtonStyle}" 
                    VerticalAlignment="Top" 
                    Width="94" 
                    Grid.Column="4" 
                    Grid.Row="1" Click="btnCancel_Click" />
            </Grid>
        </Border>
        <!-- Content -->
        <Border Name ="contentBorder"
            CornerRadius="3" 
                Margin="3" 
                BorderThickness="2" 
                BorderBrush="Black">
            <DataGrid x:Name="gridDefectList"
                        ItemsSource="{Binding}"
                        Margin="3"
                        AlternatingRowBackground="AntiqueWhite"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        FontSize="20" 
                        FontWeight="Bold" 
                        SelectionMode="Extended" 
                        HorizontalGridLinesBrush="Silver" 
                        VerticalGridLinesBrush="Silver"
                        SelectedCellsChanged="gridDefectList_SelectedCellsChanged">

                <DataGrid.Columns>
                    <DataGridTextColumn Width="50" Header="No" 
                                        Binding="{Binding No}" 
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Width="120" Header="Length" 
                                        Binding="{Binding Length}" 
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Width="120" Header="Length 2" 
                                        Binding="{Binding Length2}" 
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Width="150" Header="Defect Length" 
                                        Binding="{Binding DefectLength}" 
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Width="75" Header="Code" 
                                        Binding="{Binding DefectCode}" 
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Width="150" Header="Description" 
                                        Binding="{Binding Description}" 
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Width="100" Header="Position" 
                                        Binding="{Binding Position}" 
                                        IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Name ="deleteBorder"
                CornerRadius="3" 
                Margin="3" 
                BorderThickness="2"
                BorderBrush="Black">
            <Grid>
                <StackPanel x:Name="deletePanel" 
                        Orientation="Vertical" 
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="User Name : " 
                       Margin="0, 2"
                       FontSize="22" 
                       FontWeight="Bold"
                       TextAlignment="Left"/>
                    <TextBox x:Name="txtUserName" 
                     Height="40" 
                     FontSize="22" 
                     FontWeight="Bold"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                     Margin="0, 2" PreviewKeyDown="txtUserName_PreviewKeyDown" />
                    <TextBlock Text="Password : " 
                       Margin="0, 2"
                       FontSize="22" 
                       FontWeight="Bold"
                       TextAlignment="Left" />
                    <PasswordBox x:Name="txtPwd"
                         Height="40" 
                         FontSize="22" 
                         FontWeight="Bold"
                         VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Margin="0, 2" PreviewKeyDown="txtPwd_PreviewKeyDown" />
                    <TextBlock Text="Reason : " 
                       Margin="0, 2"
                       FontSize="22" 
                       FontWeight="Bold"
                       TextAlignment="Left" />
                    <Grid>
                        <RadioButton Name="rbReasonList" 
                                     GroupName="rbReason"
                                     IsChecked="False"
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Left" 
                                     VerticalAlignment="Center" 
                                     Style="{StaticResource imageRadioButtonORBStyle}"
                                     Checked="rbReasonList_Checked" 
                                     Unchecked="rbReasonList_Unchecked" />
                        <ComboBox Name="cbReason"
                                              TextSearch.TextPath=""
                                              Margin="35,5,5,0"
                                              FontSize="22"      
                                              FontWeight="Bold" 
                                              ItemsSource="{Binding Reason, Mode=OneWay}"/>
                    </Grid>
                    <Grid>
                        <RadioButton Name="rbReasonText" 
                                     GroupName="rbReason"
                                     IsChecked="False"
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Left" 
                                     VerticalAlignment="Center" 
                                     Style="{StaticResource imageRadioButtonORBStyle}" Checked="rbReasonText_Checked" Unchecked="rbReasonText_Unchecked" />
                        <TextBox x:Name="txtReason" 
                                    Height="40" 
                                    FontSize="22" 
                                    FontWeight="Bold"
                                    VerticalContentAlignment="Center" 
                                     HorizontalContentAlignment="Center"
                                    Margin="35,2,6,2" />
                    </Grid>

                </StackPanel>
            </Grid>
        </Border>
    </DockPanel>
   
</Window>
