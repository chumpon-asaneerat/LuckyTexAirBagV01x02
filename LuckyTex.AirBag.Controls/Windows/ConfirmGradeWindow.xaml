<Window x:Class="LuckyTex.Windows.ConfirmGradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Grade" 
        Height="250" 
        Width="400"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        MinHeight="250" MinWidth="400">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Confirm Grade"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0">
            <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal"
                        VerticalAlignment="Stretch"
                    HorizontalAlignment="Center">
                <Button x:Name="cmdConfirm" 
                        Content="Confirm"
                        Margin="5" 
                        FontSize="22" 
                        FontWeight="Bold"
                        Height="40"
                        Width="150"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdConfirm_Click" />
                <Button x:Name="cmdChangeGrade" 
                        Content="Change Grade"
                        Margin="5" 
                        FontSize="22" 
                        FontWeight="Bold"
                        Height="40"
                        Width="200"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdChangeGrade_Click" />
            </StackPanel>

        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Width="350" Height="100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="225" />
                        <ColumnDefinition Width="115" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="90" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="GRADE" 
                       FontSize="64" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" Margin="0,3,6,0" />
                    <TextBlock x:Name="txtGrade"
                       Text="A" 
                       Foreground="Red" 
                       FontSize="64" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Grid.Column="2" Grid.Row="1" Margin="10,3,0,0" />
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>
