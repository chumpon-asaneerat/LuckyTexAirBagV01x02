<Window x:Class="LuckyTex.Windows.ChangeGradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Inspection Grade" 
        Height="450" 
        Width="500"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Change Inspection Grade"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <Border Background="#F0F0F0"
                DockPanel.Dock="Bottom">
            <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                <Button x:Name="cmd1" 
                        Content="A"
                        Margin="5" 
                        FontSize="48" 
                        FontWeight="Bold"
                        Height="55"
                        Width="150"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmd1_Click" />
                <Button x:Name="cmd2" 
                        Content="C"
                        Margin="5" 
                        FontSize="48" 
                        FontWeight="Bold"
                        Height="55"
                        Width="150"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmd2_Click" />
            </StackPanel>
        </Border>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <StackPanel Orientation="Vertical" 
                    Margin="5, 5"
                    Background="White"
                    HorizontalAlignment="Stretch">
                <TextBlock Text="User Name : " 
                           Margin="0, 2"
                           FontSize="28" 
                           FontWeight="Bold"
                           TextAlignment="Left"/>
                <TextBox x:Name="txtUserName" 
                         Margin="0, 2"  
                         FontSize="28" 
                         FontWeight="Bold"
                         VerticalContentAlignment="Center" 
                         HorizontalContentAlignment="Center"
                         PreviewKeyDown="txtUserName_PreviewKeyDown"/>
                <TextBlock Text="Password : " 
                           Margin="0, 2"
                           FontSize="28" 
                           FontWeight="Bold"
                       TextAlignment="Left" />
                <PasswordBox x:Name="txtPwd" 
                             Margin="0, 2" 
                             FontSize="28" 
                             FontWeight="Bold"
                             VerticalContentAlignment="Center" 
                             HorizontalContentAlignment="Center"
                             PreviewKeyDown="txtPwd_PreviewKeyDown"/>
                <StackPanel x:Name="remarkPanel" 
                        Orientation="Vertical" 
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="Remark : " 
                               Margin="0, 2"
                               FontSize="28" 
                               FontWeight="Bold"
                               TextAlignment="Left" />
                    <TextBox x:Name="txtRemark"                 
                             Margin="0, 2"
                             FontSize="28" 
                             FontWeight="Bold"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center" 
                             PreviewKeyDown="txtRemark_PreviewKeyDown"/>
                </StackPanel>
                <TextBlock x:Name="txtMsg" 
                       Text="" 
                       Foreground="Red"
                       Margin="0, 2"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       TextAlignment="Left" />
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
