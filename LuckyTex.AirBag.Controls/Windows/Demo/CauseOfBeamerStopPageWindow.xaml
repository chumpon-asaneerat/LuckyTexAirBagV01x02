<Window x:Class="LuckyTex.Windows.CauseOfBeamerStopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Specification type of PM" 
        Height="370" 
        Width="520" 
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Loaded="Window_Loaded" 
        Topmost="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Specification type of PM"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <Border Background="#F0F0F0"
                DockPanel.Dock="Bottom">
            <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                <Button x:Name="cmdSave" 
                        Content="Save"
                        Margin="5"
                        FontSize="22"
                        FontWeight="Bold"
                        Height="40" 
                        Width="107" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="cmdSave_Click">
                </Button>
                <Button x:Name="cmdClose" 
                        Content="Close"
                        Margin="5"
                        FontSize="22"
                        FontWeight="Bold"
                        Height="40" 
                        Width="107" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdClose_Click" 
                        Grid.Column="1">
                </Button>
            </StackPanel>
        </Border>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <Grid>
                <ComboBox x:Name="cbSpecificationType" Margin="30,14,0,0" Width="200" FontSize="24" FontWeight="Bold" Height="41" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="249,23,0,0" Text="Length : " TextAlignment="Center" VerticalAlignment="Top" />
                <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="3" Height="50" Margin="353,14,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="119">
                    <TextBox FontSize="24" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Margin="5" Name="txtLength" Text="" TextAlignment="Center" VerticalAlignment="Center" Width="110" />
                </Border>
                <TextBlock Margin="5,78,0,0" Text="Operator : " FontSize="24" FontWeight="Bold" TextAlignment="Right" Width="124" Height="42" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Margin="142,75,0,0" Background="White" VerticalAlignment="Top" HorizontalAlignment="Left" Width="330">
                    <TextBox x:Name="txtOperator" Margin="5" Text="" Foreground="Black" FontSize="24" FontWeight="Bold" Width="316" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" />
                </Border>
            </Grid>
        </Border>
    </DockPanel>
</Window>
