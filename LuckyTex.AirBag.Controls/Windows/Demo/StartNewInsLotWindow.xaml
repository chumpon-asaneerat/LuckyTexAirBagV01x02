<Window x:Class="LuckyTex.Windows.StartNewInsLotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start New Ins Lot" 
        Height="200" 
        Width="369"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Topmost="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Start New Ins Lot"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <Border Background="#F0F0F0"
                DockPanel.Dock="Bottom">
            <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                <Button x:Name="cmdYES" 
                        Content="Yes"    
                        Margin="5" 
                        FontSize="22"
                        FontWeight="Bold"
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdYES_Click">
                </Button>
                <Button x:Name="cmdNO" 
                        Content="No" 
                        Margin="5" 
                        FontSize="22"
                        FontWeight="Bold"
                        Height="40"
                        Width="100"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdNO_Click">
                </Button>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <Grid>
                <TextBlock Text="Start New Ins Lot" 
                           Margin="0,10,0,10" 
                           FontFamily="Times New Roman" 
                           FontSize="32" 
                           FontStretch="Normal" 
                           FontWeight="ExtraBold" 
                           TextAlignment="Center" />
            </Grid>
        </Border>
    </DockPanel>
</Window>
