<Window x:Class="LuckyTex.Windows.InspectionRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inspection Record List" 
        Height="500" 
        Width="1000" 
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border CornerRadius="3" 
                Margin="3"
                Background="CornflowerBlue"
                Height="40"
                DockPanel.Dock="Top">
            <TextBlock Text="Inspection Record List" 
                       Margin="3" 
                       Foreground="White"
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"                        
                       TextAlignment="Center" 
                       VerticalAlignment="Center" />
        </Border>
        <!-- Button Command Bars -->
        <Border Background="#F0F0F0"
                DockPanel.Dock="Bottom"
                Margin="3"
                Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="376*" />
                    <ColumnDefinition Width="218*" />
                    <ColumnDefinition Width="376*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="cmdOk" 
                        Content="Ok"
                        Margin="0,5,0,0" 
                        FontSize="22" 
                        FontWeight="Bold"
                        Height="48" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right" 
                        Width="200"
                        Style="{StaticResource MenuButtonStyle}" Click="cmdOk_Click" >
                </Button>
                <Button x:Name="cmdCancel" 
                        Content="Cancel"  
                        Margin="9,5,0,0" 
                        Width="200"
                        FontSize="22" 
                        FontWeight="Bold"
                        Grid.Column="1" 
                        Height="48" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdCancel_Click">
                </Button>
                <Button x:Name="cmdEdit" 
                    Content="Edit"
                    Margin="0,5,0,0" 
                        FontSize="22" 
                    FontWeight="Bold"
                        Height="48" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right" 
                        Width="200"
                    Style="{StaticResource MenuButtonStyle}" 
                    Click="cmdEdit_Click" />
                <Button x:Name="cmdDelete" 
                        Content="Delete"
                        Margin="9,5,0,0" 
                        Width="200"
                        FontSize="22" 
                        FontWeight="Bold"
                        Grid.Column="1" 
                        Height="48" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left" 
                    Style="{StaticResource MenuButtonStyle}" 
                    Click="cmdDelete_Click" />
                <Button x:Name="cmdClose" 
                    Content="Close"
                    Margin="0,5,0,0" 
                    Width="200"
                    FontSize="22" 
                    FontWeight="Bold"
                    Style="{StaticResource MenuButtonStyle}" 
                    Click="cmdClose_Click" 
                        Grid.Column="2" 
                        Height="48" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left" />
            </Grid>
            
        </Border>
        <!-- Content -->
        <Border x:Name= "contentBorder" 
                CornerRadius="3" 
                Margin="3" 
                BorderThickness="2" 
                BorderBrush="Black">
            <DataGrid x:Name="grid100MRecord"
                            Margin="3,3"
                            ItemsSource="{Binding}"
                            AlternatingRowBackground="AntiqueWhite"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalGridLinesBrush="Silver" 
                            VerticalGridLinesBrush="Silver" SelectedCellsChanged="grid100MRecord_SelectedCellsChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="STD Length" 
                                    Binding="{Binding STDLength}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Actual Length" 
                                    Binding="{Binding ActualLength}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Density W" 
                                    Binding="{Binding DensityW}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Density F" 
                                    Binding="{Binding DensityF}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Width All" 
                                    Binding="{Binding WidthAll}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Width Pin" 
                                    Binding="{Binding WidthPin}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Width Coat" 
                                    Binding="{Binding WidthCoat}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Trim L" 
                                    Binding="{Binding TrimL}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Trim R" 
                                    Binding="{Binding TrimR}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Floppy L" 
                                    Binding="{Binding FloppyL}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Floppy R" 
                                    Binding="{Binding FloppyR}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Unwinder Set" 
                                    Binding="{Binding UnwinderSet}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Unwinder Actual" 
                                    Binding="{Binding UnwinderActual}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Winder Set" 
                                    Binding="{Binding WinderSet}" 
                                    IsReadOnly="True"/>
                            <DataGridTextColumn Header="Winder Actual" 
                                    Binding="{Binding WinderActual}" 
                                    IsReadOnly="True"/>
                    <DataGridTextColumn Header="Hardness L" 
                                    Binding="{Binding HardnessL}" 
                                    IsReadOnly="True"/>
                    <DataGridTextColumn Header="Hardness C" 
                                    Binding="{Binding HardnessC}" 
                                    IsReadOnly="True"/>
                    <DataGridTextColumn Header="Hardness R" 
                                    Binding="{Binding HardnessR}" 
                                    IsReadOnly="True"/>
                </DataGrid.Columns>
                    </DataGrid>
        </Border>

        <Border Name ="deleteBorder"
                CornerRadius="3" 
                Margin="3" 
                BorderThickness="2"
                BorderBrush="Black">
            <Grid HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Width="750" Height="276">
                <StackPanel x:Name="deletePanel" 
                        Orientation="Vertical" 
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="User Name : " 
                       Margin="0, 2"
                       FontSize="22" 
                       FontWeight="Bold"
                       TextAlignment="Left"/>
                    <TextBox x:Name="txtUserName" 
                             Height="40" 
                             FontSize="22" 
                             FontWeight="Bold"
                             VerticalContentAlignment="Center" 
                             HorizontalContentAlignment="Center"
                             Margin="0, 2" 
                             PreviewKeyDown="txtUserName_PreviewKeyDown" />
                    <TextBlock Text="Password : " 
                       Margin="0, 2"
                       FontSize="22" 
                       FontWeight="Bold"
                       TextAlignment="Left" />
                    <PasswordBox x:Name="txtPwd"
                         Height="40" 
                         FontSize="22" 
                         FontWeight="Bold"
                         VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Margin="0, 2" PreviewKeyDown="txtPwd_PreviewKeyDown" />
                    <TextBlock Text="Reason : " 
                       Margin="0, 2"
                       FontSize="22" 
                       FontWeight="Bold"
                       TextAlignment="Left" />
                    <Grid>
                        <TextBox x:Name="txtReason" 
                                   Margin="0, 2"
                                    Height="40" 
                                    FontSize="22" 
                                    FontWeight="Bold"
                                    VerticalContentAlignment="Center" 
                                    HorizontalContentAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Content -->
        <Border Name="contentEdit" 
                CornerRadius="3" 
                Margin="3" 
                BorderThickness="2" 
                BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Width="650" Height="276">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="2" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="STD Length :" 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold"                                        
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="1" />
                    <TextBox Name="txtSTDLength" 
                             Margin="2"
                             IsEnabled="False"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="1" >
                    </TextBox>
                    <TextBlock Text="Act Length :" 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold"                                        
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="2" />
                    <TextBox Name="txtActualLength" 
                             Margin="2"
                             IsEnabled="False"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="2" >
                    </TextBox>
                    <TextBlock Text="Density : " 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold"                                        
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="3" />
                    <TextBlock Text="Width : " 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold"                                        
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="4" />
                    <TextBlock Text="Trim (L/R) : " 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="5" />
                    <TextBlock Text="Floppy : " 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold"                                        
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="6" />
                    <TextBlock Text="Hardness : " 
                               Margin="2"
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               TextAlignment="Right" 
                               VerticalAlignment="Center" 
                               Grid.Column="1" Grid.Row="7" />
                    <TextBox Name="txtDensityW" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="3" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtDensityF" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="3" Grid.Row="3" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtWdAll" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold"
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="4" PreviewKeyDown="Common_PreviewKeyDown" KeyDown="testInput_KeyDown" LostFocus="txtWdAll_LostFocus">
                    </TextBox>
                    <TextBox Name="txtWdPin" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="3" Grid.Row="4" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown" LostFocus="txtWdPin_LostFocus">
                    </TextBox>
                    <TextBox Name="txtWdCoat" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="4" Grid.Row="4" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown" LostFocus="txtWdCoat_LostFocus">
                    </TextBox>
                    <TextBox Name="txtTrimL" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="5" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtTrimR" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="3" Grid.Row="5" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtFloppyL" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="6" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtFloppyR" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="3" Grid.Row="6" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtHardnessL" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="2" Grid.Row="7" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtHardnessC" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center"
                             TextAlignment="Center" 
                             Grid.Column="3" Grid.Row="7" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtHardnessR" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center"
                             TextAlignment="Center" 
                             Grid.Column="4" Grid.Row="7" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBlock Text="Tension" 
                               Margin="2"
                               Foreground="White" 
                               Background="CornflowerBlue" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch"                                        
                               VerticalAlignment="Center" 
                               TextAlignment="Center" 
                               Grid.Column="6" Grid.Row="3" Grid.ColumnSpan="2" />
                    <TextBlock Name="txtU"
                               Text="Unwinder"
                               Margin="2"
                               Foreground="White" 
                               Background="CornflowerBlue" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch"                                      
                               VerticalAlignment="Stretch" 
                               TextAlignment="Center" 
                               Grid.Column="6" Grid.Row="4" />
                    <TextBlock Name="txtW"
                               Text="Winder"
                               Margin="2"
                               Foreground="White" 
                               Background="CornflowerBlue" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch"                                      
                               VerticalAlignment="Stretch" 
                               TextAlignment="Center" 
                               Grid.Column="7" Grid.Row="4" />
                    <TextBox Name="txtUSet" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch"                                      
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="6" Grid.Row="5" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtWSet" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch"                                      
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="7" Grid.Row="5" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtUActual" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch"                                      
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="6" Grid.Row="6" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <TextBox Name="txtWActual" 
                             Margin="2"
                             CharacterCasing="Upper" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             HorizontalAlignment="Stretch"                                      
                             VerticalAlignment="Center" 
                             TextAlignment="Center" 
                             Grid.Column="7" Grid.Row="6" 
                             PreviewKeyDown="Common_PreviewKeyDown" 
                             KeyDown="testInput_KeyDown">
                    </TextBox>
                    <Button Name="cmdSaveTestRecord" 
                            Margin="5, 2"
                            Content="Save" 
                            FontSize="22" 
                            FontStretch="Normal" 
                            FontWeight="Bold" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="6" Grid.Row="7" 
                            Click="cmdSaveTestRecord_Click" />
                    <Button Name="btnCancel" 
                            Margin="5, 2"
                            Content="Cancel" 
                            FontSize="22" 
                            FontStretch="Normal" 
                            FontWeight="Bold" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Grid.Column="7" Grid.Row="7" 
                            Click="btnCancel_Click" />
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>
