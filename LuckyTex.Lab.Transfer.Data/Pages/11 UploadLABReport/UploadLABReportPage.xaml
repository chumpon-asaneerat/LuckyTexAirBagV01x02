<UserControl x:Class="LuckyTex.Pages.UploadLABReportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Upload LAB Report"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="1420*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="510*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Label Content="Item Code : " Grid.Column="1" Grid.Row="1" Margin="6,4,0,0" Name="label1" 
                           FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <ComboBox Name="cbItemCode" 
                              Margin="135,6,0,0"
                               DisplayMemberPath="ITM_CODE" 
                               SelectedValuePath="ITM_CODE"
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding GetItemCodeData, Mode=OneWay}"
                              Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Width="208" HorizontalAlignment="Left" />
                    <Label Content="Entry Date : " 
                               Margin="410,4,0,0"
                               FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Width="126" />
                    <DatePicker Name="dteENTRYSTARTDATE" 
                                 Margin="542,6,0,0"
                                 FontSize="20" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                Grid.Column="1" 
                                Grid.Row="1" Width="180" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" />
                    <Label Content=" - " 
                               Margin="728,4,0,0"
                               FontSize="20" 
                               FontWeight="Bold" 
                               FlowDirection="RightToLeft" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Width="25" />
                    <DatePicker Name="dteENTRYENDDATE" 
                                 Margin="759,6,0,0"
                                 FontSize="20" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                Grid.Column="1" 
                                Grid.Row="1" Width="180" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" />
                    <Label Content="Loom No : " FontSize="20" FontWeight="Bold" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Margin="16,4,0,0" Name="label2" VerticalAlignment="Top" />
                    <ComboBox Name="cbMCNAME" 
                              Margin="135,6,0,0"
                               DisplayMemberPath="MCNAME" 
                               SelectedValuePath="MCNAME"
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding GetItemCodeData, Mode=OneWay}"
                              Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Width="208" HorizontalAlignment="Left" />
                    <Label Content="Finishing Process : " FontSize="20" FontWeight="Bold" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Margin="349,4,0,0" Name="labFinishingProcess" VerticalAlignment="Top" />
                    <ComboBox Name="cbFinishingProcess" 
                              Margin="542,6,0,0"
                               DisplayMemberPath="PROCESS" 
                               SelectedValuePath="PROCESS"
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding GetItemCodeData, Mode=OneWay}"
                              Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Width="180" HorizontalAlignment="Left" />
                    <Button Name="cmdSearch" 
                            Content="Search"
                            Margin="759,4,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="130" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="2" Grid.Column="1" Click="cmdSearch_Click">
                    </Button>
                    <Button Name="cmdClear" 
                            Content="Clear"
                            Margin="896,4,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="130" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="2" Grid.Column="1" Click="cmdClear_Click">
                    </Button>
                <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto" Margin="3" Grid.Row="3" Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="546*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="1" Margin="3">
                                    <DataGrid 
                                    x:Name="gridLabEntryProduction" 
                                    Margin="3,3,3,3"
                                    ItemsSource="{Binding}"
                                    SelectionMode="Extended"
                                    AlternatingRowBackground="AntiqueWhite"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    FontSize="20" 
                                    FontWeight="Bold" 
                                    HorizontalGridLinesBrush="Silver" 
                                    VerticalGridLinesBrush="Silver"
                                    HorizontalContentAlignment="Left" 
                                    SelectedCellsChanged="gridLabEntryProduction_SelectedCellsChanged"
                                    ScrollViewer.CanContentScroll="True" 
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Binding="{Binding Path= ITM_CODE, Mode= OneWay}"  Header="Item Code" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}">
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>
                                    <DataGridTextColumn Binding="{Binding Path= WEAVINGLOT, Mode= OneWay}" Header="Production Lot" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}">
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding Path= FINISHINGLOT , Mode= OneWay}" Header="Finishing Lot" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}">
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Width="180" Header="Entry Date" 
                                    Binding="{Binding ENTRYDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                                            <DataGridTextColumn Width="170" Header="Finishing Length" 
                                    Binding="{Binding FINISHLENGTH, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}"  
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RightCellStyle}"/>
                                            <DataGridTextColumn Binding="{Binding Path= ENTEYBY , Mode= OneWay}" Header="Operator" IsReadOnly="True" Width="120" CellStyle="{StaticResource CenterCellStyle}">
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn Binding="{Binding Path= LOOMNO , Mode= OneWay}" Header="Loom No" IsReadOnly="True" Width="120" CellStyle="{StaticResource CenterCellStyle}">
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn Binding="{Binding Path= FINISHINGMC , Mode= OneWay}" Header="Finishing Process" IsReadOnly="True" Width="180" CellStyle="{StaticResource CenterCellStyle}">
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>

                                    <DataGridTextColumn Binding="{Binding Path= FILENAME , Mode= OneWay}" Header="FileName" IsReadOnly="True" Width="150" CellStyle="{StaticResource CenterCellStyle}">
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Width="180" Header="Upload Date" 
                                    Binding="{Binding UPLOADDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" 
                                    IsReadOnly="True" CellStyle="{StaticResource CenterCellStyle}"/>
                                </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Grid>
                    </ScrollViewer>
                    <Grid 
                        Grid.Row="5" 
                        Grid.Column="1" HorizontalAlignment="Left" Width="236">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                    <Button Name="cmdUpload" 
                            Content="Upload"
                            Margin="0,0,164,3" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="150" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Style="{StaticResource MenuButtonStyle}" Grid.Row="4" Grid.Column="1" Click="cmdUpload_Click">
                    </Button>
                    <Button Name="cmdDownload" 
                            Content="Download"
                            Margin="0,0,8,3" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="150" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Style="{StaticResource MenuButtonStyle}" Grid.Row="4" Grid.Column="1" Click="cmdDownload_Click">
                    </Button>
                </Grid>
        </Border>
    </DockPanel>
  
</UserControl>
