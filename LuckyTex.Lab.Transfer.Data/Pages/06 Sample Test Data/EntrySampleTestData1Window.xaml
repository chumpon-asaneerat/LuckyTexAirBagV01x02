<Window x:Class="LuckyTex.Windows.EntrySampleTestData1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="765" 
             Width="1200"  
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        MinHeight="300" MinWidth="500" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="" Name="txtMethod"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Grid>
                    <Button Name="cmdSave" Content="Save" Margin="0,0,159,1" FontSize="22" FontWeight="Bold" Height="40" Width="165" Style="{StaticResource MenuButtonStyle}" Click="cmdSave_Click" HorizontalAlignment="Right"></Button>
                <Button x:Name="cmdBack"
                        Content="Close"
                        Margin="0,2,2,2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>
            <Grid>
                <TextBlock Text="Average : " Margin="10,10,0,0" FontSize="18" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <TextBox x:Name="txtAverage" Margin="100,9,0,0" IsReadOnly="True" CharacterCasing="Upper" FontSize="18" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" Width="196"></TextBox>
            </Grid>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="1185*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="645*" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Label Content="Item Code : " Grid.Column="1" Grid.Row="1" Margin="2,4,0,0" Name="labITMCODE" 
                           FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtITMCODE"  
                                    Margin="117,8,0,0" Grid.Row="1"
                                    CharacterCasing="Upper"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    TextAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Width="150" HorizontalAlignment="Left" IsEnabled="False">
                    </TextBox>
                    <Label Name="labWEAVINGLOG" Content="Production Lot : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="269,4,0,0" VerticalAlignment="Top" />
                    <TextBox Name="txtWEAVINGLOG" CharacterCasing="Upper" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="423,8,0,0" TextAlignment="Center" VerticalAlignment="Top" Width="150" IsEnabled="False"/>
                    <Label Name="labFINISHINGLOT" Content="Finishing Lot : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="576,4,0,0" VerticalAlignment="Top" />
                    <TextBox Name="txtFINISHINGLOT" CharacterCasing="Upper" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="712,8,0,0" TextAlignment="Center" VerticalAlignment="Top" Width="150" IsEnabled="False"/>
                    <Label Content="Entry Date : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="865,4,0,0" Name="labEntryDate" VerticalAlignment="Top" />
                    <DatePicker Name="dteEntryDate" 
                                 Margin="984,5,0,0"
                                 FontSize="18" 
                                 FontWeight="Bold" 
                                 Foreground="Black" 
                                 VerticalAlignment="Top" 
                                 Grid.Column="1" Grid.Row="1" Width="160" HorizontalAlignment="Left" IsEnabled="False"/>
                    
                    <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto" Margin="3" Grid.Row="3" Grid.Column="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="546*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="1" Margin="3">
                                        <DataGrid 
                                            x:Name="gridLab_SampleTestData" 
                                            Margin="3,3,3,3"
                                            ItemsSource="{Binding}"
                                            SelectionMode="Extended"
                                            AlternatingRowBackground="AntiqueWhite"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="False"
                                            CanUserDeleteRows="False"
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            HorizontalGridLinesBrush="Silver" 
                                            VerticalGridLinesBrush="Silver"
                                            HorizontalContentAlignment="Left" 
                                            SelectedCellsChanged="gridLab_SampleTestData_SelectedCellsChanged"
                                            ScrollViewer.CanContentScroll="True" 
                                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                                            ScrollViewer.HorizontalScrollBarVisibility="Auto" PreviewKeyDown="Common_PreviewKeyDown" LostFocus="gridLab_SampleTestData_LostFocus">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Width="100" Header="No" 
                                                Binding="{Binding P_NO, Mode= OneWay, StringFormat='{}{0:#,##0.##}'}" IsReadOnly="True" CellStyle="{StaticResource RightCellStyle}"/>
                                                <DataGridTextColumn Width="100" Header="VALUE" 
                                                Binding="{Binding P_VALUE, Mode= TwoWay, StringFormat='{}{0:#,##0.##}'}" CellStyle="{StaticResource RightCellStyle}" />

                                        </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </Grid>
                            </ScrollViewer>             
                </Grid>
        </Border>
    </DockPanel>
  
</Window>
