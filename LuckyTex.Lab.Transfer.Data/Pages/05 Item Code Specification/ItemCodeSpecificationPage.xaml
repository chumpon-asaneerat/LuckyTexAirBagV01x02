                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="130" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="1" Grid.Column="1" Click="cmdEdit_Click">
