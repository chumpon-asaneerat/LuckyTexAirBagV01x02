<UserControl x:Class="LuckyTex.Pages.ElectricBalancePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Electric Balance (Weight)"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="1420*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                    <RowDefinition Height="648*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                <Label Content="Item Code : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="326,6,0,0" Name="labITMCODE" VerticalAlignment="Top" />
                <TextBox CharacterCasing="Upper" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="441,10,0,0" Name="txtITMCODE" TextAlignment="Center" VerticalAlignment="Top" Width="150" KeyDown="txtITMCODE_KeyDown" LostFocus="txtITMCODE_LostFocus" />
                <Label Content="Production Lot : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="9,6,0,0" Name="labWEAVINGLOG" VerticalAlignment="Top" />
                <TextBox CharacterCasing="Upper" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="163,10,0,0" Name="txtPRODUCTIONLOT" TextAlignment="Center" VerticalAlignment="Top" Width="150" KeyDown="txtPRODUCTIONLOT_KeyDown" LostFocus="txtPRODUCTIONLOT_LostFocus" />
              
                <Button Content="Clear" FontSize="30" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="603,3,0,0" Name="cmdClear" Style="{StaticResource MenuButtonStyle}" Width="150" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Click="cmdClear_Click" />
                <CheckBox Content="Re-Test" FontSize="35" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="764,3,0,0" Name="chkRetest" Style="{StaticResource imageCheckedBoxOKStyle}" VerticalAlignment="Top" Checked="chkRetest_Checked" Unchecked="chkRetest_Unchecked" />
                <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto" Margin="3" Grid.Row="2" Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="546*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="1" Margin="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0*" />
                                <ColumnDefinition Width="1173*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition Height="130" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="110" />
                                <RowDefinition Height="86*" />
                            </Grid.RowDefinitions>

                            <Label Content="Weight (PLC Data) :" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="51,12,0,0" Name="labWeight" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
                            <TextBox CharacterCasing="Upper" 
                                     FontSize="65" 
                                     FontWeight="Bold"  
                                     HorizontalAlignment="Left" Margin="269,12,0,0" Name="txtWeight" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="1" KeyDown="txtWeight_KeyDown" PreviewKeyDown="Common_PreviewKeyDown" />
                            <Label Content="X 100" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="534,75,0,0" Name="label1" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Foreground="Red" />
                            <Button  Content="Select" FontSize="45" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="534,12,0,0" Name="cmdSelect" Style="{StaticResource MenuButtonStyle}" Width="181" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Click="cmdSelect_Click" KeyDown="cmdSelect_KeyDown" />
                            <CheckBox Name="chkManual"
                                              Content="Manual"         
                                              Margin="729,19,0,0"
                                              FontSize="22" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Left" 
                                              VerticalAlignment="Top" 
                                              Style="{StaticResource imageCheckedBoxOKStyle}"
                                              Grid.Column="1" 
                                              Grid.Row="1" 
                                              Checked="chkManual_Checked" 
                                              Unchecked="chkManual_Unchecked" />
                            <Label Content="1" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="139,13,0,0" Name="lab1" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="172,13,0,0" Name="txtWeight1" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWeight1_KeyDown" LostFocus="txtWeight1_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="True" Margin="136,56,0,0" Name="rbN1" GroupName="ReTest" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="2" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="434,13,0,0" Name="lab2" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2"/>
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="467,13,0,0" Name="txtWeight2" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWeight2_KeyDown" LostFocus="txtWeight2_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="431,56,0,0" Name="rbN2" GroupName="ReTest" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="3" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="729,13,0,0" Name="lab3" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="762,13,0,0" Name="txtWeight3" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWeight3_KeyDown" LostFocus="txtWeight3_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="726,56,0,0" Name="rbN3" GroupName="ReTest" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="4" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="139,13,0,0" Name="lab4" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="172,13,0,0" Name="txtWeight4" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="3" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWeight4_KeyDown" LostFocus="txtWeight4_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="136,56,0,0" Name="rbN4" GroupName="ReTest" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="5" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="434,13,0,0" Name="lab5" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3"/>
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="467,13,0,0" Name="txtWeight5" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="3" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWeight5_KeyDown" LostFocus="txtWeight5_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="431,56,0,0" Name="rbN5" GroupName="ReTest" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="6" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="729,13,0,0" Name="lab6" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="762,13,0,0" Name="txtWeight6" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="3" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWeight6_KeyDown" LostFocus="txtWeight6_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="726,56,0,0" Name="rbN6" GroupName="ReTest" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Button Content="Save" FontSize="45" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="847,12,0,0" Name="cmdSave" Style="{StaticResource MenuButtonStyle}" Width="181" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Click="cmdSave_Click" />

                            <Border BorderBrush="Silver" BorderThickness="1" Grid.Column="1" Name="border1" Margin="0,0,0,0">
                                <StackPanel Margin="0" Orientation="Horizontal">
                                    <RadioButton Name="rbTotalWeight" 
                                                         Content="Total Weight" 
                                                         Margin="5" 
                                                         FlowDirection="LeftToRight" 
                                                         FontSize="40" 
                                                         FontWeight="Bold" 
                                                         IsChecked="True"   
                                                         Style="{StaticResource imageRadioButtonORBStyle}" Checked="rbTotalWeight_Checked" />
                                    <RadioButton Name="rbUncoatedWeight" 
                                                         Content="Uncoated Weight" 
                                                         Margin="5" 
                                                         FlowDirection="LeftToRight" 
                                                         FontSize="40" 
                                                         FontWeight="Bold"  
                                                         Style="{StaticResource imageRadioButtonORBStyle}" Checked="rbUncoatedWeight_Checked" />
                                    <RadioButton Name="rbCoatingWeight" 
                                                         Content="Coating Weight" 
                                                         Margin="5" 
                                                         FlowDirection="LeftToRight" 
                                                         FontSize="40" 
                                                         FontWeight="Bold"  
                                                         Style="{StaticResource imageRadioButtonORBStyle}" Checked="rbCoatingWeight_Checked" />
                                </StackPanel>
                            </Border>
                        </Grid>
                      </Grid>
                    </ScrollViewer>
                    <Grid 
                        Grid.Row="3" 
                        Grid.Column="1" HorizontalAlignment="Left" Width="236">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                
            </Grid>
        </Border>
    </DockPanel>
  
</UserControl>
