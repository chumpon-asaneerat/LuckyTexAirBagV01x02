<UserControl x:Class="LuckyTex.Pages.DynamicAirPermeabilityPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="Dynamic Air Permeability"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="1420*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                    <RowDefinition Height="648*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                <Label Content="Item Code : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="326,6,0,0" Name="labITMCODE" VerticalAlignment="Top" />
                <TextBox CharacterCasing="Upper" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="441,10,0,0" Name="txtITMCODE" TextAlignment="Center" VerticalAlignment="Top" Width="150" LostFocus="txtITMCODE_LostFocus" KeyDown="txtITMCODE_KeyDown" />
                <Label Content="Production Lot : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="9,6,0,0" Name="labWEAVINGLOG" VerticalAlignment="Top" />
                <TextBox CharacterCasing="Upper" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="163,10,0,0" Name="txtPRODUCTIONLOT" TextAlignment="Center" VerticalAlignment="Top" Width="150" KeyDown="txtPRODUCTIONLOT_KeyDown" LostFocus="txtPRODUCTIONLOT_LostFocus" />
              
                <Button Content="Clear" FontSize="30" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="603,3,0,0" Name="cmdClear" Style="{StaticResource MenuButtonStyle}" Width="150" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Click="cmdClear_Click" />
                <CheckBox Content="Re-Test" FontSize="35" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="764,3,0,0" Name="chkRetest" Style="{StaticResource imageCheckedBoxOKStyle}" VerticalAlignment="Top" Checked="chkRetest_Checked" Unchecked="chkRetest_Unchecked" />
                <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto" Margin="3" Grid.Row="2" Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="546*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="1" Margin="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0*" />
                                <ColumnDefinition Width="1173*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="140" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="100" />
                                <RowDefinition Height="156*" />
                            </Grid.RowDefinitions>

                            <Label Content="Dynamic Air Permeability :" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="6,12,0,0" Name="labWeight" VerticalAlignment="Top" Grid.Column="1" />
                            <TextBox CharacterCasing="Upper" 
                                     FontSize="65" 
                                     FontWeight="Bold"  
                                     HorizontalAlignment="Left" Margin="249,12,0,0"
                                     Name="txtDynamic_Air" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" KeyDown="txtDynamic_Air_KeyDown" PreviewKeyDown="Common_PreviewKeyDown" />
                            <Label Content="Exponent :" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="507,12,0,0" Name="label1" VerticalAlignment="Top" Grid.Column="1" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="615,12,0,0" Name="txtExponent" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" KeyDown="txtExponent_KeyDown" PreviewKeyDown="Common_PreviewKeyDown" />
                                    <Button  Content="Select" FontSize="45" FontWeight="Bold" Grid.Column="1" Margin="877,12,0,0" Name="cmdSelect" Style="{StaticResource MenuButtonStyle}" Width="181" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Click="cmdSelect_Click" KeyDown="cmdSelect_KeyDown" />
                            <CheckBox Name="chkManual"
                                              Content="Manual"         
                                              Margin="1065,19,0,0"
                                              FontSize="22" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Left" 
                                              VerticalAlignment="Top" 
                                              Style="{StaticResource imageCheckedBoxOKStyle}"
                                              Grid.Column="1" Checked="chkManual_Checked" 
                                              Unchecked="chkManual_Unchecked" />
                            <Label Content="1" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="256,13,0,0" Name="lab1" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="289,13,0,0"  Name="txtDynamic_Air1" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="1" PreviewTextInput="NumberValidationTextBox" KeyDown="txtDynamic_Air1_KeyDown" LostFocus="txtDynamic_Air1_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="True" Margin="253,56,0,0" Name="rbDynamic_AirN1" GroupName="Dynamic_Air" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="2" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="551,13,0,0" Name="lab2" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="584,13,0,0" Name="txtDynamic_Air2" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="1" PreviewTextInput="NumberValidationTextBox" KeyDown="txtDynamic_Air2_KeyDown" LostFocus="txtDynamic_Air2_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="548,56,0,0" Name="rbDynamic_AirN2" GroupName="Dynamic_Air" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="3" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="846,13,0,0" Name="lab3" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="879,13,0,0" Name="txtDynamic_Air3" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="1" PreviewTextInput="NumberValidationTextBox" KeyDown="txtDynamic_Air3_KeyDown" LostFocus="txtDynamic_Air3_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="843,56,0,0" Name="rbDynamic_AirN3" GroupName="Dynamic_Air" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="1" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="256,13,0,0" Name="lab4" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="289,13,0,0" Name="txtExponent1" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtExponent1_KeyDown" LostFocus="txtExponent1_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="True" Margin="253,56,0,0" Name="rbExponentN1" GroupName="Exponent" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="2" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="551,13,0,0" Name="lab5" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2"/>
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="584,13,0,0" Name="txtExponent2" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtExponent2_KeyDown" LostFocus="txtExponent2_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="548,56,0,0" Name="rbExponentN2" GroupName="Exponent" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="3" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="846,13,0,0" Name="lab6" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="879,13,0,0" Name="txtExponent3" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtExponent3_KeyDown" LostFocus="txtExponent3_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="843,56,0,0" Name="rbExponentN3" GroupName="Exponent" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Button Content="Save" FontSize="45" FontWeight="Bold" Grid.Column="1" Margin="877,78,0,0" Name="cmdSave" Style="{StaticResource MenuButtonStyle}" Width="181" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Click="cmdSave_Click" />
                            <Label Content="Dynamic Air Permeability :" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="6,39,0,0" Name="label2" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" />
                            <Label Content="Exponent :" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Margin="141,39,0,0" Name="label3" VerticalAlignment="Top" />
                        </Grid>
                      </Grid>
                    </ScrollViewer>
                    <Grid 
                        Grid.Row="3" 
                        Grid.Column="1" HorizontalAlignment="Left" Width="236">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
            </Grid>
        </Border>
    </DockPanel>
  
</UserControl>
