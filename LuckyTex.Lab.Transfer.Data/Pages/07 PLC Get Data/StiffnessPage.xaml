<UserControl x:Class="LuckyTex.Pages.StiffnessPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="STIFFNESS M/C"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="1420*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                    <RowDefinition Height="648*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                <Label Content="Item Code : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="326,6,0,0" Name="labITMCODE" VerticalAlignment="Top" />
                <TextBox CharacterCasing="Upper" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="441,10,0,0" Name="txtITMCODE" TextAlignment="Center" VerticalAlignment="Top" Width="150" LostFocus="txtITMCODE_LostFocus" KeyDown="txtITMCODE_KeyDown" />
                <Label Content="Production Lot : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="9,6,0,0" Name="labWEAVINGLOG" VerticalAlignment="Top" />
                <TextBox CharacterCasing="Upper" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="163,10,0,0" Name="txtPRODUCTIONLOT" TextAlignment="Center" VerticalAlignment="Top" Width="150" KeyDown="txtPRODUCTIONLOT_KeyDown" LostFocus="txtPRODUCTIONLOT_LostFocus" />
              
                <Button Content="Clear" FontSize="30" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="603,3,0,0" Name="cmdClear" Style="{StaticResource MenuButtonStyle}" Width="150" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Click="cmdClear_Click" />
                <CheckBox Content="Re-Test" FontSize="35" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="764,3,0,0" Name="chkRetest" Style="{StaticResource imageCheckedBoxOKStyle}" VerticalAlignment="Top" Checked="chkRetest_Checked" Unchecked="chkRetest_Unchecked" />
                <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto" Margin="3" Grid.Row="2" Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="546*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="1" Margin="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0*" />
                                <ColumnDefinition Width="1173*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="86*" />
                            </Grid.RowDefinitions>

                            <Label Content="Stiffness (PLC Data) :" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,12,0,0" Name="labWeight" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
                            <TextBox CharacterCasing="Upper" 
                                     FontSize="65" 
                                     FontWeight="Bold"  
                                     HorizontalAlignment="Left" Margin="241,12,0,0" Name="txtWeight" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="1" KeyDown="txtWeight_KeyDown" PreviewKeyDown="Common_PreviewKeyDown" />
                            <Button Content="Select" FontSize="45" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="506,12,0,0" Name="cmdSelect" Style="{StaticResource MenuButtonStyle}" Width="181" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Click="cmdSelect_Click" KeyDown="cmdSelect_KeyDown" />
                            <CheckBox Name="chkManual"
                                              Content="Manual"         
                                              Margin="701,19,0,0" 
                                              FontSize="22" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Left" 
                                              VerticalAlignment="Top" 
                                              Style="{StaticResource imageCheckedBoxOKStyle}"
                                              Grid.Column="1" 
                                              Grid.Row="1" 
                                              Checked="chkManual_Checked" 
                                              Unchecked="chkManual_Unchecked" />
                            <Label Content="Warp" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="73,14,0,0" Name="labWarp" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                            <Label Content="1" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="146,14,0,0" Name="lab1" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="179,14,0,0" Name="txtWarp1" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWarp1_KeyDown" LostFocus="txtWarp1_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="True" Margin="143,56,0,0" Name="rbWarpN1" GroupName="Warp" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    
                            <Label Content="2" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="441,14,0,0" Name="lab2" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2"/>
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="474,14,0,0" Name="txtWarp2" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWarp2_KeyDown" LostFocus="txtWarp2_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="438,56,0,0" Name="rbWarpN2" GroupName="Warp" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    
                            <Label Content="3" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="736,14,0,0" Name="lab3" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="769,14,0,0" Name="txtWarp3" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWarp3_KeyDown" LostFocus="txtWarp3_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="733,56,0,0" Name="rbWarpN3" GroupName="Warp" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="Weft" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="73,14,0,0" Name="labWeft" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3" />
                            <Label Content="1" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="146,14,0,0" Name="lab4" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="179,14,0,0" Name="txtWeft1" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="3" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWeft1_KeyDown" LostFocus="txtWeft1_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="True" Margin="143,56,0,0" Name="rbWeftN1" GroupName="Weft" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Label Content="2" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="441,14,0,0" Name="lab5" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3"/>
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="474,14,0,0" Name="txtWeft2" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="3" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWeft2_KeyDown" LostFocus="txtWeft2_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="438,56,0,0" Name="rbWeftN2" GroupName="Weft" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    
                            <Label Content="3" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="736,14,0,0" Name="lab6" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="769,14,0,0" Name="txtWeft3" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="3" PreviewTextInput="NumberValidationTextBox" KeyDown="txtWeft3_KeyDown" LostFocus="txtWeft3_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="733,56,0,0" Name="rbWeftN3" GroupName="Weft" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" />

                            <Button Content="Save" FontSize="45" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="818,12,0,0" Name="cmdSave" Style="{StaticResource MenuButtonStyle}" Width="181" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Click="cmdSave_Click" />

                            <Border BorderBrush="Silver" BorderThickness="1" Grid.Column="1" Name="border1" Margin="0,0,0,0">
                                <StackPanel Margin="0" Orientation="Horizontal">
                                    <RadioButton Name="rbWarp" 
                                                         Content="Warp" 
                                                         Margin="5" 
                                                         FlowDirection="LeftToRight" 
                                                         FontSize="40" 
                                                         FontWeight="Bold" 
                                                         IsChecked="True"   
                                                         Style="{StaticResource imageRadioButtonORBStyle}" />
                                    <RadioButton Name="rbWeft" 
                                                         Content="Weft" 
                                                         Margin="5" 
                                                         FlowDirection="LeftToRight" 
                                                         FontSize="40" 
                                                         FontWeight="Bold"  
                                                         Style="{StaticResource imageRadioButtonORBStyle}" />
                                   
                                </StackPanel>
                            </Border>
                        </Grid>
                      </Grid>
                    </ScrollViewer>
                    <Grid 
                        Grid.Row="3" 
                        Grid.Column="1" HorizontalAlignment="Left" Width="236">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
               
            </Grid>
        </Border>
    </DockPanel>
  
</UserControl>
