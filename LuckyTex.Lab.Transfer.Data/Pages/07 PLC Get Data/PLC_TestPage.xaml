<UserControl x:Class="LuckyTex.Pages.PLC_TestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="770" 
             d:DesignWidth="1220" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="PLC Test"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <!-- Back -->
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
            <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="190" />
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="190" />
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="10*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="52*" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="52*" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Weight : " 
                               Margin="2" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="2" />
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Grid.Column="2" Grid.Row="2">
                        <TextBox Name="txtWeight" 
                                 Text="0" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="48" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown" 
                                 KeyDown="txtWeight_KeyDown" />
                    </Border>
                    <TextBlock Text="High press : " 
                               Margin="2" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="4" Grid.Row="2" />
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Grid.Column="5" Grid.Row="2">
                        <TextBox Name="txtHigh"
                                 Text="0" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="48" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown" 
                                 KeyDown="txtHigh_KeyDown" />
                    </Border>
                    <TextBlock Text="Air : " 
                               Margin="2" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="5" />
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Grid.Column="2" Grid.Row="5">
                        <TextBox Name="txtAir" 
                                 Text="0" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="48" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown"  
                                 KeyDown="txtAir_KeyDown" />
                    </Border>
                    <TextBlock Text="Dynamic Air : " 
                               Margin="2" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="4" Grid.Row="5" />
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Grid.Column="5" Grid.Row="5">
                        <TextBox Name="txtDynamicAir"
                                 Text="0" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="48" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown" 
                                 KeyDown="txtDynamicAir_KeyDown" />  
                    </Border>
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Grid.Column="6" Grid.Row="5">
                        <TextBox Name="txtExponent"
                                 Text="0" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="48" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown" 
                                 KeyDown="txtExponent_KeyDown" />
                    </Border>
                    <TextBlock Text="Static Air : " 
                               Margin="2" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Center" 
                               TextAlignment="Right" 
                               Grid.Column="1" Grid.Row="8" />
                    <Border Background="White" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="3" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            Grid.Column="2" Grid.Row="8">
                        <TextBox Name="txtStaticAir" 
                                 Text="0" 
                                 CharacterCasing="Upper"
                                 BorderBrush="{x:Null}"
                                 Margin="2" 
                                 FontSize="48" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Center" 
                                 TextAlignment="Center" 
                                 PreviewKeyDown="Common_PreviewKeyDown"  
                                 KeyDown="txtStaticAir_KeyDown" />
                    </Border>
                    <Button Content="Reset" FontSize="22" FontWeight="Bold" Grid.Column="2" Grid.Row="3" Height="40" HorizontalAlignment="Left" Margin="40,5,0,0" Name="cmdReset_Weight" Style="{StaticResource MenuButtonStyle}" Width="165" VerticalAlignment="Top" Click="cmdReset_Weight_Click" />
                    <Button Content="Reset" FontSize="22" FontWeight="Bold" Grid.Column="5" Grid.Row="3" Height="40" HorizontalAlignment="Left" Margin="40,5,0,0" Name="cmdReset_High" Style="{StaticResource MenuButtonStyle}" Width="165" VerticalAlignment="Top" Click="cmdReset_High_Click" />
                    <Button Content="Reset" FontSize="22" FontWeight="Bold" Grid.Column="2" Grid.Row="6" Height="40" HorizontalAlignment="Left" Margin="40,5,0,0" Name="cmdReset_Air" Style="{StaticResource MenuButtonStyle}" Width="165" VerticalAlignment="Top" Click="cmdReset_Air_Click" />
                    <Button Content="Reset" FontSize="22" FontWeight="Bold" Grid.Column="5" Grid.Row="6" Height="40" HorizontalAlignment="Left" Margin="40,5,0,0" Name="cmdDynamic_Air" Style="{StaticResource MenuButtonStyle}" Width="165" VerticalAlignment="Top" Click="cmdDynamic_Air_Click" />
                    <Button Content="Reset" FontSize="22" FontWeight="Bold" Grid.Column="2" Grid.Row="9" Height="40" HorizontalAlignment="Left" Margin="40,5,0,0" Name="cmdReset_StaticAir" Style="{StaticResource MenuButtonStyle}" Width="165" VerticalAlignment="Top" Click="cmdReset_StaticAir_Click" />
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
