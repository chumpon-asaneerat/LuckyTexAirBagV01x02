<UserControl x:Class="LuckyTex.Pages.AirPermeabilityPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="AIR PERMEABILITY HIGH PRESSURE M/C"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="1420*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                    <RowDefinition Height="648*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                <Label Content="Item Code : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="326,6,0,0" Name="labITMCODE" VerticalAlignment="Top" />
                <TextBox CharacterCasing="Upper" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="441,10,0,0" Name="txtITMCODE" TextAlignment="Center" VerticalAlignment="Top" Width="150" LostFocus="txtITMCODE_LostFocus" KeyDown="txtITMCODE_KeyDown" />
                <Label Content="Production Lot : " FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="9,6,0,0" Name="labWEAVINGLOG" VerticalAlignment="Top" />
                <TextBox CharacterCasing="Upper" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="163,10,0,0" Name="txtPRODUCTIONLOT" TextAlignment="Center" VerticalAlignment="Top" Width="150" KeyDown="txtPRODUCTIONLOT_KeyDown" LostFocus="txtPRODUCTIONLOT_LostFocus" />
              
                <Button Content="Clear" FontSize="30" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="603,3,0,0" Name="cmdClear" Style="{StaticResource MenuButtonStyle}" Width="150" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Click="cmdClear_Click" />
                <Button Content="Reset" FontSize="30" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Height="40" HorizontalAlignment="Left" Margin="760,3,0,0" Name="cmdReset" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="150" Click="cmdReset_Click" />
                <CheckBox Content="Re-Test" FontSize="35" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="921,3,0,0" Name="chkRetest" Style="{StaticResource imageCheckedBoxOKStyle}" VerticalAlignment="Top" Checked="chkRetest_Checked" Unchecked="chkRetest_Unchecked" />
                <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto" Margin="3" Grid.Row="2" Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="546*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="1" Margin="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0*" />
                                <ColumnDefinition Width="1173*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="140" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="100" />
                                <RowDefinition Height="156*" />
                            </Grid.RowDefinitions>

                            <Label Content="Static Air Permeability (PLC Data) :" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="6,12,0,0" Name="labWeight" VerticalAlignment="Top" Grid.Column="1" />
                            <TextBox CharacterCasing="Upper" 
                                     FontSize="65" 
                                     FontWeight="Bold"  
                                     HorizontalAlignment="Left" Margin="381,12,0,0"
                                     Name="txtStatic_Air" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" KeyDown="txtStatic_Air_KeyDown" PreviewKeyDown="Common_PreviewKeyDown" />
                            <Button  Content="Select" FontSize="45" FontWeight="Bold" Grid.Column="1" Margin="646,12,0,0" Name="cmdSelect" Style="{StaticResource MenuButtonStyle}" Width="181" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Click="cmdSelect_Click" KeyDown="cmdSelect_KeyDown" />
                            <CheckBox Name="chkManual"
                                              Content="Manual"         
                                              Margin="839,19,0,0"
                                              FontSize="22" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Left" 
                                              VerticalAlignment="Top" 
                                              Style="{StaticResource imageCheckedBoxOKStyle}"
                                              Grid.Column="1" Checked="chkManual_Checked" 
                                              Unchecked="chkManual_Unchecked" />
                            <Label Content="ค่าพื้นที่ของฐาน วงกลม" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="954,10,0,0" Name="label1" VerticalAlignment="Top" Grid.Column="1" />
                            <TextBox CharacterCasing="Upper" 
                                     FontSize="35" 
                                     FontWeight="Bold"  
                                     HorizontalAlignment="Left" Margin="954,50,0,0"
                                     Name="txtDefCircle" TextAlignment="Center" VerticalAlignment="Top" Width="196" Grid.Column="1" PreviewTextInput="NumberValidationTextBox" Height="50" Text="78.539816" Foreground="Red" />
                            <Label Content="1" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="132,13,0,0" Name="lab1" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="165,13,0,0"  Name="txtStatic_Air1" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="1" PreviewTextInput="NumberValidationTextBox" KeyDown="txtStatic_Air1_KeyDown" LostFocus="txtStatic_Air1_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="True" Margin="129,56,0,0" Name="rbStatic_AirN1" GroupName="Static_Air" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" />

                            <Label Content="2" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="427,13,0,0" Name="lab2" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="460,13,0,0" Name="txtStatic_Air2" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="1" PreviewTextInput="NumberValidationTextBox" KeyDown="txtStatic_Air2_KeyDown" LostFocus="txtStatic_Air2_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="424,56,0,0" Name="rbStatic_AirN2" GroupName="Static_Air" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" />

                            <Label Content="3" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="722,13,0,0" Name="lab3" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="755,13,0,0" Name="txtStatic_Air3" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="1" PreviewTextInput="NumberValidationTextBox" KeyDown="txtStatic_Air3_KeyDown" LostFocus="txtStatic_Air3_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="719,56,0,0" Name="rbStatic_AirN3" GroupName="Static_Air" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" />

                            <Label Content="4" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="132,13,0,0" Name="lab4" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="165,13,0,0" Name="txtStatic_Air4" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtStatic_Air4_KeyDown" LostFocus="txtStatic_Air4_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="129,56,0,0" Name="rbStatic_AirN4" GroupName="Static_Air" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" />

                            <Label Content="5" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="427,13,0,0" Name="lab5" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2"/>
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="460,13,0,0" Name="txtStatic_Air5" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtStatic_Air5_KeyDown" LostFocus="txtStatic_Air5_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="424,56,0,0" Name="rbStatic_AirN5" GroupName="Static_Air" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" />

                            <Label Content="6" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="722,13,0,0" Name="lab6" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" />
                            <TextBox CharacterCasing="Upper" FontSize="65" FontWeight="Bold" HorizontalAlignment="Left" Margin="755,13,0,0" Name="txtStatic_Air6" TextAlignment="Center" VerticalAlignment="Top" Width="250" Grid.Column="1" Grid.Row="2" PreviewTextInput="NumberValidationTextBox" KeyDown="txtStatic_Air6_KeyDown" LostFocus="txtStatic_Air6_LostFocus" />
                            <RadioButton Content="" FlowDirection="LeftToRight" FontSize="22" FontWeight="Bold" IsChecked="False" Margin="719,56,0,0" Name="rbStatic_AirN6" GroupName="Static_Air" Style="{StaticResource imageRadioButtonORBStyle}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" />

                            <Button Content="Save" FontSize="45" FontWeight="Bold" Grid.Column="1" Margin="646,78,0,0" Name="cmdSave" Style="{StaticResource MenuButtonStyle}" Width="181" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Click="cmdSave_Click" />
                           
                        </Grid>
                      </Grid>
                    </ScrollViewer>
                    <Grid 
                        Grid.Row="3" 
                        Grid.Column="1" HorizontalAlignment="Left" Width="236">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>
                
            </Grid>
        </Border>
    </DockPanel>
  
</UserControl>
