<UserControl x:Class="LuckyTex.Pages.LABReportSettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="845" 
             d:DesignWidth="1200" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LuckyTex.AirBag.Controls;component/Styles/CheckedBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RightCellStyle" TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!-- Caption Bar -->
        <Border DockPanel.Dock="Top" CornerRadius="3" Margin="3, 3, 3, 0"
                Background="CornflowerBlue"
                Height="40">
            <TextBlock Text="LAB Report Setting"
                       Foreground="White"
                       FontSize="30" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Button Command Bars -->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" 
                   Background="#F0F0F0"
                   Margin="5, 0">
            <!-- Back -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="cmdBack"
                        Content="Back"
                        Margin="2" 
                        Width="150"
                        FontSize="30" 
                        FontWeight="Bold"
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="cmdBack_Click" />
            </StackPanel>
            <Grid/>
        </DockPanel>
        <!-- Content -->
        <Border CornerRadius="3" Margin="3" 
                BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="1420*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="600*" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Label Content="Item Code : " Grid.Column="1" Grid.Row="1" Margin="6,4,0,0" Name="label1" 
                           FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <ComboBox Name="cbItemCode" 
                              Margin="135,6,0,0"
                               DisplayMemberPath="ITM_CODE" 
                               SelectedValuePath="ITM_CODE"
                               FontSize="22"      
                               FontWeight="Bold" 
                               ItemsSource="{Binding GetItemCodeData, Mode=OneWay}"
                              Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Width="208" HorizontalAlignment="Left" SelectionChanged="cbItemCode_SelectionChanged" />
                <Button Name="cmdEdit" 
                            Content="Edit"
                            Margin="349,3,0,0" 
                            FontSize="22"
                            FontWeight="Bold"
                            Height="40" Width="130" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="1" Grid.Column="1" Click="cmdEdit_Click">
                    </Button>
                <Button Name="cmdSave" 
                        Content="Save"
                        Margin="485,3,0,0" 
                        FontSize="22"
                        FontWeight="Bold"
                        Height="40" Width="130" HorizontalAlignment="Left"  VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Grid.Row="1" Grid.Column="1" Click="cmdSave_Click">
                    
                </Button>
                <Button Content="Clear" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Height="40" HorizontalAlignment="Right" Margin="0,3,5,0" Name="cmdClear" Style="{StaticResource MenuButtonStyle}" VerticalAlignment="Top" Width="130" Click="cmdClear_Click" />
                <ScrollViewer HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto" Grid.Row="2" Grid.Column="2">
                    <Border BorderBrush="Black" BorderThickness="2">
                        <Grid>
                            <Grid Name="gridTest">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="420" />
                                    <ColumnDefinition Width="765*" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="1" Grid.Row="1" Margin="0,0,0,0" Name="grid2"  >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="60" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="60" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="60" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="60" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="60" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="170" />
                                        <RowDefinition Height="772*" />
                                    </Grid.RowDefinitions>
                                    <Label Content="Customer : " FontSize="20" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Left" Margin="11,11,0,0" Name="label2" VerticalAlignment="Top" Grid.Column="1" />
                                    <ComboBox DisplayMemberPath="CUSTOMERNAME" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" ItemsSource="{Binding LoadCUS_GETLIST, Mode=OneWay}" Margin="136,13,0,0" Name="cbCUSTOMERID" SelectedValuePath="CUSTOMERID" VerticalAlignment="Top" Width="208" SelectionChanged="cbCUSTOMERID_SelectionChanged" />
                                    <Label Content="Report ID : " FontSize="20" FontWeight="Bold" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Margin="11,11,0,0" Name="label3" VerticalAlignment="Top" />
                                    <ComboBox DisplayMemberPath="REPORT_ID" FontSize="22" FontWeight="Bold" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" ItemsSource="{Binding LoadLAB_GETREPORTINFO, Mode=OneWay}" Margin="136,13,0,0" Name="cbREPORT_ID" SelectedValuePath="REPORT_ID" VerticalAlignment="Top" Width="208" />
                                    <Label Content="Reversion" FontSize="20" FontWeight="Bold" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" Margin="11,11,0,0" Name="label4" VerticalAlignment="Top" />
                                    <Label Content="Specification issue" FontSize="20" FontWeight="Bold" Grid.Column="1" Grid.Row="7" HorizontalAlignment="Left" Margin="11,11,0,0" Name="label5" VerticalAlignment="Top" />
                                    <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Grid.Row="7" Margin="203,17,0,0" Name="txtREVERSION" TextAlignment="Center" VerticalAlignment="Top" Width="200" KeyDown="txtREVERSION_KeyDown" HorizontalAlignment="Left" />
                                    <Label Content="Yarn Type" FontSize="20" FontWeight="Bold" Grid.Column="1" Grid.Row="9" HorizontalAlignment="Left" Margin="11,11,0,0" Name="label6" VerticalAlignment="Top" />
                                    <TextBox FontSize="20" FontWeight="Bold" Grid.Row="11" Margin="11,3,0,0" Name="txtYARNTYPE" TextAlignment="Center" VerticalAlignment="Top" Width="398" KeyDown="txtYARNTYPE_KeyDown" HorizontalAlignment="Left" Height="162" TextWrapping="Wrap" AcceptsReturn="True"/>
                                </Grid>
                                <GroupBox Grid.Column="2" Grid.Row="1" Margin="0,0,0,0" Name="groupBox1">
                                        <Grid Margin="0,0,0,0" Name="grid1" SelectiveScrollingGrid.SelectiveScrollingOrientation="Horizontal">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="90" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="90" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="65" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="65" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="65" />
                                        </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="227" />
                                                <ColumnDefinition Width="520*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Content="Total Weight" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label7" VerticalAlignment="Top" />
                                        <TextBox FontSize="20" FontWeight="Bold" Margin="5,13,0,0" Name="txtWEIGHT" TextAlignment="Center" VerticalAlignment="Top" Grid.Column="1" KeyDown="txtWEIGHT_KeyDown" Height="70" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Uncoated Weight" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,49,0,0" Name="label8" VerticalAlignment="Top" />
                                            <Label Content="Coating Weight" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label9" VerticalAlignment="Top" Grid.Row="2" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtCOATWEIGHT" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="2" KeyDown="txtCOATWEIGHT_KeyDown" Height="55" HorizontalAlignment="Left" Width="400"  TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Number of threads" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label10" VerticalAlignment="Top" Grid.Row="4" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtNUMTHREADS" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="4" KeyDown="txtNUMTHREADS_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Usable width" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label11" VerticalAlignment="Top" Grid.Row="6" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtUSEWIDTH" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="6" KeyDown="txtUSEWIDTH_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Thickness" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label12" VerticalAlignment="Top" Grid.Row="8" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtTHICKNESS" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="8" KeyDown="txtTHICKNESS_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Elongation at" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label13" VerticalAlignment="Top" Grid.Row="10" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,13,0,0" Name="txtMAXFORCE" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="10" KeyDown="txtMAXFORCE_KeyDown" Height="70" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Maximum Force" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,49,0,0" Name="label14" VerticalAlignment="Top" Grid.Row="10" />
                                            <Label Content="Elogation" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label16" VerticalAlignment="Top" Grid.Row="12" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtELOGATION" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="12" KeyDown="txtELOGATION_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True" Grid.RowSpan="2" />
                                            <Label Content="Flammability" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label15" VerticalAlignment="Top" Grid.Row="14" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtFLAMMABILITY" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="14" KeyDown="txtFLAMMABILITY_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Edgecomb Resistance" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label17" VerticalAlignment="Top" Grid.Row="16" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtEDGECOMB" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="16" KeyDown="txtEDGECOMB_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Stiffness" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label18" VerticalAlignment="Top" Grid.Row="18" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtSTIFFNESS" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="18" KeyDown="txtSTIFFNESS_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Tear Force" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label19" VerticalAlignment="Top" Grid.Row="20" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtTEAR" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="20" KeyDown="txtTEAR_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Static Air Permeability" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label20" VerticalAlignment="Top" Grid.Row="22" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtSTATIC_AIR" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="22" KeyDown="txtSTATIC_AIR_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                        <Label Content="Dynamic Air" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label22" VerticalAlignment="Top" Grid.Row="24" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtDYNAMIC_AIR" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="24" KeyDown="txtDYNAMIC_AIR_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Exponent" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label23" VerticalAlignment="Top" Grid.Row="26" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtEXPONENT" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="26" KeyDown="txtEXPONENT_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Dimensional change" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label24" VerticalAlignment="Top" Grid.Row="28" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtDIMENSCHANGE" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="28" KeyDown="txtDIMENSCHANGE_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            <Label Content="Flex Abrasion (scrub)" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label25" VerticalAlignment="Top" Grid.Row="30" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtFLEXABRASION" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="30" KeyDown="txtFLEXABRASION_KeyDown" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>

                                        <Label Content="Abrasion resistance_(Scott)" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,1,0,0" Name="label26" VerticalAlignment="Top" Grid.Row="32">
                                            <Label.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                </Style>
                                            </Label.Resources>
                                        </Label> 
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtFLEX_SCOTT" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="32"  Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True" KeyDown="txtFLEX_SCOTT_KeyDown" />

                                        <Label Content="Degree of BOW" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label27" VerticalAlignment="Top" Grid.Row="34" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtBOW" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="34" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True" KeyDown="txtBOW_KeyDown" />

                                        <Label Content="Degree of Bias _Filling (SKEW)" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,1,0,0" Name="label28" VerticalAlignment="Top" Grid.Row="36" Width="209">
                                            <Label.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                </Style>
                                            </Label.Resources>
                                        </Label>
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtSKEW" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="36" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True" KeyDown="txtSKEW_KeyDown" />

                                        <Label Content="Bending" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,7,0,0" Name="label29" VerticalAlignment="Top" Grid.Row="38" />
                                        <TextBox FontSize="20" FontWeight="Bold" Grid.Column="1" Margin="5,2,0,0" Name="txtBENDING" TextAlignment="Center" VerticalAlignment="Top" Grid.Row="38" Height="55" HorizontalAlignment="Left" Width="400" TextWrapping="Wrap" AcceptsReturn="True" KeyDown="txtBENDING_KeyDown" />

                                    </Grid>
                                </GroupBox>
                                
                            </Grid>
                        </Grid>
                    </Border>
                </ScrollViewer>
                <Grid 
                        Grid.Row="3" 
                        Grid.Column="1" HorizontalAlignment="Left" Width="236">
                        <TextBlock 
                                            Text="Operator" 
                                            Margin="3,9,0,0" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            TextAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"/>
                        <TextBox x:Name="txtOperator"  
                                             Margin="94,6,6,0"
                                             IsReadOnly="True"
                                             CharacterCasing="Upper"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             TextAlignment="Center" VerticalAlignment="Top">
                        </TextBox>
                    </Grid>             
            </Grid>
        </Border>
    </DockPanel>
  
</UserControl>
